# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=adobe-flashplayer
pkgver=11.2.202.577
pkgrel=0
pkgdesc="Adobe Flash player"
url="https://get.adobe.com/flashplayer/otherversions"
arch="x86_64"
license="non-free"
depends="libc6-compat"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://fpdownload.macromedia.com/get/flashplayer/pdc/$pkgver/install_flash_player_11_linux.x86_64.tar.gz"

_builddir=
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/lib/mozilla/plugins
	install "$srcdir"/libflashplayer.so "$pkgdir"/usr/lib/mozilla/plugins/
}

md5sums="b6edd26db2067c7ccf4c0354d63517fd  adobe-flashplayer-11.2.202.577.tar.gz"
sha256sums="26c44aa4e0c94cff85d4d4a319f1a7ba2e5766b8c01a084999affffc634f507e  adobe-flashplayer-11.2.202.577.tar.gz"
sha512sums="0d5075561787639f4eeb15de2c0add27ebcd2efe158599dfb9f2e2d5bcf734ade33712d74e9f6f783ef3eb952295f686f76a950eb3ce7765fbfee5bef137d80e  adobe-flashplayer-11.2.202.577.tar.gz"
