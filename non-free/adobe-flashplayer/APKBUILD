# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=adobe-flashplayer
pkgver=27.0.0.130
pkgrel=1
pkgdesc="Adobe Flash player"
url="https://get.adobe.com/flashplayer/otherversions"
arch="x86 x86_64"
license="non-free"
depends="libc6-compat mesa-gl"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
options="!check"
case "$(uname -m)" in
	"x86") arch="i386";;
	"x86_64") arch="x86_64";;
esac
source="$pkgname-$pkgver.$arch.tar.gz::https://fpdownload.adobe.com/get/flashplayer/pdc/$pkgver/flash_player_npapi_linux.$arch.tar.gz"

builddir="$srcdir"

build() {
	return 0
}

package() {
	cd "$builddir"
	mkdir -p "$pkgdir"/usr/lib/mozilla/plugins
	install "$srcdir"/libflashplayer.so "$pkgdir"/usr/lib/mozilla/plugins/
}

case "$arch" in
	"i386") sha512sums="441398beccf1ec0772ef150ef13d46f374261963cdfb806f3518ff517125a9d19b0258f4200edbfd108709962e1e2fa49f3d8d65b79d391d15bc0f09d885d934 $pkgname-$pkgver.$arch.tar.gz";;
	"x86_64") sha512sums="2574cd3fb707c8d32e54179bbf900ca47c875be3540c8016fad50f51721d5fc4bcf22b552ae71efdb1e78cc135163d0a2326c9569e49b9da7498eb971deabc78 $pkgname-$pkgver.$arch.tar.gz";;
esac
