# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: John Regan <john@jrjrtech.com>
pkgname=s6-dns
pkgver=2.2.0.0
pkgrel=0
pkgdesc="skarnet.org's DNS client libraries and command-line DNS client utilities"
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
depends="skalibs"
options="!check"
makedepends="skalibs-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/"$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libexecdir="/usr/lib/$package" \
		--with-dynlib=/lib
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="55cc0a4e677a28d5ebeeab1f995ee8d03c6aaa0c839ad420e006468c0712f45e638a3d32e082a34e09098d20c3bb08496afcefbec4c58f7674017e22732b1cda  s6-dns-2.2.0.0.tar.gz"
