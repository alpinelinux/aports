# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=s6-dns
pkgver=2.4.1.1
pkgrel=0
pkgdesc="skarnet.org's DNS client libraries and command-line DNS client utilities"
url=https://skarnet.org/software/s6-dns/
arch="all"
license="ISC"
options="!check"
_skalibs_version=2.14.5
makedepends="skalibs-dev>=${_skalibs_version}"
subpackages="$pkgname-static $pkgname-libs $pkgname-dev $pkgname-doc"
source="https://skarnet.org/software/s6-dns/s6-dns-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--disable-allstatic \
		--prefix=/usr \
		--libexecdir="/usr/lib/$pkgname" \
		--with-pkgconfig \
		--enable-pkgconfig
	make
}

package() {
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$pkgdir/usr/share/doc/$pkgname"
}

sha512sums="
218e02214ca94e97d06967e2e9c9c1533220e212d6a8982ad8517198889780e4d9d344ba2b444989bd0f4fd2febb722a22a214baaff731ce2b3cc2fd282ca40e  s6-dns-2.4.1.1.tar.gz
"
