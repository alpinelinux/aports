pkgname=py3-gunicorn
_pkgname=gunicorn
pkgver=19.7.1
pkgrel=3
pkgdesc="a Python WSGI HTTP Server"
url="https://github.com/benoitc/gunicorn/"
arch="noarch"
license="MIT"
depends="py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://github.com/benoitc/$_pkgname/archive/${pkgver}.tar.gz"

builddir="${srcdir}/${_pkgname}-${pkgver}"

replaces=py-gunicorn # Backwards compatibility
provides=py-gunicorn=$pkgver-r$pkgrel # Backwards compatibility

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="d06862016937f11064c0d08f2eceb262a4cdecf876f02a0c722e8ff61c439da27890dee78e20b4aeddac9db12b3e04233f16eb320e85c56b70ac2f332433cc14  py3-gunicorn-19.7.1.tar.gz"
