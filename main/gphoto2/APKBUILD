# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gphoto2
pkgver=2.5.14
pkgrel=0
pkgdesc="commandline utilities for accessing cameras"
url="http://www.gphoto.org/"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="libgphoto2-dev popt-dev gettext-dev libjpeg-turbo-dev libtool"
install=""
subpackages="$pkgname-lang $pkgname-doc"
source="http://sourceforge.net/projects/gphoto/files/gphoto/$pkgver/gphoto2-$pkgver.tar.bz2"

_builddir="$srcdir"/gphoto2-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="47cb0d212673c9c0dbc996e0a67191a307599c844293a67184bd1529d9e3b417e154c6de64f4563f6f7e599a1bd6b127266f85f5baa97bd7d86922405bf45331  gphoto2-2.5.14.tar.bz2"
