# Contributor: 
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gphoto2
pkgver=2.5.20
pkgrel=0
pkgdesc="Commandline utilities for accessing cameras"
url="http://www.gphoto.org/"
arch="all"
license="GPL"
makedepends="libgphoto2-dev popt-dev gettext-dev libjpeg-turbo-dev libtool"
subpackages="$pkgname-lang $pkgname-doc"
source="https://sourceforge.net/projects/gphoto/files/gphoto/$pkgver/gphoto2-$pkgver.tar.bz2"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="0350c38c264e5ba858ee14952fbf6ad271e7fef05e3f5f8eb3d45102099ae435fec63b09881efa99af60d4e086a9c2f69be92a7e49617643ab13146a5e4655f3  gphoto2-2.5.20.tar.bz2"
