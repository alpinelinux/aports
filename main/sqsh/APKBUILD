# Contributor: Ashton Spencer <aspec.451@gmail.com>
# Maintainer: Jeff Bilyk <jbilyk@gmail.com>
pkgname=sqsh
pkgver=2.5.16.1
case $pkgver in
*.*.*.*) _v=${pkgver%.*.*};;
*.*.*) _v=${pkgver%.*};;
*) _v=$pkgver;;
esac
pkgrel=2
pkgdesc="Sybase iSQL replacement"
url="http://www.sqsh.org"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="freetds-dev readline-dev ncurses-dev"
install=""
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/project/sqsh/sqsh/sqsh-$_v/sqsh-$pkgver.tgz
	tds-version.patch
	datetime.patch
	"

builddir="$srcdir"/$pkgname-$_v
prepare() {
	local i
	cd "$builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
}

build() {
	cd "$builddir"
	SYBASE=/usr
	export SYBASE
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/doc \
		--with-readline
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	make DESTDIR="$pkgdir" install.man
}

