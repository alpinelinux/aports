pkgname=nettle
pkgver=3.4.1
pkgrel=0
pkgdesc="A low-level cryptographic library"
url="http://www.lysator.liu.se/~nisse/nettle/"
arch="all"
license="LGPL-2.0-or-later"
depends=""
depends_dev="gmp-dev"
makedepends="$depends_dev m4"
subpackages="$pkgname-dev $pkgname-utils"
source="https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz
	nettle-2.4-makefile.patch"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	[ "$CARCH" = "armhf" ] && local _ARM_NEON="--disable-arm-neon"
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-shared \
		--disable-openssl \
		$_ARM_NEON
	make
	# strip comments in fields from .pc as it confuses pkgconf
	sed -i -e 's/ \#.*//' *.pc
}

check() {
	cd "$builddir"
	make -C examples  # required for rsa-encrypt
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

utils() {
	pkgdesc="Utils for nettle"
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

