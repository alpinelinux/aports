# Contributor: SÃ¶ren Tempel <soeren+alpinelinux@soeren-tempel.net>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz-stage0
pkgver=7.1.0
pkgrel=2
pkgdesc="Text shaping library (freetype bootstrapping only)"
url="https://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
makedepends="
	meson
	"
checkdepends="python3"
subpackages="$pkgname-dev"
source="https://github.com/harfbuzz/harfbuzz/releases/download/$pkgver/harfbuzz-$pkgver.tar.xz
	lower-soversion.patch
	"
builddir="$srcdir/harfbuzz-$pkgver"
options="!check" # don't check the bootstrap version

provides="harfbuzz-bootstrap"
provider_priority=1

# secfixes:
#   4.4.1-r0:
#     - CVE-2022-33068

build() {
	abuild-meson \
		-Dglib=disabled \
		-Dgobject=disabled \
		-Dgraphite=disabled \
		-Dicu=disabled \
		-Dfreetype=disabled \
		-Dcairo=disabled \
		-Ddocs=disabled \
		-Dtests=disabled \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

dev() {
	default_dev
	provides="harfbuzz-bootstrap-dev"
	provider_priority=1
}

sha512sums="
2f15bf14f927263c34201dba067ffac84133610121c58843c566d6f271f30f1dce44832a65bceb83828e25e9dd1a1d2a1610c5dbe2bef3ddbcecd7b5bcab8714  harfbuzz-7.1.0.tar.xz
73292af79c902aa6424e254ed397a92bdde201082224d39f2a37c69f32076dd5de7330d9aa9a1f765d6c4e29b3feec3a19a7f398e847e14d52deded335f6d53c  lower-soversion.patch
"
