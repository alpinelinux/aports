# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xf86-video-tdfx
pkgver=1.4.7
pkgrel=1
pkgdesc="3Dfx video driver"
url="http://xorg.freedesktop.org/"
arch="all"
license="MIT"
subpackages="$pkgname-doc"
depends=
makedepends="xorg-server-dev libxi-dev fontsproto randrproto util-macros
	videoproto renderproto libdrm-dev xf86driproto mesa-dev glproto
	"

source="http://www.x.org/releases/individual/driver/$pkgname-$pkgver.tar.bz2
	"

builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$builddir"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
sha512sums="573eea7a6b05ed33a963f8e2f80ac1cb14632b7fd10d8d90da16c07db432e73641ced885ee979f68e4ead8429b39506b2f231ca4ac296a0780c9f6d223c3b405  xf86-video-tdfx-1.4.7.tar.bz2"
