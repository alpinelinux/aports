+				       dst_x, dst_y, width, height, true))
+		return false;
+
+	switch (gen9_composite_picture(sna, src, &tmp->base.src,
+				       src_x, src_y,
+				       width, height,
+				       dst_x, dst_y,
+				       dst->polyMode == PolyModePrecise)) {
