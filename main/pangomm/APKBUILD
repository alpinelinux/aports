# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=pangomm
pkgver=2.40.1
pkgrel=0
pkgdesc="C++ bindings for pango"
url="http://gtkmm.sourceforge.net/"
arch="all"
license="LGPL"
depends=""
makedepends="pango-dev glibmm-dev cairomm-dev"
depends_dev="$makedepends"
subpackages="$pkgname-dev $pkgname-doc"
source="https://download.gnome.org/sources/pangomm/${pkgver%.*}/pangomm-$pkgver.tar.xz"

builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$builddir"
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="bed19800b76e69cc51abeb5997bdc2f687f261ebcbe36aeee51f1fbf5010a46f4b9469033c34a912502001d9985135fd5c7f7574d3de8ba33cc5832520c6aa6f  pangomm-2.40.1.tar.xz"
