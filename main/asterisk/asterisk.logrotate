/var/log/asterisk/messages /var/log/asterisk/*log {
	missingok
	rotate 5
	weekly
	create 0640 asterisk asterisk
	postrotate
		/usr/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null
	endscript
}

/var/log/asterisk/cdr-csv/*csv {
	missingok
	rotate 5
	monthly
	create 0640 asterisk asterisk
}

