#!/sbin/openrc-run

MODULES="openvswitch"

depend() {
        before ovsdb-server
}


start() {
        ebegin "Loading Openvswitch kernel modules"
        for mod in $MODULES; do
		modprobe -q $mod
	done
	eend $?
}

stop() {
        ebegin "Unloading Openvswitch kernel modules"
        for mod in $MODULES; do
		rmmod $mod
	done
        eend $?
}

