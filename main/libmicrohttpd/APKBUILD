pkgname=libmicrohttpd
pkgver=0.9.54
pkgrel=0
pkgdesc="a small C library that is supposed to make it easy to run an HTTP server as part of another application."
url="http://www.gnu.org/software/libmicrohttpd/"
arch="all"
license="GPL"
makedepends="curl-dev libgcrypt-dev gnutls-dev"
options="!check"
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.gnu.org/gnu/libmicrohttpd/$pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-largefile \
		--enable-curl \
		--enable-https \
		--enable-messages
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 "$builddir"/src/include/platform.h \
		"$pkgdir"/usr/include/platform.h
}

sha512sums="d3276ad3af123aacc5ff885786861ccc94397576b81999974456b9b803fe5d911115f6595281ffce2240087f98a6527a840506eabeec9f2589d555fd235b6c89  libmicrohttpd-0.9.54.tar.gz"
