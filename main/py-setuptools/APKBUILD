# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-setuptools
_pkgname=${pkgname#py-}
pkgver=36.6.0
pkgrel=0
pkgdesc="A collection of enhancements to the Python distutils"
url="http://pypi.python.org/pypi/setuptools"
arch="noarch"
license="PSF"
provides="py2-setuptools=$pkgver-r$pkgrel"
depends="python2"
makedepends="python2-dev"
checkdepends="py-tox"
source="$_pkgname-$pkgver.tar.gz::https://github.com/pypa/$_pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 bootstrap.py
	python2 setup.py build

	# Time to remove the Win binaries
	find . -name "*.exe" -exec rm -f {} \;
}

check() {
	cd "$builddir"

	tox
}

package() {
	cd "$builddir"

	python2 setup.py install --prefix=/usr --root="$pkgdir"

	# we don't provide a non-suffixed easy_install
	rm -f "$pkgdir"/usr/bin/easy_install
}

sha512sums="e3fce485f770e0c9642c3242fd21d64333fa460359f687193543084e32cef344020f5528f56288b76a0df76faa451b52bcc7c872c645b59d3f89874df28bda81  setuptools-36.6.0.tar.gz"
