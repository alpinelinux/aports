builddir="$srcdir/$_pkgreal-$pkgver"

check() {
	cd "$builddir"
	./Build test
}

prepare() {
	cd "$builddir"
	export CFLAGS=`perl -MConfig -E 'say $Config{ccflags}'`
	perl Build.PL installdirs=vendor || return 1
}

build() {
	cd "$builddir"
	export CFLAGS=`perl -MConfig -E 'say $Config{ccflags}'`
	./Build
}

