# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxinerama
pkgver=1.1.6
pkgrel=0
pkgdesc="X11 Xinerama extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
makedepends="
	libx11-dev
	libxext-dev
	meson
	util-macros
	xorgproto
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXinerama-$pkgver.tar.xz"
builddir="$srcdir"/libXinerama-$pkgver
options="!check"  # No test suite.

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
64bff837941625120da43b8876db4204bc5740bcf3147997fc4df1475f90d6d9e3f9caa8748c7ebbf69d681be8e5ab4bc40f82c56c367dddcec3ab27d1c71573  libXinerama-1.1.6.tar.xz
"
