_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	# apply patches here
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	install -Dm755 speedometer.py "$pkgdir"/usr/bin/speedometer
}

