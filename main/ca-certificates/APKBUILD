# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=ca-certificates
pkgver=20130906

_date=${pkgver%_p*}
_nmu="+nmu${pkgver#*_p}"
[ "$_nmu" = "+nmu${pkgver}" ] && _nmu=""
_ver=${_date}${_nmu}

pkgrel=2
pkgdesc="Common CA certificates PEM files"
url="http://packages.debian.org/sid/ca-certificates"
arch="noarch"
license="MPL 2.0 GPL2+"
depends="run-parts openssl"
makedepends="python"
subpackages="$pkgname-doc"
triggers="ca-certificates.trigger=/usr/share/ca-certificates:/etc/ssl/certs"
source="http://ftp.no.debian.org/debian/pool/main/c/$pkgname/${pkgname}_${_ver}.tar.gz
	"

_builddir="$srcdir"/$pkgname
build () {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	install -d -m755 "$pkgdir"/etc/ca-certificates/update.d \
		"$pkgdir"/usr/sbin \
		"$pkgdir"/usr/share/ca-certificates \
		"$pkgdir"/etc/ssl/certs \
		|| return 1
	make DESTDIR="$pkgdir" install || return 1
	install -D -m644 sbin/update-ca-certificates.8 \
		"$pkgdir"/usr/share/man/man8/update-ca-certificates.8 \
		|| return 1

	(
	echo "# Automatically generated by ${pkgname}-${pkgver}-${pkgrel}"
	echo "# $(date -u)"
	echo "# Do not edit."
	cd "$pkgdir"/usr/share/ca-certificates
	find . -name '*.crt' | sort | cut -b3-
	) > "$pkgdir"/etc/ca-certificates.conf

	# http://bugs.alpinelinux.org/issues/2715
	mkdir -p "$pkgdir"/etc/apk/protected_paths.d
	echo "-etc/ssl/certs/*.crt" \
		> "$pkgdir"/etc/apk/protected_paths.d/ca-certificates.list
}

md5sums="67d42b6be21c616a8b7d3d85d95ae912  ca-certificates_20130906.tar.gz"
sha256sums="dd10520091d469e95e11e5fafb7422d3be0a66071984d09009ed3e0232cb277d  ca-certificates_20130906.tar.gz"
sha512sums="d2cb11738a8e913a326087231a91706fc7afff83045aea27d9990ef964ac28f2ba33e24fef555a45276aa18710a72db0171ba06edcfc8dbffb72cd6effd2d86f  ca-certificates_20130906.tar.gz"
