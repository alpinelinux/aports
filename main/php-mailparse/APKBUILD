# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=php-mailparse
_realname=mailparse
pkgver=2.1.6
pkgrel=2
pkgdesc="PHP Email message manipulation"
url="http://pecl.php.net/package/mailparse"
arch="all"
license="PHP"
depends=
depends_dev="php-dev"
makedepends="$depends_dev autoconf"
install=""
subpackages=""
source="http://pecl.php.net/get/$_realname-$pkgver.tgz
	mailparse.ini"

_builddir="$srcdir/$_realname-$pkgver"

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	phpize || return 1
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make INSTALL_ROOT="$pkgdir/" install || return 1
	install -D -m644 "$srcdir"/mailparse.ini \
		"$pkgdir"/etc/php/conf.d/mailparse.ini || return 1
}

