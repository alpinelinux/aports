# Contributor: Valery Kartel <valery.kartel@gmail.com>
pkgname=py-rsa
_pkgname=${pkgname#py-}
pkgver=3.4.2
pkgrel=0
pkgdesc="Pure-Python RSA implementation"
url="http://stuvel.eu/rsa"
arch="noarch"
license="BSD"
depends="py-asn1"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/python-$_pkgname-version-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}
md5sums="3eb972af2be0b11d11c14011599ec15e  rsa-3.4.2.tar.gz"
sha256sums="a25e4847ee24ec94af94ecd6a721f869be1136ffbc7df885dfd851dd6c948269  rsa-3.4.2.tar.gz"
sha512sums="f6b4a7339b717218990eec72c02c6866f0920ac568d7940a9a677581fcc24e711c0f949ea3dba118961b4458987b9c3c42b37baf772629685689a9b6871f1bc5  rsa-3.4.2.tar.gz"
