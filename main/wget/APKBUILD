# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Carlo Landmeter <clandmeter@gmail.com>
pkgname=wget
pkgver=1.19.5
pkgrel=0
pkgdesc="A network utility to retrieve files from the Web"
url="https://www.gnu.org/software/wget/wget.html"
arch="all"
license="GPL-3.0-or-later"
depends=""
makedepends="libressl-dev perl"
checkdepends="perl-http-daemon"
subpackages="$pkgname-doc"
install=""
source="https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

# secfixes:
#   1.19.5-r0:
#   - CVE-2018-0494
#   1.19.1-r1:
#   - CVE-2017-6508
#   1.19.2-r0:
#   - CVE-2017-13090

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-ssl=openssl \
		--disable-nls
	make
}

check() {
	cd "$builddir"

	# FIXME: We're not running top-level "check" to skip fuzz tests that
	# are currently broken.
	make -C tests check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install

	rm -rf "$pkgdir"/usr/lib
}

sha512sums="0d4964e0f5adb0c023edc831bde9c9f13f3222f6efc1ce93250d234ab937e92b53921624532fb0e6586151ddfdee6df9a7ca91a2a99b3d16e2e68401c625301b  wget-1.19.5.tar.gz"
