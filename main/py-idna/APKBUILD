# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=py-idna
_pkgname=idna
pkgver=2.2
pkgrel=1
pkgdesc="IDNA 2008 and UTS #46 for Python"
url="https://github.com/kjd/idna"
arch="noarch"
license="BSD"
depends=""
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py3-${pkgname#py-}:_py3 py2-${pkgname#py-}:_py2"
source="idna-$pkgver.tar.gz::https://github.com/kjd/idna/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1	
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

md5sums="972cdaaa5ae94dab8d1185e27a44b6f4  idna-2.2.tar.gz"
sha256sums="2974db08fe6c93b0963125d637a3a64d4595305e90dcf112cc48ab44e9955d9e  idna-2.2.tar.gz"
sha512sums="876ae93e1b85f9e3ff8d0ad6c234b333f2ba46410687d44403318c0b853be9bbbbc84491e48c51a135e59c15b4053902f38bf927c40d92452b13f427fcebf759  idna-2.2.tar.gz"
