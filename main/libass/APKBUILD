pkgname=libass
pkgver=0.13.7
pkgrel=1
pkgdesc="A portable library for SSA/ASS subtitles rendering"
url="https://github.com/libass/libass"
arch="all"
license="ISC"
depends=""
depends_dev="enca-dev fontconfig-dev fribidi-dev freetype-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev"
source="https://github.com/$pkgname/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

# secfixes:
#   0.13.4-r0:
#   - CVE-2016-7969
#   - CVE-2016-7970
#   - CVE-2016-7971
#   - CVE-2016-7972

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="8f5531ab5ace0b4ec6160f37b2553b6f06f761a0e12b3521e1b6c78387f7b3b98f24f310a9a9ea47d76fc5529f3cd318c88bd770e08600b71c81f95a43258a21  libass-0.13.7.tar.xz"
