	libxslt-dev
	lua5.3-dev
	openssl-dev
	pcre2-dev
	python3-dev
	zeromq-dev
	zlib-dev
	"
subpackages="$pkgname-openrc"
source="$pkgname-$pkgver.tar.gz::https://github.com/unbit/uwsgi/archive/refs/tags/$pkgver.tar.gz
	uwsgi.initd
	uwsgi.ini
	readme.emperor
	alpine.buildconf
	musl-ucontext.patch
	"
options="!check"

# secfixes:
#   2.0.16-r0:
#     - CVE-2018-6758

# You may specify a custom name for so lib and subpackage after a colon.
