depend() {
	need net
	after firewall
	use postgresql
}

start() {
	ebegin "Starting pgpool-II"
	start-stop-daemon --start --quiet --exec /usr/bin/pgpool --f /etc/pgpool.conf -F /etc/pcp.conf
	result=$?
	eend $result
}

stop() {
	ebegin "Stopping pgpool-II"
	start-stop-daemon --stop --quiet --pidfile /var/run/pgpool.pid
	result=$?
	eend $result
}

