# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=libasyncns
pkgver=0.8
pkgrel=1
pkgdesc="Asynchronous Name Service Library"
url="http://0pointer.de/lennart/projects/libasyncns/"
arch="all"
license="LGPL-2.0-or-later"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://dev.alpinelinux.org/archive/$pkgname-$pkgver.tar.gz"

prepare() {
	cd "$builddir"
	update_config_sub
	default_prepare
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--disable-static \
		--prefix=/usr
	make
}

check() {
	cd "$builddir"
	make check
	libasyncns/asyncns-test
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="2daad3a2d9eb875e0575843d9e9e2787be6cbba89211fd073fa8898ff80e0a891c7da1a7b0ef70f306318cb3a963ecd65d53d24d08b5f6b98e7cd2a3b3bdcda7  libasyncns-0.8.tar.gz"
