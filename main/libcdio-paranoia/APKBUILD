# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcdio-paranoia
pkgver=0.94_p1
_ver=${pkgver/_p/+}
pkgrel=0
pkgdesc="CD paranoia on top of libcdio"
url="http://www.gnu.org/software/libcdio/"
arch="all"
license="GPLv2+ and LGPLv2+"
depends=""
depends_dev="libcdio-dev"
makedepends="$depends_dev autoconf automake libtool"
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnu.org/gnu/libcdio/libcdio-paranoia-10.2+$_ver.tar.gz"

builddir="$srcdir"/libcdio-paranoia-10.2+$_ver
prepare() {
	default_prepare
	sed -i -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADER/' configure.ac
	autoreconf -i
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-static
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="9b2381491271090bac08594cb1d84de98e9f0a5afc6a2c98e9ffcf4b95addc3adcd0f0b9adeb928dfbf8178356ad6a7ccfeb048685c823d138b2af232f0b4c93  libcdio-paranoia-10.2+0.94+1.tar.gz"
