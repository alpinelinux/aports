# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcdio-paranoia
pkgver=0.93_p1
_ver=${pkgver/_p/+}
pkgrel=4
pkgdesc="CD paranoia on top of libcdio"
url="http://www.gnu.org/software/libcdio/"
arch="all"
license="GPLv2+ and LGPLv2+"
depends=""
depends_dev="libcdio-dev"
makedepends="$depends_dev autoconf automake libtool"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnu.org/gnu/libcdio/libcdio-paranoia-10.2+$_ver.tar.gz
	"
builddir="$srcdir"/libcdio-paranoia-10.2+$_ver
prepare() {
	local i
	cd "$builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
	sed -i -e 's/AM_CONFIG_HEADER/AC_CONFIG_HEADER/' configure.ac

	autoreconf -i
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-static
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="2bb418c99ef037aeb90ba3db841ea9182c5bc401e74c6f4b552730e6c8561552f7d3e27be71ef4fbb07b4fcd9db418a4fe330d5278e8f41cdd99c757aa4b8bc6  libcdio-paranoia-10.2+0.93+1.tar.gz"
