#	rmdir "$subpkgdir"/usr/bin "$subpkgdir"/usr/lib/ssh "$subpkgdir"/usr/lib || return 1
#}

server_common() {
	pkgdesc="OpenSSH server configuration files"
	depends=""
	mkdir -p "$subpkgdir"/etc/ssh "$subpkgdir"/var/empty

	mv "$pkgdir"/etc/ssh/sshd_config "$subpkgdir"/etc/ssh
	install -D -m755 "$srcdir"/sshd.initd "$subpkgdir"/etc/init.d/sshd
	install -D -m644 "$srcdir"/sshd.confd "$subpkgdir"/etc/conf.d/sshd
}

_server() {
	mkdir -p "$subpkgdir"/usr/sbin
	cp "$1"/sshd "$subpkgdir"/usr/sbin/
}

server() {
	pkgdesc="OpenSSH server"
	depends="$pkgname-keygen $pkgname-moduli $pkgname-server-common"
	_server "$pkgdir"/usr/sbin
	rm -fr "$pkgdir"/*
}

_pkg_flavour() {
	replaces="$pkgname-server"
	pkgdesc="OpenSSH server with $_flavour support"
	depends="$pkgname-keygen $pkgname-moduli $pkgname-server-common"
	for _flavour in $_pkgsupport; do
		_server "$builddir"-$_flavour
	done
}

