pkgname=lxterminal
pkgver=0.3.1
pkgrel=0
pkgdesc="Desktop-independent VTE-based terminal emulator"
url="https://lxde.org/"
arch="all"
license="GPL-2.0-or-later"
makedepends="vte-dev"
subpackages="$pkgname-doc $pkgname-lang"
source="https://downloads.sourceforge.net/lxde/$pkgname-$pkgver.tar.xz"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make
}

check() {
	cd "$builddir"
	make -C src check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="3063eb7bc7426293d35dc1d9c32d5841e4c3f0b417f3cfa3e5a7bf4d9b71df9c9d375d53d6dd6694b318085ba07167bd8403b2caea9c6e9197aef4b7802877fc  lxterminal-0.3.1.tar.xz"
