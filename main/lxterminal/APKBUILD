# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=lxterminal
pkgver=0.3.1
pkgrel=0
pkgdesc="Desktop-independent VTE-based terminal emulator"
url="http://lxde.org/"
arch="all"
license="GPL-2.0-or-later"
depends="vte3"
makedepends="autoconf automake docbook2x intltool vte3-dev"
subpackages="$pkgname-doc $pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/lxde/lxterminal/archive/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./autogen.sh
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-man \
		--enable-gtk3
	make
}

check() {
	cd "$builddir"
	make -C src check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="123a24afc48ade2599a3e24ffb402024de90bfe81be949c28e4fdabf67f2ca05d36de16fa2670d3ec4e5c3f314368067a25701c35994a5d2ebad7d765ad30c82  lxterminal-0.3.1.tar.gz"
