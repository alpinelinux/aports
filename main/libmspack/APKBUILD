# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libmspack
pkgver=0.7_alpha
_ver=${pkgver/_/}
pkgrel=0
pkgdesc="Library for CAB and related files compression and decompression"
url="https://www.cabextract.org.uk/libmspack/"
arch="all"
license="LGPL-2.1-only"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="https://www.cabextract.org.uk/libmspack/libmspack-$_ver.tar.gz"

builddir="$srcdir"/libmspack-$_ver

# secfixes:
#   0.5_alpha-r1:
#     - CVE-2017-6419
#     - CVE-2017-11423

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-static
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="0b59e4bb90bdab3eb3fcb9cff7e85ce0f3f2878aac259fa8b1ebed9ef14d2c03b33072dd5645f8e72f0c9b89a73c9a27ef6d86aed2aafb517ac43b6bc912c75a  libmspack-0.7alpha.tar.gz"
