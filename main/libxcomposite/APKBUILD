# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxcomposite
pkgver=0.4.7
pkgrel=0
pkgdesc="X11 Composite extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
depends_dev="libxext-dev"
makedepends="
	$depends_dev
	xorgproto
	libx11-dev
	libxfixes-dev
	util-macros
	meson
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXcomposite-$pkgver.tar.xz"
builddir="$srcdir"/libXcomposite-$pkgver
options="!check"  # No test suite.

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -D -m644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
24a03e3242f22b113aa6a3f9341858c072730f0f0073a1a7b9d36b982cd5b77223151aad32b61d1a38bbcb9f8ffedaf67b882dcb95f197d80ece9dbc99332c36  libXcomposite-0.4.7.tar.xz
"
