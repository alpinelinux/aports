build() {
	python3 setup.py build
}

check() {
	cd tests
	python3 runtests.py
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	mv "$pkgdir"/usr/bin/django-admin.py "$pkgdir"/usr/bin/django-admin
	ln -s django-admin "$pkgdir"/usr/bin/django-admin-3
}

