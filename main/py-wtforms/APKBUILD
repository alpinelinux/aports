pkgname=py-wtforms
_pkgname=WTForms
pkgver=2.2.1
pkgrel=1
pkgdesc="A flexible forms validation and rendering Python library"
options="!check" # No tests for python3
url="http://wtforms.simplecodes.com/"
arch="noarch"
license="BSD-3-Clause"
makedepends="py3-setuptools py-setuptools"
checkdepends="py3-pytest"
subpackages="py2-wtforms:_py2 py3-wtforms:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"

	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="06478790a8a4bf728e5436edaa63c7c0e596f71d63b273e1f296f9255d9fa3e31a7bfa95971c214a8cea684034ac3c77b05371f4b4e14da9d9ef2c5afadabde0  WTForms-2.2.1.tar.gz"
