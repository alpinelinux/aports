# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libfontenc
pkgver=1.1.9
pkgrel=0
pkgdesc="X11 font encoding library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
makedepends="
	meson
	util-macros
	xorgproto
	zlib-dev
	"
subpackages="$pkgname-dev"
source="https://www.x.org/releases/individual/lib/libfontenc-$pkgver.tar.xz"
options="!check"  # No test suite.

build() {
	abuild-meson \
		-Dwith-encodingsdir=/usr/share/fonts/encodings
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
19050c4c9ea1143b555b92faec641fd6b4976de463ad1fb67d20a7bf2f610bbc3debd3c65925cd8329691a9fb0435d004a05b6486e1dc600719e8c479812b912  libfontenc-1.1.9.tar.xz
"
