# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xtables-addons
pkgver=3.30
pkgrel=0
pkgdesc="Netfilter userspace extensions for iptables"
url="https://inai.de/projects/xtables-addons/"
arch="all"
license="GPL-2.0-only"
makedepends="iptables-dev bash coreutils zstd"
subpackages="$pkgname-doc"
source="https://inai.de/files/xtables-addons/xtables-addons-$pkgver.tar.zst"
options="!check" # Package has no test suite

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--without-kbuild
	make CC="${CC-gcc}" kbuilddir=
}

package() {
	make builddir= DESTDIR="$pkgdir" install
}

sha512sums="
4aab0dd6c1b98c5de0cc9a06550cae17ed2cb49ecee8d3ed90f8a2c6bb446ada11c010b2557f7fb07e4efbafc4fa94d3a68caf57eb60570ec9b2b9e737acfc8e  xtables-addons-3.30.tar.zst
"
