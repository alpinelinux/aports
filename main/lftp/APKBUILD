pkgname=lftp
pkgver=4.9.2
pkgrel=9
pkgdesc="Sophisticated ftp/http client"
url="https://lftp.yar.ru"
arch="all"
license="GPL-3.0-or-later"
makedepends="zlib-dev openssl-dev>3 readline-dev ncurses-dev autoconf automake libtool gettext-dev"
subpackages="$pkgname-doc"
# Main download site inaccessible via wget, use an official mirror
# source="https://lftp.yar.ru/ftp/lftp-$pkgver.tar.xz
source="ftp://ftp.st.ryukoku.ac.jp/pub/network/ftp/lftp/lftp-$pkgver.tar.xz
	gcc14.patch"

# secfixes:
#   4.8.4-r0:
#     - CVE-2018-10916

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-openssl \
		--with-modules \
		--disable-nls \
		--disable-static \
		--enable-threads=posix
	make
}

package() {
	make -j1 install DESTDIR="$pkgdir"
	rm -f "$pkgdir"/usr/lib/charset.alias
	mkdir -p "$pkgdir"/usr/share/doc/$pkgname
	mv "$pkgdir"/usr/share/$pkgname "$pkgdir"/usr/share/doc/
}

check() {
	# skip ftp tests due to firewall issues
	make -C tests check check_PROGRAMS= check_SCRIPTS="module1 lftp-queue-kill"
}

