# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=lftp
pkgver=4.9.3
pkgrel=0
pkgdesc="Sophisticated ftp/http client"
url="https://lftp.yar.ru"
arch="all"
license="GPL-3.0-or-later"
makedepends="zlib-dev openssl-dev>3 readline-dev ncurses-dev autoconf automake libtool gettext-dev"
subpackages="$pkgname-doc $pkgname-zsh-completion"
source="https://lftp.yar.ru/ftp/lftp-$pkgver.tar.xz"

# secfixes:
#   4.8.4-r0:
#     - CVE-2018-10916

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	export LDFLAGS="$LDFLAGS -Wl,--allow-multiple-definition"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-openssl \
		--with-modules \
		--disable-nls \
		--disable-static \
		--enable-threads=posix
	make
}

package() {
	make -j1 install DESTDIR="$pkgdir"
	rm -f "$pkgdir"/usr/lib/charset.alias
	mkdir -p "$pkgdir"/usr/share/doc/$pkgname
	mv "$pkgdir"/usr/share/$pkgname "$pkgdir"/usr/share/doc/
}

check() {
	# skip ftp tests due to firewall issues
	make -C tests check check_PROGRAMS= check_SCRIPTS="module1 lftp-queue-kill"
}

sha512sums="
81dc39ff8638ae720f4b65a9a74dad8100f9a764b4ff6d1538cbf898f666d795137619b490d6b0586d1001f9d3b11a35bed52821ef1d5fc3b0529e5dcb5a836a  lftp-4.9.3.tar.xz
"
