pkgname=postfix-policyd-spf-perl
pkgver=2.007
pkgrel=1
pkgdesc="A Sender Policy Framework implementation"
url="http://www.openspf.org/Software"
arch="all"
license="GPL"
depends="perl perl-mail-spf perl-netaddr-ip"
makedepends=""
