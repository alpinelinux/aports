# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=libpcap
pkgver=1.10.6
pkgrel=0
pkgdesc="Portable library for network traffic capture"
url="https://www.tcpdump.org/"
arch="all"
license="BSD-3-Clause"
options="!check"
makedepends="bison flex autoconf linux-headers"
subpackages="$pkgname-doc $pkgname-dev"
source="https://www.tcpdump.org/release/libpcap-$pkgver.tar.gz"

# secfixes:
#   1.9.1-r0:
#     - CVE-2018-16301
#     - CVE-2019-15161
#     - CVE-2019-15162
#     - CVE-2019-15163
#     - CVE-2019-15164
#     - CVE-2019-15165

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-ipv6

	# seems to be problem with timestamps
	sleep 1
	./config.status

	make all shared
}

package() {
	make -j1 DESTDIR="$pkgdir" install install-shared
}

