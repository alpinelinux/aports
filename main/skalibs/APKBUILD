# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: John Regan <john@jrjrtech.com>
pkgname=skalibs
pkgver=2.9.0.0
pkgrel=0
pkgdesc="A set of general-purpose C programming libraries for skarnet.org software."
url="http://skarnet.org/software/skalibs/"
arch="all"
license="ISC"
options="!check"
subpackages="$pkgname-dev $pkgname-doc"
source="http://skarnet.org/software/skalibs/skalibs-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--libdir=/usr/lib \
                --enable-clock
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

dev() {
	default_dev
	mv "$pkgdir/usr/lib/$pkgname"/sysdeps/* \
		"$subpkgdir/usr/lib/$pkgname"/sysdeps/
	rm -rf "$pkgdir"/usr
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="7ed4b45bc527e87fb436b6ac81148a31534c91f7097fe064da586f84afa3188577720d23df9499ebe8fc3eae2cd73f7378c243ca6825e02f986f5802169eee22  skalibs-2.9.0.0.tar.gz"
