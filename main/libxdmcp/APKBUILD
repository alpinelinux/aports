# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxdmcp
pkgver=1.1.2
pkgrel=5
pkgdesc="X11 Display Manager Control Protocol library"
url="http://xorg.freedesktop.org/"
arch="all"
license="MIT"
depends=
makedepends="xorgproto libbsd-dev util-macros xmlto"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXdmcp-$pkgver.tar.bz2"

builddir="$srcdir/libXdmcp-$pkgver"
# secfixes:
#   1.1.2-r3:
#   - CVE-2017-2625

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}
sha512sums="f96005934b8bc752059106f8caf7df0574f5ef3c7a83bd797497b56ca556a7ff4dc1d28195e421259e82ea027b5c738094add3ec107a22544c9070725d8d46bb  libXdmcp-1.1.2.tar.bz2"
