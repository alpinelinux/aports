#     - CVE-2022-28739
#   3.0.3-r0:
#     - CVE-2021-41817
#     - CVE-2021-41816
#     - CVE-2021-41819
#   2.7.4-r0:
#     - CVE-2021-31799
#     - CVE-2021-31810
#     - CVE-2021-32066
#   2.7.3-r0:
#     - CVE-2021-28965
#     - CVE-2021-28966
#   2.7.2-r0:
#     - CVE-2020-25613
#   2.6.6-r0:
#     - CVE-2020-10663
#     - CVE-2020-10933
#   2.6.5-r0:
#     - CVE-2019-16255
#     - CVE-2019-16254
