# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=vala
pkgver=0.38.0
pkgrel=0
pkgdesc="Compiler for the GObject type system"
url="http://live.gnome.org/Vala"
arch="all"
license="LGPL2+"
subpackages="$pkgname-doc"
depends="glib-dev"
makedepends="libxslt-dev bash glib-dev flex bison graphviz-dev"
source="http://download.gnome.org/sources/vala/${pkgver%.*}/vala-$pkgver.tar.xz
	version.patch"

builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="7dbce81474710c730fec2c465e38800b893af6e9882ebada22758acca5b3f71d9b10281e49aee2f99937cdc235a743ef190f0b1dfb9e229b7e16d06b7bd53eda  vala-0.38.0.tar.xz
2c999fb516dd6ed74cb05307c0725bb20d6112cd1a2427a742a9856e1167fe39f9a71253f4dd9d0f53a88a9f29229063e53262b8257f60a71d0cfb168e3f7eb8  version.patch"
