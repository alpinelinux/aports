# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=1.3.4
pkgrel=1
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
makedepends="freetype-dev glib-dev cairo-dev icu-dev graphite2-dev"
subpackages="$pkgname-dev $pkgname-icu"
source="http://www.freedesktop.org/software/$pkgname/release/$pkgname-$pkgver.tar.bz2"

builddir="$srcdir/$pkgname-$pkgver"
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-static \
		--with-graphite2 \
		|| return 1
	make || return 1
}

package() {
	make DESTDIR="$pkgdir" \
		-C "$builddir" install || return 1
}

dev() {
	default_dev
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

icu() {
	pkgdesc="Harfbuzz ICU support library"
	replaces="harfbuzz"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/lib*icu.so.* "$subpkgdir"/usr/lib/
}

md5sums="065843caf247687b94126773285bc70f  harfbuzz-1.3.4.tar.bz2"
sha256sums="718aa6fcadef1a6548315b8cfe42cc27e926256302c337f42df3a443843f6a2b  harfbuzz-1.3.4.tar.bz2"
sha512sums="72027ce64d735f1f7ecabcc78ba426d6155cebd564439feb77cefdfc28b00bfd9f6314e6735addaa90cee1d98cf6d2c0b61f77b446ba34e11f7eb7cdfdcd386a  harfbuzz-1.3.4.tar.bz2"
