# Contributor: Leonardo Arena <larena@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=ngircd
pkgver=23
pkgrel=2
pkgdesc="Next Generation IRC Daemon"
url="http://ngircd.barton.de/"
arch="all"
license="GPL2+"
depends=""
makedepends="openssl-dev zlib-dev linux-pam-dev"
subpackages="$pkgname-doc"
install="$pkgname.pre-install"
source="http://ngircd.barton.de/pub/ngircd/ngircd-$pkgver.tar.xz
	$pkgname.initd
	"
_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc/ngircd \
		--mandir=/usr/share/man \
		--without-ident \
		--with-openssl \
		--with-pam \
		--enable-ipv6 \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	install -Dm755 ../$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
}

