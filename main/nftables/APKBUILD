pkgname=nftables
pkgver=1.1.6
pkgrel=0
pkgdesc="Netfilter tables userspace tools"
url="https://netfilter.org/projects/nftables"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	asciidoc
	autoconf
	automake
	bash
	bison
	docbook2x
	flex
	gmp-dev
	jansson-dev
	libmnl-dev
	libnftnl-dev
	libtool
	m4
	ncurses-dev
	py3-gpep517
	py3-setuptools
	py3-wheel
	readline-dev
	"
install="$pkgname.post-upgrade"
subpackages="
	$pkgname-static
	$pkgname-dev
	$pkgname-doc
	$pkgname-openrc
	$pkgname-rulesets
	$pkgname-systemd
	py3-$pkgname-pyc
	py3-$pkgname:_py3:noarch
	"
source="https://netfilter.org/projects/nftables/files/nftables-$pkgver.tar.xz
	nftables.confd
	nftables.initd
	nftables.nft
	systemd-service-etc-nftables-nft.patch
	"
options="!check"

prepare() {
	default_prepare

	sed -i '1i#include "config.h"' "$builddir"/src/proto.c
	autoreconf -fi;
	rm -Rf autom4te*.cache config.h.in~
}

build() {
	CONFIG_SHELL=/bin/bash CONFIG_MAN=y DB2MAN=docbook2x-man ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/usr/share \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-static=yes \
		--with-json \
		--with-cli=readline \
		--with-unitdir
	make

	cd py
	gpep517 build-wheel \
		--wheel-dir "$builddir"/.dist \
		--output-fd 3 3>&1 >&2
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl

	install -Dm755 "$srcdir"/$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
	install -Dm644 "$srcdir"/$pkgname.confd "$pkgdir"/etc/conf.d/$pkgname
	install -Dm644 "$srcdir"/nftables.nft "$pkgdir"/etc/nftables.nft
	install -dm755 "$pkgdir"/etc/nftables.d
	install -dm750 "$pkgdir"/var/lib/nftables
}

_py3() {
	pkgdesc="$pkgdesc (Python interface)"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove usr/lib/python3*
}

rulesets() {
	pkgdesc="Meta package for pulling in all $pkgname rulesets"
	mkdir -p "$subpkgdir"
}

