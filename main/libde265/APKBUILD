pkgname=libde265
pkgver=1.0.11
pkgrel=1
pkgdesc="Open h.265 video codec implementation"
url="https://github.com/strukturag/libde265"
arch="all"
license="LGPL-3.0-or-later"
makedepends="autoconf automake libtool"
options="!check"  # no tests provided
subpackages="$pkgname-dev $pkgname-examples"
source="https://github.com/strukturag/libde265/releases/download/v$pkgver/libde265-$pkgver.tar.gz
	$pkgname-CVE-2023-27102.patch::https://github.com/strukturag/libde265/commit/0b1752abff97cb542941d317a0d18aa50cb199b1.patch
	$pkgname-CVE-2023-27103.patch::https://github.com/strukturag/libde265/commit/d6bf73e765b7a23627bfd7a8645c143fd9097995.patch
	export-only-decoder-api.patch
	disable_tools.patch
	"
