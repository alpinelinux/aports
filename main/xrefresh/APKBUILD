# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xrefresh
pkgver=1.0.3
pkgrel=2
pkgdesc="refresh all or part of an X screen"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom"
subpackages="$pkgname-doc"
depends=
makedepends="libx11-dev"
source="http://www.x.org/releases/individual/app/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}
sha512sums="56a9d4ad213dbb0014f2089979b2a6a74f8ac50cb532eecb48255027f7cb3651e8f8e024052301dab66fd9c8706fff93907caa84db2d95b79e8096097cc906a3  xrefresh-1.0.3.tar.bz2"
