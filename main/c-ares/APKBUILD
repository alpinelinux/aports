# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=c-ares
pkgver=1.34.2
pkgrel=1
pkgdesc="Asynchronous DNS/names resolver library"
url="https://c-ares.org/"
arch="all"
license="MIT"
makedepends="cmake samurai gtest-dev"
subpackages="$pkgname-doc $pkgname-static $pkgname-dev $pkgname-utils"
source="https://github.com/c-ares/c-ares/releases/download/v$pkgver/c-ares-$pkgver.tar.gz"

# secfixes:
#   1.27.0-r0:
#     - CVE-2024-25629
#   1.17.2-r0:
#     - CVE-2021-3672

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCARES_SHARED=ON \
		-DCARES_STATIC=ON \
		-DCARES_STATIC_PIC=ON \
		-DCARES_BUILD_TESTS=ON \
		-DCARES_SYMBOL_HIDING=ON \
		-DCARES_THREADS=ON

	cmake --build build
}

check() {
	build/bin/arestest --gtest_filter=-*.Live*
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

utils() {
	amove usr/bin
}

sha512sums="
