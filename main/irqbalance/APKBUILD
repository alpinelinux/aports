# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
pkgname=irqbalance
pkgver=1.9.5
pkgrel=0
pkgdesc="Daemon that distributes interrupts over the processors"
url="https://github.com/Irqbalance/irqbalance"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	glib-dev
	meson
	ncurses-dev
	numactl-dev
	"
subpackages="$pkgname-doc $pkgname-openrc $pkgname-systemd"
source="$pkgname-$pkgver.tar.gz::https://github.com/Irqbalance/irqbalance/archive/v$pkgver.tar.gz
	irqbalance.confd
	irqbalance.initd
	"

build() {
	abuild-meson \
		-Dpkgconfdir=/usr/share/irqbalance \
		-Dsystemd=disabled \
		-Dsystemd-service=true \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -m755 -D "$srcdir"/$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
	install -m644 -D "$srcdir"/$pkgname.confd "$pkgdir"/etc/conf.d/$pkgname
}

systemd() {
	default_systemd
	# only used by the systemd service, openrc uses etc/conf.d
	amove usr/share/irqbalance/irqbalance.env
}

