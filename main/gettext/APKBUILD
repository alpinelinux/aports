sha256sums="36f3c1043df803565d4977c1efbd41e1ec0f0301acf5f057984406c34cb9f948  gettext-0.18.3.tar.gz"
sha512sums="812074a74c946c34b97efa351a3d2b1ff5b6321714e88912d188ba70c868c9d9b7263a8507514c05c1667bc5613e88d9a44569575db73dd046780824b0975bfd  gettext-0.18.3.tar.gz"
