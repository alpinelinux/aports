# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Michael Mason <ms13sp@gmail.com>
pkgname=mailx
pkgver=8.1.1
pkgrel=2
pkgdesc="A commandline utility for sending email"
url="https://www.opengroup.org/onlinepubs/007908799/xcu/mailx.html"
arch="all"
license="BSD"
depends=
depends_dev=
makedepends="$depends_dev bsd-compat-headers"
install=""
options="suid"
subpackages="$pkgname-doc"
source="https://sources.archlinux.org/other/mailx/$pkgname-$pkgver-fixed.tar.gz
	mailx-8.1.1.patch
	musl-fix.patch
	mailx-gcc4.patch"

_builddir="$srcdir/$pkgname-$pkgver-fixed"

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	sed -i 's#/man/#/share/man/#' Makefile
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

