# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=mpc1
pkgver=1.3.0
pkgrel=0
pkgdesc="Multiprecision C library"
url="http://www.multiprecision.org/"
arch="all"
license="LGPL-3.0-or-later"
makedepends_host="gmp-dev mpfr-dev>=4.1.0-r0"
makedepends="$makedepends_host"
subpackages="$pkgname-dev $pkgname-doc"
source="https://ftp.gnu.org/gnu/mpc/mpc-$pkgver.tar.gz"

builddir="$srcdir"/mpc-$pkgver

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--with-sysroot="$CBUILDROOT" \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-shared
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
9c18b24f7542dc1dc5e10cf58fd242e73d79a9dc3619c3f08d52aed75ad0e7d9e2ba2c46857717c8b921b084af2efc8c0d2d7173081af764b81c24a8971ddd9a  mpc-1.3.0.tar.gz
"
