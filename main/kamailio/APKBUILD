		"$_mod_list_unixodbc"
}

snmpstats() {
	_generic_pkg "SNMP statistics support" \
		"$_mod_list_snmpstats" || return 1
	mkdir -p "$subpkgdir"/usr/share/snmp
	mv "$_builddir"/modules/snmpstats/mibs \
		"$subpkgdir"/usr/share/snmp/ || return 1
}

