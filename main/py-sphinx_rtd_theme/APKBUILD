# Maintainer:
pkgname=py-sphinx_rtd_theme
pkgver=0.1.9
pkgrel=0
pkgdesc="Sphinx theme for readthedocs.org"
url="https://github.com/snide/sphinx_rtd_theme"
arch="noarch"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev python2-dev py-setuptools"
install=""
subpackages=""
source="sphinx_rtd_theme-$pkgver.tar.gz::https://github.com/snide/sphinx_rtd_theme/archive/$pkgver.tar.gz"

_builddir="$srcdir"/sphinx_rtd_theme-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python2 setup.py build || return 1
}

package() {
	cd "$_builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

