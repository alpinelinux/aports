build() {
	local _enable_ktls="--enable-ktls"
	case "$CARCH" in
		# test-memset_explicit fails with -Os which indicates miscompliation
		armhf) CFLAGS="${CFLAGS//-Os/-O2}";;
		# tests fails on ppc64le
		ppc64le) _enable_ktls="--disable-ktls";;
	esac
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		$_enable_ktls \
		--disable-openssl-compatibility \
		--disable-rpath \
		--disable-static \
		--disable-valgrind-tests
	make
}

check() {
	# millis, 100s
	export GNUTLS_TEST_TIMEOUT=100000
	make check 	|| {
		cat tests/test-suite.log
		return 1
	}
}

package() {
	DESTDIR="$pkgdir" make install
}

utils() {
	license="GPL-3.0-or-later"
	pkgdesc="Command line tools for TLS protocol"
	mkdir -p "$subpkgdir"/usr/
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

xx() {
	pkgdesc="The C++ interface to GnuTLS"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/lib*xx.so.* "$subpkgdir"/usr/lib/
}

