# Maintainer:
pkgname=gyp
pkgver=0.21.1
pkgrel=0
pkgdesc="Generate Your Projects Meta-Build system"
options="!check" # Tests currently fail
url="https://gyp.gsrc.io"
arch="noarch"
license="BSD-3-Clause"
depends="python3 ninja"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
subpackages="$pkgname-pyc"
source="https://github.com/nodejs/gyp-next/archive/refs/tags/v$pkgver/gyp-next-$pkgver.tar.gz
	fips.patch
	"
builddir="$srcdir/gyp-next-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

