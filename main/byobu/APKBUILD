pkgname=byobu
pkgver=5.67
pkgrel=0
pkgdesc="An enhancement of the GNU Screen"
url="https://launchpad.net/byobu"
arch="noarch"
license="GPL3"
depends="screen python"
makedepends=""
install=""
subpackages="$pkgname-doc"
source="http://launchpad.net/byobu/trunk/$pkgver/+download/byobu_$pkgver.orig.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc 
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
#	mkdir -p "$pkgdir"
#	cp -a etc usr "$pkgdir"/
}

md5sums="0e93d65283047f2aacc4bd5b52cbe317  byobu_5.67.orig.tar.gz"
sha256sums="067992a2616b5b5fb426235b5e530d2cecce6a102a55543ffac3ebb6949e297b  byobu_5.67.orig.tar.gz"
sha512sums="e8f7cdf903295ab8245598db77375870f18e35bbdacf70d6698e25fcfaa014e7f949a07febf8c8477f8737aa4ff657f971d54c573c6ea068c25269f7224c254a  byobu_5.67.orig.tar.gz"
