pkgname=apk-cron
pkgver=1.0
pkgrel=2
pkgdesc="Periodic software updates"
url=https://git.alpinelinux.org/cgit/aports/tree/main/apk-cron
arch=noarch
license=GPL2
depends=apk-tools
source=apk

build() {
	:
}

package() {
	install -D -m 755 "$srcdir/apk" "$pkgdir/etc/periodic/daily/apk"
}

