# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxxf86vm
pkgver=1.1.7
pkgrel=0
pkgdesc="X11 XFree86 video mode extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
options="!check"  # No test suite.
subpackages="$pkgname-dev $pkgname-doc"
makedepends="libx11-dev libxext-dev meson samurai pkgconf xorgproto"
source="https://www.x.org/releases/individual/lib/libXxf86vm-$pkgver.tar.xz"
builddir="$srcdir"/libXxf86vm-$pkgver
build() {
	meson setup build \
		--prefix=/usr \
		--buildtype=plain \
		-Ddefault_library=shared \
		-Dlib_man_suffix=3

	meson compile -C build
}

package() {
	meson install -C build --destdir "$pkgdir"
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="
d1051c9698a884d86e5beb00d5ee148d2b5ded7fd05168861f722b89643ad9b7f7d220f0cbb64b290a69faf9a6630181533aaddb01c9c68b46f1e5625030f094  libXxf86vm-1.1.7.tar.xz
"
