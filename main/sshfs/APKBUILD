# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=sshfs
pkgver=3.0.0
pkgrel=0
pkgdesc="FUSE client based on the SSH File Transfer Protocol"
url="https://github.com/libfuse/sshfs"
arch="all"
license="GPL"
depends="openssh-client"
makedepends="fuse-dev glib-dev automake autoconf"
subpackages="$pkgname-doc"
source="https://github.com/libfuse/$pkgname/releases/download/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz"
options="!check"
builddir="$srcdir/$pkgname-$pkgver"

build () {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install

	mkdir -p "$pkgdir"/usr/share/doc/$pkgname/
	install -Dm644 AUTHORS COPYING "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="6cfc328566ed1a2c5d6cea940297ed3b24881379d42eaa79d4030df185c6c2317298ed03050f140dccd62fecd848a56beecb9c021b28bdbb3562417125a99693  sshfs-3.0.0.tar.gz"
