# Contributor: Leonardo Arena <rnalrd@gmail.com>
# Maintainer: Michael Mason <ms13sp@gmail.com>
pkgname=tiff
pkgver=3.9.7
pkgrel=1
pkgdesc="Provides support for the Tag Image File Format or TIFF"
url="http://www.libtiff.org/"
arch="all"
license="GPL"
depends=
depends_dev="zlib-dev jpeg-dev"
makedepends="libtool autoconf automake $depends_dev"
subpackages="$pkgname-doc $pkgname-dev $pkgname-tools"
source="ftp://ftp.remotesensing.org/pub/libtiff/$pkgname-$pkgver.tar.gz
	CVE-2012-4447.patch
	CVE-2012-4564.patch
	CVE-2012-5581.patch
	libtiff-CVE-2013-1960.patch
	libtiff-CVE-2013-1961.patch
	"
	
_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-cxx
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	rm -f "$pkgdir"/usr/lib/*.la
}

tools() {
	pkgdesc="Command-line utility programs for manipulating TIFF files"
	mkdir -p "$subpkgdir"/usr/
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

md5sums="626102f448ba441d42e3212538ad67d2  tiff-3.9.7.tar.gz
f85847db8d4cf8d9564f0f9af5bb060a  CVE-2012-4447.patch
e7b151b4a5acc8eb4b4428a98d6aa779  CVE-2012-4564.patch
072dc152f5acc1ff1195fdf03e67ee52  CVE-2012-5581.patch
7a5a1a53ba8671c17dd74c57cc3a93ae  libtiff-CVE-2013-1960.patch
0b09f16e421f3850e62db7ec6ff4e08d  libtiff-CVE-2013-1961.patch"
