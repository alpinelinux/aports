# Contributor: Jose-Luis Rivas <ghostbar@riseup.net>
# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs
pkgver=4.4.0
pkgrel=1
pkgdesc='Evented I/O for V8 javascript'
url='http://nodejs.org/'
arch='all'
license='MIT'
# gold is needed for mksnapshot
makedepends="$depends_dev python openssl-dev zlib-dev libuv-dev
	linux-headers paxmark binutils-gold"
subpackages="$pkgname-dev $pkgname-doc"
source="https://nodejs.org/dist/v$pkgver/node-v$pkgver.tar.gz"
_builddir="$srcdir"/node-v$pkgver

prepare() {
        local i
        cd "$_builddir"
        for i in $source; do
                case $i in
                *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
                esac
        done
}

build() {
        cd "$_builddir"
	./configure --prefix=/usr \
		--shared-zlib \
		--shared-libuv \
		--shared-openssl \
		|| return 1
	# we need run mksnapshot at build time so paxmark it early
	make -C out mksnapshot BUILDTYPE=Release \
		&& paxmark -m out/Release/mksnapshot \
		&& make || return 1
}

package() {
	local d
        cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	# paxmark so JIT works
	paxmark -m "$pkgdir"/usr/bin/node || return 1

	cp -pr "$pkgdir"/usr/lib/node_modules/npm/man "$pkgdir"/usr/share || return 1
	for d in doc html man; do
		rm -r "$pkgdir"/usr/lib/node_modules/npm/$d || return 1
	done
}
md5sums="4783dd4443e5a3a3421785f8a5cf5ea4  node-v4.4.0.tar.gz"
sha256sums="2cfc76292576d17a8f2434329221675972c96e5fd60cd694610f53134079f92e  node-v4.4.0.tar.gz"
sha512sums="e18c895cf3170546bc326bb0b1a1f219cfa212e6cdc6c240477f6cef625c98bf0fe4d5de7817a7345e7cd63096572b8841902209da81b75afebd94313fec1a66  node-v4.4.0.tar.gz"
