sha512sums="b8b80bca5d78ee070a1c403e544c2de4b65de74bef5f400f43125bdb289e43d4fc8dadb0d089a59f4bc8b41c6fc75ed6d307412cde90022ea75a6617128a4432  rtnppd-1.7b.tar.gz
