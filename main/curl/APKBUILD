builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	autoreconf -vif
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-ipv6 \
		--enable-unix-sockets \
		--without-libidn \
		--without-libidn2 \
		--with-libssh2 \
		--with-nghttp2 \
		--disable-ldap \
		--with-pic
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	make DESTDIR="$pkgdir" \
		-C "$builddir" install
}

libcurl() {
	pkgdesc="The multiprotocol file transfer library"
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/lib "$subpkgdir"/usr
}

