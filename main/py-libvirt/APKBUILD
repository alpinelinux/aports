sha512sums="d3c6679e8e9a7c875c89078733a4a8b25c65d7a37c1bad8ded7bffc1b16cac0c0db93fd5c5bfc8433cd6dd657d5d307a9bb38cc1178ecc5c730f8e03d5d6ae1d  libvirt-python-2.2.0.tar.gz
