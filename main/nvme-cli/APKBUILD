# Contributor: Florian Heigl <florian.heigl@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=nvme-cli
pkgver=2.16
pkgrel=1
pkgdesc="NVM-Express user space tooling for Linux"
arch="all"
url="https://github.com/linux-nvme/nvme-cli"
license="GPL-2.0-or-later"
makedepends="
	bash
	json-c-dev
	libnvme-dev>=1.14
	linux-headers
	meson
	util-linux-dev
	uuidgen
	zlib-dev
	"
checkdepends="
	py3-nose2
	"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-udev
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/linux-nvme/nvme-cli/archive/v$pkgver.tar.gz
	"
options="!check" # needs pci nvme stuff

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddocs=man \
		-Dudevrulesdir=/usr/lib/udev/rules.d/ \
		-Djson-c=enabled \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	rm -rf "$pkgdir"/usr/lib/systemd
}

sha512sums="
507018ff41832574bef5b88ea6a17336b9792c54f8e5c619d041bce23124e1d6d5e5e824407f46d4f1b4d6899125885eb14289f3399e61c7e7a59a603f1635e2  nvme-cli-2.16.tar.gz
"
