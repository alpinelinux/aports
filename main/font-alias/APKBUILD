# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=font-alias
pkgver=1.0.6
pkgrel=0
pkgdesc="X.org font alias files"
url="https://xorg.freedesktop.org/"
arch="noarch"
license="custom"
makedepends="meson"
subpackages="$pkgname-doc"
source="https://www.x.org/releases/individual/font/font-alias-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Dfontrootdir=/usr/share/fonts \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

sha512sums="
a6c5441a1dab197799716c5b9940871c40731c21f2dcf7557b51a6ed090332157bb6f3f733e61a9aa5709c6065c7b9e988cf486b1a68a499c73fe0c6c3dee355  font-alias-1.0.6.tar.xz
"
