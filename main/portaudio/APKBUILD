pkgname=portaudio
pkgver=19
pkgrel=1
pkgdesc="Cross platform, open-source, audio I/O library"
url="http://www.portaudio.com/"
arch="all"
license="MIT"
depends=
depends_dev="alsa-lib-dev"
makedepends="$depends_dev
	jack-dev
	linux-headers autoconf automake libtool"
install=""
subpackages="$pkgname-dev"
source="http://www.portaudio.com/archives/pa_stable_v19_20140130.tgz
	portaudio-pkgconfig-alsa.patch
	portaudio-audacity.patch
	"

builddir="$srcdir"/portaudio
prepare() {
	local i
	cd "$builddir"
	update_config_sub
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
	autoreconf -vif
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		--with-jack \
		--with-alsa
	make
}

package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}

