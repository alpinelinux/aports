# Maintainer: Peter Bui <pnutzh4x0r@gmail.com>
pkgname=py-google-api-python-client
_pkgname=google-api-python-client
pkgver=1.5.5
pkgrel=0
pkgdesc="Google API Client Library for Python"
url="https://github.com/google/google-api-python-client"
arch="noarch"
license="ASL 2.0"
depends="py-httplib2 py-oauth2client py-uritemplate py-six"
makedepends="python2-dev py-setuptools python3-dev"
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

md5sums="c7b7dfd563e3a1f531f5c97ce6407c0d  google-api-python-client-1.5.5.tar.gz"
sha256sums="c9f6bf15c76b05a3c2e301a5509e97f11c5902fb6b03dcb7faf5b5337c66f557  google-api-python-client-1.5.5.tar.gz"
sha512sums="180cfd9a396d81a0c710d317d2595eb3e0974d9cb0946ff3e00bcd23c65de42841ddd5addf2ffdc1bf7cab415a63359b9f62493806c782b534ed19e901de94f5  google-api-python-client-1.5.5.tar.gz"
