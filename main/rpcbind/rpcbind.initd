depend() {
	use net
	before inetd xinetd
	after firewall
	provide portmap
}

start() {
	ebegin "Starting rpcbind"
	start-stop-daemon --start --quiet --exec /sbin/rpcbind \
		-- ${RPCBIND_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping rpcbind"
	start-stop-daemon --stop --quiet --exec /sbin/rpcbind
	eend $?
}

