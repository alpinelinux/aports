# Contributor: Peter Bui <pnutzh4x0r@gmail.com>
# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=py-requests
_pkgname=requests
pkgver=2.16.5
pkgrel=0
pkgdesc="A HTTP request library for Python"
url="http://www.python-requests.org/"
arch="noarch"
license="ASL 2.0"
# Requirements for tests are not available in main
options="!check"
depends=""
makedepends="python2-dev py-setuptools python3-dev"
subpackages="py3-${pkgname#py-}:_py3 py2-${pkgname#py-}:_py2"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc ${python#python}"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

sha512sums="9452103590a5f007dd98889ed0aa57517fb3eda11c860652ad17fd00ee605a976c857249593a1eb71736de832ae8907076b834f188a9aac8ba91a39ba6d3db10  requests-2.16.5.tar.gz"
