# Contributor: Danilo Godec <danilo.godec@agenda.si>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=pptpd
pkgver=1.4.0
pkgrel=1
pkgdesc="PoPToP - PPTP Daemon, Linux as Microsoft VPN Server"
url="http://www.poptop.org/"
arch="all"
license="GPL v2 or later"
depends=""
makedepends="ppp-dev"
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::http://sourceforge.net/projects/poptop/files/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz/download
	fix_MSG_TRYHARD.patch
	pptpd.patch
	pptpd.confd
	pptpd.initd
	options.pptp
	pptpd.conf
	"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr --sysconfdir=/etc || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
	install -Dm755 "$srcdir"/pptpd.initd "$pkgdir"/etc/init.d/pptpd
	install -Dm644 "$srcdir"/pptpd.confd "$pkgdir"/etc/conf.d/pptpd
	install -Dm644 "$srcdir"/options.pptp "$pkgdir"/etc/ppp/options.pptp
	install -Dm644 "$srcdir"/pptpd.conf "$pkgdir"/etc/
}

