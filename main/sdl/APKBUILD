# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=sdl
pkgver=1.2.15
pkgrel=9
pkgdesc="A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard"
url="https://www.libsdl.org/"
arch="all"
options="!check"  # Tests are all interactive.
license="LGPL-2.1+"
subpackages="$pkgname-dev $pkgname-doc"
depends=
depends_dev="libx11-dev"
makedepends="$depends_dev libxext-dev libxrender-dev libx11-dev libice-dev
	libsm-dev libxrandr-dev mesa-dev alsa-lib-dev glu-dev"
source="https://www.libsdl.org/release/SDL-$pkgver.tar.gz
	SDL-1.2.10-GrabNotViewable.patch
	SDL-1.2.15-const_XData32.patch
	"
builddir="$srcdir"/SDL-$pkgver

prepare() {
	cd "$builddir"
	update_config_sub
	default_prepare
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-nasm \
		--disable-esd \
		--disable-video-svga \
		--disable-video-ggi \
		--disable-video-aalib \
		--enable-alsa \
		--with-x \
		--disable-rpath
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

