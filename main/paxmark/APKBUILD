pkgname=paxmark
pkgver=0.11
pkgrel=1
pkgdesc="Manage PaX marking of executables"
url="https://alpinelinux.org/"
arch="noarch"
options="!check"
license="GPL"
depends="attr"
makedepends=""
install=""
subpackages=""
source="paxmark"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/usr/sbin
	install -m755 "$srcdir"/paxmark "$pkgdir"/usr/sbin || return 1
	ln -s paxmark "$pkgdir"/usr/sbin/paxmark.sh || return 1
}

