pkgname=paxmark
pkgver=0.10
pkgrel=0
pkgdesc="Manage PaX marking of executables"
url="http://alpinelinux.org"
arch="noarch"
license="GPL"
depends="attr"
makedepends=""
install=""
subpackages=""
source="paxmark"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/usr/sbin
	install -m755 "$srcdir"/paxmark "$pkgdir"/usr/sbin
	ln -s paxmark "$pkgdir"/usr/sbin/paxmark.sh
}

