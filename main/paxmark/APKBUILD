pkgname=paxmark
pkgver=0.8
pkgrel=2
pkgdesc="Manage PaX marking of executables"
url="http://alpinelinux.org"
arch="noarch"
license="GPL"
depends="paxctl attr"
makedepends=""
install=""
subpackages=""
source="paxmark"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/usr/sbin
	install -m755 "$srcdir"/paxmark "$pkgdir"/usr/sbin || return 1
	ln -s paxmark "$pkgdir"/usr/sbin/paxmark.sh || return 1
}

