# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=py-asn1
_pkgname=pyasn1
pkgver=2.1.0
pkgrel=0
pkgdesc="A Python ASN1 library"
url="https://github.com/andrivet/python-asn1"
arch="noarch"
license="BSD"
depends=""
makedepends="python2-dev py-setuptools python3-dev"
subpackages="py3-${pkgname#py-}:_py3 py2-${pkgname#py-}:_py2"
source="$_pkgname-$pkgver.tar.gz::https://github.com/andrivet/python-asn1/archive/v$pkgver.tar.gz"
builddir="$srcdir/python-asn1-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1	
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$python"
	install_if="$pkgname=$pkgver-r$pkgrel $python" 	

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

md5sums="76f45c313b0ed1f9abdfd3d573ea3ec2  pyasn1-2.1.0.tar.gz"
sha256sums="b3bee56f640b280191283448003a3a4e357a85220401614a1fdbc264c90e66eb  pyasn1-2.1.0.tar.gz"
sha512sums="bb460bdf5dcc70a423cae2db2ce4687da93846e0feb4cb133af3f4e0d245fc3ef7d5a4a1cb0ca0b88f7cfdf2edc236e1b33bd6c03e979783508d70ddb928def8  pyasn1-2.1.0.tar.gz"
