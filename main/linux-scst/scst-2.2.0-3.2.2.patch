+{
+	struct scst_local_sess *sess, *ts;
+
+	TRACE_ENTRY();
+
+	list_for_each_entry_safe(sess, ts, &tgt->sessions_list,
+					sessions_list_entry) {
+		scst_local_remove_adapter(sess);
+	}
+
+	list_del(&tgt->tgts_list_entry);
+
+	scst_unregister_target(tgt->scst_tgt);
+
+	kfree(tgt);
+
+	TRACE_EXIT();
+	return;
+}
