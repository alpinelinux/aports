+		if (res == Q2T_PRE_XMIT_RESP_CMD_ABORTED)
+			res = SCST_TGT_RES_SUCCESS;
+		goto out;
+	}
+
+	/* Here pha->hardware_lock already locked */
+
+	ha = prm.tgt->ha;
+	pha = to_qla_parent(ha);
+
+	res = q24_build_ctio_pkt(&prm);
+	if (unlikely(res != SCST_TGT_RES_SUCCESS))
