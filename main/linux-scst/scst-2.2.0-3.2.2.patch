+	EXTRACHECKS_WARN_ON_ONCE(irqs_disabled());
+
+	if (!sdev)
+		return -ENOENT;
+
+	TRACE_DBG("%s target %s", enable ? "Enabling" : "Disabling",
+		  sdev->device->name);
+
+	spin_lock_irq(&sdev->spinlock);
+	sdev->enabled = enable;
+	spin_unlock_irq(&sdev->spinlock);
