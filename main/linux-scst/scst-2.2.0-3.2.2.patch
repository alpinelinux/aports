+static void scst_inc_check_expected_sn(struct scst_cmd *cmd)
+{
+	if (likely(cmd->sn_set))
+		scst_inc_expected_sn(cmd->cur_order_data, cmd->sn_slot);
+
+	scst_make_deferred_commands_active(cmd->cur_order_data);
