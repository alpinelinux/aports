+	TRACE_ENTRY();
+
+	EXTRACHECKS_WARN_ON_ONCE(irqs_disabled());
+
+	BUG_ON(!scst_tgt);
+	if (WARN_ON(!sdev))
+		return -ENODEV;
+
+	srpt_release_sdev(sdev);
+
+	scst_tgt_set_tgt_priv(scst_tgt, NULL);
+
+	TRACE_EXIT();
+
+	return 0;
+}
