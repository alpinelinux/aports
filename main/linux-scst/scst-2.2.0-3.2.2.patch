+		TRACE_MGMT_DBG("Found being destroyed cmd_h %d", get.cmd_h);
+		res = -ESRCH;
+		goto out_unlock;
+	}
+
+	if ((ucmd->cmd != NULL) && (ucmd->state <= UCMD_STATE_EXECING) &&
+	    (ucmd->sent_to_user || ucmd->background_exec)) {
+		cmd = ucmd->cmd;
+		scst_cmd_get(cmd);
