+__be64 scst_pack_lun(const uint64_t lun, enum scst_lun_addr_method addr_method)
+{
+	uint64_t res = 0;
+
+	if (lun) {
+		res = (addr_method << 14) | (lun & 0x3fff);
+		res = res << 48;
+	}
+
+	TRACE_EXIT_HRES(res >> 48);
