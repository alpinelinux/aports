+	old_node_name = wwn_to_u64(ha->node_name);
+	if (old_node_name == node_name)
+		goto out_success;
+
+	u64_to_wwn(node_name, ha->tgt_node_name);
+	ha->node_name_set = 1;
+
+abort:
+	if (qla_tgt_mode_enabled(ha)) {
+		set_bit(ISP_ABORT_NEEDED, &ha->dpc_flags);
+		qla2x00_wait_for_hba_online(ha);
+	}
+
+out_success:
+	res = size;
+
+out:
+	TRACE_EXIT_RES(res);
+	return res;
