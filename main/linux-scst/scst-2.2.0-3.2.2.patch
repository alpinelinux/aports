+			sess->processed_cmds = 0;
+			memset(sess->sess_latency_stat, 0,
+				sizeof(sess->sess_latency_stat));
+
+			for (t = SESS_TGT_DEV_LIST_HASH_SIZE-1; t >= 0; t--) {
+				struct list_head *head =
+						&sess->sess_tgt_dev_list[t];
+				struct scst_tgt_dev *tgt_dev;
