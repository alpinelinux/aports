+static inline void *q2t_get_req_pkt(scsi_qla_host_t *ha)
+{
+	ha = to_qla_parent(ha);
+
+	/* Adjust ring index. */
+	ha->req_ring_index++;
+	if (ha->req_ring_index == ha->request_q_length) {
+		ha->req_ring_index = 0;
+		ha->request_ring_ptr = ha->request_ring;
+	} else {
+		ha->request_ring_ptr++;
