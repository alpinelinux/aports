+static void q2x_send_notify_ack(scsi_qla_host_t *ha, notify_entry_t *iocb,
+	uint32_t add_flags, uint16_t resp_code, int resp_code_valid,
+	uint16_t srr_flags, uint16_t srr_reject_code, uint8_t srr_explan)
+{
+	nack_entry_t *ntfy;
