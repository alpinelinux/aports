+static int scst_pr_check_pr_path(void)
+{
+	int res;
+	struct path path;
+
+	mm_segment_t old_fs = get_fs();
+
+	TRACE_ENTRY();
+
+	set_fs(KERNEL_DS);
+
+	res = kern_path(SCST_PR_DIR, 0, &path);
+	if (res == 0)
+		path_put(&path);
+	if (res != 0) {
+		PRINT_ERROR("Unable to find %s (err %d), you should create "
+			"this directory manually or reinstall SCST",
+			SCST_PR_DIR, res);
+		goto out_setfs;
+	}
+
+out_setfs:
+	set_fs(old_fs);
+
+	TRACE_EXIT_RES(res);
+	return res;
+}
