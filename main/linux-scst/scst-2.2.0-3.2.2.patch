+/* Called with dev_pr_mutex locked, no IRQ */
+void scst_pr_preempt(struct scst_cmd *cmd, uint8_t *buffer, int buffer_size)
+{
+	TRACE_ENTRY();
+
+	scst_pr_do_preempt(cmd, buffer, buffer_size, false);
+
+	TRACE_EXIT();
+	return;
+}
