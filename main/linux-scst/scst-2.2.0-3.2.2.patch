+static inline int test_cmd_threads(struct scst_user_dev *dev)
+{
+	int res = !list_empty(&dev->udev_cmd_threads.active_cmd_list) ||
+		  !list_empty(&dev->ready_cmd_list) ||
+		  !dev->blocking || dev->cleanup_done ||
+		  signal_pending(current);
+	return res;
+}
