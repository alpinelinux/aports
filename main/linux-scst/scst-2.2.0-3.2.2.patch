+	TRACE_ENTRY();
+
+	EXTRACHECKS_BUG_ON((ucmd->state != UCMD_STATE_NEW) &&
+			   (ucmd->state != UCMD_STATE_PARSING) &&
+			   (ucmd->state != UCMD_STATE_BUF_ALLOCING));
