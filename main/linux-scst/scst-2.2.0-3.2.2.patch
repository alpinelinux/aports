+static int scst_start_global_threads(int num)
+{
+	int res;
+
+	TRACE_ENTRY();
+
+	mutex_lock(&scst_mutex);
+
+	res = scst_add_threads(&scst_main_cmd_threads, NULL, NULL, num);
+	if (res < 0)
+		goto out_unlock;
