	cd "$builddir"
	make DESTDIR="$pkgdir" install
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

doc() {
	default_doc

	cd "$pkgdir"
	local file; for file in $(find ./ -name "*.pod"); do
