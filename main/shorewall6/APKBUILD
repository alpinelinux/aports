_pkgname="shorewall"
pkgname="${_pkgname}6"
pkgver="5.2.2"
pkgrel=0
pkgdesc="Files for the IPV6 Shorewall Firewall"
url="http://www.shorewall.net/"
arch="noarch"
license="GPL-2.0"
options="!check"
depends="${_pkgname}-core perl ip6tables iproute2"
# coreutils for install -T
makedepends="coreutils bash"
subpackages="$pkgname-doc"
_ver_maj_min() {
	local var v

	while [ "${#}" -ge 2 ]; do
		var="${1}"
		shift
		v="${1}"
		shift

		while true; do
			case "${v}" in (*.*.*) v="${v%.*}" ;; (*.*) break ;; esac
		done

		# Guard eval
		case "${var}" in
			(*[!0-9A-Za-z_]*) continue ;;
			([A-Za-z_][0-9A-Za-z_]*) ;; # accepted
			(*) continue ;;
		esac
		eval "${var}=\"\${v}\""
	done
}
_ver_maj_min "_v" "${pkgver}"
source="http://www.shorewall.net/pub/${_pkgname}/${_v}/${_pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.bz2
	${pkgname}.initd
	shorewallrc.alpine
	"

prepare() {
	default_prepare

	install -p -D "${srcdir}/shorewallrc.alpine" "${builddir}/shorewallrc.alpine"
}

build() {
	cd "$builddir"
	./configure
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" ./install.sh shorewallrc.alpine
	install -Dm755 "${srcdir}/${pkgname}.initd" \
		"${pkgdir}/etc/init.d/${pkgname}"
}

