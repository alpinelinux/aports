# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Bart≈Çomiej Piotrowski <bpiotrowski@alpinelinux.org>
pkgname=parallel
pkgver=20171122
pkgrel=0
pkgdesc="Shell tool for executing jobs in parallel"
arch="noarch"
url="http://www.gnu.org/software/parallel/"
license="GPL-3.0"
depends="perl"
subpackages="$pkgname-doc"
options="!check"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="d73523b30aa0e00cacc1ca8b68fdbc9f7ded2513d14c5a79e909303a29f016d5bd17dd530cb4e560f6413c56f9f2ef07fd29aa77d6dcdd093abd799fe8d6b7ce  parallel-20171122.tar.bz2"
