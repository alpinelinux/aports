# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Bart≈Çomiej Piotrowski <bpiotrowski@alpinelinux.org>
pkgname=parallel
pkgver=20171022
pkgrel=0
pkgdesc="Shell tool for executing jobs in parallel"
arch="noarch"
url="http://www.gnu.org/software/parallel/"
license="GPL3"
depends="perl"
subpackages="$pkgname-doc"
options="!check"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="1b265482e0e79035e6febb9363ed2b8b34fe6e9ddc751fbf9764bd38cc85c5123aa3034b4f3937f476969cb70a3b14a724ee990a7270ab0bf3b543596f521390  parallel-20171022.tar.bz2"
