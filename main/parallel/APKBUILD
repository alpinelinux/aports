# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Bart≈Çomiej Piotrowski <bpiotrowski@alpinelinux.org>
pkgname=parallel
pkgver=20180222
pkgrel=0
pkgdesc="Shell tool for executing jobs in parallel"
arch="noarch"
url="http://www.gnu.org/software/parallel"
license="GPL-3.0-or-later"
depends="perl"
subpackages="$pkgname-doc"
options="!check"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="12d205e88179f2bac9585927a72f429ac186f1a3e386590ba61d54da6ecf69fb1ee124774e289a6a18fc5c8a7e0e4a0c13cc4a7bc4a853d6e46bcad52ba0243f  parallel-20180222.tar.bz2"
