# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Bart≈Çomiej Piotrowski <bpiotrowski@alpinelinux.org>
pkgname=parallel
pkgver=20180322
pkgrel=0
pkgdesc="Shell tool for executing jobs in parallel"
arch="noarch"
url="http://www.gnu.org/software/parallel"
license="GPL-3.0-or-later"
depends="perl"
subpackages="$pkgname-doc"
options="!check"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="62299fc3aca77c3d7b844b928d266209735b9f8012dd299ab5c142e4588bc0bf4e039e48200c0602b36719b3f70dc2442c89469939be71f3bcff887b2885f5dd  parallel-20180322.tar.bz2"
