# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=execline
pkgver=2.9.8.1
pkgrel=0
pkgdesc="A small scripting language, to be used in place of a shell in non-interactive scripts."
url="https://skarnet.org/software/execline/"
arch="all"
license="ISC"
options="!check"  # No test suite.
makedepends="skalibs-dev"
subpackages="$pkgname-static $pkgname-libs $pkgname-dev $pkgname-doc"
source="https://skarnet.org/software/execline/execline-$pkgver.tar.gz"
install="execline.post-install execline.post-upgrade execline.pre-deinstall"

build() {
	./configure \
		--prefix=/usr \
		--libexecdir="/usr/libexec/$pkgname" \
		--enable-shared \
		--disable-allstatic \
		--enable-pkgconfig \
		--with-pkgconfig \
		--enable-multicall
	make
}

package() {
	make DESTDIR="$pkgdir" install
	install -D -m 0644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
	mkdir -p "$pkgdir/usr/share/doc"
	cp -a doc "$pkgdir/usr/share/doc/$pkgname"
}

sha512sums="
74e12c8f5d8a21a989abba24a80013e28edfd851e1e2c39dfa7a1ecb29f8a6c208430dcbc8db5c51435f96ac931dcf36ff0c3874067ec31593765ddb98755590  execline-2.9.8.1.tar.gz
"
