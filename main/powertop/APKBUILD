# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=powertop
pkgver=2.10
pkgrel=0
pkgdesc="Power consumption monitor"
options="!check" # Has no testsuite
url="https://01.org/powertop"
arch="all"
license="GPL-2.0-only"
makedepends="linux-headers ncurses-dev pciutils-dev zlib-dev libnl3-dev
	gettext-dev"
subpackages="$pkgname-doc"
source="https://01.org/sites/default/files/downloads/powertop-v${pkgver}.tar.gz"
builddir="$srcdir"/$pkgname-v$pkgver

build() {
	cd "$builddir"
	LIBS="-lintl" ./configure --prefix=/usr --disable-nls
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

