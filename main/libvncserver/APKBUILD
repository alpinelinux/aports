# Contributor: Sergei Lukin <sergej.lukin@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libvncserver
pkgver=0.9.12
pkgrel=1
pkgdesc="Library to make writing a vnc server easy"
url="http://libvncserver.sourceforge.net/"
arch="all"
license="GPL-2.0-or-later"
depends_dev="
	libgcrypt-dev
	libjpeg-turbo-dev
	libpng-dev
	libice-dev
	libx11-dev
	libxdamage-dev
	libxext-dev
	libxfixes-dev
	libxi-dev
	libxinerama-dev
	libxrandr-dev
	libxtst-dev
	openssl-dev
	lzo-dev
	"
makedepends="$depends_dev cmake"
subpackages="$pkgname-dev"
source="https://github.com/LibVNC/libvncserver/archive/LibVNCServer-$pkgver.tar.gz
	CVE-2019-15681.patch
	"

# secfixes:
#   0.9.12-r1:
#     - CVE-2019-15681
#   0.9.11-r2:
#     - CVE-2018-7225
#   0.9.11-r0:
#     - CVE-2016-9941
#     - CVE-2016-9942

builddir="$srcdir"/libvncserver-LibVNCServer-$pkgver

build() {
	cd "$builddir"
	mkdir build
	cd build
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DWITH_ZLIB=ON \
		-DWITH_LZO=ON \
		-DWITH_JPEG=ON \
		-DWITH_PNG=ON \
		-DWITH_SDL=ON \
		-DWITH_THREADS=ON \
		-DWITH_GNUTLS=ON \
		-DWITH_OPENSSL=ON \
		-DWITH_SYSTEMD=OFF \
		-DWITH_GCRYPT=ON \
		-DWITH_FFMPEG=ON \
		-DWITH_WEBSOCKETS=ON \
		-DWITH_SASL=ON \
		..
	make
}

check() {
	cd "$builddir"
	make -C build test
}

package() {
	cd "$builddir"
	make -C build install DESTDIR="$pkgdir"
}

