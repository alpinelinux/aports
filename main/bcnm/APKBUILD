# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=bcnm
pkgver=0.0.2.1
pkgrel=0
pkgdesc="Better Client Network Manager"
url=https://skarnet.org/software/bcnm/
arch="all"
license="ISC"
options="!check"
_skalibs_version=2.14.5
makedepends="skalibs-dev>=$_skalibs_version linux-headers"
subpackages="$pkgname-static $pkgname-libs $pkgname-dev $pkgname-doc"
source="https://skarnet.org/software/bcnm/bcnm-$pkgver.tar.gz"

build() {
	./configure \
		--prefix=/usr \
		--enable-shared \
		--disable-allstatic \
		--libexecdir="/usr/lib/$pkgname" \
		--with-pkgconfig \
		--enable-pkgconfig
	make
}

package() {
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$pkgdir/usr/share/doc/$pkgname"
}

sha512sums="
f04ed21ec666d19d607ce2177ef827c66b62e2f9de3f5e9c0dd65fdac9f49b5cb35f765f4cb01f3b153740194824c4116970b4b4ef1139d2b960b3a5daccbc44  bcnm-0.0.2.1.tar.gz
"
