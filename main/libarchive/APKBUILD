# Contributor: Sergei Lukin <sergej.lukin@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libarchive
pkgver=3.6.2
pkgrel=2
pkgdesc="library that can create and read several streaming archive formats"
url="https://libarchive.org/"
arch="all"
license="BSD-2-Clause AND BSD-3-Clause AND Public-Domain"
makedepends="zlib-dev bzip2-dev xz-dev lz4-dev acl-dev openssl-dev>3 expat-dev
	attr-dev zstd-dev"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc $pkgname-tools"
source="https://libarchive.org/downloads/libarchive-$pkgver.tar.xz
	ignore-pc-requires.patch
	"

# secfixes:
#   3.6.1-r2:
#     - CVE-2022-36227
#   3.6.1-r0:
#     - CVE-2022-26280
#   3.6.0-r0:
#     - CVE-2021-36976
#   3.4.2-r0:
#     - CVE-2020-19221
#     - CVE-2020-9308
#   3.4.0-r0:
#     - CVE-2019-18408
#   3.3.2-r1:
#     - CVE-2017-14166

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--without-xml2
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

tools() {
	pkgdesc="libarchive tools bsdtar and bsdcpio"

	mkdir -p "$subpkgdir"/usr/
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

