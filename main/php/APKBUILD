pkgrel=0
pkgdesc="The PHP language runtime engine"
url="http://www.php.net/"
arch="all"
license="PHP-3"
depends="$pkgname-cli"
# -dev package needs phpize
depends_dev="$pkgname-cli pcre-dev"
install="$pkgname.post-upgrade"
makedepends="
	$depends_dev
	apache2-dev
	apr-dev
	apr-util-dev
	aspell-dev
	bzip2-dev
	curl-dev
	db-dev
