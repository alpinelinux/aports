# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gdbm
pkgver=1.16
pkgrel=0
pkgdesc="GNU dbm is a set of database routines that use extensible hashing"
url="https://www.gnu.org/software/gdbm"
arch="all"
license="GPL-3.0-or-later"
depends=""
makedepends=""
install=
subpackages="$pkgname-dev $pkgname-doc"
source="https://ftp.gnu.org/gnu/gdbm/$pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$builddir"
	# we disable large-file due to it makes the db file non-compat
	# with gdbm-1.8.3
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-libgdbm-compat \
		--disable-largefile \
		--disable-dependency-tracking
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="97f4f37fd95cee4dd5c9c3f42ea3aecaa28016e90fe0e168a9d8c38e92602221f946c273bb249d508200249701c6403d0f9351460485dfae34a3bf625de59d2c  gdbm-1.16.tar.gz"
