# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxdamage
pkgver=1.1.7
pkgrel=0
pkgdesc="X11 damaged region extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
makedepends="
	libx11-dev
	libxfixes-dev
	meson
	util-macros
	xorgproto
	"
subpackages="$pkgname-dev"
source="https://www.x.org/releases/individual/lib/libXdamage-$pkgver.tar.xz"
builddir="$srcdir"/libXdamage-$pkgver
options="!check"  # No test suite.

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
9406e39cbc426d7fa3c66bf1eec202fdb5af5db99a0ff49c2be995b1ff7326a6c1fb395c46391e1c32f5a6569a5d6e02bdd5b79fc79dd468fc3ebd698496bbc2  libXdamage-1.1.7.tar.xz
"
