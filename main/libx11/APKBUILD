# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libx11
pkgver=1.6.0
pkgrel=0
pkgdesc="X11 client-side library"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom:XFREE86"
depends=
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libxcb-dev xproto xextproto xf86bigfontproto xtrans kbproto
	inputproto"
makedepends="$depends_dev util-macros pkgconfig"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$pkgver.tar.bz2
	"

build() {
	cd "$srcdir"/libX11-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-xcb \
		|| return 1
	make
}

package() {
	cd "$srcdir"/libX11-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

md5sums="f7c7a614f5c609e759dadb99436eb9c1  libX11-1.6.0.tar.bz2"
sha256sums="53131412343ec252307fe14903deaf54c356f9414d72d49180c2091dcd7019fa  libX11-1.6.0.tar.bz2"
sha512sums="d97f96ebbb6d44a002ea69cd71378882cff28e49dcfd2272654e3d1a2db4bf7fd2fd122dbd2e2c36f1fd18c2d012c79339ba6f65915a96e187096afa68f9f20d  libX11-1.6.0.tar.bz2"
