sha512sums="a14b057bba74c7c90b1802554e253d1f3153c13e3187d36b3b93a3d8bf2e9f3ba70a23c65028e236dae8d7de5c9e12eac17179f7de4297d558ed5ea25c736a5b  iso-codes-3.43.tar.xz"
