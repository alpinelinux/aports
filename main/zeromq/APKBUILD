# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=zeromq
pkgver=4.3.4
pkgrel=3
pkgdesc="The ZeroMQ messaging library and tools"
url="https://zeromq.org/"
arch="all"
license="LGPL-3.0-or-later with exceptions"
makedepends="
	asciidoc
	cmake
	libsodium-dev
	perl
	samurai
	util-linux-dev
	xmlto
	"
subpackages="libzmq-static $pkgname-dev libzmq:libs"
source="https://github.com/zeromq/libzmq/releases/download/v$pkgver/zeromq-$pkgver.tar.gz"

# secfixes:
#   4.3.3-r0:
#     - CVE-2020-15166
#   4.3.2-r0:
#     - CVE-2019-13132
#   4.3.1-r0:
#     - CVE-2019-6250

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTS="$(want_check && echo ON || echo OFF)" \
		-DWITH_DOC=OFF
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure -E test_security_curve --timeout 300
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	# just the readme
	rm -r "$pkgdir"/usr/share/zmq
}

sha512sums="
e198ef9f82d392754caadd547537666d4fba0afd7d027749b3adae450516bcf284d241d4616cad3cb4ad9af8c10373d456de92dc6d115b037941659f141e7c0e  zeromq-4.3.4.tar.gz
"
