# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=apg
pkgver=2.3.0b
pkgrel=4
pkgdesc="Automated Password Generator."
url="http://www.adel.nursat.kz/apg/index.shtml"
arch="all"
license="BSD"
# no check provided by upstream
options="!check"
subpackages="$pkgname-doc"
source="http://dlc.openindiana.org/oi-userland/source-archives/${pkgname}-${pkgver}.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	default_prepare
}

build() {
	cd "$builddir"
	sed -i 's:^#\(CS_LIBS = -lnsl\)$:\1:' Makefile
	make
}

package() {
	cd "$builddir"
	for i in apg apgbfm; do
		install -D -m755 $i "$pkgdir"/usr/bin/$i
		install -D -m644 doc/man/$i.1 "$pkgdir"/usr/man/man1/$i.1
	done
	install -D -m 644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="3112d2267f2311f960a52fa268b55a5faf0250a4a8c5e7444f0c1326afa2844a476a54befcf79e5b8532d74c53f6f58ffc420591c8c36798dd82b43c14869e1a  apg-2.3.0b.tar.gz"
