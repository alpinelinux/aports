# Maintainer: G.J.R. Timmer <gjr.timmer@gmail.com>
pkgname=pgtcl
pkgver=2.1.0
pkgrel=0
pkgdesc="Tcl client side interface to PostgreSQL (libpgtcl)"
url="https://flightaware.github.io/Pgtcl/"
arch="all"
license="BSD"
depends=""
install=""
pkgusers="postgres"
pkggroups="postgres"
depends_dev=""
makedepends="postgresql-dev tcl-dev pkgconf autoconf automake docbook2x"
subpackages="$pkgname-doc"
patches=""
source="https://github.com/flightaware/Pgtcl/archive/v${pkgver}.tar.gz"
builddir="$srcdir/Pgtcl-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	
	case "$CARCH" in
	aarch64|x86_64) _x64=--enable-64bit;
	esac

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--disable-rpath \
		--enable-threads \
		$_x64 \
		|| return 1

	make || return 1
}

package() {
	cd "$builddir"
	
	make DESTDIR="$pkgdir" install || return 1

	cd "$builddir"/doc
	sed -i -- 's/docbook2man/docbook2x-man/g' Makefile 
	sed -i -- 's/sh\ \.\/fix-fi\.sh\ man\/\*//g' Makefile
	make DESTDIR="$pkgdir" all || return 1

	# Clean empty dir
	rm -rf "$pkgdir"/usr/bin
}

md5sums="920cb0c59557f18923a53f0598d2d7dd  v2.1.0.tar.gz"
sha256sums="98eafb1f1e2b6ea08fd7606d1b4e6fe83d63e8e5cebef8bb7ea02144c259d1f0  v2.1.0.tar.gz"
sha512sums="895f81548d5fde128b258cfb9cad732f539089a7c89bad08b7bc8a229d7f2ecdb9b31a374ddb3fb392ed3e20ba45cca47c2dccfa6ab86e617177f7021d08b3b3  v2.1.0.tar.gz"
