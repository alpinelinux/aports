# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcroco
pkgver=0.6.12
pkgrel=1
pkgdesc="GNOME CSS2 parsing and manipulation toolkit"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev"
depends=
makedepends="glib-dev libxml2-dev"
source="https://download.gnome.org/sources/$pkgname/0.6/$pkgname-$pkgver.tar.xz
	CVE-2017-7960.patch
	CVE-2017-7961.patch
	CVE-2017-8871-and-CVE-2017-8834.patch
	"

# secfixes:
#   0.6.12-r1:
#     - CVE-2017-7960
#     - CVE-2017-7961
#     - CVE-2017-8871
#     - CVE-2017-8834

depends_dev="glib-dev libxml2-dev pkgconfig"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
