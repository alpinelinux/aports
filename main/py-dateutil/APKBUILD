# Maintainer: 
pkgname=py-dateutil
_pkgname=python-dateutil
pkgver=2.8.0
pkgrel=0
pkgdesc="Python extensions for datetime module"
options="!check net" # Requires unpackaged freezegun
url="https://dateutil.readthedocs.io"
arch="noarch"
license="Apache-2.0 BSD-3-Clause"
depends="py-six tzdata"
makedepends="py-setuptools py3-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"

	# don't install zoneinfo tarball
	sed -i '/package_data=/d' setup.py

	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="ec7da86203572582f883a4686acf8a732a2de4f396d809057eb51b2c60dbca5623a7fa90c2c0618c281a2282c60841739bd837731a51cc876f4ff369297f2f81  python-dateutil-2.8.0.tar.gz"
