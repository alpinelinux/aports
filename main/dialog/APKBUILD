# Contributor: Michael Mason <ms13sp@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=dialog
_realver=1.3-20171209
pkgver=${_realver/-/.}
pkgrel=0
pkgdesc="Script interpreter providing curses widgets"
url="http://invisible-island.net/dialog/dialog.html"
arch="all"
options="!check"  # No test suite.
license="LGPL-2.1-only"
depends=
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
source="https://invisible-mirror.net/archives/$pkgname/$pkgname-$_realver.tgz"
builddir="$srcdir/$pkgname-$_realver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-ncursesw
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="0355578bc64e2c75a2aae3ae83aff62eae60556a2890d50a72988efa76b82055755922bc1156a92370d773524865e76b8a0ddcde77fb6e6b5774c987fc22dee8  dialog-1.3-20171209.tgz"
