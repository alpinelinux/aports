sha256sums="480023cc55f254f371eb8683ea0563fe6f3ab36db6ce91c1b8d0a999ee5815c9  libva-1.7.1.tar.bz2"
sha512sums="6d0a1b3f7e23e2ab3dcd1e255d82912cce60bc29a58df4ce7c1e53dfbcd33cc8236f7185369ab31f181995ae8b5d706112c908efbc9eba4c3201e529d4379dbe  libva-1.7.1.tar.bz2"
