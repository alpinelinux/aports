# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
_gemname=bundler
pkgname=ruby-$_gemname
pkgver=1.14.0
pkgrel=0
pkgdesc="Manage an application's gem dependencies"
url="http://gembundler.com/"
arch="noarch"
license="MIT"
depends="ruby ruby-io-console"
makedepends=""
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
builddir="$srcdir/$_gemname-$pkgver"

package() {
	local gemdir="$pkgdir/$(ruby -rubygems -e 'puts Gem.default_dir')"

	mkdir -p "$pkgdir"/usr/bin || return 1

	gem install --local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem || return 1

	rm -rf "$gemdir"/cache \
		"$gemdir"/build_info \
		"$gemdir"/doc

	cd "$pkgdir"
	local path; for path in usr/lib/ruby/gems/*/bin/*; do
		if [ -f "$path" ]; then
			ln -s /$path "$pkgdir"/usr/bin/ || return 1
		fi
	done
}

md5sums="950836cc10bad889a10b133dcc84dc7b  bundler-1.14.0.gem"
sha256sums="ed0a8fe1fb0654a5971ef51e8754816be555494b667535ba285e8e4ff679319c  bundler-1.14.0.gem"
sha512sums="7e22ba002bad133410d95644ca2fe3431397b88f4b2be872831ab5bc21afb0addca289cad8de2c4cde1e73c1f26e07a6a3f1c959e07d6e18a9a0976df6e42c29  bundler-1.14.0.gem"
