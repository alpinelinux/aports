# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: John Regan <john@jrjrtech.com>
pkgname=s6-portable-utils
pkgver=2.2.1.3
pkgrel=0
pkgdesc="skarnet.org's tiny portable generic utilities"
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
makedepends="skalibs-dev"
options="!check"
subpackages="$pkgname-doc"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="6640027e65a19417461e1e9c778d276d6ceb3f95ea5c720dd21b0d1755bb8f1a218cd9f42effd6ab6034889cc415ab935b4583b6696c2a96351417d9a8f4d7b0  s6-portable-utils-2.2.1.3.tar.gz"
