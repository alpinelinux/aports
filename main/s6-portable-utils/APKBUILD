# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: John Regan <john@jrjrtech.com>
pkgname=s6-portable-utils
pkgver=2.2.1.0
pkgrel=0
pkgdesc="skarnet.org's tiny portable generic utilities"
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
makedepends="skalibs-dev"
options="!check"
subpackages="$pkgname-doc"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="258419ab42683b4876337be467eb111699d5308c450cf281575a8b1b656fa853d2d46a34ae15b6b8d9fdc785703e5c6ed1b6286d1de000167e9db142f08e3193  s6-portable-utils-2.2.1.0.tar.gz"
