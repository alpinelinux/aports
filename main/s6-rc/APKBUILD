# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: Eivind Uggedal <eu@eju.no>
pkgname=s6-rc
pkgver=0.5.1.0
pkgrel=0
pkgdesc="A service manager for s6-based systems."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
options="!check"
makedepends="skalibs-dev execline-dev s6-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://skarnet.org/software/s6-rc/s6-rc-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--libdir=/usr/lib \
                --libexecdir="/lib/$pkgname" \
		--with-dynlib=/lib
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="e529545e90110986ced7ff445bc831de74a953e76aef0a9802b28228ef3705dcc8bf1abd90034d6e8de8c29dd3f4512e492168c4a1582a15a9e9e8ad8dc88909  s6-rc-0.5.1.0.tar.gz"
