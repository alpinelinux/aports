# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: Eivind Uggedal <eivind@uggedal.com>
pkgname=s6-rc
pkgver=0.3.0.1
pkgrel=0
pkgdesc="A service manager for s6-based systems."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
options="!check"
makedepends="skalibs-dev execline-dev s6-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--libdir=/usr/lib \
                --libexecdir="/lib/$pkgname" \
		--with-dynlib=/lib
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="6a0ef56ee3bd4a1e88c29cf0684b2cce1921054d07fcbb4973046e499c036ffdd25d2dce606b6ab96e82895c538d9a21a260588971b7d707ad2003340aba8fed  s6-rc-0.3.0.1.tar.gz"
