# Contributor: Pedro Filipe <xpecex@outlook.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=atk
pkgver=2.29.1
pkgrel=0
pkgdesc="A library providing a set of interfaces for accessibility"
url="https://www.gtk.org/"
arch="all"
license="LGPL-2.0-or-later"
depends=""
makedepends="meson ninja gtk-doc glib-dev gobject-introspection-dev musl-utils"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir build && cd build
	meson --prefix=/usr -D docs=true ..
	ninja
}

check() {
	cd "$builddir"/build
	meson test
}

package() {
	cd "$builddir"
	DESTDIR="$pkgdir" ninja -C build install
}

sha512sums="833acad04bb5b224857025cc39a099c608d9c5b6f3dad52a770c6b8af502fc2ffcd1d4f5825fe7cf2134c8b7720f2a7f362e92604086020dccf22c29c3151e8c  atk-2.29.1.tar.xz"
