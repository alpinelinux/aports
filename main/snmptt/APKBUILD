sha512sums="8a8917c07879007eddafbbaac83ddbf8954e43df9086b7b5b29d88680e739f5b48d231e76ff11548349f25eb271d483ebcce6ad9a20746ba61ddd6a55201e415  snmptt_1.3.tgz
