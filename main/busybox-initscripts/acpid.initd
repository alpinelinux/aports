#!/sbin/openrc-run

supervisor=supervise-daemon

name="busybox $RC_SVCNAME"
description="Listen to ACPI events and spawn specific helpers on event arrival"

command="/sbin/$RC_SVCNAME"
command_args="$ACPID_OPTS"
command_args_foreground="-f"

supervise_daemon_args="-g wheel -k 027"

depend() {
	need dev localmount
	after hwdrivers modules
	keyword -vserver -lxc
}

