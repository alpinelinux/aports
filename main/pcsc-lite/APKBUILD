# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Contributor: Timo Teräs <timo.teras@iki.fi>
# Maintainer: Timo Teräs <timo.teras@iki.fi>
pkgname=pcsc-lite
pkgver=2.4.0
pkgrel=3
pkgdesc="Middleware to access a smart card using SCard API (PC/SC)"
url="https://pcsclite.apdu.fr/"
arch="all"
license="BSD-3-Clause AND BSD-2-Clause AND ISC"
depends_dev="
	$pkgname-libs=$pkgver-r$pkgrel
	eudev-dev
	"
makedepends="
	$depends_dev
	flex
	libcap-ng-utils
	meson
	perl-dev
	"
install="$pkgname.pre-install $pkgname.pre-upgrade"
subpackages="
	$pkgname-static
	$pkgname-dev
	$pkgname-doc
	$pkgname-spy-libs:spylibs
	$pkgname-systemd
	$pkgname-libs
	$pkgname-openrc
	"
source="https://pcsclite.apdu.fr/files/pcsc-lite-$pkgver.tar.xz
	systemd-service-no-systemd.patch
	pcscd.initd
	"

build() {
	abuild-meson . build \
		-D default_library=both \
		-D libusb=false \
		-D libudev=true \
		-D polkit=false \
		-D libsystemd=false

	meson compile -C build
}

check() {
	meson test --print-errorlogs -C build
}

package() {
	license="$license AND GPL-3.0-or-later"

	meson install --no-rebuild --destdir "$pkgdir" -C build

	install -D -m755 "$srcdir"/pcscd.initd "$pkgdir"/etc/init.d/pcscd

	mkdir -p "$pkgdir"/usr/lib/pcsc/drivers
}

spylibs() {
	pkgdesc="$pkgdesc (log/debug/spy libraries)"
	license="GPL-3.0-or-later"

	amove usr/lib/libpcscspy.so.*
}

libs() {
	pkgdesc="$pkgdesc (libraries)"

	amove usr/lib
}

dev() {
	default_dev

	# move back the /usr/lib/libpcsclite.so
	# see http://bugs.alpinelinux.org/issues/3236 (and 6392)
	mv "$subpkgdir"/usr/lib/libpcsclite.so "$pkgdir"/usr/lib/libpcsclite.so
}

sha512sums="
5b662f3902fc352cdf83b0f819fa955781cc755a977bf78a97c86178ba6c66d9c7c489af9ccaf8e534255951c12e88e80f6684af4aed3f0dcd97bba23eec5cd3  pcsc-lite-2.4.0.tar.xz
e773e5e4a00adaabb30cc8b6ed15a9deccd39f3324d3f87be3bafdcbe0d146d8efad263cc494dd52b340997a238290315c335d8ade9a059de1153f36e155c3e8  systemd-service-no-systemd.patch
d39cd7537ff671b6c8c65bf16c6be75c887c1708bad11e635bf9fc5dce4b287808c561450a85525d71dffc84e4e1f79200696a5936d5a895e50cec898cc4d945  pcscd.initd
"
