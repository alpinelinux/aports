# Contributor: Justin Berthault <justin.berthault@zaclys.net>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=py3-iniconfig
_pyname=iniconfig
pkgver=2.3.0
pkgrel=0
pkgdesc="brain-dead simple config-ini parsing"
url="https://github.com/pytest-dev/iniconfig"
arch="noarch"
license="MIT"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	py3-py
	py3-hatch-vcs
	py3-hatchling
	"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/i/$_pyname/$_pyname-$pkgver.tar.gz
	unittest_tests.patch"
builddir="$srcdir/$_pyname-$pkgver"

# Note: circular dependency py3-pytest -> py3-iniconfig -> py3-pytest
# unit test patch exists to prevent this, please do not remove it.

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m unittest testing/*.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
65f9200c904fae6d4691823a8c1c7af7d80d91438db47a6fa84a7688d0b95c73b65702a9ada16383a6c2036438b657b9981d2fcffbe6bbb5ed744b54557094eb  iniconfig-2.3.0.tar.gz
24d5681c2d1c250cb93281d9690afb6b5ac31c19d9212c0dbe8d252d4b8642d5add3de2b416f0db73ddc2bdda13b05896c95a305b4e52a17c1470b3ffbeaceb9  unittest_tests.patch
"
