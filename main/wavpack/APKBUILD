#   5.1.0-r0:
#     - CVE-2016-10169
#     - CVE-2016-10170
#     - CVE-2016-10171
#     - CVE-2016-10172

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

