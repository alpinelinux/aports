pkgname=vim
pkgver=9.1.0414
pkgrel=0
pkgdesc="Improved vi-style text editor"
url="https://www.vim.org/"
arch="all"
license="Vim"
options="!check"  # some tests are failing
makedepends="
	gtk+3.0-dev
	libx11-dev
	libxt-dev
	lua5.4-dev
	ncurses-dev
	python3-dev
	ruby-dev
	"
subpackages="
	$pkgname-doc
	${pkgname}diff
	$pkgname-tutor
	$pkgname-common
	gvim
	xxd
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/vim/vim/archive/refs/tags/v$pkgver.tar.gz
	vimrc
	"

