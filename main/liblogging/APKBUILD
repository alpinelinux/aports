# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=liblogging
pkgver=1.0.7
pkgrel=0
pkgdesc="An easy to use logging library"
url="http://www.liblogging.org/"
arch="all"
license="BSD-2-Clause"
makedepends="autoconf automake libtool py3-docutils"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rsyslog/liblogging/archive/refs/tags/v$pkgver.tar.gz"
options="!check"

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-journal \
		--enable-stdlog
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
74e86b093831a9a08d8868d3828654a47c3a8d03a0dc6d9345deba9d55aca6daa391b4c53d0efe61012ceee131b75b88b302dde906cd485f54a89e823963247e  liblogging-1.0.7.tar.gz
"
