# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=s6-linux-init
pkgver=0.3.0.0
pkgrel=0
pkgdesc="A set of tools to create and run an s6-based init system."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
options="!check"
makedepends="skalibs-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

doc() {
	default_doc
	mkdir -p "$subpkgdir"/usr/share/doc
	cp -a "$builddir"/doc "$subpkgdir"/usr/share/doc/$pkgname
}

sha512sums="9aa775fb2bb86680ba438a4a03b543fda696434eaf7ddea5009ec3adaebb899a2ed039a4727eb7d5427088ed3ff08a9eeaa853769f089789a7327a538f798c67  s6-linux-init-0.3.0.0.tar.gz"
