#     - CVE-2016-5131

prepare() {
	default_prepare

	# We don't build libxml2 with icu.
	rm test/icu_parse_test.xml
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-static \
		--with-lzma \
		--with-zlib \
		$_py_configure
	make
}

check() {
	rm -f test/ebcdic_566012.xml
	make runtests
}

package() {
	make -j1 DESTDIR="$pkgdir" install
}

_py3() {
	depends="python3"
	pkgdesc="$pkgname python3 bindings"

	amove usr/lib/python3*
}

utils() {
	pkgdesc="XML utilities"
	replaces="libxml2"

	amove usr/bin
}

sha512sums="
