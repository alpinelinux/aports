# Maintainer: Natanael Copa <ncopa@alpinelinux.org>

pkgname=xtables-addons-rpi
_flavor=${pkgname##*-}
_name=${pkgname%-*}
# when changing _ver we *must* bump _rel
_ver=3.30
_rel=0
# when changing _kver make sure _krel=0 & _rel=0
_kpkg=linux-$_flavor
_kver=6.12.60
_krel=0

_kpkgver="$_kver-r$_krel"
_kabi="$_kver-$_krel-$_flavor"

pkgver=$_kver
pkgrel=$(( _krel + _rel ))

pkgdesc="Iptables extensions kernel modules"
url="https://inai.de/projects/xtables-addons/"
arch="aarch64 armv7 armhf"
license="GPL-2.0-or-later"
depends="$_kpkg=$_kpkgver"
makedepends="$_kpkg-dev=$_kpkgver iptables-dev linux-headers zstd"
install_if="$_kpkg=$_kpkgver $_name"
source="https://inai.de/files/xtables-addons/xtables-addons-$_ver.tar.zst"
builddir="$srcdir/$_name-$_ver"
options="!check"

prepare() {
	default_prepare
	local _kapkbuild="$startdir"/../../main/linux-$_flavor/APKBUILD
	if [ -f $_kapkbuild ]; then
		(	. $_kapkbuild
			pkgname=$_name-$_flavor
			[ "$_kver" != "$pkgver" ] && die "please update _kver to $pkgver"
			[ "$_krel" != "$pkgrel" ] && die "please update _krel to $pkgrel"
			return 0
		)
	fi
}

build() {
	unset LDFLAGS
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-kbuild=/usr/src/linux-headers-$_kabi

	cd extensions
	make modules
}

package() {
	cd "$builddir/extensions"
	make DESTDIR="$pkgdir" modules_install
}

sha512sums="
4aab0dd6c1b98c5de0cc9a06550cae17ed2cb49ecee8d3ed90f8a2c6bb446ada11c010b2557f7fb07e4efbafc4fa94d3a68caf57eb60570ec9b2b9e737acfc8e  xtables-addons-3.30.tar.zst
"
