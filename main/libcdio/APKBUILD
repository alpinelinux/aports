# Contributor: Carlo Landmeter
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcdio
pkgver=2.1.0
pkgrel=0
pkgdesc="GNU Compact Disc Input and Control Library"
url="https://www.gnu.org/software/libcdio/"
arch="all"
license="GPL-3.0-or-later"
checkdepends="bash"
makedepends="libcddb-dev ncurses-dev linux-headers"
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools ${pkgname}++:_cpp"
source="https://ftp.gnu.org/gnu/libcdio/$pkgname-$pkgver.tar.bz2
	disable-broken-test.patch"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-vcd-info \
		--disable-static \
		--disable-rpath \
		--disable-cpp-progs
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}

tools() {
	pkgdesc="libcdio example tools"
	install -d "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

_cpp() {
	pkgdesc="libcdio bindings for C++"
	install -d "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/*++.* "$subpkgdir"/usr/lib/
}

