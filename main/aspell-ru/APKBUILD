pkgname=aspell-ru
pkgver=0.99f7.1
pkgrel=0
pkgdesc="Russian dictionary for aspell"
_pkgname=aspell6-ru
_pkgver=0.99f7-1
url="http://aspell.net/"
arch="noarch"
license="GPL-2.0"
options="!check"
depends=""
makedepends="aspell-dev"
source="ftp://ftp.gnu.org/gnu/aspell/dict/ru/$_pkgname-$_pkgver.tar.bz2"
builddir="$srcdir/$_pkgname-$_pkgver"

build () {
	cd "$builddir"
	./configure
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

