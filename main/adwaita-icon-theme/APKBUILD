# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=adwaita-icon-theme
pkgver=3.32.0
pkgrel=0
pkgdesc="Adwaita icon theme"
url="http://www.gnome.org"
arch="noarch"
options="!check"  # Icons only, no binaries.
license="LGPL-3.0-or-later or CC-BY-SA"
makedepends="intltool gtk+2.0 gtk+3.0 librsvg"
subpackages="$pkgname-dev"

case $pkgver in
*.*.*.*) _v=${pkgver%.*.*};;
*.*.*) _v=${pkgver%.*};;
*) _v=$pkgver;;
esac

source="https://download.gnome.org/sources/adwaita-icon-theme/${_v}/adwaita-icon-theme-$pkgver.tar.xz"

build() {
	cd "$builddir"
	DATADIRNAME=share \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make DATADIRNAME=share
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install pkgconfigdir=/usr/lib/pkgconfig\
		DATADIRNAME=share
}

sha512sums="9609732cd51c6794d4d86598818bb2a589b0f4b6b795e57f3507dad69b21ef1b2fc2e83e24e937428bbace32fcccf587a5771cbc02c5768206e704f0456a6d1d  adwaita-icon-theme-3.32.0.tar.xz"
