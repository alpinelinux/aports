# Contributor: ≈Åukasz Jendrysik <scadu@yandex.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=adwaita-icon-theme
pkgver=3.24.0
pkgrel=0
pkgdesc="Adwaita icon theme"
url="http://www.gnome.org"
arch="noarch"
license="LGPLv3+ or CC-BY-SA"
depends=""
depends_dev=""
makedepends="$depends_dev intltool gtk+2.0 gtk+3.0 librsvg"
install=""
subpackages="$pkgname-dev"
case $pkgver in
*.*.*.*) _v=${pkgver%.*.*};;
*.*.*) _v=${pkgver%.*};;
*) _v=$pkgver;;
esac

source="http://download.gnome.org/sources/adwaita-icon-theme/${_v}/adwaita-icon-theme-$pkgver.tar.xz"

_builddir="$srcdir"/adwaita-icon-theme-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	DATADIRNAME=share \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make DATADIRNAME=share || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install pkgconfigdir=/usr/lib/pkgconfig\
		DATADIRNAME=share \
		|| return 1
}

sha512sums="d415859bc46deb3dcf5e845af88689c507d6b110d6312af75145d6c46cc277ca2d17ae6a0f506c09ca7d543c5eca47b2506169bb0482ae68f2e3baef70889090  adwaita-icon-theme-3.24.0.tar.xz"
