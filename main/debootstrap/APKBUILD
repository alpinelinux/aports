sha512sums="3a4e4c0a2362646af080ce63db82ef418b2306ab1f39253dbf14667b68b9970da0c14398218574aff62a31f5f369e23e1483a1b4e44d7fc06ebb497643a74663  debootstrap_1.0.53.tar.gz
