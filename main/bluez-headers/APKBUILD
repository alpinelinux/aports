# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=bluez-headers
pkgver=5.69
pkgrel=0
pkgdesc="Bluez development headers"
url="http://www.bluez.org/"
arch="noarch"
license="GPL-2.0-or-later"
depends="!bluez-dev"
source="https://www.kernel.org/pub/linux/bluetooth/bluez-$pkgver.tar.xz"
builddir="$srcdir/bluez-$pkgver"
options="!check" # just headers

package() {
	local headers="
		bluetooth
		bnep
		cmtp
		hci
		hci_lib
		hidp
		l2cap
		rfcomm
		sco
		sdp
		sdp_lib
		"
	for header in $headers; do
		install -Dm644 ./lib/$header.h -t "$pkgdir"/usr/include/bluetooth
	done
}

sha512sums="
4d5618cd083fe375c41faff868b5d9f072aeaccdffed758f6b69fd0cb46b058431cbf63182bd4a3f4f4e7a24b092729a4125687af730cd4250b273d66107bf42  bluez-5.69.tar.xz
"
