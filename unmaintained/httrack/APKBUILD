pkgname=httrack
pkgver=3.49.1
pkgrel=0
pkgdesc="Website Copier - Free Software Offline Browser"
url="http://www.httrack.com/"
arch="all"
license="GPL3"
makedepends="zlib-dev openssl-dev libtool"
source="http://mirror.httrack.com/${pkgname}-${pkgver}.tar.gz"
subpackages="$pkgname-doc"

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--datadir=/usr/share \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static \
		--disable-dependency-tracking \
		--localstatedir=/var/lib \
		--docdir=/usr/share/doc/httrack
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}

md5sums="e48e2b76b69111e21e540f28f915300b  httrack-3.49.1.tar.gz"
sha256sums="8640ab00cabc9189667cc88829620ce08ac796688f0ef94876350d14fbe7a842  httrack-3.49.1.tar.gz"
sha512sums="b9ad8b50de30389fe0c2b5b52aaf137cedd20ebe1fcc165db2f34aec95f795a420219eac7c9aae2f9c1ba053d646717428bc4d23c84c63a6e2ddd5ea76b02593  httrack-3.49.1.tar.gz"
