pkgname=suspend-utils
pkgver=1.0
pkgrel=0
pkgdesc="Userspace Software Suspend (Âµswsusp)"
url="http://suspend.sourceforge.net"
arch="x86 x86_64"
license="GPL2"
depends=""
depends_dev=""
makedepends="$depends_dev pciutils-dev libx86-dev util-linux-dev linux-headers"
install=""
subpackages="$pkgname-doc"
source="http://sourceforge.net/projects/suspend/files/suspend/suspend-$pkgver/suspend-utils-$pkgver.tar.bz2
	define-gnu-source.patch"

_builddir="$srcdir"/suspend-utils-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done

	update_config_sub
}

build() {
	cd "$_builddir"
	export CFLAGS=-std=gnu89
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

