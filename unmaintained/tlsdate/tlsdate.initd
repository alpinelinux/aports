description="set time once when started"

depend() {
	use net
}

start() {
	: ${TLSDATE_CMD:=tlsdate}
	ebegin "Setting clock via tlsdate '${TLSDATE_CMD}'"
	"${TLSDATE_CMD}" ${TLSDATE_OPTS}
	eend $? "Failed to set clock"
}
