	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir" \( -name uniglyph.txt -o -name perllocal.pod -o -name .packlist \) -delete
	mv "$pkgdir"/usr/share/perl5/vendor_perl/* "$pkgdir"/usr/lib/perl5/vendor_perl
