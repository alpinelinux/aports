# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=virt-viewer
pkgver=2.0
pkgrel=0
pkgdesc="A lightweight interface for interacting with the graphical display of virtualized guest OS"
url="http://virt-manager.org"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev intltool spice-protocol glib-dev gtk+3.0-dev gtk-vnc-dev spice-gtk-dev"
install=""
subpackages="$pkgname-lang $pkgname-doc"
source="https://virt-manager.org/download/sources/$pkgname/$pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
}

build() {
	cd "$builddir"
	./configure \
		--prefix=/usr \
		--with-gtk=3.0 \
		--disable-update-mimedb \
		--with-gtk-vnc \
		--with-spice-gtk
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="271ded11e4af3f1dd208c7b8ab7d1c0cd24f641a79e05178d0762a03de3dcf99ae7432acde2b67460e7a98d1fa562587b6b08cf06ab3cf80f025a7b259e8203e  virt-viewer-2.0.tar.gz"
