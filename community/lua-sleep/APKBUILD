# Contributor: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
# Maintainer: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
pkgname=lua-sleep
pkgver=0.1
pkgrel=1
pkgdesc="Sleep functions for Lua"
url=http://projects.plentyfact.org/projects/lua-sleep
arch=all
license="Public-Domain"
depends=
makedepends=lua-dev
source="https://dev.alpinelinux.org/archive/lua-sleep/lua-sleep_$pkgver.tar.gz"

_builddir=$srcdir/lua-sleep_$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	make -C "$_builddir"
}

package() {
	local dir=$pkgdir/usr/lib/lua/5.1
	install -d "$dir"
	install "$_builddir/lsleep.so" "$dir"
}

sha512sums="1bdd14fe3e67bfc01522fe782f5861f0d68008ab7cb23cc4c996aa4aeb586121bfdc854d238e79f6a0c587b420c9438ac670b7b8c46a04ae3235fe91f3eba99f  lua-sleep_0.1.tar.gz"
