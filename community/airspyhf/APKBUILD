# Maintainer:
pkgname=airspyhf
pkgver=1.6.8
pkgrel=2
pkgdesc="User mode driver for Airspy HF+"
url="https://github.com/airspy/airspyhf"
arch="all"
license="BSD-3-Clause"
depends_dev="$pkgname=$pkgver-r$pkgrel"
makedepends="
	cmake
	libusb-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-libs"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/airspy/airspyhf/archive/refs/tags/$pkgver.tar.gz
	gcc-15.patch
	"
options="!check" # no tests

build() {
	CFLAGS="$CFLAGS -O2 -flto=auto -DNDEBUG" \
	CXXFLAGS="$CXXFLAGS -O2 -flto=auto -DNDEBUG" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
		-DCMAKE_SKIP_INSTALL_RPATH=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
