# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=luacheck
pkgver=1.2.0
pkgrel=0
pkgdesc="A tool for linting and static analysis of Lua code"
url="https://github.com/lunarmodules/luacheck"
arch="noarch"
license="MIT"
_luaversion="5.1"
depends="
	lua$_luaversion
	lua$_luaversion-argparse
	lua$_luaversion-filesystem
	"
makedepends="
	lua-argparse
	lua-filesystem
	"
checkdepends="
	lua$_luaversion-busted
	lua$_luaversion-luautf8
	lua$_luaversion-socket
	"
source="https://github.com/lunarmodules/luacheck/archive/v$pkgver/luacheck-$pkgver.tar.gz"

check() {
	busted-$_luaversion .
}

package() {
	local lmod_dir="$pkgdir/usr/share/lua/$_luaversion"

	mkdir -p "$lmod_dir"
	cp -r src/$pkgname "$lmod_dir"/

	install -D -m 755 bin/$pkgname.lua "$pkgdir"/usr/bin/$pkgname
}

sha512sums="
2bfe38056bab71cdaa8377212cc92048e3178f2deb1da8d61b9cefc400a9b5691772805f8bc1c4b4584c9530751103a2feeca41187c2d9496e975df5be373ff0  luacheck-1.2.0.tar.gz
"
