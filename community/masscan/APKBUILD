# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=masscan
pkgver=1.3.2
pkgrel=2
pkgdesc="TCP port scanner, spews SYN packets asynchronously, scanning entire Internet in under 5 minutes"
url="https://github.com/robertdavidgraham/masscan"
arch="all"
license="AGPL-3.0-only"
depends="libpcap"
makedepends="libpcap-dev linux-headers"
subpackages="$pkgname-doc"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/robertdavidgraham/masscan/archive/$pkgver.tar.gz
	0001-Update-stub-pcap.c-to-support-centos-7.patch
	"

build() {
	make CC="${CC:-gcc}" CFLAGS="$CFLAGS -I."
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 doc/masscan.8 -t "$pkgdir/usr/share/man/man8"
}

