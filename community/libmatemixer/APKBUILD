# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=libmatemixer
pkgver=1.18.0
pkgrel=0
pkgdesc="A mixer library for MATE desktop"
url="http://git.mate-desktop.org/libmatemixer/"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev intltool glib-dev alsa-lib-dev"
install=""
subpackages="$pkgname-doc $pkgname-dev $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/libmatemixer-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
                --build=$CBUILD \
                --host=$CHOST \
		--sysconfdir=/etc \
                --prefix=/usr \
		--enable-alsa \
                || return 1
        make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

sha512sums="254d1ff74f036d813f9ec2b983b86a730fec0d1f2009e7d22a9d779e509aec92409225cec5ff1f7c747c468c5e40affaa67130df4bb7087d5ee61036359b4407  libmatemixer-1.18.0.tar.xz"
