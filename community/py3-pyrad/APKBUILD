# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-pyrad
#_pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=pyrad
pkgver=2.5.2
pkgrel=0
pkgdesc="Python RADIUS Implementation"
url="https://pypi.python.org/project/pyrad"
arch="noarch"
license="BSD-3-Clause"
depends="py3-netaddr py3-six"
makedepends="py3-gpep517 py3-wheel py3-setuptools"
checkdepends="py3-pytest py3-pytest-cov py3-mock"
source="$pkgname-$pkgver.tar.gz::https://github.com/pyradius/pyrad/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m coverage run -m unittest discover -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl

	# remove unwanted files
	rm -r "$pkgdir"/usr/lib/python3.12/site-packages/docs \
		"$pkgdir"/usr/lib/python3.12/site-packages/example \
		"$pkgdir"/usr/lib/python3.12/site-packages/pyrad/tests
}

sha512sums="
9049e2fc7a4521c5af6d630896197e70d593995b72bc41dee10993de624f53b3a07ca8bb22029480c5434f41c5e490e3d1c648eec092918433c8eea17f2b1463  py3-pyrad-2.5.2.tar.gz
"
