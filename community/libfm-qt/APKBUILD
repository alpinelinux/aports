# Contributor: Zachary Lee Andrews <zcrayfish@gmail.com>
maintainer="Antoni Aloy <aaloytorrens@gmail.com>"
pkgname=libfm-qt
pkgver=2.3.0
pkgrel=1
pkgdesc="Qt port of libfm"
url="https://github.com/lxqt/libfm-qt"
arch="all"
license="LGPL-2.0-or-later"
depends="lxqt-menu-data"
depends_dev="
	perl
	libfm-dev
	libexif-dev
	lxqt-build-tools
	menu-cache-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
makedepends="
	$depends_dev
	cmake
	samurai
	qt6-qtbase-private-dev
	"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No testsuite
source="https://github.com/lxqt/libfm-qt/releases/download/$pkgver/libfm-qt-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

lang() {
	install_if="lang $pkgname=$pkgver-r$pkgrel"
	amove usr/share/libfm-qt6/translations
}

sha512sums="
939c911583611a19d180647725a23df65e1fa9cdef8e6f451902576765abc2eae075a648730770a4f2e9c9d81a95f21fea8d8a8e66a725f194fd43265e58e2c1  libfm-qt-2.3.0.tar.xz
"
