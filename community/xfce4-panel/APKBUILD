# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-panel
pkgver=4.20.6
pkgrel=0
pkgdesc="Panel for the Xfce desktop environment"
url="https://xfce.org/"
arch="all"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
subpackages="$pkgname-dev libxfce4panel:libs $pkgname-doc $pkgname-lang"
depends="hicolor-icon-theme"
depends_dev="xfconf-dev"
makedepends="$depends_dev
	exo-dev
	garcon-dev
	gobject-introspection-dev
	gtk+3.0-dev
	gtk-layer-shell-dev
	libdbusmenu-gtk3-dev
	libxfce4ui-dev
	libxfce4util-dev
	libxfce4windowing-dev
	vala
	"
source="https://archive.xfce.org/src/xfce/xfce4-panel/${pkgver%.*}/xfce4-panel-$pkgver.tar.bz2
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--enable-introspection \
		--enable-vala \
		--enable-wayland \
		--enable-gtk-layer-shell \
		--enable-dbusmenu-gtk3
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
0a1840cb14426a8e19552141efab2fde29b7b2cb001c3135b3042a54c5084fad30267a5e8495dbf04048e40f092db6cb998acd3f15250ea6cd8801d354afe3cb  xfce4-panel-4.20.6.tar.bz2
"
