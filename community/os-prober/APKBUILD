maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=os-prober
pkgver=1.84
pkgrel=0
pkgdesc="Utility to detect other OSes on a set of drives"
url="https://joeyh.name/code/os-prober/"
# s390x blocked by grub-mount
arch="all !s390x"
depends="
	blkid
	grub-mount
	"
license="GPL-3.0-only"
source="https://salsa.debian.org/installer-team/os-prober/-/archive/$pkgver/os-prober-$pkgver.tar.gz"
options="!check" # No tests

build() {
	make newns
}

package() {
	install -Dm755 os-prober linux-boot-prober -t "$pkgdir"/usr/bin
	install -Dm755 newns "$pkgdir"/usr/lib/os-prober/newns
	install -Dm755 common.sh "$pkgdir"/usr/share/os-prober/common.sh

	for dir in os-probes os-probes/mounted os-probes/init linux-boot-probes linux-boot-probes/mounted; do
		install -Dm755 -t "$pkgdir"/usr/lib/"$dir" "$dir"/common/*
		if [ -d "$dir"/x86 ]; then
			cp -r "$dir"/x86/* "$pkgdir"/usr/lib/"$dir"
		fi
	done

	install -Dm655 os-probes/mounted/powerpc/20macosx "$pkgdir"/usr/lib/os-probes/mounted/20macosx
	install -dm755 "$pkgdir"/var/lib/os-prober
}

sha512sums="
6182f7af91f3647f68170ab417ce18a61b396fc968482294cc8504b0a33feef406be20f553235fa36a4d2d883ffa2e49b7f915d5dcca9beb23f1d9609bad9287  os-prober-1.84.tar.gz
"
