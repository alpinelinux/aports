# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=py3-libevdev
_pyname=python-libevdev
pkgver=0.13.1
pkgrel=0
pkgdesc="Python3 wrapper around the evdev library"
url="https://python-libevdev.readthedocs.io/en/latest"
arch="noarch"
license="MIT"
depends="libevdev python3"
makedepends="py3-gpep517 py3-setuptools py3-wheel py3-hatchling"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://gitlab.freedesktop.org/libevdev/$_pyname/-/archive/$pkgver/$_pyname-$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
702af275047848a76a6a4fc4c20f8ba09a12bd1b1f4cc96ab80535667213b9e690227b450b375a43573b4b350956b8df3ba402aa8176ac07836fc140e6063d82  py3-libevdev-0.13.1.tar.gz
"
