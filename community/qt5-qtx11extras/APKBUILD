# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=qt5-qtx11extras
_pkgname=qtx11extras-everywhere-src
pkgver=5.12.5
_ver=${pkgver/_p/-}
_ver=${_ver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Provides platform-specific APIs for X11"
url="http://qt-project.org/"
arch="all"
license="GPL-3.0"
makedepends="qt5-qtbase-dev"
subpackages="$pkgname-dev"
replaces="qt5-x11extras"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/$_pkgname-$_V.tar.xz"

builddir="$srcdir"/$_pkgname-${_V%-*}

prepare() {
	default_prepare
	cd "$builddir"
	mkdir -p build
}

build() {
	cd "$builddir"/build
	qmake-qt5 ..
	make
}

check() {
	cd "$builddir"/build
	make check
}

package() {
	cd "$builddir"/build
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="1e83c2d350f423053fe07c41a8b889391100df93dd50f700e98116c36b3dbad9637a618765daf97b82b7ffcd0687fc52c9590d9ce48c2a9204f1edc6d2cae248  qtx11extras-everywhere-src-5.12.5.tar.xz"
