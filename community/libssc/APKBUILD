# Contributor: Dylan Van Assche <dylan@postmarketos.org>
# Maintainer: Dylan Van Assche <dylan@postmarketos.org>
pkgname=libssc
pkgver=0.3.0
pkgrel=0
pkgdesc="Library to expose Qualcomm Sensor Core sensors"
url="https://codeberg.org/DylanVanAssche/libssc"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	eudev-dev
	glib-dev
	libgudev-dev
	linux-headers
	libqmi-dev
	meson
	protobuf-c-dev
	protobuf-dev
	python3-dev
	py3-gobject3
	py3-protobuf
	qrtr-libs
"
subpackages="$pkgname-dbg $pkgname-dev $pkgname-pyc"
builddir="$srcdir/$pkgname"
options="!check" # socket(AF_QIPCRTR): Address family not supported by protocol on many arches in CI
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/DylanVanAssche/libssc/archive/v$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

check() {
	cd "$srcdir"/"$pkgname" && sh run-tests.sh
}

sha512sums="
54abfd6c29d9a3d7ee4ce90a1fe903f79321090be402c0746f5ada2f770a55d99fb58091828cd93c0051c384d7e1740af0f1ee0359f13d4668331fb2554098f0  libssc-0.3.0.tar.gz
"
