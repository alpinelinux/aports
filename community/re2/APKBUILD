# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=re2
pkgver=2022.02.01
_pkgver=${pkgver//./-}
pkgrel=0
pkgdesc="Efficient, principled regular expression library"
url="https://github.com/google/re2"
arch="all"
license="BSD-3-Clause"
makedepends="
	cmake
	samurai
	"
subpackages="$pkgname-dev"
provides="libre2=$pkgver-r$pkgrel"
source="$pkgname-$pkgver.tar.gz::https://github.com/google/re2/archive/$_pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$_pkgver

build() {
	export CXXFLAGS="$CXXFLAGS -O2 -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DRE2_BUILD_TESTING="$(want_check && echo ON || echo OFF)"
	cmake --build build
}

check() {
	ctest -j4 --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	# re2.pc
	make DESTDIR="$pkgdir" prefix=/usr common-install
}

sha512sums="
4f117a909e6140bea4f73ace1c9ffb9699fb4f0991006e9bb57f6980a06bd4400f5e6e998961739fcbb156974906c11b87c428c87b5c530f3492109e4783fd9b  re2-2022.02.01.tar.gz
"
