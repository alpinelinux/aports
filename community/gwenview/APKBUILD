# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=gwenview
pkgver=25.12.0
pkgrel=0
# armhf blocked by extra-cmake-modules
# s390x, and riscv64 blocked by qt6-qtwebengine -> purpose
arch="all !armhf !s390x !riscv64"
url="https://kde.org/applications/graphics/org.kde.gwenview"
pkgdesc="Fast and easy to use image viewer by KDE"
license="GPL-2.0-only"
depends="
	kimageformats
	qt6-qtimageformats
	"
makedepends="
	baloo-dev
	extra-cmake-modules
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	kimageannotator-dev
	kio-dev
	kitemmodels-dev
	knotifications-dev
	kparts-dev
	kwindowsystem-dev
	lcms2-dev
	libjpeg-turbo-dev
	libkdcraw-dev
	libpng-dev
	plasma-activities-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/graphics/gwenview.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/gwenview-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run -a ctest --test-dir build -E "(thumbnailprovider|placetreemodel|urlutils|importer|contextmanager)test"

}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f78cbc0c8df3e422f10e29df8e940cdd52a542f13b75be801aa3786635b35eaa610b9199ea9a905e439d26e39bee49684b27895d69f83d4cd3f734c86bb8a7be  gwenview-25.12.0.tar.xz
"
