# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-settings-daemon
pkgver=1.28.0
pkgrel=1
pkgdesc="MATE Settings daemon"
url="https://github.com/mate-desktop/mate-settings-daemon"
arch="all"
license="GPL-2.0-or-later LGPL-2.1-or-later"
depends="mate-common"
makedepends="
	dconf-dev
	freeglut-dev
	glib-dev
	gobject-introspection-dev
	gtk+3.0-dev
	intltool
	libcanberra-dev
	libmatekbd-dev
	libmatemixer-dev
	libnotify-dev
	libsm-dev
	libtool
	libxklavier-dev
	mate-desktop-dev
	polkit-dev
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang $pkgname-udev"
source="https://pub.mate-desktop.org/releases/${pkgver%.*}/mate-settings-daemon-$pkgver.tar.xz
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--enable-polkit \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
