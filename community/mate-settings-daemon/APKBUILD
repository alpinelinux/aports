# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-settings-daemon
pkgver=1.16.0
pkgrel=0
pkgdesc="MATE Settings daemon"
url="https://github.com/mate-desktop/mate-settings-daemon"
arch="all"
license="GPL2"
depends="mate-common mate-desktop"
depends_dev=""
makedepends="$depends_dev libtool intltool libmatekbd-dev freeglut-dev
	glib-dev gtk+2.0-dev dbus-glib-dev dconf-dev libxklavier-dev libsm-dev
	mate-desktop-dev polkit-dev startup-notification-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
        	--with-gtk=2.0 \
		--enable-polkit \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="4e1fa442b5980cb9723006deea165947  mate-settings-daemon-1.16.0.tar.xz"
sha256sums="7876b7377adb89a11812c1b3fd44e1e78f371f8418f4f05bf5be25ea8efce4d0  mate-settings-daemon-1.16.0.tar.xz"
sha512sums="39ab6cd52008bfb92949f225b003186ed27f9ad215a59015a3ccaa1f02e618b786fe9db94d993bc89660b03c50700b364de1ac4a9b7cf23a83ca545fc93bbee3  mate-settings-daemon-1.16.0.tar.xz"
