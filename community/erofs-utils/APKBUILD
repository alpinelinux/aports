# Maintainer: Milan P. Stanić <mps@arvanta.net>
pkgname=erofs-utils
pkgver=1.9
pkgrel=0
pkgdesc="userspace utilities for erofs filesystem"
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	libtool
	linux-headers
	lz4-dev
	util-linux-dev
	zlib-dev
	"

subpackages="$pkgname-doc"
source="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git/snapshot/erofs-utils-$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -fiv
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
d997839f45e43ac276f1742d7425313b8959102bac07b292017667af0c1fb472ef40a746cd03bd3ef52f80c8c273e83064b9ec5df91a5397202e10a7b8b06eea  erofs-utils-1.9.tar.gz
"
