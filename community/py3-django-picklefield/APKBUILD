# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-django-picklefield
_pyname="django-picklefield"
pkgver=3.4.0
pkgrel=0
arch="noarch"
pkgdesc="A pickled object field for Django"
url="https://pypi.python.org/project/django-picklefield"
license="MIT"
depends="
	py3-django
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/gintas/django-picklefield/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	DJANGO_SETTINGS_MODULE="tests.settings" \
	.testenv/bin/python3 -s -m django test -v 2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
539e9fd3237d0dc054d011c160b838eb645342a2e020e37c3645ea3cb0571103af3edfed199c8e36f54e77ffcdd57adef95183e69b26364d66858fdc2e7290d7  py3-django-picklefield-3.4.0.tar.gz
"
