# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=step
pkgver=25.12.2
pkgrel=0
# armhf blocked by qt6-qtdeclarative -> knewstuff
arch="all !armhf"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdoctools-dev
	kiconthemes-dev
	knewstuff-dev
	kplotting-dev
	qt6-qtbase-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	samurai
	shared-mime-info
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/education/step.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/step-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6cb666eb2e3c95b32bd8ea7a4e7e47d73756f59ccf0876d65000af87bf844e2cdda3407daf6f86950bc083fbc72c092d3ea45ae2eb83eba1bde2ba33d5519e96  step-25.12.2.tar.xz
"
