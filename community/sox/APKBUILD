# secfixes
#   14.4.2-r5:
#     - CVE-2017-13571
#     - CVE-2017-11358
#     - CVE-2017-15370
#     - CVE-2017-11332
#     - CVE-2017-11359
#     - CVE-2017-15372
#     - CVE-2017-13642
#     - CVE-2017-18189
#     - CVE-2019-8354
#     - CVE-2019-8355
#     - CVE-2019-8356
#     - CVE-2019-8357

prepare() {
	default_prepare

	# Fix man page installation
	sed -e 's|man1/sox.1 soxeffect.7|man1/sox.1.gz soxeffect.7.gz|' \
		-i Makefile.in

	# test fails with CVE-2017-11359.patch
	sed -e '/hcom/d' -i src/tests.sh

	autoreconf -vif
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-dyn-default \
		--with-distro="${DISTRO_NAME:-Alpine Linux}"
	make
}

check() {
	make bindir=. installcheck
}

package() {
	make DESTDIR="$pkgdir" install
	ln -sf play "$pkgdir"/usr/bin/rec
	ln -sf ../man1/sox.1.gz "$pkgdir"/usr/share/man/man7/soxeffect.7
	rm "$pkgdir"/usr/lib/sox/*.a
}
