pkgname=pngquant
pkgver=2.12.5
pkgrel=0
pkgdesc="Lossy PNG compressor"
url="https://pngquant.org"
arch="all"
license="GPL-3.0-or-later"
makedepends="libpng-dev lcms2-dev bash libimagequant-dev"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/kornelski/pngquant/archive/$pkgver.tar.gz"

build() {
	./configure --prefix=/usr
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

