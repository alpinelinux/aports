# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=qt6
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qt6-qtsensors
pkgver=6.9.2
pkgrel=0
pkgdesc="Provides access to sensor hardware and motion gesture recognition"
url="https://qt.io/"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	cmake
	perl
	qt6-qtbase-private-dev
	samurai
	"
case "$CARCH" in
	armhf) ;;
	*)
		depends_dev="$depends_dev
			qt6-qtdeclarative-dev
			"
		makedepends="$makedepends
			qt6-qtdeclarative-dev
			qt6-qtdeclarative-private-dev
			"
		;;
esac

subpackages="$pkgname-dev"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac
source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtsensors-everywhere-src-${pkgver/_/-}.tar.xz"
options="!check" # No tests found
builddir="$srcdir/qtsensors-everywhere-src-${pkgver/_/-}"

build() {
	export CFLAGS="$CFLAGS -g1 -flto=auto"
	export CXXFLAGS="$CXXFLAGS -g1 -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DINSTALL_BINDIR=lib/qt6/bin \
		-DINSTALL_DOCDIR=share/doc/qt6 \
		-DINSTALL_ARCHDATADIR=lib/qt6 \
		-DINSTALL_DATADIR=share/qt6 \
		-DINSTALL_INCLUDEDIR=include/qt6 \
		-DINSTALL_MKSPECSDIR=lib/qt6/mkspecs \
		-DINSTALL_EXAMPLESDIR=share/doc/qt6/examples
	cmake --build build --parallel
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	amove usr/lib/qt6/sbom
}

sha512sums="
c5045f5a05f1ceacbd4e9476a6f3d654b9970100de67a47574d807a8df3ddb09f6d2227c81da4d2408ab0ccde08fd315b5655982bca7f2cffebe279fa84b5485  qtsensors-everywhere-src-6.9.2.tar.xz
"
