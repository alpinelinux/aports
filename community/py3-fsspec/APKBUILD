maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-fsspec
pkgver=2025.12.0
pkgrel=0
pkgdesc="A specification for pythonic filesystems"
url="https://github.com/intake/filesystem_spec"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-aiohttp
	py3-requests
	"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	py3-setuptools
	py3-wheel
	"
checkdepends="
	$depends
	py3-cloudpickle
	py3-lz4
	py3-numpy
	py3-paramiko
	py3-pyftpdlib
	py3-pygit2
	py3-pytest
	py3-pytest-asyncio
	py3-pytest-mock
	py3-tqdm
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://pypi.python.org/packages/source/f/fsspec/fsspec-$pkgver.tar.gz"
options="!check" # No tests in tarball
builddir="$srcdir/fsspec-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	# test find and test_dbfs.py require network connections
	.testenv/bin/python3 -m pytest -k 'not test_find' \
		--deselect fsspec/implementations/tests/test_dbfs.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
745e26b3d5629f557b5abff33fe0fb89975b3fec69ed5d6a56da4c0d5c515098959a9d3a6a3db41582529a8447a651f2af6fc9a978d132dab3825026e4a7355e  py3-fsspec-2025.12.0.tar.gz
"
