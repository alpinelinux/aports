maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-fsspec
pkgver=2026.1.0
pkgrel=0
pkgdesc="A specification for pythonic filesystems"
url="https://github.com/intake/filesystem_spec"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-aiohttp
	py3-requests
	"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	py3-setuptools
	py3-wheel
	"
checkdepends="
	$depends
	py3-cloudpickle
	py3-lz4
	py3-numpy
	py3-paramiko
	py3-pyftpdlib
	py3-pygit2
	py3-pytest
	py3-pytest-asyncio
	py3-pytest-mock
	py3-tqdm
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://pypi.python.org/packages/source/f/fsspec/fsspec-$pkgver.tar.gz"
options="!check" # No tests in tarball
builddir="$srcdir/fsspec-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	# test find and test_dbfs.py require network connections
	.testenv/bin/python3 -m pytest -k 'not test_find' \
		--deselect fsspec/implementations/tests/test_dbfs.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
fe4049a60df773d6502938e5546230b0da290abd3d0fd60b5f43d660acc65b2413278fc99f3b6d9de64f628e7b8b8d25b088d0530ed18da83ed488bea2fc1ff5  py3-fsspec-2026.1.0.tar.gz
"
