	nss-dev
	nss-static
	paxmark
	python2
	sqlite-dev
	sed
	startup-notification-dev
	wireless-tools-dev
	yasm
	zip
	"

source="https://ftp.mozilla.org/pub/firefox/releases/${pkgver}esr/source/firefox-"$pkgver"esr.source.tar.xz
	stab.h

	fix-fortify-system-wrappers.patch
	fix-fortify-inline.patch
