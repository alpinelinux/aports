# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-channels
_pyname="channels"
pkgver=4.3.2
pkgrel=0
arch="noarch"
pkgdesc="Developer-friendly asynchrony for Django"
url="https://pypi.python.org/project/channels"
license="BSD-3-Clause"
depends="
	py3-django
	py3-asgiref
	py3-daphne
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
checkdepends="
	py3-pytest
	py3-pytest-django
	py3-pytest-asyncio
	py3-async-timeout
"
source="$pkgname-$pkgver.tar.gz::https://github.com/django/channels/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v \
		--ignore tests/sample_project/tests/test_selenium.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
29d9c91aca721fad44143978863c45812bf596bb65cf99084803f78d85c664d5cc7ca1015df151cdc27754b822c9cfd18102989b6e5f59bc50257f6c9d8b8b3e  py3-channels-4.3.2.tar.gz
"
