pkgname=drm_info
pkgver=2.9.0
pkgrel=0
pkgdesc="Small utility to dump info about DRM devices"
url="https://gitlab.freedesktop.org/emersion/drm_info"
license="MIT"
arch="all"
options="!check" # no test suite
makedepends="meson libdrm-dev pciutils-dev json-c-dev scdoc"
subpackages="$pkgname-doc"
source="https://gitlab.freedesktop.org/emersion/drm_info/-/archive/v$pkgver/drm_info-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
5c0622a2a0e4a69c7c1bcc442423ccafd6c09809aa8081dba6203c132e4ac05249f60527cc747963a904cef3318249edc34f9dd844c2c3e9f793c95d333eeeb8  drm_info-v2.9.0.tar.gz
"
