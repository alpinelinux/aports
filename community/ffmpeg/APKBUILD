	libsrt-dev
	libssh-dev
	libtheora-dev
	libva-dev
	libvdpau-dev
	libvorbis-dev
	libvpx-dev
	libwebp-dev
	libxfixes-dev
	nasm
	opus-dev
	perl-dev
	pulseaudio-dev
	sdl2-dev
	soxr-dev
	v4l-utils-dev
	vidstab-dev
	vulkan-loader-dev
	x264-dev
	x265-dev
	xvidcore-dev
	zeromq-dev
	zimg-dev
	zlib-dev
	"
checkdepends="rsync"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-libavcodec
	$pkgname-libavdevice
	$pkgname-libavfilter
	$pkgname-libavformat
	$pkgname-libavutil
	$pkgname-libpostproc
	$pkgname-libswresample
	$pkgname-libswscale
	$pkgname-libs
	"
source="https://ffmpeg.org/releases/ffmpeg-$pkgver.tar.xz
	0001-ffbuild-libversion.sh-add-shebang.patch
	add-av_stream_get_first_dts-for-chromium.patch
	flto-auto.patch
	libswrescale-5.patch
	"
options="!check" # tests/data/hls-lists.append.m3u8 fails

