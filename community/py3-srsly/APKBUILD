# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-srsly
pkgver=2.5.1
pkgrel=0
pkgdesc="Modern high-performance serialization utilities for Python"
url="https://github.com/explosion/srsly"
arch="all"
license="MIT"
depends="python3 py3-numpy py3-tz"
options="!check" # fail to find self for some reason
makedepends="python3-dev
	     py3-setuptools
	     cython
	     py3-wheel
	     py3-gpep517
	     py3-installer"
checkdepends="py3-pytest py3-pytest-timeout py3-mock"
subpackages="$pkgname-doc $pkgname-pyc"
source="srsly-$pkgver.tar.gz::https://github.com/explosion/srsly/archive/release-v$pkgver.tar.gz"
builddir="$srcdir/srsly-release-v$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -vv
}

package() {
	python -m installer -d "$pkgdir" .dist/*.whl

	install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"

	rm -r "$pkgdir"/usr/lib/python3*/site-packages/srsly/tests
}

sha512sums="
8d17ae03cf2f2a9ffd32661c4dfaa7dc69660f5a521e3c8cd9cbf8035ec609c68a6e7c3cd00535a2d93e0271f4d578e6a83a720beff21797b6509d0d435610e4  srsly-2.5.1.tar.gz
"
