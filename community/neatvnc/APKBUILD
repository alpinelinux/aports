# Maintainer: Michał Polański <michal@polanski.me>
pkgname=neatvnc
pkgver=0.9.5
pkgrel=1
pkgdesc="A liberally licensed VNC server library with a clean interface"
url="https://github.com/any1/neatvnc"
license="ISC"
arch="all"
options="!check" # no test suite
makedepends="
	aml0-dev
	ffmpeg-dev
	gnutls-dev
	libdrm-dev
	libjpeg-turbo-dev
	libuv-dev
	mesa-dev
	meson
	pixman-dev
	zlib-dev
	"
subpackages="$pkgname-dbg $pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/any1/neatvnc/archive/v$pkgver.tar.gz"

# secfixes:
#   0.8.1-r0:
#     - CVE-2024-42458

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
a20493ac715e56a8ad1c9b39c0458d7739c25c9c8a5ba1bf8122b90e22f7c0d3c668099517de724ec84fbc5bb8896d5c7c52c4e89609ed84bf3aa674a95781e1  neatvnc-0.9.5.tar.gz
"
