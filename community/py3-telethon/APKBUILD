# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Lindsay Zhou <i@lin.moe>
maintainer="Lindsay Zhou <i@lin.moe>"
pkgname=py3-telethon
pkgver=1.42.0
pkgrel=0
pkgdesc="Full-featured Telegram client library"
url="https://docs.telethon.dev/"
arch="noarch"
license="MIT"
depends="
	py3-pyaes
	py3-rsa
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-pytest
	py3-pytest-asyncio
	"
subpackages="$pkgname-pyc"
source="https://github.com/LonamiWebs/Telethon/archive/v$pkgver/Telethon-v$pkgver.tar.gz"
builddir="$srcdir/Telethon-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -k 'not test_all_methods_present'
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
98ddb41bdc8f45bf13eb039a45586bf46f2ca3da536e047b9306abd636a5bd78c497126e21181859c2e2b7baf0b2f2d52989864bc14274a20036f539ed4c70ed  Telethon-v1.42.0.tar.gz
"
