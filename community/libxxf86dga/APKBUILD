# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxxf86dga
pkgver=1.1.7
pkgrel=0
pkgdesc="X11 Direct Graphics Access extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
makedepends="
	libx11-dev
	libxext-dev
	meson
	util-macros
	xorgproto
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXxf86dga-$pkgver.tar.xz"
builddir="$srcdir"/libXxf86dga-$pkgver
options="!check"  # No test suite.

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3476fe374fb61e9c45ad10ca15a65266eee4358843dfa3c4869ce08aae614a362ba375c210025c6bb3df8de32464e7156026aae9cded750b6ebd222a2f2a04eb  libXxf86dga-1.1.7.tar.xz
"
