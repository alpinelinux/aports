# Contributor: Rasmus Thomsen <oss@cogitri.dev>
maintainer="team/gnome <achill@achill.org>"
pkgname=gnome-initial-setup
pkgver=49.0
pkgrel=2
pkgdesc="A simple, easy,and safe way to prepare a new system"
url="https://gitlab.gnome.org/GNOME/gnome-initial-setup"
# limited by gnome-shell
arch="all !armhf"
license="GPL-2.0-or-later"
depends="
	dbus:org.freedesktop.Secrets
	gsettings-desktop-schemas
	iso-codes
	"
makedepends="
	accountsservice-dev
	cheese-dev
	coreutils
	fontconfig-dev
	gdm-dev
	geoclue-dev
	geocode-glib-dev>=3.26.4-r1
	gnome-desktop-dev
	gnome-online-accounts-dev
	gtk4.0-dev
	ibus-dev
	krb5-dev
	libadwaita-dev
	libgweather4-dev
	libnma-dev
	libpwquality-dev
	libsecret-dev
	meson
	networkmanager-dev
	polkit-dev
	rest1-dev
	webkit2gtk-6.0-dev
	"
options="!check" # no tests
subpackages="$pkgname-dbg $pkgname-lang $pkgname-systemd"
source="https://download.gnome.org/sources/gnome-initial-setup/${pkgver%%.*}/gnome-initial-setup-$pkgver.tar.xz
	gnome-initial-setup.tmpfiles
	gnome-initial-setup.sysusers
	"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	# NOTE: Upstream intends to let gdm create the users dynamically with
	# homedb, which is not supported with musl
	rm "$pkgdir"/usr/lib/sysusers.d/gnome-initial-setup.conf
	install -Dm644 "$srcdir"/gnome-initial-setup.tmpfiles \
		"$pkgdir"/usr/lib/tmpfiles.d/gnome-initial-setup.conf
	install -Dm644 "$srcdir"/gnome-initial-setup.sysusers \
		"$pkgdir"/usr/lib/sysusers.d/gnome-initial-setup.conf
}

systemd() {
	# NOTE: https://gitlab.alpinelinux.org/alpine/abuild/-/merge_requests/464
	default_systemd
	amove usr/lib/tmpfiles.d usr/lib/sysusers.d
}

