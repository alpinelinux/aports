index 27968f75..34e6b256 100644
--- a/src/alarm-item.vala
+++ b/src/alarm-item.vala
@@ -87,6 +87,14 @@ private class Item : Object, ContentItem {
                 notify_property ("active");
             }
             notify_property ("ring-time");
