# Contributor: Thomas Boerger <thomas@webhippie.de>
# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=mycli
pkgver=1.54.1
pkgrel=0
pkgdesc="MySQL CLI with autocompletion and syntax highlighting"
url="https://www.mycli.net/"
arch="noarch"
license="BSD-3-Clause"
depends="
	python3
	py3-cli_helpers
	py3-click
	py3-configobj
	py3-cryptography
	py3-keyring
	py3-prompt_toolkit
	py3-pycryptodomex
	py3-pyfzf
	py3-pygments
	py3-pymysql
	py3-pyperclip
	py3-rapidfuzz
	py3-sqlglot
	py3-sqlparse
	"
makedepends="python3-dev
	py3-gpep517
	py3-paramiko
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="py3-pytest py3-mock"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/m/mycli/mycli-$pkgver.tar.gz"

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION="$pkgver" \
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	# click 8.1 output differs
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v test \
		-k "not (test_list_dsn or test_list_ssh_config or test_dsn or test_ssh_config or test_is_valid_connection_scheme_valid or test_is_valid_connection_scheme_invalid)" \
		--ignore test/test_llm_special.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
	rm -rf "$pkgdir"/usr/lib/python3*/site-packages/test/
}

sha512sums="
cc5d23041266dff746011697e33b42f2ad2c819cf91c226e4bc55eab56c687f8c4b6e55808b994edb7f6133b1be52a76ef52d4148f0367108839c8e0f39602bf  mycli-1.54.1.tar.gz
"
