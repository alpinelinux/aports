# Contributor: Thomas Boerger <thomas@webhippie.de>
# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=mycli
pkgver=1.57.0
pkgrel=0
pkgdesc="MySQL CLI with autocompletion and syntax highlighting"
url="https://www.mycli.net/"
arch="noarch"
license="BSD-3-Clause"
depends="
	python3
	py3-cli_helpers
	py3-click
	py3-configobj
	py3-cryptography
	py3-keyring
	py3-prompt_toolkit
	py3-pycryptodomex
	py3-pyfzf
	py3-pygments
	py3-pymysql
	py3-pyperclip
	py3-rapidfuzz
	py3-sqlglot
	py3-sqlparse
	"
makedepends="python3-dev
	py3-gpep517
	py3-paramiko
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="py3-pytest py3-mock"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/m/mycli/mycli-$pkgver.tar.gz"

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION="$pkgver" \
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	# click 8.1 output differs
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v test \
		-k "not (test_is_valid_connection_scheme_valid or test_is_valid_connection_scheme_invalid)" \
		--ignore test/test_llm_special.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
	rm -rf "$pkgdir"/usr/lib/python3*/site-packages/test/
}

sha512sums="
06d23a5d8d3611ef0106a2e50d85254cf80afac2fcfbc6df216d31cfc57c28bfcd4bda7a3168339c971197006d1e6af89d25bf827d82f39bfd5ed73dd56b3693  mycli-1.57.0.tar.gz
"
