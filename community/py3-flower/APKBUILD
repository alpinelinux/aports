# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
_pyname=flower
pkgname="py3-$_pyname"
pkgver=2.0.1
pkgrel=1
# s390x, loongarch64: missing py3-celery for tests
arch="noarch !s390x !loongarch64"
pkgdesc="Real-time monitor and web admin for Celery distributed task queue"
url="https://flower.readthedocs.io/"
license="BSD-3-Clause"
depends="
	py3-redis
	py3-humanize
	py3-prometheus-client
	py3-click
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
checkdepends="
	py3-pytest
	py3-tornado
	py3-celery
	"
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/f/flower/flower-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
4321962ee9c01f93cc978a17e61e4ec8ed32e9e615a619078b8b758963ff397f72c386f64e625db48265064d1d93598f89945294887f747521450a1dcf4c4bba  py3-flower-2.0.1.tar.gz
"
