# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=py3-omemo-dr
_pkgname=omemo_dr
pkgver=1.1.0
pkgrel=0
pkgdesc="OMEMO Crypto Library for python"
url="https://dev.gajim.org/gajim/omemo-dr/"
arch="all"
license="GPL-3.0-or-later"
depends="python3 py3-protobuf py3-cryptography"
makedepends="py3-setuptools py3-gpep517 py3-wheel python3-dev"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
options="!check" # no test suite
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
60897932c709e43b4ce93861c9bfaefe9b2236512c90c8510e5480e240b102183e4c7318a17fa92574d611d619475ffc50640a6030f8e169404500e260ccea82  omemo_dr-1.1.0.tar.gz
"
