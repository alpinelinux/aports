# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-enchant
pkgver=3.3.0
pkgrel=0
pkgdesc="Spellchecking library for Python"
url="https://github.com/pyenchant/pyenchant"
arch="noarch"
license="LGPL-2.0-or-later"
depends="
	enchant2
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	"
checkdepends="
	aspell-en
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/pyenchant/pyenchant/archive/v$pkgver.tar.gz"
builddir="$srcdir/pyenchant-$pkgver"

replaces="py-enchant" # Backwards compatibility
provides="py-enchant=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
4b18d40a17ea0826c9ce042fb39dafde32e28809f4deae74e6a7ff62a4b92a3e351274d0fcaecd4f14fd408c1c8e67270bb124b3b562865e73779875e6550aee  py3-enchant-3.3.0.tar.gz
"
