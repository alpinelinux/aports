# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Eivind Uggedal <eu@eju.no>
pkgname=py-wtforms
_pkgname=WTForms
pkgver=2.2.1
pkgrel=0
pkgdesc="A flexible forms validation and rendering Python library"
url="http://wtforms.simplecodes.com/"
arch="noarch"
license="BSD"
makedepends="py-setuptools py3-setuptools"
checkdepends="py2-babel py3-babel"
subpackages="py2-wtforms:py2 py3-wtforms:py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

prepare() {
	default_prepare
	cp -r "$builddir" "$builddir"-py2
}

build() {
	python2 setup.py build

	cd "$builddir"-py2
	python3 setup.py build
}

check() {
	# Remove non py3 complicant tests:
	rm -r tests/ext_appengine
	python3 tests/runtests.py

	cd "$builddir"-py2
	python2 tests/runtests.py
}

package() {
	mkdir -p "$pkgdir"
}

py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="06478790a8a4bf728e5436edaa63c7c0e596f71d63b273e1f296f9255d9fa3e31a7bfa95971c214a8cea684034ac3c77b05371f4b4e14da9d9ef2c5afadabde0  WTForms-2.2.1.tar.gz"
