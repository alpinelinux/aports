#!/bin/sh

old_ver="$2"

if [ "$(apk version -t "$old_ver" '2.0.7-r1')" = '<' ]; then
	cat >&2 <<-EOF
	glycin loaders got split into their individual loaders. By default, only
	glycin-image-rs is installed. Additional loaders loader subpackages are
	glycin-heif, glycin-jxl & glycin-svg. Also the glycin-thumbnailer got
	subpackaged and isn't installed by default.
	EOF
fi
