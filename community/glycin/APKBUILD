# Maintainer: team/gnome <achill@achill.org>
pkgname=glycin
pkgver=2.0.7
pkgrel=5
# NOTE: Please review upstream's default loaders on upgrade & adapt _loaders.
pkgdesc="Sandboxed and extendable image decoding"
url="https://gitlab.gnome.org/GNOME/glycin"
arch="all"
license="MPL-2.0 OR LGPL-2.0-or-later"
depends="bubblewrap"
makedepends="
	cargo
	clang-dev
	cmake
	gobject-introspection-dev
	gtk4.0-dev
	lcms2-dev
	libheif-dev
	libjxl-dev
	librsvg-dev
	libseccomp-dev
	meson
	vala
	"
install="$pkgname.post-upgrade"
subpackages="
	$pkgname-dev
	$pkgname-gtk4
	$pkgname-loaders-all:loaders_all
	$pkgname-thumbnailer
	"
source="https://gitlab.gnome.org/GNOME/glycin/-/archive/$pkgver/glycin-$pkgver.tar.gz
	bump-rustix-crate.patch
	"
# !check: tests hang
# net: cargo crates
options="!check net"

# TODO: bootstrap without gtk4/gdk-pixbuf is broken

_loaders="heif image-rs jxl svg"
for i in $_loaders; do subpackages="$subpackages $pkgname-$i:loader"; done

provides="glycin-loaders=$pkgver-r$pkgrel" # for backward compatibility
replaces="glycin-loaders" # for backward compatibility

build() {
	_split=; for i in $_loaders; do _loaders_opt="${_loaders_opt}$_split$pkgname-$i"; _split=,; done
	abuild-meson \
		-Dloaders="$_loaders_opt" \
		-Dtest_skip_install=true \
		-Dtests="$(want_check && echo true || echo false)" \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

dev() {
	default_dev
	amove usr/lib/girepository-1.0

	provides="glycin-loaders-dev=$pkgver-r$pkgrel" # for backward compatibility
	replaces="glycin-loaders-dev" # for backward compatibility
}

loader() {
	pkgdesc="$pkgdesc ($subpkgname loader)"
	[ "$subpkgname" = "$pkgname-image-rs" ] && install_if="$pkgname=$pkgver-r$pkgrel"
	depends=

	amove usr/libexec/glycin-loaders/2+/$subpkgname
	amove usr/share/glycin-loaders/2+/conf.d/$subpkgname.conf
	amove usr/share/thumbnailers/$subpkgname.thumbnailer
}

thumbnailer() {
	pkgdesc="$pkgdesc (thumbnailer)"
	depends=

	amove usr/bin/glycin-thumbnailer
}

gtk4() {
	pkgdesc="$pkgdesc (gtk library)"
	depends=

	amove usr/lib/libglycin-gtk4-2.so.*
}

loaders_all() {
	pkgdesc="$pkgdesc (all loaders)"
	for i in $_loaders; do depends="$depends $pkgname-$i"; done

	mkdir -p "$subpkgdir"
}

sha512sums="
d097eb463b161d6c1759d5eaba3436e62919279bb61c78f56e96859c64c2283b8f676e0e267710a6b20401fed905162f5b42900614dfd69237315a2a1bf6b0b7  glycin-2.0.7.tar.gz
6d8ccf0b4790f5a3cb4d43aafc7020b2420b62e4a68f471d35de3803893efedbbabf0cc3f716272abe5d8a49fe96666cc41dcbbd372f7a9354cb2fdbdb3697b3  bump-rustix-crate.patch
"
