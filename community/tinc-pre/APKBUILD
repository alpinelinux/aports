# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=tinc-pre
_distver="1.1pre17"
pkgver=${_distver/pre/.}
pkgrel=3
pkgdesc="Virtual Private Network (VPN) daemon (pre-release)"
url="https://tinc-vpn.org/"
# s390x: tests hang
# armhf: tests fail
arch="all !s390x !armhf !armv7"
license="GPL-2.0-or-later"
makedepends="linux-headers ncurses-dev readline-dev
	zlib-dev lzo-dev openssl-dev texinfo
	automake autoconf libtool bash"
subpackages="$pkgname-doc"
# TODO remove prevent-large-amounts-of-UDP-probes.patch on next release
source="http://tinc-vpn.org/packages/tinc-$_distver.tar.gz
	tinc-1.1-fix-paths.patch
	prevent-large-amounts-of-UDP-probes.patch
	$pkgname.initd
	$pkgname.confd
	$pkgname.networks
	"
builddir="$srcdir/tinc-$_distver"

prepare() {
	default_prepare
	autoreconf -fsi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-legacy-protocol \
		--enable-curses \
		--enable-readline \
		--enable-zlib \
		--enable-lzo \
		--disable-miniupnpc \
		--enable-jumbograms \
		--without-systemd
	make
}

check() {
	# Disable test
	sed -i '/legacy-protocol.test/d' test/Makefile
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm755 "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/tincd
	install -Dm644 "$srcdir"/$pkgname.confd \
		"$pkgdir"/etc/conf.d/tincd
	install -Dm644 "$srcdir"/$pkgname.networks \
		"$pkgdir"/etc/conf.d/tinc.networks
}

