# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=py-opencl
_pkgreal=${pkgname/-/}
pkgver=2016.2
pkgrel=0
pkgdesc="Python wrapper for OpenCL"
url="https://pypi.python.org/pypi/pyopencl"
arch="all"
license="MIT"
depends="python"
depends_dev="$pkgname"
makedepends="python-dev py-setuptools py-mako py-numpy ctags libffi-dev mesa-dev opencl-headers opencl-icd-loader-dev"
subpackages="$pkgname-dev"
source="https://files.pythonhosted.org/packages/source/${_pkgreal:0:1}/$_pkgreal/$_pkgreal-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgreal-$pkgver

build() {
	cd "$builddir"
	python configure.py --cl-enable-gl --python-exe=python || return 1
	make || return 1
	python setup.py test
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1 --skip-build || return 1
}

md5sums="34e79e3695526402e0a1f87c66d65d75  pyopencl-2016.2.tar.gz"
sha256sums="1b94540cf59ea71a3ef234a8f1d0eb2b4633c112f0f554fb69e52b4a0337d82b  pyopencl-2016.2.tar.gz"
sha512sums="6b449d523305a4d557e5cbf480840afbea31b8f07de1d9b116b05eca9a80d07c3d7ee3aa1413c04800ddcab3dec17c2c8a63219f72d0377b1fd7a4f7991614fe  pyopencl-2016.2.tar.gz"
