maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=manuals
pkgver=49.1
pkgrel=0
pkgdesc="Install, Browse, and Search developer documentation"
url="https://gitlab.gnome.org/chergert/manuals"
arch="all !armhf" # foundry
license="GPL-3.0-or-later"
depends="flatpak"
makedepends="
	desktop-file-utils
	flatpak-dev
	foundry-dev
	glib-dev
	gom-dev
	gtk4.0-dev
	libadwaita-dev
	libdex-dev
	libpanel-dev
	meson
	webkit2gtk-6.0-dev
	"
source="https://gitlab.gnome.org/chergert/manuals/-/archive/$pkgver/manuals-$pkgver.tar.gz"

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
