+  get_target_property(lib_filepath ${TARGET} IMPORTED_LOCATION)
+  sdl_find_soname_library(soname "${lib_filepath}")
+  if(soname)
+    set_target_properties(${TARGET}
+      PROPERTIES
+        IMPORTED_SONAME "${soname}"
+        IMPORTED_NO_SONAME "0"
+    )
+  else()
