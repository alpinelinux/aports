# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-session
pkgver=4.20.0
pkgrel=3
pkgdesc="Session manager for Xfce"
url="https://xfce.org/"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
depends="hicolor-icon-theme iceauth dbus-x11 procps"
makedepends="
	gtk-layer-shell-dev
	intltool
	libice-dev
	libwnck3-dev
	libxfce4ui-dev
	libxfce4windowing-dev
	polkit-elogind-dev
	xfce4-panel-dev
	xfconf-dev
	"
source="https://archive.xfce.org/src/xfce/xfce4-session/${pkgver%.*}/xfce4-session-$pkgver.tar.bz2
	busybox-shutdown.patch
	labwc-session.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/xfce4 \
		--localstatedir=/var \
		--disable-static \
		--enable-legacy-sm
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	cat > "$pkgdir"/usr/bin/xfce4-wayland <<-EOF
		#!/bin/sh
		exec dbus-launch startxfce4 --wayland
	EOF
}

