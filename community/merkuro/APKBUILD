# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=merkuro
pkgver=25.12.2
pkgrel=0
pkgdesc="A calendar application using Akonadi to sync with external services (NextCloud, GMail, ...)"
# armhf blocked by qt6-qtdeclarative
# x86, s390x and riscv64 blocked by qt6-qtwebengine -> akonadi
arch="all !armhf !x86 !s390x !riscv64"
url="https://apps.kde.org/merkuro/"
license="GPL-3.0-or-later AND BSD-2-Clause"
depends="
	kdepim-runtime
	kirigami-addons
	kirigami
	qt6-qtlocation
	"
makedepends="
	akonadi-contacts-dev
	akonadi-dev
	eventviews-dev
	extra-cmake-modules
	kcalendarcore-dev
	kconfigwidgets-dev
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kidentitymanagement-dev
	kirigami-addons-dev
	kirigami-dev
	kitemmodels-dev
	kpackage-dev
	kpeople-dev
	kwindowsystem-dev
	mailcommon-dev
	messagelib-dev
	mimetreeparser-dev
	qqc2-desktop-style-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	qt6-qtlocation-dev
	qt6-qtsvg-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/pim/merkuro.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/merkuro-$pkgver.tar.xz"
# No tests
options="!check"

provides="kalendar=$pkgver-r$pkgrel"
replaces="kalendar"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b3c42ff39aeab996c17fcd91fbee6add5aefc35a9bd371669720d7d96ded3fb0c13c2d10c809c53de3739869e314834c2c9b1cb967287d77924cab293bbeb2f5  merkuro-25.12.2.tar.xz
"
