pkgname=freerdp
_pkgname=FreeRDP
pkgver=3.20.0
pkgrel=2
pkgdesc="FreeRDP client"
url="https://www.freerdp.com/"
arch="all"
license="Apache-2.0"
makedepends="
	alsa-lib-dev
	cairo-dev
	json-c-dev
	cmake
	cups-dev
	fdk-aac-dev
	fuse3-dev
	gsm-dev
	icu-dev
	krb5-dev
	libjpeg-turbo-dev
	libusb-dev
	libxcursor-dev
	libxdamage-dev
	libxi-dev
	libxinerama-dev
	libxkbcommon-dev
	libxkbfile-dev
	openh264-dev
	openssl-dev>3
	opus-dev
	samurai
	sdl3-dev
	sdl3_ttf-dev
	wayland-dev
	"
subpackages="$pkgname-doc $pkgname-dev $pkgname-libs"
source="$pkgname-$pkgver.tar.gz::https://github.com/FreeRDP/FreeRDP/archive/$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver

# backwards compat since now merged into main package
provides="freerdp-plugins=$pkgver-r$pkgrel"

