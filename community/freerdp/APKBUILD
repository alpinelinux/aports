build() {
	export CFLAGS="$CFLAGS -D_BSD_SOURCE -flto=auto"

	# prevent file conflicts with freerdp2
	# -DUWAC_FORCE_STATIC_BUILD=ON: libuwac0.so file conflict
	# -DWITH_BINARY_VERSIONING=ON: man pages conflict
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DUWAC_FORCE_STATIC_BUILD=ON \
		-DWINPR_UTILS_IMAGE_JPEG=ON \
		-DWITH_BINARY_VERSIONING=ON \
		-DWITH_ALSA=ON \
		-DWITH_CAIRO=ON \
		-DWITH_CUPS=ON \
		-DWITH_CHANNELS=ON \
		-DWITH_DSP_FFMPEG=OFF \
		-DWITH_FDK_AAC=ON \
		-DWITH_FFMPEG=OFF \
		-DWITH_GSM=ON \
		-DWITH_JPEG=ON \
		-DWITH_OPENSSL=ON \
		-DWITH_OPUS=ON \
		-DWITH_PCSC=OFF \
		-DWITH_PULSE=OFF \
		-DWITH_OPENH264=ON \
		-DWITH_SERVER=ON \
		-DWITH_SWSCALE=OFF \
		-DWITH_TIMEZONE_ICU=ON \
		-DWITH_VIDEO_FFMPEG=OFF \
		-DWITH_WAYLAND=ON \
		-DWITH_X11=ON \
		-DWITH_XCURSOR=ON \
		-DWITH_XEXT=ON \
		-DWITH_XKBFILE=ON \
		-DWITH_XI=ON \
		-DWITH_XINERAMA=ON \
		-DWITH_XRENDER=ON \
		-DWITH_NEON=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

libs() {
	default_libs
	amove usr/lib/freerdp3
}

