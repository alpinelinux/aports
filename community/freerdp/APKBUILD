# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=freerdp
_pkgname=FreeRDP
pkgver=2.10.0
pkgrel=1
pkgdesc="FreeRDP client"
url="https://www.freerdp.com/"
arch="all"
license="Apache-2.0"
options="!check" # As of 2.0.0_rc4 no test suite is available
makedepends="
	alsa-lib-dev
	bsd-compat-headers
	cmake
	cups-dev
	gsm-dev
	gst-plugins-base-dev
	libjpeg-turbo-dev
	libusb-dev
	libxcursor-dev
	libxdamage-dev
	libxi-dev
	libxinerama-dev
	libxkbcommon-dev
	libxkbfile-dev
	libxv-dev
	linux-headers
	openssl-dev>3
	samurai
	wayland-dev
	"
subpackages="$pkgname-doc $pkgname-dev $pkgname-libs"
source="$pkgname-$pkgver.tar.gz::https://github.com/FreeRDP/FreeRDP/archive/$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

# backwards compat since now merged into main package
provides="freerdp-plugins=$pkgver-r$pkgrel"

