pkgname=freerdp
_pkgname=FreeRDP
pkgver=3.18.0
pkgrel=0
pkgdesc="FreeRDP client"
url="https://www.freerdp.com/"
arch="all"
license="Apache-2.0"
makedepends="
	alsa-lib-dev
	bsd-compat-headers
	json-c-dev
	cmake
	cups-dev
	ffmpeg-dev
	fuse3-dev
	gsm-dev
	icu-dev
	krb5-dev
	libjpeg-turbo-dev
	libusb-dev
	libxcursor-dev
	libxdamage-dev
	libxi-dev
	libxinerama-dev
	libxkbcommon-dev
	libxkbfile-dev
	libxv-dev
	linux-headers
	openssl-dev>3
	samurai
	sdl3-dev
	sdl3_ttf-dev
	wayland-dev
	webkit2gtk-4.1-dev
	"
subpackages="$pkgname-doc $pkgname-dev $pkgname-libs"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/FreeRDP/FreeRDP/archive/$pkgver.tar.gz
	0001-common-test-Adjust-AVC-and-H264-expectations.patch
	"

builddir="$srcdir"/$_pkgname-$pkgver

# backwards compat since now merged into main package
provides="freerdp-plugins=$pkgver-r$pkgrel"

