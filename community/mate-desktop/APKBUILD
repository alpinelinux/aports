# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-desktop
pkgver=1.17.1
pkgrel=0
pkgdesc="The MATE Desktop Environment"
url="http://wiki.mate-desktop.org/mate-desktop"
arch="all"
license="GPL2"
depends="mate-common yelp-tools"
depends_dev=""
makedepends="$depends_dev itstool intltool dconf-dev gtk+3.0-dev libxrandr-dev
	libxml2-utils"
install=""
subpackages="$pkgname-lang $pkgname-dev $pkgname-doc"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="e9b8c3ab6b03d0eb78b60ad7656a7456  mate-desktop-1.17.1.tar.xz"
sha256sums="05f27f51f9b8233714a376dbb02b95a09abee502e6346309935a544fe6365641  mate-desktop-1.17.1.tar.xz"
