maintainer=""
pkgname=py3-aiohappyeyeballs
_pkgname=aiohappyeyeballs
pkgver=2.6.1
pkgrel=0
pkgdesc="Happy Eyeballs for asyncio"
url="https://pypi.org/project/aiohappyeyeballs"
arch="all"
license="Apache-2.0"
depends="
	python3
	"
makedepends="
	python3-dev
	py3-poetry-core
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-pytest
	py3-pytest-asyncio
	py3-pytest-cov
"
subpackages="$pkgname-pyc"
source="
	$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz
	pytest-asyncio-1.1.patch
	"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	PYTHONPATH="$(echo build/lib.*)" \
	pytest -v --no-cov
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
f704e60c2131abc7a0c3b1a130a50ae90a418272d9f2b23d40edf5ccd5dc537bd716603f1ef35944428ef3ec3d51fd657f97f72d98a36fc2711ad602397c9c08  py3-aiohappyeyeballs-2.6.1.tar.gz
f9bf7c4f03dd977adb8bb27fe7cabe724de57b6f635ad2838504ad761bd84004711bea819ed8334fbf98f07b9c89367553c0c542816cbb2b17c28c77539ba12f  pytest-asyncio-1.1.patch
"
