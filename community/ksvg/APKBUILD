# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksvg
pkgver=6.20.0
pkgrel=0
pkgdesc="Configuration system"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="
	karchive-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	kguiaddons-dev
	kirigami-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	kde-qdoc-common
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/ksvg.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/ksvg-$pkgver.tar.xz"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	wlheadless-run -- ctest --test-dir build -E 'ksvg(core-(ksvgtest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
d73704ee459a9ec0b9abe11fed2aa2991652c83a41d4fad3248dd5a187ebf41f8082a968ef5a76799665ccdb072081747d1fcdb0a5daa0941b28cf67f487a96c  ksvg-6.20.0.tar.xz
"
