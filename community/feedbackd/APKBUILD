# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=feedbackd
pkgver=0.8.7
pkgrel=2
pkgdesc="Daemon to provide haptic, LED, and audio feedback triggered by application events"
url="https://gitlab.freedesktop.org/agx/feedbackd"
arch="all"
license="GPL-3.0-or-later"
depends="dbus feedbackd-device-themes"
makedepends="
	gi-docgen
	glib-dev
	gmobile-dev
	gobject-introspection-dev
	gsound-dev
	gtk-doc
	json-glib-dev
	libgudev-dev
	meson
	vala
	umockdev-dev
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-systemd $pkgname-udev"
source="https://sources.phosh.mobi/releases/feedbackd/feedbackd-$pkgver.tar.xz"
install="$pkgname.pre-install $pkgname.pre-upgrade"
options="!check" # fails because of the environment

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=true \
		-Dudev=true \
		. output
	meson compile -C output
}

check() {
	dbus-run-session meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
6f84fff7de6b5aa3c1db725c6ec8eb7e0f01a9a8d37f19427795932abdf84c6bb39b5abcc9c63a60d623aa4e35de0d4533842995bdeb88d5181df2a1bac6340d  feedbackd-0.8.7.tar.xz
"
