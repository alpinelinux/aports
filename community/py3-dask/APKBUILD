# Contributor: Bart Ribbers <bribbers@disroot.org>
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-dask
pkgver=2025.11.0
pkgrel=0
pkgdesc="Parallel computing with task scheduling"
url="https://dask.org/"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-click
	py3-cloudpickle
	py3-dask-expr
	py3-fsspec
	py3-importlib-metadata
	py3-numpy
	py3-packaging
	py3-pandas
	py3-partd
	py3-toolz
	py3-yaml
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="
	py3-aiohttp
	py3-flaky
	py3-graphviz
	py3-jinja2
	py3-pandas-tests
	py3-pyarrow
	py3-pytest
	py3-pytest-cov
	py3-pytest-runner
	py3-pytest-xdist
	py3-requests
	py3-scipy
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/d/dask/dask-$pkgver.tar.gz"
builddir="$srcdir/dask-$pkgver"

# secfixes:
#   2022.2.0-r0:
#     - CVE-2021-42343

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	local _skip="
		--deselect dask/array/tests/test_array_core.py::test_binary_operator_delegation
		--deselect dask/array/tests/test_array_core.py::test_store_locks_failure_lock_released
		--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_serialization
		--deselect dask/dataframe/io/tests/test_orc.py::test_orc_aggregate_files_offset
		--deselect dask/dataframe/io/tests/test_orc.py::test_orc_multiple
		--deselect dask/dataframe/io/tests/test_orc.py::test_orc_single
		--deselect dask/dataframe/io/tests/test_orc.py::test_orc_with_backend
		--deselect dask/dataframe/tests/test_groupby.py::test_dataframe_aggregations_multilevel
	"
	case "$CARCH" in
		arm*|x86) _skip="$_skip
			--deselect dask/dataframe/dask_edask/dataframe/tests/test_dataframe.py::test_memory_usage_dataframe
			--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_memory_usage
			--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_repartition_partition_size
			--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_repartition_partition_size
			--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_scalar_repr
			--deselect dask/dataframe/dask_expr/tests/test_merge.py::test_join_gives_proper_divisions
			--deselect dask/dataframe/io/tests/test_parquet.py::test_pandas_timestamp_overflow_pyarrow
			--deselect dask/dataframe/tests/test_dataframe.py::test_memory_usage_dataframe
			--deselect dask/dataframe/tests/test_multi.py::test_join_gives_proper_divisions
			--deselect dask/dataframe/tests/test_multi.py::test_merge_asof_on_by
			--deselect dask/dataframe/tests/test_multi.py::test_merge_asof_on_by_tolerance
			--deselect dask/dataframe/tests/test_multi.py::test_merge_asof_on_by_tolerance_no_exact_matches
			--deselect dask/dataframe/tests/test_multi.py::test_merge_maintains_columns
			"
			;;
		riscv64) _skip="$_skip
			--deselect dask/array/tests/test_array_core.py::test_store_locks_failure_lock_released
			--deselect dask/array/tests/test_linalg.py::test_no_chunks_svd
			--deselect dask/array/tests/test_linalg.py::test_tsqr_uncertain
			--deselect dask/array/tests/test_linalg.py::test_tsqr_zero_height_chunks
			"
			;;
		s390x) _skip="$_skip
			--deselect dask/bytes/tests/test_http.py::test_parquet
			--deselect dask/bytes/tests/testdask/dataframe/dask_expr/io/tests/test_io.py::test_combine_similar_no_projection_on_one_branch
			--deselect dask/bytes/tests/testdask/dataframe/dask_expr/io/tests/test_parquet.py::test_parquet_all_na_column
			--deselect dask/dataframe/dask_expr/io/tests/test_io.py::test_combine_similar_no_projection_on_one_branch
			--deselect dask/dataframe/dask_expr/io/tests/test_parquet.py
			--deselect dask/dataframe/dask_expr/tests/test_collection.py::test_len
			--deselect dask/dataframe/io/tests/test_parquet.py
			"
			;;
	esac
	.testenv/bin/python3 -m pytest -n ${JOBS:-0} $_skip
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl

	rm -r "$pkgdir"/usr/lib/python*/site-packages/dask/tests
	rm -r "$pkgdir"/usr/lib/python*/site-packages/dask/*/tests
}

