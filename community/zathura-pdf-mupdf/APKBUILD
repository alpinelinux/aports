pkgname=zathura-pdf-mupdf
pkgver=0.4.6
pkgrel=0
pkgdesc="mupdf plugin to zathura"
url="https://pwmt.org/projects/zathura-pdf-mupdf/"
arch="all"
license="Zlib"
options="!check" # no test suite
depends="zathura !zathura-pdf-poppler"
makedepends="
	meson
	mupdf-dev
	ninja
	zathura-dev
	"
source="https://pwmt.org/projects/zathura-pdf-mupdf/download/zathura-pdf-mupdf-$pkgver.tar.xz
	"

build() {
	abuild-meson build
	meson compile -C build
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C build
}

sha512sums="
0f431e1c389c38df018fc8a2754cc9dfcc8e7f73d950933898710f82c137ba433c065b8ee050af2b54e50e11e3f11fd06fa5820e70872fcf2a9a63fcc306284f  zathura-pdf-mupdf-0.4.6.tar.xz
"
