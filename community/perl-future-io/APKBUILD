prepare() {
	default_prepare

	# Test hangs on the ppc64le and loongarch64 CI runners
	case "$CARCH" in
	ppc64le|loongarch64)
		rm -v ./t/*write.t
		;;
	esac
}

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	perl Build.PL \
		--installdirs=vendor \
		--create_packlist=0
	./Build
}

check() {
	./Build test
}

package() {
	./Build install --destdir="$pkgdir"
}

