# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=eog
pkgver=3.27.1
pkgrel=0
pkgdesc="An image viewer for GNOME"
url="https://wiki.gnome.org/Apps/EyeOfGnome"
arch="all"
license="GPL"
depends=""
depends_dev="gtk+3.0-dev gvfs-dev libxml2-dev jpeg-dev libexif-dev lcms2-dev libpeas-dev librsvg-dev gnome-desktop-dev"
makedepends="$depends_dev itstool libxml2-utils"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/eog/3.27/eog-$pkgver.tar.xz"
builddir="$srcdir/eog-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

check() {
	cd "$builddir"
	make check
}

sha512sums="69a19948176722f2d4e312bab87f50d4f4814fa56346fa8345e26028dd1cd1c49d321a728ed58b9c5c7d760e5f2a51e457d72a1174895fb4ceb3bb511fd3da90  eog-3.27.1.tar.xz"
