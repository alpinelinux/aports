maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=gbinder-python
pkgver=1.3.0
pkgrel=0
pkgdesc="Python bindings for libgbinder"
url="https://github.com/erfanoabdi/gbinder-python"
arch="all"
license="GPL-3.0-only"
depends="python3"
makedepends="
	cython
	libgbinder-dev
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
source="https://github.com/erfanoabdi/gbinder-python/archive/$pkgver/gbinder-python-$pkgver.tar.gz"
options="!check" # No properly runnable tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
fda25822cc6021f11204029322458abf923ac326cc4aa5b9f36920022662460b02e18e45c4765d095bd074cdbfe43023237bc09dcab21cd9524146a62e302d5c  gbinder-python-1.3.0.tar.gz
"
