pkgname=ansible
pkgver=13.1.0
pkgrel=0
pkgdesc="core components for Ansible"
url="https://ansible.com/"
options="!check" # TODO: enable tests
arch="noarch"
license="GPL-3.0-or-later"
depends="python3 ansible-core>=2.20.1"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/a/ansible/ansible-$pkgver.tar.gz"

# secfixes:
#   2.10.7-r0:
#     - CVE-2021-20191
#   2.10.1-r0:
#     - CVE-2020-25646

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
2e7abd85b44d48ea756c65906811c9fa5519ce5d9ecaca71c718446a52dfc3dff97597d048f071ca820ea606ee2de670e8a0746717f95e2ce636db06273b3544  ansible-13.1.0.tar.gz
"
