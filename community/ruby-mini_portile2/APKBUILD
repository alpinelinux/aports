pkgname=ruby-mini_portile2
_gemname=${pkgname#ruby-}
pkgver=2.7.0
pkgrel=1
pkgdesc="Simplistic port-like solution for developers"
url="https://github.com/flavorjones/mini_portile"
arch="noarch"
license="MIT"
depends="ruby"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
options="!check"  # FIXME

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$geminstdir"/.github \
		"$geminstdir"/test \
		"$geminstdir"/*.md \
		"$geminstdir"/*.txt \
		"$geminstdir"/*.yml \
		"$geminstdir"/Rakefile
}

sha512sums="
5cc60c851794027132ea516aef9e175fe7c6cfb18a50c5fe3bbe0ffdb2b0ebbfbc8be6f70b801893b04b0f0493b7a9e40bafdbb7d94758aea4af6b3957d1e4e4  mini_portile2-2.7.0.gem
"
