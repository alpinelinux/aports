# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=ruby-mini_portile2
_gemname=${pkgname#ruby-}
pkgver=2.8.1
pkgrel=0
pkgdesc="Simplistic port-like solution for developers"
url="https://github.com/flavorjones/mini_portile"
arch="noarch"
license="MIT"
depends="ruby"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
options="!check"  # FIXME

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$geminstdir"/.github \
		"$geminstdir"/test \
		"$geminstdir"/*.md \
		"$geminstdir"/*.txt \
		"$geminstdir"/*.yml \
		"$geminstdir"/Rakefile
}

sha512sums="
600c25aa092993709842024006ba013308ca471c070134cc727184456871a4d8d3363448803cc513835b57de89e97fe536b6974ece50ff866b6d5e00b7edc308  mini_portile2-2.8.1.gem
"
