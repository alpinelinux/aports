maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-tblib
pkgver=3.2.1
pkgrel=0
pkgdesc="Serialization library for Exceptions and Tracebacks"
url="https://github.com/ionelmc/python-tblib"
arch="noarch"
license="BSD-2-Clause"
depends="py3-six"
makedepends="
	py3-docutils
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
checkdepends="
	py3-pytest
	py3-pytest-benchmark
	py3-twisted
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/t/tblib/tblib-$pkgver.tar.gz"
builddir="$srcdir/tblib-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
025ab5c7944a279e8ee3bdb8ef9a1797e085f3ecf85d2bbda0861ee2d8d2de578464d36db388f991216db408179ef02bc09bdae23f9dbb95862aa5d31a7dfa21  tblib-3.2.1.tar.gz
"
