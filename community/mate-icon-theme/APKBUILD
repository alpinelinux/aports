# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-icon-theme
pkgver=1.23.1
pkgrel=0
pkgdesc="MATE desktop icons"
url="https://github.com/mate-desktop/mate-icon-theme"
arch="noarch"
license="LGPL-3.0-only OR CC-BY-SA-3.0"
depends="mate-common"
makedepends="icon-naming-utils intltool"
subpackages="$pkgname-lang"
source="https://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	DATADIRNAME=share ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="${pkgdir}" install
}

sha512sums="50e1579572d050b8770a2253f9926fc292371d6e28b6ab261a51dcb46772bda4c2168d5e01165cc5db8757493fda0899dbda04aac87e76ddd35ab4d08900ffce  mate-icon-theme-1.23.1.tar.xz"
