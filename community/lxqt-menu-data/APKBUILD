# Contributor: Zachary Lee Andrews <zcrayfish@gmail.com>
maintainer="Antoni Aloy <aaloytorrens@gmail.com>"
pkgname=lxqt-menu-data
pkgver=2.3.0
pkgrel=0
pkgdesc="Freedesktop.org desktop menus for LXQt"
url="https://lxqt-project.org/"
arch="noarch"
license="GPL-2.0-or-later"
makedepends="
	perl
	cmake
	samurai
	lxqt-build-tools
	qt6-qttools-dev
	"
options="!check" # No testsuite
source="https://github.com/lxqt/lxqt-menu-data/releases/download/$pkgver/lxqt-menu-data-$pkgver.tar.xz"

replaces="lxmenu-data"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4b64267e39bddad3096402824ff482697eccd6d036ef66a8ca81918c06778819f4d0400e1c728b4e056be6a45d39e80f6e3a1fcad932112db521eb5eee68f683  lxqt-menu-data-2.3.0.tar.xz
"
