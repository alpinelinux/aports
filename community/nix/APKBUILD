pkgname=nix
pkgver=2.24.12
pkgrel=0
pkgdesc="The purely functional package manager"
url="https://nixos.org/nix/"
arch="x86 x86_64 aarch64"  # supported platforms
license="LGPL-2.1-or-later"
depends="ca-certificates"
depends_dev="boost-dev"
makedepends="
	$depends_dev
	autoconf
	autoconf-archive
	automake
	bash
	bison
	brotli-dev
	bsd-compat-headers
	busybox-static
	bzip2-dev
	coreutils
	curl-dev
	editline-dev
	flex
	gc-dev
	gtest-dev
	jq
	libarchive-dev
	libgit2-dev
	libseccomp-dev
	libsodium-dev
	libtool
	lowdown
	lowdown-dev
	man-db
	mdbook
	nlohmann-json
	openssl-dev
	rapidcheck-dev
	sqlite-dev
	toml11
	xz
	"
pkggroups="nix nixbld"
install="$pkgname.pre-install"
subpackages="
	$pkgname-dev
	$pkgname-openrc
	$pkgname-manual::noarch
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-fish-completion
	$pkgname-zsh-completion
	"
source="https://github.com/NixOS/nix/archive/$pkgver/nix-$pkgver.tar.gz
	README.alpine
	nix-remote.sh
	nix-daemon.initd

	no-linkcheck.patch
	lowdown-1-4.patch
	no-coverage-reports.patch
