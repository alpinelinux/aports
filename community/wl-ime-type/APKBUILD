maintainer="qaqland <qaq@qaq.land>"
pkgname=wl-ime-type
pkgver=0.1.2
pkgrel=0
pkgdesc="Type text via Wayland's input-method-unstable-v2 protocol"
url="https://gitlab.freedesktop.org/emersion/wl-ime-type"
license="BSD-2-Clause"
arch="all"
makedepends="wayland-dev scdoc"
options="!check" # no test suite
subpackages="$pkgname-doc"
source="https://gitlab.freedesktop.org/emersion/wl-ime-type/-/archive/v$pkgver/wl-ime-type-v$pkgver.tar.gz"
builddir="$srcdir/wl-ime-type-v$pkgver"

build() {
	make all
}

package() {
	make DESTDIR="$pkgdir" PREFIX="/usr" install
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}

