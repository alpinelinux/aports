# Contributor: Ivan Tham <pickfire@riseup.net>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=xf86-input-wacom
pkgver=1.2.4
pkgrel=1
pkgdesc="X.org Wacom tablet input driver"
url="https://github.com/linuxwacom/xf86-input-wacom"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	eudev-dev
	libpciaccess-dev
	libxext-dev
	libxi-dev
	libxinerama-dev
	libxrandr-dev
	util-macros
	xorg-server-dev
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-systemd $pkgname-udev"
source="https://github.com/linuxwacom/xf86-input-wacom/releases/download/xf86-input-wacom-$pkgver/xf86-input-wacom-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
7c1b62566f3dadad632c730afc0dfd81bf2082514091e2f1af1f04bbbf2e1f96877d6a982d127079f40d08bf503305b8c5ce8f526ff4a7ee5d7b0dcab27329b0  xf86-input-wacom-1.2.4.tar.bz2
"
