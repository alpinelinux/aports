# Contributor: ScrumpyJack <scrumpyjack@st.ilet.to>
# Maintainer: ScrumpyJack <scrumpyjack@st.ilet.to>
pkgname=cadaver
pkgver=0.24
pkgrel=1
pkgdesc="Cadaver is a command line webDAV client for Linux"
options="!check"
url="http://webdav.org/cadaver/"
arch="all"
license="GPL-2.0-or-later"
makedepends="autoconf automake libproxy-dev neon-dev readline-dev expat-dev"
subpackages="$pkgname-doc"
source="https://notroj.github.io/cadaver/cadaver-$pkgver.tar.gz
	disable-nls.patch
	newer-neon.patch
	"

prepare() {
	default_prepare
	autoreconf -fvi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-ssl \
		--with-expat \
		--with-neon \
		--disable-nls
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

