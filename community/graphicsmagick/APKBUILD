build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-shared \
		--disable-static \
		--disable-openmp \
		--with-modules \
		--with-threads \
		--with-gs-font-dir=/usr/share/fonts/Type1 \
		--with-quantum-depth=16 \
		--with-webp \
		--with-ttf
	make
}

package() {
	make -j1 DESTDIR="$pkgdir" install
}

