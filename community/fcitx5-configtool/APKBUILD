# Contributor: ProgCat <progcat@protonmail.com>
# Maintainer: Lindsay Zhou <i@lin.moe>
pkgname=fcitx5-configtool
pkgver=5.1.12
pkgrel=0
pkgdesc="A configure tool for Fcitx5"
url="https://github.com/fcitx/fcitx5-configtool"
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	cmake
	extra-cmake-modules
	fcitx5-dev
	fcitx5-qt-dev
	gettext-dev
	iso-codes
	iso-codes-dev
	kirigami2-dev
	libxkbcommon-dev
	libxkbfile-dev
	qt6-qtsvg-dev
	libplasma-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	xkeyboard-config-dev
	"
checkdepends="appstream"
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/fcitx/fcitx5-configtool/archive/refs/tags/$pkgver.tar.gz"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja\
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=None \
		$CMAKE_CROSSOPTS
	cmake --build build
}

check() {
	cd build
	ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
57a9c5f0270dad3a0146ac3f13b457929166c35c545a73f41f27cef7c5838bc3447ba834674478bbb67501da7956b016f24751f6bb243013864b7bdd8b6b2c4d  fcitx5-configtool-5.1.12.tar.gz
"
