# Contributor: Martijn Braam <martijn@brixit.nl>
maintainer="Luca Weiss <luca@lucaweiss.eu>"
pkgname=powersupply
pkgver=0.10.1
pkgrel=0
pkgdesc="Mobile app to display power status of phones"
url="https://gitlab.postmarketos.org/fossdd/powersupply"
arch="noarch"
license="MIT"
source="https://gitlab.postmarketos.org/fossdd/powersupply/-/archive/$pkgver/powersupply-$pkgver.tar.gz"
depends="
	gtk4.0
	libadwaita
	py3-gobject3
	python3
	"
makedepends="
	gtk4.0-dev
	libadwaita-dev
	meson
	"
options="!check" # There's no testsuite

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

