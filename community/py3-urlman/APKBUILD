# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-urlman
pkgver=2.0.3
pkgrel=0
pkgdesc="Django URL pattern helpers"
url="https://pypi.org/project/urlman/"
arch="noarch"
license="Apache-2.0"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-django-rest-framework
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="https://github.com/andrewgodwin/urlman/archive/$pkgver/py3-urlman-$pkgver.tar.gz"
builddir="$srcdir/urlman-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ac8f2a613e8dc2e68b89706edc4783683f647175c78314ae5ce17b39179544c72c6279d1d1af0a0668bdcd77df5064d7803c1c16e165428cf07051f61b12e2e9  py3-urlman-2.0.3.tar.gz
"
