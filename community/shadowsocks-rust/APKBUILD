# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=shadowsocks-rust
pkgver=1.24.0
pkgrel=1
pkgdesc="Rust port of shadowsocks"
url="https://github.com/shadowsocks/shadowsocks-rust"
arch="all"
license="MIT"
makedepends="
	cargo
	cargo-auditable
	mimalloc2-dev
	openssl-dev
	"
subpackages="
	$pkgname-sslocal
	$pkgname-ssmanager
	$pkgname-ssserver
	$pkgname-ssservice
	$pkgname-ssurl
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/shadowsocks/shadowsocks-rust/archive/refs/tags/v$pkgver.tar.gz"
options="net" # fetch rust crates

prepare() {
	default_prepare

	# Build against system-provided libs
	mkdir -p .cargo
	cat >> .cargo/config.toml <<-EOF
		[target.$CHOST]
		mimalloc = { rustc-link-lib = ["mimalloc"] }
	EOF

	cargo fetch --target="$CHOST" --locked
}

build() {
	local features="
		aead-cipher
		aead-cipher-2022
		local-dns
		local-http-native-tls
		local-redir
		local-socks4
		local-tunnel
		logging
		manager
		mimalloc
		multi-threaded
		server
		service
		utility
		"
	case "$CARCH" in
	ppc64le|s390x|riscv64|loongarch64)
		;;
	*)
		# ioctl-sys
		features="$features local-tun"
		;;
	esac
	features="$(echo $features | tr -s " " ",")"

	msg2 "Building with features: $features"
	cargo auditable build --release \
		--frozen \
		--bins \
		--no-default-features \
		--features="$features"
}

check() {
	# TODO: look into running proper tests
	# cargo test --frozen

	msg2 "Available ciphers for ssserver in this build:"
	./target/release/ssserver -m 2>&1 | grep "possible values"
}

package() {
	depends="
		$pkgname-sslocal=$pkgver-r$pkgrel
		$pkgname-ssmanager=$pkgver-r$pkgrel
		$pkgname-ssserver=$pkgver-r$pkgrel
		$pkgname-ssservice=$pkgver-r$pkgrel
		$pkgname-ssurl=$pkgver-r$pkgrel
		"
	cd target/release
	install -Dm755 -t "$pkgdir"/usr/bin/ \
		sslocal \
		ssmanager \
		ssserver \
		ssservice \
		ssurl
}

sslocal() {
	pkgdesc="$pkgdesc (sslocal binary)"

	amove usr/bin/sslocal
}

ssmanager() {
	pkgdesc="$pkgdesc (ssmanager binary)"

	amove usr/bin/ssmanager
}

ssserver() {
	pkgdesc="$pkgdesc (ssserver binary)"

	amove usr/bin/ssserver
}

ssservice() {
	pkgdesc="$pkgdesc (ssservice binary)"

	amove usr/bin/ssservice
}

ssurl() {
	pkgdesc="$pkgdesc (ssurl binary)"

	amove usr/bin/ssurl
}

sha512sums="
4455804bff7dfbc3f770f4985760cb2e4210c9569b282837c211649e00ee10fcfc1d40b81db9890517af0043f04676c9b4cf46beb4173306d20d8461c319c1f3  shadowsocks-rust-1.24.0.tar.gz
"
