# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=falkon
pkgver=25.08.0
pkgrel=0
pkgdesc="Cross-platform Qt Web Browser"
url="https://github.com/KDE/falkon"
# armhf, x86, ppc64le, s390x and riscv64 blocked by qt6-qtwebengine
arch="all !armhf !x86 !ppc64le !s390x !riscv64"
license="GPL-3.0-or-later"
depends="qt6-qtbase-sqlite"
makedepends="
	extra-cmake-modules
	karchive-dev
	kcoreaddons-dev
	kcrash-dev
	ki18n-dev
	kio-dev
	kwallet-dev
	libxcb-dev
	openssl-dev>3
	purpose-dev
	python3
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	qt6-qtwebengine-dev
	samurai
	xcb-util-dev
	"
checkdepends="
	dbus
	xwayland-run
	"
subpackages="$pkgname-lang $pkgname-bash-completion:bashcomp:noarch"
_repo_url="https://invent.kde.org/network/falkon.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/falkon-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TESTING=ON
	cmake --build build
}

check() {
	# Requires working OpenGL
	# qmlhistoryapitest, qmlcookiesapitest, qmltabsapitest and qmlwindowsapitest are SIGTRAP'ing
	dbus-run-session -- wlheadless-run -- ctest --test-dir build -E "falkon-(locationbar|webtab|qml-qml(tabsapi|topsitesapi|clipboardapi)|sitesettings)test" -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

bashcomp() {
	depends=""
	pkgdesc="Bash completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel bash-completion"

	amove usr/share/bash-completion/completions
}

sha512sums="
1ee956303bc54453e127ad9c54f7bf2f7d643c1e5778f64a8f5244f8257076da4a41f4a79a8279deafa285bbd4d39d807a1c268b699c493fe92480273a375356  falkon-25.08.0.tar.xz
"
