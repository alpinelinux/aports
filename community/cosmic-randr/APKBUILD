# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-randr
pkgver=1.0.0
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=1
pkgdesc="Display configuration library for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-randr"
# riscv64: too slow to build
arch="all !riscv64"
license="MPL-2.0"
depends="wayland"
makedepends="
	cargo
	just
"
options="net !check"  # fetch dependencies, no tests
source="$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-randr/archive/refs/tags/epoch-$_upstreamver.tar.gz
	std-mutex.patch
	"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release --frozen
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
1ae393fc133c7a8e2a4147dcf1d03264777ffae9b53d6bef84bd954cd31ff30d1450d318d6b77cf0e389ae5cd7f425fb542934b087e601a244ac4343dbac33c3  cosmic-randr-1.0.0.tar.gz
03d1c465ffe14cdae65e01798c9a94e1b7014412ae27473544f9114025b72d85111e1df659a13118d92e9be4bf4a2c2f145383743a1abad92f0c4ae75c1b39b8  std-mutex.patch
"
