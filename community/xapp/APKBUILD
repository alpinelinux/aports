# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Jingyun Hua <huajingyun@loongson.cn>
pkgname=xapp
pkgver=3.2.1
pkgrel=0
pkgdesc="Components which are common to X-Apps"
arch="all"
url="https://github.com/linuxmint/xapp"
license="LGPL-3.0-only"
makedepends="
	gobject-introspection-dev
	libdbusmenu-gtk3-dev
	libgnomekbd-dev
	meson
	py3-gobject3
	py3-gobject3-dev
	vala"
source="https://github.com/linuxmint/xapp/archive/$pkgver/xapp-$pkgver.tar.gz"
options="!check" # no tests
subpackages="$pkgname-dev $pkgname-lang"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
7850a161387014352f94d210db723ef47e058d506f8c2bac238448287c29e84a68a11f395691dd0b22deb20fdec1bcacb3b9316667be87e15e7bbed338797673  xapp-3.2.1.tar.gz
"
