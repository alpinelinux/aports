	brotli-dev
	cmake
	expat-dev
	inih-inireader-dev
	samurai
	zlib-dev
	"
checkdepends="gtest-dev python3"
subpackages="$pkgname-dev $pkgname-doc $pkgname-libs"
source="https://github.com/Exiv2/exiv2/archive/refs/tags/v$pkgver/exiv2-v$pkgver.tar.gz"

