# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kpeople
pkgver=6.20.0
pkgrel=0
pkgdesc="A library that provides access to all contacts and the people who hold them"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends="qt6-qtbase-sqlite"
depends_dev="
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kservice-dev
	kwidgetsaddons-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/frameworks/kpeople.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/kpeople-$pkgver.tar.xz"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# personsmodeltest fails
	ctest --test-dir build -E '(personsmodeltest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
9adb3d1a5982cb6bdad92807ecff6fc0e09f6b8e061fadd18b0a9934af5d9217b757a02badeaa67a4239911e2d47f0373e8c2fd83e425da058fddfb96b524e09  kpeople-6.20.0.tar.xz
"
