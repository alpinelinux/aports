# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=cairomm
pkgver=1.14.0
pkgrel=0
pkgdesc="C++ bindings to Cairo vector graphics library"
url="https://www.cairographics.org"
arch="all"
license="LGPL-2.0-or-later AND MPL-1.1"
makedepends="meson libsigc++-dev cairo-dev perl"
subpackages="$pkgname-dev"
source="https://www.cairographics.org/releases/cairomm-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Dboost-shared=true \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="05d2123a53700f3d0092e75c798847883493d3f803b2f6f47511ea0008d42e417688a00f1a0d50bda97a9661da9141185709011859c9390f0bece5b093c0acf6  cairomm-1.14.0.tar.xz"
