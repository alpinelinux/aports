# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
# Maintainer: Matthias Ahouansou <matthias@ahouansou.cz>
pkgname=pipeline
pkgver=3.2.1
pkgrel=0
pkgdesc="Watch YouTube and PeerTube videos in one place"
url="https://gitlab.com/schmiddi-on-mobile/pipeline"
arch="all !armhf" # clapper-enhancers
license="GPL-3.0-or-later"
depends="
	clapper-enhancers
	glycin-image-rs
"
makedepends="
	appstream-glib
	blueprint-compiler
	cargo
	cargo-auditable
	clang-libclang
	clapper-dev
	desktop-file-utils
	gtk4.0-dev
	libadwaita-dev
	meson
	openssl-dev
	libsoup3-dev
"
subpackages="$pkgname-doc $pkgname-lang"
source="
	$pkgname-$pkgver.tar.gz::https://gitlab.com/schmiddi-on-mobile/pipeline/-/archive/$pkgver/pipeline-$pkgver.tar.gz
	cargo-auditable.patch
	enable-bindgen.patch
"
options="net"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
