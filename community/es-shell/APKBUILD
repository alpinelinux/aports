# Contributor: rubicon <rubicon@mailo.com>
# Maintainer: rubicon <rubicon@mailo.com>
pkgname=es-shell
pkgver=0.9.2_git20251202
_gitrev=eabaf8930e525dc305f55abf438f9c6bd0335feb
pkgrel=0
pkgdesc="Shell with higher-order functions"
url="https://wryun.github.io/es-shell/"
arch="all"
license="Public-Domain"
makedepends="autoconf automake byacc libtool readline-dev"
subpackages="$pkgname-doc"
source="$pkgname-$_gitrev.tar.gz::https://github.com/wryun/es-shell/archive/$_gitrev.tar.gz"
builddir="$srcdir/$pkgname-$_gitrev"

prepare() {
	default_prepare

	autoreconf -fvi
}

build() {
	./configure \
		--build="$CBUILD" \
		--host="$CHOST" \
		--prefix=/usr \
		--with-readline
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install

	sed -i 's|#! /bin/es|#!/usr/bin/es|' esdebug

	install -Dvm644 README.md CHANGES COPYING esdebug \
		initial.es doc/usenix-w93.ps \
		doc/ERRATA doc/TODO doc/es-list.gz \
		-t "$pkgdir"/usr/share/doc/$pkgname

	cp -vr examples "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
be102192808b13acf475e82f5f7eb798f0095202c4383a47f0ce6272d5c19dd081a0ff491e42160967497f8094fddb4809661088990d4d3a2ef3371fdd547adc  es-shell-eabaf8930e525dc305f55abf438f9c6bd0335feb.tar.gz
"
