# Contributor: Rasmus Thomsen <oss@cogitri.dev>
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gnome-firmware
pkgver=49.0
pkgrel=0
pkgdesc="Install firmware on devices"
url="https://gitlab.gnome.org/World/gnome-firmware"
arch="all"
license="GPL-2.0-only"
makedepends="
	desktop-file-utils
	elogind-dev
	fwupd-dev
	gtk4.0-dev
	help2man
	libadwaita-dev
	libxmlb-dev
	meson
	"
options="!check" # no tests
subpackages="$pkgname-doc $pkgname-lang"
source="https://gitlab.gnome.org/World/gnome-firmware/-/archive/$pkgver/gnome-firmware-$pkgver.tar.gz"
provides="gnome-firmware-updater=$pkgver-r$pkgrel"
replaces="gnome-firmware-updater"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dsystemd=false \
		-Delogind=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
cd6eddf0ccfd3239a0b998c4570470934a9e9ee08cbce8fd53b4689bf461ca492629f2d7f17048ee41deeb73b5d900dae49cb2b904134e7e4dec9f5ac5d5e3c9  gnome-firmware-49.0.tar.gz
"
