# Contributor: Christine Dodrill <me@christine.website>
# Maintainer: Christine Dodrill <me@christine.website>
pkgname=tor
pkgver=0.3.4.6
pkgrel=0
pkgdesc="Anonymous network connectivity"
url="https://www.torproject.org"
arch="all"
license="BSD-3-Clause"
pkgusers="tor"
makedepends="linux-headers bash libevent-dev libressl-dev ca-certificates
	zlib-dev python3-dev"
install="$pkgname.post-upgrade $pkgname.pre-install"
subpackages="$pkgname-doc"
source="https://www.torproject.org/dist/$pkgname-$pkgver-rc.tar.gz
	tor.initd
	tor.confd
	torrc.sample.patch"
builddir="$srcdir/$pkgname-$pkgver-rc"

# secfixes:
#   0.3.0.8-r0:
#   - CVE-2017-0376
#   0.3.2.10-r0:
#   - CVE-2018-0490
#   - CVE-2018-0491

build() {
	cd "$builddir"

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-transparent
	make
}

check() {
	cd "$builddir"

	make test
}

package() {
	cd "$builddir"

	make DESTDIR="$pkgdir" install

	install -dm755 -o $pkgusers \
		"$pkgdir"/var/lib/$pkgname \
		"$pkgdir"/var/log/$pkgname

	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname
	install -m644 -D "$srcdir"/$pkgname.confd \
		"$pkgdir"/etc/conf.d/$pkgname
}

