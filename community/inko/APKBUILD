# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=inko
pkgver=0.19.1_git20251221
_gitrev=22c5e4ac50660534f1d179826e64beb165d49cae
pkgrel=0
_llvmver=21
pkgdesc="Language for building concurrent software"
url="https://inko-lang.org/"
arch="aarch64 x86_64"
license="MPL-2.0"
depends="
	cmd:cc
	cmd:git
	musl-dev
	"
makedepends="
	cargo
	cargo-auditable
	llvm$_llvmver-dev
	"
subpackages="$pkgname-doc"
case "$pkgver" in
*_git*)
	source="https://github.com/inko-lang/inko/archive/$_gitrev/inko-$_gitrev.tar.gz"
	builddir="$srcdir/$pkgname-$_gitrev"
	;;
*)
	source="https://github.com/inko-lang/inko/archive/refs/tags/v$pkgver/inko-$pkgver.tar.gz"
	;;
esac
source="$source
	cargo-auditable.patch
	"

# use system llvm
export LLVM_SYS_181_PREFIX=/usr/lib/llvm$_llvmver

prepare() {
	default_prepare

	cargo fetch --target="$CHOST" --locked
}

build() {
	make build
}

check() {
	cargo test --frozen
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
c2503a17d2ee645437b64af0d992f816731e816b19576c6003c65bd29917df830c5e8bda9fe65353f4ddb9d3b2c5c25df01f4fbe77d31bb0fb03ebad47ad5109  inko-22c5e4ac50660534f1d179826e64beb165d49cae.tar.gz
15a95d2f7ba385202efd3a6a861cf91cddec3c6b9ed9ef53ac5d1e9f893e31035d26a05872528e005688864b5296daeb0752b960311928335f323d80d6559250  cargo-auditable.patch
"
