# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=inko
pkgver=0.19.1_git20260105
_gitrev=4363c3e013dba85cf6f780f15b99910e66094f8d
pkgrel=0
_llvmver=21
pkgdesc="Language for building concurrent software"
url="https://inko-lang.org/"
arch="aarch64 x86_64"
license="MPL-2.0"
depends="
	cmd:cc
	cmd:git
	musl-dev
	"
makedepends="
	cargo
	cargo-auditable
	llvm$_llvmver-dev
	"
subpackages="$pkgname-doc"
case "$pkgver" in
*_git*)
	source="https://github.com/inko-lang/inko/archive/$_gitrev/inko-$_gitrev.tar.gz"
	builddir="$srcdir/$pkgname-$_gitrev"
	;;
*)
	source="https://github.com/inko-lang/inko/archive/refs/tags/v$pkgver/inko-$pkgver.tar.gz"
	;;
esac
source="$source
	cargo-auditable.patch
	"

# use system llvm
export LLVM_SYS_181_PREFIX=/usr/lib/llvm$_llvmver

prepare() {
	default_prepare

	cargo fetch --target="$CHOST" --locked
}

build() {
	make build
}

check() {
	cargo test --frozen
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
4384db1eaeaccabca419eed042ef56064e37d6359faa7b24150cf531ddf1cbe6c58552f986ad2ea9eeb75ef87e8bbae60ab1e528e32979a709a4f2ba9d7031eb  inko-4363c3e013dba85cf6f780f15b99910e66094f8d.tar.gz
15a95d2f7ba385202efd3a6a861cf91cddec3c6b9ed9ef53ac5d1e9f893e31035d26a05872528e005688864b5296daeb0752b960311928335f323d80d6559250  cargo-auditable.patch
"
