# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=inko
pkgver=0.19.1_git20251211
_gitrev=8affdf1cc0deec397cff313c69d0acfcd5e52205
pkgrel=0
_llvmver=21
pkgdesc="Language for building concurrent software"
url="https://inko-lang.org/"
arch="aarch64 x86_64"
license="MPL-2.0"
depends="
	cmd:cc
	cmd:git
	musl-dev
	"
makedepends="
	cargo
	cargo-auditable
	llvm$_llvmver-dev
	"
subpackages="$pkgname-doc"
case "$pkgver" in
*_git*)
	source="https://github.com/inko-lang/inko/archive/$_gitrev/inko-$_gitrev.tar.gz"
	builddir="$srcdir/$pkgname-$_gitrev"
	;;
*)
	source="https://github.com/inko-lang/inko/archive/refs/tags/v$pkgver/inko-$pkgver.tar.gz"
	;;
esac
source="$source
	cargo-auditable.patch
	"

# use system llvm
export LLVM_SYS_181_PREFIX=/usr/lib/llvm$_llvmver

prepare() {
	default_prepare

	cargo fetch --target="$CHOST" --locked
}

build() {
	make build
}

check() {
	cargo test --frozen
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
e642293339e50d4e08870a4906d7ab69067dc1da8de4d382aea3777b06e282acc3499a1d8d6cd88e2e5d9f07f8aeffd578d8ffd8f7077177a79cc46fe57d7953  inko-8affdf1cc0deec397cff313c69d0acfcd5e52205.tar.gz
15a95d2f7ba385202efd3a6a861cf91cddec3c6b9ed9ef53ac5d1e9f893e31035d26a05872528e005688864b5296daeb0752b960311928335f323d80d6559250  cargo-auditable.patch
"
