check() {
	# Test fails due to nothing ready after 10 second wait on ppc64le CI
	case "$CARCH" in
	ppc64le|loongarch64)
		rm -vf ./t/70future-io.t
		;;
	esac
	# https://rt.cpan.org/Public/Bug/Display.html?id=150912
	rm -vf ./t/41routine.t ./t/42function.t

	./Build test
}

package() {
	./Build install --destdir="$pkgdir"
}

