	pkgdesc="$pkgdesc (Loop API acceptance testing)"
	depends="
		$pkgname=$pkgver-r$pkgrel
		perl-test-metrics-any
		perl-test2-suite
		"

	amove usr/share/perl5/vendor_perl/IO/Async/LoopTests.pm
}

