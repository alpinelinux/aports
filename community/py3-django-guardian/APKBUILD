# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-django-guardian
_pyname=django-guardian
pkgver=3.2.0
pkgrel=0
arch="noarch"
pkgdesc="Implementation of per object permissions on top of Djangoâ€™s authorization backend"
url="https://pypi.python.org/project/django-guardian"
license="MIT"
# py3-typing-extensions: dependency for <3.13
depends="
	py3-django
	py3-django-environ
	py3-typing-extensions
	"
makedepends="
	py3-setuptools
	py3-wheel
	py3-gpep517
	"
checkdepends="
	py3-pytest
	py3-pytest-django
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/django-guardian/django-guardian/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
3eb7a7c7a4d1bd24887078c74374d7fabb28953b8f17beb0a53676fe79ecad265bd90f3777c4031b5103c952f6c7b153220dcb39771f671eb07f4a683508462d  py3-django-guardian-3.2.0.tar.gz
"
