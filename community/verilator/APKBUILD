# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Maintainer: Sören Tempel <soeren+alpine@soeren-tempel.net>
pkgname=verilator
pkgver=5.040
pkgrel=0
pkgdesc="Convert Verilog and SystemVerilog to C++ or SystemC"
url="https://verilator.org"
arch="x86 x86_64" # limited by systemc
license="LGPL-3.0-only"
depends="perl"
makedepends="autoconf automake python3 systemc-dev flex flex-dev bison lsb-release help2man"
checkdepends="py3-distro bash"
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/verilator/verilator/archive/refs/tags/v$pkgver/verilator-$pkgver.tar.gz
	https://github.com/verilator/verilator/commit/a6f26b85b37583ddb43df2217f1774a5cdf90e8d.patch
	https://github.com/verilator/verilator/commit/e63ed0a93173176d539a758eb86be57ffddc02f4.patch"

prepare() {
	default_prepare
	autoconf
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

