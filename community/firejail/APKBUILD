# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=firejail
pkgver=0.9.56
pkgrel=0
pkgdesc="Linux namespaces and seccomp-bpf sandbox"
url="https://firejail.wordpress.com/"
arch="all"
license="GPL-2.0"
depends="bash"
makedepends="linux-headers"
checkdepends="expect"
options="suid"
subpackages="$pkgname-doc $pkgname-bash-completion:bashcomp:noarch"
source="$pkgname-$pkgver.tar.gz::https://github.com/netblue30/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare

	find "$builddir" -name Makefile.in -exec sed -i -r \
		-e '/CFLAGS/s: (-O2|-ggdb) : :g' \
		-e '1iCC=@CC@' {} +
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-busybox-workaround
	make
}

bashcomp() {
	pkgdesc="Bash completions for $pkgname"
	depends="bash"
	install_if="$pkgname=$pkgver-r$pkgrel bash"

	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/share "$subpkgdir"/usr/
}

check() {
	cd "$builddir"
	make test
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="bff0ec4d3a5834e9aacb2e06a7b53333f58d2da4b594f214397ef93384a9f1da496ea805ee79567c2e6546a475af817e2c93a653dc5e5e5cdc5a68ca49fce86a  firejail-0.9.56.tar.gz"
