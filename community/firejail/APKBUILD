sha512sums="25e25887ce0b2cc2821d5e3ffb508315ca77f4b9bf6cd09c2dfaf256a5c8d70df79020c54d85f625fec972b254e2eb326ebbc4cf64080856800978d0b94843eb  firejail-0.9.42_rc2.tar.gz"
