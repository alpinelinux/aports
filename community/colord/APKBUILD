# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Kevin Daudt <kdaudt@alpinelinux.org>
pkgname=colord
pkgver=1.4.5
pkgrel=1
pkgdesc="System daemon for managing color devices"
url="http://www.freedesktop.org/software/colord"
arch="all !s390x !riscv64"  # blocked by polkit
license="GPL-2.0-or-later"
pkgusers="colord"
pkggroups="colord"
depends_dev="
	dbus-dev
	dconf-dev
	eudev-dev
	gobject-introspection-dev
	libgudev-dev
	polkit-dev
	sane-dev
	sqlite-dev
	vala
	"
makedepends="$depends_dev
	bash-completion
	intltool
	lcms2-dev
	libgusb-dev
	meson
	"
install="$pkgname.pre-install $pkgname.pre-upgrade"
subpackages="
	$pkgname-dev
	$pkgname-lang
	$pkgname-bash-completion
	"
source="https://www.freedesktop.org/software/colord/releases/colord-$pkgver.tar.xz
	disable-udev-hwdb-tests.patch
	"

build() {
	abuild-meson \
		-Dsystemd=false \
		-Dargyllcms_sensor=false \
		-Dman=false \
		-Ddocs=false \
		-Ddaemon_user=colord \
		-Dsane=true \
		-Dvapi=true \
		output .

	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	# cd-private-test is broken atm
	# meson test

	output/src/cd-self-test
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	chown -R colord:colord "$pkgdir"/var/lib/colord
}

