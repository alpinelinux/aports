# Maintainer: mio <miyopan@e.email>
maintainer="mio <miyopan@e.email>"
pkgname=libgedit-amtk
pkgver=5.9.2
pkgrel=0
pkgdesc="Gedit Technology â€” actions, menus and toolbars kit"
url="https://gitlab.gnome.org/World/gedit/libgedit-amtk"
arch="all"
license="LGPL-3.0-or-later"
makedepends="
	docbook-xsl-nons
	glib-dev
	gobject-introspection-dev
	gtk-doc
	gtk+3.0-dev
	meson
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://gitlab.gnome.org/World/gedit/libgedit-amtk/-/archive/$pkgver/libgedit-amtk-$pkgver.tar.gz"
replaces="amtk"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgobject_introspection=true \
		-Dgtk_doc=true \
		. output
	meson compile -C output
}

check() {
	meson test -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

