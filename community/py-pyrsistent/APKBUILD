# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=py-pyrsistent
pkgver=0.14.11
pkgrel=2
pkgdesc="Persistent/Functional/Immutable data structures"
options="net" # Required for fetching pytest-runner, remove it when it is provided
url="https://github.com/tobgu/pyrsistent"
arch="all"
license="MIT"
depends="py-six"
makedepends="py3-setuptools python3-dev py-setuptools python-dev"
checkdepends="py3-hypothesis py3-pytest py2-pytest py2-hypothesis"
subpackages="py3-pyrsistent:_py3 py2-pyrsistent:_py2"
source="$pkgname-$pkgver.tar.gz::https://github.com/tobgu/pyrsistent/archive/v${pkgver}.tar.gz"
builddir="$srcdir/pyrsistent-$pkgver"

build() {
	python2 setup.py build
	python3 setup.py build
}

check() {
	python2 setup.py test
	python3 setup.py test
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replace="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

_py() {
	local python="$1" pyver="${1:6:1}"
	depends="${depends//py-/py$pyver-} $python"
	pkgdesc="$pkgdesc (for $python)"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="8bfea52e15b1921ff9880a6d795cbbcdbee818ef5b95a2807e28269eba8ff578e07c39615e48eb47e867dd6f2bca5d395b7ae99ecd27424edaf6cbe6097b2e5d  py-pyrsistent-0.14.11.tar.gz"
