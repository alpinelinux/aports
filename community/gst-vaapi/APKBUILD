# Contributor: Taner Tas <taner76@gmail.com>
maintainer="team/alpine-desktop <achill@achill.org>"
pkgname=gst-vaapi
# NOTE: Upgrade together with the whole GStreamer suite &
# only to even-numbered versions (e.g. 1.18.x, 1.20.x)!
pkgver=1.26.10
pkgrel=0
pkgdesc="GStreamer streaming media framework VA API plug-ins"
url="https://gstreamer.freedesktop.org/"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	eudev-dev
	glib-dev
	gst-plugins-bad-dev
	libva-dev
	libxrandr-dev
	meson
	"
options="!check" # Need actual display with HW accel
source="https://gstreamer.freedesktop.org/src/gstreamer-vaapi/gstreamer-vaapi-$pkgver.tar.xz"
builddir="$srcdir/gstreamer-vaapi-$pkgver"

# make name more consistent with gst-
provides="gstreamer-vaapi=$pkgver-r$pkgrel"
replaces="gstreamer-vaapi"

build() {
	CFLAGS="$CFLAGS -O2" \
	CXXFLAGS="$CXXFLAGS -O2" \
	CPPFLAGS="$CPPFLAGS -O2" \
	abuild-meson \
		-Db_lto=true \
		-Dtests="$(want_check && echo enabled || echo disabled)" \
		. output
	meson compile -C output
}

check() {
	meson test -C output --print-errorlogs
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
c6482b4789a8597ed8970db5954223d83c6f6d50fa7ba1bbd2945b8ef4481cd0675a5012b65f08410e4c946d3c77e1cbdbdc5712dd08307820e8396aa10efc7c  gstreamer-vaapi-1.26.10.tar.xz
"
