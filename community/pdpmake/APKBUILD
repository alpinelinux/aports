pkgname=pdpmake
pkgver=2.0.4
pkgrel=0
pkgdesc="An implementation of POSIX make"
url="https://frippery.org/make/"
arch="all"
license="Public Domain"
subpackages="$pkgname-doc"
source="https://frippery.org/make/pdpmake-$pkgver.tgz"

build() {
	make PREFIX=/usr
}

check() {
	MAKEFLAGS="" make test
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" install
}

