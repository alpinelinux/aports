# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kidentitymanagement
pkgver=25.12.1
pkgrel=0
pkgdesc="KDE PIM libraries"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kontact.kde.org"
license="LGPL-2.0-or-later"
depends_dev="
	kcodecs-dev
	kcompletion-dev
	kconfig-dev
	kcoreaddons-dev
	kiconthemes-dev
	kio-dev
	kpimtextedit-dev
	ktextwidgets-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	kirigami-addons-dev
	qt6-qtdeclarative-private-dev
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/pim/kidentitymanagement.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/kidentitymanagement-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	# kpimidentity-signaturetest is broken
	xvfb-run -a ctest --test-dir build -E "kpimidentity(-signature|core-identitymodel)test"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c77934abba665555b1bbc716b30ceeb446c804a554216f16e6d03df0d1211fcb9ed6254aecfb1835988c554d6c5a74a3ab7fb0df18766f3fbbb97cf1f154e9b9  kidentitymanagement-25.12.1.tar.xz
"
