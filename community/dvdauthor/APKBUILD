# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=dvdauthor
pkgver=0.7.2
pkgrel=11
pkgdesc="DVD authoring tools"
url="https://dvdauthor.sourceforge.net/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	freetype-dev
	fribidi-dev
	libdvdread-dev
	libpng-dev
	libtool
	libxml2-dev
	gettext-dev
	"
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz
	libxml-pc.patch
	pkgconfig-1.patch
	"
builddir="$srcdir/$pkgname"

prepare() {
	default_prepare
	# gettext m4 macros moved in 0.24.1, include the path
	autoreconf -fvi -I /usr/share/gettext/m4
}

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-rpath \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
