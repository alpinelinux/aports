# Contributor: Thomas Boerger <thomas@webhippie.de>
# Maintainer: Thomas Boerger <thomas@webhippie.de>
pkgname=hugo
pkgver=0.20.6
pkgrel=0
pkgdesc="A Fast and Flexible Static Site Generator built with love in GoLang"
url="http://gohugo.io/"
arch="all !ppc64le"
license="Apache 2.0"
depends=""
makedepends="go govendor"
install=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/spf13/hugo/archive/v$pkgver.tar.gz"
builddir="$srcdir/src/github.com/spf13/$pkgname"

prepare() {
	mkdir -p ${builddir%/*}
	mv "$srcdir"/$pkgname-$pkgver "$builddir"/ || return 1
	default_prepare
}

build() {
	cd "$builddir"
	export GOPATH="$srcdir"
	govendor sync -v || return 1
	go build -v -o bin/$pkgname || return 1
}

package() {
	install -Dm755 "$builddir"/bin/$pkgname "$pkgdir"/usr/bin/$pkgname
}

md5sums="b8ae2dfd50f90edef6749226c3bf55bc  hugo-0.20.6.tar.gz"
sha256sums="692e08b009430d27064821d498f1454152cbfd5f26d019c29002e6fbff8fc387  hugo-0.20.6.tar.gz"
sha512sums="ffed313351b05be3b665121a27febe2b336d05e2ba6c43176a7e07a0e796736ec384ba6b6caf679faa2469e59ec7021303f1db034008abe08bd5444132ce6b01