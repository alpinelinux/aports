pkgname=py-mechanize
_pkgname=mechanize
pkgver=0.4.0
pkgrel=0
pkgdesc="Stateful programmatic web browsing in Python"
url="https://github.com/python-mechanize/mechanize"
arch="noarch"
license="BSD ZPL"
makedepends="python2-dev py-setuptools py2-html5lib"
source="$_pkgname-$pkgver.tar.gz::https://github.com/python-mechanize/mechanize/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
}

check() {
        cd "$builddir"
        python2 setup.py test
}

package() {
	cd "$builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="18bdbc23b98cdebdd072eec1f222d1088ff081f70c4d979bc21a02763660ab794c1b12a5750ec935c37af37f7fbf6c58e992053224248e72c362fff50a30c8a3  mechanize-0.4.0.tar.gz"
