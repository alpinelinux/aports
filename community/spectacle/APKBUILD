# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=spectacle
pkgver=6.6.1
pkgrel=0
pkgdesc="Application for capturing desktop screenshots"
# armhf blocked by qt6-qtdeclarative
# s390x, and riscv64 blocked by qt6-qtwebengine -> purpose
arch="all !armhf !s390x !riscv64"
url="https://kde.org/applications/utilities/org.kde.spectacle"
license="GPL-2.0-only"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdeclarative-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	knewstuff-dev
	knotifications-dev
	kpipewire-dev
	kquickimageeditor-dev
	kstatusnotifieritem-dev
	kwayland-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	prison-dev
	layer-shell-qt-dev
	libxcb-dev
	opencv-dev
	pipewire-dev
	purpose-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-private-dev
	samurai
	xcb-util-cursor-dev
	xcb-util-image-dev
	xcb-util-renderutil-dev
	zxing-cpp-dev
	"
subpackages="
	$pkgname-systemd
	$pkgname-doc
	$pkgname-lang
	"
_repo_url="https://invent.kde.org/graphics/spectacle.git"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

# strip fourth version component for source URL
case "$pkgver" in
	*.*.*.*) _pkgver="${pkgver%.*}" ;;
	*) _pkgver="$pkgver" ;;
esac

source="https://download.kde.org/$_rel/plasma/$_pkgver/spectacle-$pkgver.tar.xz
	spectacle.desktop
	"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 "$srcdir"/spectacle.desktop -t "$pkgdir"/etc/xdg/autostart/
}
sha512sums="
17873bfc12f8c95f21a56fabbc1407c26650a1e4bf139d2643400502ba89362d50cabe1d42064c65bf66091019225476ee1bcdcdcfdc121da3d7e9de668b899d  spectacle-6.6.1.tar.xz
7c563d811f30d26f83e01a465e803b95167c5b2b842315257216ab282e07c69e7582a14d7f429cd19678199179ad8f3f2854265092f5a4c9ce9b65c87ed3849d  spectacle.desktop
"
