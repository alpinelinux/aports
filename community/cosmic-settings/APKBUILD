# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-settings
pkgver=1.0.1
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Settings application for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-settings"
# 32-bit: https://gitlab.freedesktop.org/pipewire/pipewire-rs/-/issues/111
# s390x: nix
# riscv64: too slow to build
arch="all !armhf !armv7 !x86 !s390x !riscv64"
license="GPL-3.0-only"
depends="
	cosmic-icons
"
makedepends="
	cargo
	clang-libclang
	cosmic-icons
	cosmic-randr
	findutils
	fontconfig-dev
	iso-codes-dev
	just
	libinput-dev
	libxkbcommon-dev
	pulseaudio-dev
	pipewire-dev
	wayland-dev
"
options="net"  # fetch dependencies
source="
	$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-settings/archive/refs/tags/epoch-$_upstreamver.tar.gz
	0001-chore-update-cosmic-randr-dependencies.patch
	"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release --frozen
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
8475543ca6cd65ff09e2405478bed5e95cbf92f85edb0f6727c03b591376e74fb750c74f0d54c1d1d9cb30e2754af6c09710daf95b6401112c14dc960d7d7f46  cosmic-settings-1.0.1.tar.gz
3a7c90e480339b7cc145edd03a57d32475f53091a57e69fba8eafec51a8b8337ae77546bd97dae82beaa851207485cedc1836a1ffd34804e3caaa941f7029299  0001-chore-update-cosmic-randr-dependencies.patch
"
