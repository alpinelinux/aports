# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: mio <miyopan@e.email>
maintainer="mio <miyopan@e.email>"
pkgname=xournalpp
pkgver=1.3.3
pkgrel=0
pkgdesc="Handwriting notetaking software with PDF annotation support"
url="https://github.com/xournalpp/xournalpp"
arch="all"
license="GPL-2.0-or-later"
depends="adwaita-icon-theme"
_gtestver=1.16.0 # test/CMakeLists.txt
# Please check in upstream repo _luaver is supported before switching.
_luaver=5.4
makedepends="
	cmake
	glib-dev
	gtest-dev
	gtk+3.0-dev
	gtksourceview4-dev
	help2man
	librsvg-dev
	libsndfile-dev
	libx11-dev
	libxi-dev
	libxml2-dev
	libzip-dev
	lsb-release
	lua$_luaver-dev
	poppler-dev
	portaudio-dev
	samurai
	qpdf-dev
	"
checkdepends="
	font-cantarell
	xvfb-run
	"
subpackages="$pkgname-dbg $pkgname-doc $pkgname-lang"
# gtest: undefined reference to 'testing::internal::PrintU8StringTo'
# https://github.com/google/googletest/issues/4591
source="xournalpp-$pkgver.tar.gz::https://github.com/xournalpp/xournalpp/archive/v$pkgver.tar.gz
	gtest-$_gtestver.tar.gz::https://github.com/google/googletest/archive/v$_gtestver.tar.gz
	skip-test.patch
	"

build() {
	local cmake_crossopts gtest_opts
	if [ "$CBUILD" != "$CHOST" ]; then
		cmake_crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi

	if want_check; then
		gtest_opts="
			-DDOWNLOAD_GTEST=ON
			-DFETCHCONTENT_FULLY_DISCONNECTED=ON
			-DFETCHCONTENT_SOURCE_DIR_GOOGLETEST=$srcdir/googletest-$_gtestver
			"
	fi

	# Increase stack-size to avoid crashes when using pen for input
	# Disable cpptrace, which requires C++20 modules unsupported by samurai
	# https://github.com/michaelforney/samurai/issues/99
	LDFLAGS="$LDFLAGS -Wl,-z,stack-size=2097152" \
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DLUA_LIBRARIES="/usr/lib/lua$_luaver/liblua.so" \
		-DENABLE_CPPTRACE=OFF \
		-DENABLE_GTEST="$(want_check && echo ON || echo OFF)" \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		$cmake_crossopts $gtest_opts
	cmake --build build --target all translations

	if want_check; then
		cmake --build build --target test-units
		cmake --build build --target test-gtk-integration
	fi
}

check() {
	# *PaletteTabTest: (xournalpp_test:2648): Gtk-ERROR **: [...]
	# failed to add UI: Failed to open file “”: No such file or directory
	local tests="
		UnrenderedPaletteTabTest
		RenderedPaletteTabTest
		"
	case $CARCH in
	# ControlLoadHandler.imageLoadJpeg (Failed)
	# ControlLoadHandler.imageSaveJpegBackwardCompat (SIGTRAP)
	# Image.testGetImageApplyOrientation (SEGFAULT)
	x86) tests="$tests
		ControlLoadHandler.imageLoadJpeg
		ControlLoadHandler.imageSaveJpegBackwardCompat
		Image.testGetImageApplyOrientation
		" ;;
	esac
	local skipped_tests
	for tst in $tests; do
		skipped_tests="$skipped_tests|$tst"
	done

	xvfb-run -a ctest --test-dir build -E "(${skipped_tests/|/})"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/xournalpp
}

