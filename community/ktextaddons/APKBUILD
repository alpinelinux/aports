# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ktextaddons
pkgver=1.8.0
pkgrel=0
pkgdesc="Various text handling addons"
# armhf blocked by qt6-qtdeclarative -> syntax-highlighting
arch="all !armhf"
url="https://invent.kde.org/libraries/ktextaddons/"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends_dev="
	karchive-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qtkeychain-dev
	syntax-highlighting-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/libraries/ktextaddons.git"
source="https://download.kde.org/stable/ktextaddons/ktextaddons-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_DESIGNERPLUGIN=ON \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	local skipped_tests="(languagetoolconfigwidget"
	local tests="
		grammalecte(resultwidget|resultjob|configwidget)
		translator-translator(widget|engineloader)
		textgotolinewidget
	"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	case "$CARCH" in
	arm*|x86) skipped_tests="$skipped_tests|textautogenerate-core-textautogenerate(message|chat)" ;;
	esac
	skipped_tests="$skipped_tests)test"
	wlheadless-run -- ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
d3a5fef223446e2a068bc73bfc11d5781a52a9e8ea9b4fc0825c255858fb913980f3cd696e1ad9d12e05fb293620a1afa161e91102176958f99dd35a02d1e81f  ktextaddons-1.8.0.tar.xz
"
