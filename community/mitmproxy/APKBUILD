pkgname=mitmproxy
pkgver=11.0.0
pkgrel=0
pkgdesc="Interactive TLS-capable intercepting HTTP proxy"
url="https://mitmproxy.org/"
license="MIT"
arch="noarch"
depends="
	py3-aioquic
	py3-asgiref
	py3-brotli
	py3-certifi
	py3-cryptography
	py3-flask
	py3-h11
	py3-h2
	py3-hyperframe
	py3-kaitaistruct
	py3-ldap3
	py3-mitmproxy-rs
	py3-msgpack
	py3-passlib
	py3-protobuf
	py3-openssl
	py3-parsing
	py3-pyperclip
	py3-ruamel.yaml
	py3-sortedcontainers
	py3-tornado
	py3-urwid
	py3-wsproto
	py3-publicsuffix2
	py3-zstandard
	"
makedepends="
	py3-gpep517
	py3-installer
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-hypothesis
	py3-parver
	py3-pytest
	py3-pytest-asyncio
	py3-requests
	"
subpackages="$pkgname-pyc"
source="https://github.com/mitmproxy/mitmproxy/archive/v$pkgver/mitmproxy-$pkgver.tar.gz
	skip-test-optmanager-x86.patch
	"
# tests are too flaky
options="!check"

# secfixes:
#   7.0.3-r0:
#     - CVE-2021-39214

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest \
		--deselect "test/mitmproxy/test_version.py::test_get_version" \
		--deselect "test/mitmproxy/proxy/test_mode_servers.py::test_wireguard" \
		--deselect "test/mitmproxy/addons/test_script.py::test_order"
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/mitmproxy-$pkgver-py3-none-any.whl
}

