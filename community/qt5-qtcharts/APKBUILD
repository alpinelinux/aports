# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt5-qtcharts
_pkgname="${pkgname/qt5-/}-everywhere-src"
pkgver=5.12.0
pkgrel=0
arch="all"
url="http://qt-project.org/"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
pkgdesc="Provides a set of easy to use chart components"
depends_dev=""
makedepends="$depends_dev qt5-qtbase-dev qt5-qtdeclarative-dev"
subpackages="$pkgname-dev"
builddir="$srcdir/${pkgname/qt5-/}-everywhere-src-$pkgver"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac

source="http://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver}/submodules/$_pkgname-$pkgver.tar.xz"

build() {
	qmake-qt5 CONFIG+="lang-all handwriting"
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir" install

	install -d "$pkgdir"/usr/share/licenses
	ln -s /usr/share/licenses/qt5-base "$pkgdir"/usr/share/licenses/$pkgname
}
sha512sums="f8767dc019cf0b9a983e4fd61ac983184d7f4d3ad3cb748fc26a877892d537808eafc3f18815ba06761818e0fe5a74f0a048772fdac9ce86d7290a078f5e21aa  qtcharts-everywhere-src-5.12.0.tar.xz"
