maintainer="Michał Polański <michal@polanski.me>"
pkgname=py3-pytokens
pkgver=0.2.0
pkgrel=0
pkgdesc="Fast, spec-compliant Python 3.13+ tokenizer"
url="https://github.com/tusharsadhwani/pytokens"
license="MIT"
arch="noarch"
makedepends="py3-gpep517 py3-installer py3-setuptools"
checkdepends="py3-pytest py3-pytest-cov"
subpackages="$pkgname-pyc"
source="https://github.com/tusharsadhwani/pytokens/archive/$pkgver/py3-pytokens-$pkgver.tar.gz"
builddir="$srcdir/pytokens-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -vv
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
30b100600604edcda17aa0e182d9f60b69b0b80d352f6dda94e297013a99fa07131409ca879b77563eb5af7016d18c8c75f92f9a92f8422883a4899a82ba8b35  py3-pytokens-0.2.0.tar.gz
"
