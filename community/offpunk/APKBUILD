# Maintainer: mio <miyopan@e.email>
maintainer="mio <miyopan@e.email>"
pkgname=offpunk
pkgver=2.8
pkgrel=0
pkgdesc="An offline-first browser for the small internet"
url="https://offpunk.net"
license="AGPL-3.0-only"
install="$pkgname.post-install"
arch="noarch"
depends="
	chafa
	file
	less
	py3-requests
	python3
	"
makedepends="
	py3-gpep517
	py3-hatchling
	py3-installer
	"
checkdepends="
	py3-pytest
	py3-pytest-mock
	"
subpackages="$pkgname-doc $pkgname-pyc"
source="offpunk-$pkgver.tar.gz::https://git.sr.ht/~lioploum/offpunk/archive/v$pkgver.tar.gz"
builddir="$srcdir"/offpunk-v"$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
	install -Dm644 "$builddir"/man/offpunk.1 -t "$pkgdir"/usr/share/man/man1/
	install -Dm644 "$builddir"/README.md -t "$pkgdir"/usr/share/doc/offpunk/
}

sha512sums="
e062bbef4cbe77527e8f824a40c29edb59cdedeafea80fb6d0e2c98a76366ecd11b32b2196a770a51cd203f54c27eb3f8f5cceee235e181191ab6761a08dccbf  offpunk-2.8.tar.gz
"
