# Contributor: Donoban <donoban@riseup.net>
# Maintainer: Nulo <alpine@nulo.in>
pkgname=telegram-desktop
pkgver=3.2.5
pkgrel=0
pkgdesc="Telegram Desktop messaging app"
options="!check" # Requires Catch2 to be packaged.
url="https://desktop.telegram.org/"
# armhf blocked by qt5-qtwayland
# limited by tg_owt
# TODO: get to compile in x86. Void Linux has a package.
arch="all !x86 !ppc64le !s390x !armhf !riscv64"
license="GPL-3.0-or-later WITH OpenSSL"
depends="qt5-qtimageformats ttf-opensans"
makedepends="
	python3
	extra-cmake-modules
	qt5-qtsvg-dev
	qt5-qtwayland-dev
	qt5-qtimageformats

	tg_owt-dev
	opus-dev
	alsa-lib-dev
	pulseaudio-dev
	libx11-dev

	ffmpeg-dev
	glibmm-dev
	gsl-dev
	hunspell-dev
	kwayland-dev
	libdbusmenu-qt-dev
	lz4-dev
	minizip-dev
	openal-soft-dev
	openssl1.1-compat-dev
	range-v3-dev
	rnnoise-dev
	tl-expected
	wayland-dev
	webkit2gtk-dev
	libxcb-dev
	xcb-util-keysyms-dev
	xxhash-dev
	zlib-dev

	libvpx-dev

	cmake
	samurai
	"
source="
	https://github.com/telegramdesktop/tdesktop/releases/download/v$pkgver/tdesktop-$pkgver-full.tar.gz
	small-sizes.patch
	add-libvpx.patch
	disable-jemalloc.patch
	rlottie.patch
	musl.patch
	"
builddir="$srcdir/tdesktop-$pkgver-full"

build() {
	rm -rf Telegram/ThirdParty/jemalloc
	rm -rf cmake/external/jemalloc
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi

	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		-DDESKTOP_APP_DISABLE_CRASH_REPORTS=ON \
		-DDESKTOP_APP_DISABLE_SPELLCHECK=OFF \
		-DDESKTOP_APP_LOTTIE_USE_CACHE=ON \
		-DTDESKTOP_API_ID=17349 \
		-DTDESKTOP_API_HASH=344583e45741c457fe1862106095a5eb \
		-DDESKTOP_APP_USE_PACKAGED=ON \
		-DTDESKTOP_LAUNCHER_BASENAME=telegram-desktop \
		-DDESKTOP_APP_QT6=OFF \
		$CMAKE_CROSSOPTS .
	ninja -C build
}

package() {
	DESTDIR="$pkgdir" ninja -C build install
}

