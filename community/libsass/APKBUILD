pkgname=libsass
pkgver=3.5.3
pkgrel=0
pkgdesc="A C/C++ implementation of a Sass compiler"
url="http://libsass.org"
arch="all"
license="MIT"
depends=""
makedepends="autoconf automake libtool"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/sass/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare || return 1

	cd "$builddir"
	autoreconf -vif
}

build() {
	cd "$builddir"

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"

	make install DESTDIR="$pkgdir" || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

sha512sums="e416da6d929184487cca75fa8d9f48e6723ec735fd4f0d50de0af0aa08a9deed82bc8f905d86e5de3d3282a6157314d102c6c34e7b115b273bb2c9cf0770fb31  libsass-3.5.3.tar.gz"
