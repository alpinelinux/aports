_usname=drbdmanage
pkgname=$_usname
pkgver=0.95
pkgrel=0
pkgdesc="DRBD9 Cluster Management Tool"
url="http://www.drbd.org"
arch="noarch"
license="GPL"
depends="python2 py-gobject dbus py-dbus lvm2 drbd-utils>=8.9.6"
depends_dev=""
makedepends="python2-dev libxslt docbook-xsl help2man"
install=""
subpackages="$pkgname-doc"
source="http://oss.linbit.com/$_usname/$_usname-$pkgver.tar.gz
        rm-systemd-and-bash.patch"

_builddir=$srcdir/$_usname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python2 setup.py build_man || return 1
	python2 setup.py build || return 1
}

package() {
	cd "$_builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

