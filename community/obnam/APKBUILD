pkgname=obnam
pkgver=1.18.2
pkgrel=0
pkgdesc="A backup program that supports encryption and deduplication"
url="http://obnam.org/"
arch="all"
license="GPL3+"
depends="python py-larch py-paramiko py-fuse py-enum34 py-six py-asn1-modules"
depends_dev=""
makedepends="python-dev py-setuptools"
install=""
subpackages="$pkgname-doc"
source="http://code.liw.fi/debian/pool/main/o/$pkgname/${pkgname}_$pkgver.orig.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

