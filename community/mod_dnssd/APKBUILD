maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=mod_dnssd
pkgver=0.6
pkgrel=1
pkgdesc="Zeroconf module for Apache"
url="https://0pointer.de/lennart/projects/mod_dnssd"
arch="all"
license="Apache-2.0"
depends="apache2"
makedepends="
	apache2-dev
	apr-dev
	avahi-dev
	"
# 0pointer.de is down
#source="http://0pointer.de/lennart/projects/mod_dnssd/mod_dnssd-$pkgver.tar.gz
source="https://dev.alpinelinux.org/archive/mod_dnssd/mod_dnssd-$pkgver.tar.gz
	use-ap-unixd-setup-child.patch
	"
options="!check" # no tests

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-lynx
	make
}

check() {
	make check
}

package() {
	install -Dvm755 src/.libs/mod_dnssd.so -t "$pkgdir"/usr/lib/apache2/
}

