# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=caja
pkgver=1.19.2
pkgrel=0
pkgdesc="The file manager for the MATE desktop"
url="https://github.com/mate-desktop/caja"
arch="all"
license="GPL2"
depends="mate-common mate-desktop"
options="!check"
makedepends="$depends_dev intltool libtool dconf-dev gtk+3.0-dev libunique3-dev
	libsm-dev libnotify-dev mate-desktop-dev libxml2-dev"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		--sysconfdir=/etc \
		--disable-update-mimedb
	make
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="aa6e31072663756e156d71c262692d7923d3944b702cc98161ce03d7f85eaf3345ef11c95a64360d5be340e44e25e5c99d6dfa23994080b5a942e305ddb6d2a7  caja-1.19.2.tar.xz"
