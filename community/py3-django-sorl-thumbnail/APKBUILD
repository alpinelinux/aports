# Contributor: Kaarle Ritvanen <kunkku@alpinelinux.org>
# Maintainer: Kaarle Ritvanen <kunkku@alpinelinux.org>
pkgname=py3-django-sorl-thumbnail
pkgver=13.0.0
pkgrel=0
pkgdesc="Thumbnails for Django"
url="https://github.com/jazzband/sorl-thumbnail"
arch="noarch"
license="BSD-3-Clause"
depends="py3-django py3-pillow"
makedepends="py3-gpep517 py3-setuptools_scm py3-wheel"
checkdepends="imagemagick py3-pytest-django"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/s/sorl_thumbnail/sorl_thumbnail-$pkgver.tar.gz"
options="!check" # broken

builddir="$srcdir/sorl_thumbnail-$pkgver"

replaces="py-django-sorl-thumbnail" # Backwards compatibility
provides="py-django-sorl-thumbnail=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	DJANGO_SETTINGS_MODULE=tests.settings.pil \
		.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
abfc3d6a1c50c87906dd5b157b2b2c3010a8c91160d6bc0ef333e5634aa2a680ffee00e8fe08ae6c14f9b9a9e2998dc278895ebb6f1f4115a72e31aee32ee3c1  sorl_thumbnail-13.0.0.tar.gz
"
