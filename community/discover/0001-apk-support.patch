+        return;
+    }
+    qCDebug(LOG_ALPINEAPK) << "checkForUpdates()!";
+    toggleFetching();
+    // populate(QStringLiteral("Moar"));
+    QTimer::singleShot(1000, this, &AlpineApkBackend::toggleFetching);
