maintainer="SÃ¶ren Tempel <soeren+alpine@soeren-tempel.net>"
pkgname=guile-semver
pkgver=0.1.1
pkgrel=0
pkgdesc="Guile library that handles semantic versions"
url="https://ngyro.com/software/guile-semver.html"
arch="all"
license="GPL-3.0-or-later"
depends="guile zlib-dev"
makedepends="autoconf automake guile-dev"
source="https://files.ngyro.com/guile-semver/guile-semver-$pkgver.tar.gz"
builddir="$srcdir/guile-semver-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

