# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=pytest
pkgver=3.6.2
pkgrel=0
pkgdesc="A python test library"
url="https://pytest.org"
arch="noarch"
license="MIT"
depends="py3-$pkgname"
_py2_depends="py2-py py2-six py2-attrs py2-setuptools py2-more-itertools py2-pluggy py2-funcsigs py2-atomicwrites"
_py3_depends="py3-py py3-six py3-attrs py3-more-itertools py3-pluggy py3-atomicwrites"
makedepends="python2-dev py-setuptools python3-dev $_py2_depends $_py3_depends"
subpackages="py3-$pkgname:_py3 py2-$pkgname:_py2"
source="https://files.pythonhosted.org/packages/source/${pkgname:0:1}/$pkgname/$pkgname-$pkgver.tar.gz
	fix-test.patch
	"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"/usr/bin

	local name; for name in py.test pytest; do
		ln -s $name-3 "$pkgdir"/usr/bin/$name
	done
}

_py2() {
	replaces="$pkgname"
	depends="$_py2_depends"
	_py python2
}

_py3() {
	depends="$_py3_depends"
	_py python3
}

_py() {
	local python="$1"
	local pyver="${1:6:1}"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"

	# Add version suffix to executable files.
	local path; for path in "$subpkgdir"/usr/bin/*; do
		mv "$path" "$path-$pyver"
	done
}

sha512sums="7ed9a2ceb1d3d69adc947bf0677c33839238d343916eff803cb61354f63248e645ba9b95635f5d8b97cf5295ca69ae75d03929d6369005c7651d8b2c7f2ead9d  pytest-3.6.2.tar.gz
97594aaa08ef2f8ddacc5cb1eb1cb6dafa9b6498a91f44ebadb450222089077e2eea27ab4a79521cca207d29cc95e667308bdafbfc877fc0ec4adfc443a3985a  fix-test.patch"
