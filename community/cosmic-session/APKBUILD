# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-session
pkgver=1.0.8
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Session manager for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-session"
# riscv64: too slow to build
arch="all !armhf !armv7 !loongarch64 !s390x !x86 !riscv64" # many apps missing
license="GPL-3.0-or-later"
depends="
	bash
	cosmic-app-library
	cosmic-applets
	cosmic-bg
	cosmic-comp
	cosmic-files
	cosmic-greeter
	cosmic-icons
	cosmic-idle
	cosmic-launcher
	cosmic-notifications
	cosmic-osd
	cosmic-panel
	cosmic-randr
	cosmic-screenshot
	cosmic-settings
	cosmic-settings-daemon
	cosmic-workspaces
	dbus
	xwayland
"
makedepends="
	cargo
	dbus-dev
	glib-dev
	just
	wayland-protocols
"
options="net !check"  # fetch dependencies, no tests
subpackages="$pkgname-systemd"
source="$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-session/archive/refs/tags/epoch-$_upstreamver.tar.gz
	rustix-loongarch64.patch
	"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
3fc870159456f971cab5ea118c6b4a69995bbfaa4193715efcfd81ff77f2b49b69f72788d016750c81ece58debe53e5dbc6d4c2842527db9a04f9afeb43b2273  cosmic-session-1.0.8.tar.gz
70c8c1d76043af2d985e94c23fbcd0b2971f2c164cdc662e67ff19f18b396b61fa68fc109c2511f60a6161119e6b39401e51166f71091c5d4560bbf0e90f2ea1  rustix-loongarch64.patch
"
