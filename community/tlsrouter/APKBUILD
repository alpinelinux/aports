maintainer="Celeste <cielesti@protonmail.com>"
pkgname=tlsrouter
pkgver=0_git20250222
pkgrel=0
_gitrev=c4b9df066048ad2ab5c32235362fa94444a24ebe
pkgdesc="TLS proxy that routes connections based on SNI"
url="https://github.com/inetaf/tcpproxy/tree/master/cmd/tlsrouter"
arch="all"
license="Apache-2.0"
makedepends="go"
install="$pkgname.pre-install"
pkgusers="tlsrouter"
pkggroups="tlsrouter"
subpackages="$pkgname-openrc"
source="https://github.com/inetaf/tcpproxy/archive/$_gitrev/inetaf-tcpproxy-$_gitrev.tar.gz
	$pkgname.initd
	$pkgname.confd
	"
builddir="$srcdir/tcpproxy-$_gitrev/cmd/tlsrouter"

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build .
}

check() {
	go test ./...
}

package() {
	install -Dvm755 tlsrouter -t "$pkgdir"/usr/bin/

	install -Dvm755 "$srcdir"/tlsrouter.initd \
		"$pkgdir"/etc/init.d/tlsrouter

	install -Dvm644 "$srcdir"/tlsrouter.confd \
		"$pkgdir"/etc/conf.d/tlsrouter
}

