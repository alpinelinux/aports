# Contributor: Justin Berthault <justin.berthault@zaclys.net>
# Maintainer: John Vogel <jvogel@stygian.me>
maintainer="John Vogel <jvogel@stygian.me>"
pkgname=jgmenu
pkgver=4.5.0
pkgrel=0
pkgdesc="Simple, independent X11 menu"
url="https://github.com/johanmalm/jgmenu"
arch="all"
license="GPL-2.0-or-later"
depends="
	bash
	desktop-file-utils
	python3
	"
makedepends="
	librsvg-dev
	libxrandr-dev
	libxml2-dev
	menu-cache-dev
	pango-dev
	xfce4-panel-dev
	"
checkdepends="perl xvfb-run"
subpackages="$pkgname-doc $pkgname-xfce4"
source="$pkgname-$pkgver.tar.gz::https://github.com/johanmalm/jgmenu/archive/v$pkgver.tar.gz"

build() {
	export CFLAGS="$CFLAGS -flto=auto"

	./configure \
		--prefix=/usr \
		--with-gtktheme \
		--with-lx \
		--with-pmenu \
		--with-xfce4-panel-applet
	make
}

check() {
	export XDG_RUNTIME_DIR="$builddir"
	xvfb-run -a make test
}

package() {
	make DESTDIR="$pkgdir" install
}

xfce4() {
	pkgdesc="$pkgdesc (xfce4 panel integration)"

	amove usr/lib/xfce4 usr/share/xfce4
}

sha512sums="
edb30520acf5482ec5a0c8e3df57639317307221fa0b500a6d694ab7caea9547e7eaf898adae7dd7f8c84b1eebe70515d02447b7d1a9f9e2149422d720ba284a  jgmenu-4.5.0.tar.gz
"
