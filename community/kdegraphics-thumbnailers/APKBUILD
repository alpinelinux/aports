# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kdegraphics-thumbnailers
pkgver=25.12.0
pkgrel=0
# armhf blocked by qt6-qtdeclarative -> kio
arch="all !armhf"
pkgdesc="Thumbnailers for various graphics file formats"
url="https://www.kde.org/applications/graphics/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	karchive-dev
	kdegraphics-mobipocket-dev
	kio-dev
	libkdcraw-dev
	libkexiv2-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kdegraphics-thumbnailers.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/kdegraphics-thumbnailers-$pkgver.tar.xz"
# No tests
options="!check"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DDISABLE_MOBIPOCKET=ON # Fails to find kdegraphics-mobipocket
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
419c17ae3f416a9fc03984edb363d8034c0f6dda020c620ed98136a0d9fdecd96f14aac313a0b4e1313f59ec3648989de4a8f5fcab41eea145d0b7136c7ada7c  kdegraphics-thumbnailers-25.12.0.tar.xz
"
