# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kdegraphics-thumbnailers
pkgver=21.04.2
pkgrel=0
# armhf blocked by extra-cmake-modules
# s390x and riscv64 blocked by kio -> polkit
arch="all !armhf !s390x !mips64 !riscv64"
pkgdesc="Thumbnailers for various graphics file formats"
url="https://www.kde.org/applications/graphics/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	qt5-qtbase-dev
	kio-dev
	karchive-dev
	libkexiv2-dev
	libkdcraw-dev
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/kdegraphics-thumbnailers-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
21687bd96be11e320292ed42ae14220b736cb0c16921f28cdb2d3dbf98e862a91f9456e00f8b665acda46772c325dd8b7613d6e356245d0126edaec7d4941197  kdegraphics-thumbnailers-21.04.2.tar.xz
"
