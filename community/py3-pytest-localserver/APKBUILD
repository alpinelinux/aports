# Contributor: Keith Maxwell <keith.maxwell@gmail.com>
# Maintainer: Keith Maxwell <keith.maxwell@gmail.com>
pkgname=py3-pytest-localserver
_pyname=pytest_localserver
pkgver=0.10.0
pkgrel=0
pkgdesc="a pytest plugin to test server connections locally"
url="https://github.com/pytest-dev/pytest-localserver"
arch="noarch"
license="MIT"
depends="python3"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="py3-pytest py3-requests py3-werkzeug"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/p/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ad0469fca286c83972986ea03aaab35b893d54ebdcbf7a2de278d87d255ccd61a22808e2c4601fafe46869adcd69e7477e71577bf42afc891df29acb4f740be6  pytest_localserver-0.10.0.tar.gz
"
