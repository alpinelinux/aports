# Contributor: Dmitry Romanenko <dmitry@romanenko.in>
# Maintainer: Dmitry Romanenko <dmitry@romanenko.in>
pkgname=pytest-forked
pkgver=1.0.2
pkgrel=2
pkgdesc="extracted --boxed from pytest-xdist to ensure backward compat"
url="https://github.com/pytest-dev/pytest-forked"
arch="noarch"
license="MIT"
checkdepends="py3-pytest py3-tox"
makedepends="py3-setuptools_scm"
subpackages="py3-$pkgname:_py3"
source="https://files.pythonhosted.org/packages/source/p/pytest-forked/pytest-forked-$pkgver.tar.gz"

build() {
	python3 setup.py build
}

check() {
	local _py3ver=$(python3 -c 'import sys; print("{}{}".format(sys.version_info.major, sys.version_info.minor))')
	tox -e py$_py3ver
}

package() {
	mkdir -p "$pkgdir"
}

_py3() {
	pkgdesc="$pkgdesc (for python3)"
	depends="py3-pytest python3"
	install_if="$pkgname=$pkgver-r$pkgrel python3"

	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="c48819a0434be5d9f9b49c7bc976969551479629e904f99f6dfd80fb9cde95a8a5a9bc2412b38828c1e303832b81fea0d8b7228d336983aebe21cb96b8a02b03  pytest-forked-1.0.2.tar.gz"
