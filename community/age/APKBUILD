# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=age
pkgver=1.3.1
pkgrel=1
pkgdesc="Simple, modern and secure encryption tool"
url="https://github.com/FiloSottile/age"
license="BSD-3-Clause"
arch="all"
makedepends="go"
subpackages="$pkgname-doc"
source="https://github.com/FiloSottile/age/archive/v$pkgver/age-$pkgver.tar.gz"
options="net" # Go modules

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	mkdir bin
	# https://github.com/FiloSottile/age/blob/v1.3.1/cmd/age/age.go#L101-L103
	go build -ldflags "-X main.Version=v$pkgver" -o bin ./cmd/...
}

check() {
	# default timeout (10m) is not enough for riscv64
	TMPDIR="$GOTMPDIR" go test -timeout 20m ./...
}

package() {
	install -Dm755 bin/* -t "$pkgdir"/usr/bin
	install -Dm644 doc/*.1 -t "$pkgdir"/usr/share/man/man1
}

sha512sums="
95bb8049de36630f0b128c9626427646e5d4d76e35b6bd6790e29cf3f69fb2a0266ac7786616f56fe9bf378a81c1f3edc17fd9eba197286041b970944898504c  age-1.3.1.tar.gz
"
