# Contributor: Jose-Luis Rivas <ghostbar@riseup.net>
# Maintainer: Carlo Landmeter <clandmeter@gmail.com>
pkgname=libzip
pkgver=1.5.0
pkgrel=0
pkgdesc="Library for manipulating zip archives"
url="http://www.nih.at/libzip/index.html"
arch="all"
license="BSD-3-Clause"
depends_dev="zlib-dev libressl-dev"
makedepends="$depends_dev cmake"
checkdepends="perl"
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools"
source="https://libzip.org/download/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"

# secfixes:
#   1.3.0:
#     - CVE-2017-14107

prepare() {
	sed -i "$builddir"/lib/zip_crypto_openssl.c \
		-e '/if OPENSSL_VERSION_NUMBER < 0x1010000fL/ \
		s/$/ || defined(LIBRESSL_VERSION_NUMBER)/'
}

build() {
	cd "$builddir"
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS="$CXXFLAGS" \
		-DCMAKE_C_FLAGS="$CFLAGS"
	make
}

check() {
	make -C "$builddir" check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" -j1 install
}

tools() {
	pkgdesc="$pkgname cmp and merge tools"
	install -d "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr
}

sha512sums="6854c0cc40cbff4fe2efc407b3a52019a234ff734fccfc5068117e29541232827f5100b74fdf68537e5ba7165b41b14312fe934aebe388372e1d6face2185ef1  libzip-1.5.0.tar.xz"
