# Contributor: Milan P. StaniÄ‡ <mps@arvanta.net>
# Maintainer:
pkgname=bcachefs-tools
pkgver=1.32.1
pkgrel=0
pkgdesc="userspace tools for bcachefs"
url="https://bcachefs.org/"
# x86: bch_bindgen 0.1.0 fails on '#[repr(align)]' type
arch="all !x86 !armhf !armv7"
license="GPL-2-or-later"
makedepends="
	cargo
	clang21-dev
	coreutils
	libaio-dev
	libsodium-dev
	llvm21-dev
	eudev-dev
	util-linux-dev
	keyutils-dev
	lz4-dev
	userspace-rcu-dev
	zstd-dev
	pkgconf
	zlib
	jq
	"
subpackages="$pkgname-doc $pkgname-udev"
source="$pkgname-$pkgver.tar.zst::https://evilpiepirate.org/bcachefs-tools/bcachefs-tools-$pkgver.tar.zst"

build() {
	make PREFIX=/usr
}

check() {
	VERSION=$(./target/release/bcachefs version)

	test "$VERSION" = "$pkgver"
}

package() {
	make DESTDIR=$pkgdir PREFIX=/usr ROOT_SBINDIR="/usr/sbin" install
}

sha512sums="
de8eeff9d7c8ae005db160192c2bf2ad2a180d6442224e1fc1cabe3fade5b23b7734507744192baa65c1ac403cbb31006b44178a56fc5026f58eb5b6b69b6bb4  bcachefs-tools-1.32.1.tar.zst
"
