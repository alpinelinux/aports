# Contributor: Ralf Rachinger <ralfrachinger@gmail.com>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plasmatube
pkgver=21.12
pkgrel=0
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
# s390x and riscv64 blocked by polkit
arch="all !armhf !s390x !riscv64"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami2
	qt5-qtmultimedia
	qt5-qtquickcontrols2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami2-dev
	qt5-qtbase-dev
	qt5-qtquickcontrols2-dev
	"
subpackages="$pkgname-lang"
source="https://download.kde.org/stable/plasma-mobile/$pkgver/plasmatube-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
15446c684fe5644f6a73cb57e27a8a35847e4028ad55a1157d4586cb4bf4c0b7625e769275262df9f1e5c4ff50da9e0f1fd23bbfabea5e9a567701a42685c994  plasmatube-21.12.tar.xz
"
