# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kid3
pkgver=3.9.4
pkgrel=1
pkgdesc="Efficient audio tagger that supports a large variety of file formats"
url="https://kid3.kde.org/"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
makedepends="
	chromaprint-dev
	extra-cmake-modules
	ffmpeg-dev
	flac-dev
	id3lib-dev
	kconfig5-dev
	kconfigwidgets5-dev
	kcoreaddons5-dev
	kdoctools5-dev
	kio5-dev
	kwidgetsaddons5-dev
	kxmlgui5-dev
	libvorbis-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtmultimedia-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	qt5-qttools-dev
	readline-dev
	samurai
	taglib-dev
	zlib-dev
	"
subpackages="$pkgname-doc"
source="https://download.kde.org/stable/kid3/$pkgver/kid3-$pkgver.tar.xz"

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_APPS="qt;qml;cli"
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
28fe76ab6101202445d419c1a8a1bc4dfe31c9924fb6d28203ff9c0d2926b20e3a10a5f8b10e9193ff889e93100ce8bc6663baa29cfdecd5ec9dfb3445489348  kid3-3.9.4.tar.xz
"
