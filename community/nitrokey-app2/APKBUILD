maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=nitrokey-app2
pkgver=2.4.3
pkgrel=0
pkgdesc="Nitrokey management application"
url="https://github.com/Nitrokey/nitrokey-app2"
# blocked by py3-spsdk -> py3-pynitrokey
# armhf blocked by qt6-qtdeclarative -> py3-pyside6
arch="aarch64 x86_64"
license="Apache-2.0"
depends="
	py3-pynitrokey
	py3-pyside6
	py3-qt-material
	py3-qt5
	py3-usb-monitor
	"
makedepends="
	poetry
	py3-flit-core
	py3-gpep517
	py3-installer
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Nitrokey/nitrokey-app2/archive/refs/tags/v$pkgver.tar.gz"
options="!check" # No tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
4f89d8b15de30f66e35ac46c304c2d52f91d51df62388e23258e502ca4d7b2a869d7736d52670d036606ed3e7fd4b0f3c62a3c0f7ee5e6a8e68cabfdf942189f  nitrokey-app2-2.4.3.tar.gz
"
