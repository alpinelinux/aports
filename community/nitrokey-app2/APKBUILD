maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=nitrokey-app2
pkgver=2.5.0
pkgrel=0
pkgdesc="Nitrokey management application"
url="https://github.com/Nitrokey/nitrokey-app2"
# blocked by py3-spsdk -> py3-pynitrokey
# armhf blocked by qt6-qtdeclarative -> py3-pyside6
arch="aarch64 x86_64"
license="Apache-2.0"
depends="
	py3-pynitrokey
	py3-pyside6
	py3-qt-material
	py3-qt5
	py3-usb-monitor
	"
makedepends="
	poetry
	py3-flit-core
	py3-gpep517
	py3-installer
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Nitrokey/nitrokey-app2/archive/refs/tags/v$pkgver.tar.gz"
options="!check" # No tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
cbc5d4e72f6fa45e15ea381e2c39a9cf702495d51a19a031f59770f07ca0f3f79176b3bac3d0e7f7f408a7e9b31d14cfcad9d10941ae4a87468489d6082e821e  nitrokey-app2-2.5.0.tar.gz
"
