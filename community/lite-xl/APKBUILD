# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Sodface <sod@sodface.com>
pkgname=lite-xl
pkgver=2.1.8
pkgrel=1
pkgdesc="Lightweight text editor written in Lua"
url="https://lite-xl.github.io"
arch="all"
license="MIT"
makedepends="
	cmake
	freetype-dev
	lua5.4-dev
	meson
	pcre2-dev
	reproc-dev
	sdl3-dev
	"
subpackages="$pkgname-doc"
source="https://github.com/lite-xl/lite-xl/archive/v$pkgver/lite-xl-$pkgver.tar.gz
	cve-2025-12121-remove-legacy-exec-function.patch
	"
options="!check" # no tests available

# secfixes:
#   2.1.8-r1:
#     - CVE-2025-12121

build() {
	abuild-meson \
		-Darch_tuple="$CARCH-linux" \
		-Db_lto=true \
		-Duse_system_lua=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

