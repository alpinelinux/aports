# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=py3-colorful
pkgver=0.5.8
pkgrel=0
pkgdesc="Terminal string styling done right, in Python"
url="https://github.com/timofurrer/colorful"
arch="noarch"
license="MIT"
depends="python3"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/timofurrer/colorful/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/colorful-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest tests/
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
623d9233f21111aa29597fc3eb5bdcbcb9665e35802b30e2acb80f1c7b4eaf7dd0ec1f46b8562d8604fe9744122bd9919662c4c71385b6d17b3df9e0dee74807  py3-colorful-0.5.8.tar.gz
"
