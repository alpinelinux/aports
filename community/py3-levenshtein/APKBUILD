# Contributor: Galen Abell <galen@galenabell.com>
# Maintainer: Galen Abell <galen@galenabell.com>
pkgname=py3-levenshtein
pkgver=0.27.3
pkgrel=0
pkgdesc="Python extension for computing string edit distances and similarities"
url="https://github.com/rapidfuzz/Levenshtein"
arch="all"
license="GPL-2.0-only"
depends="py3-rapidfuzz"
makedepends="
	cmake
	cython
	py3-gpep517
	py3-scikit-build
	py3-scikit-build-core
	python3-dev
	rapidfuzz
	samurai
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/maxbachmann/Levenshtein/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Levenshtein-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer \
		.dist/levenshtein*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/levenshtein*.whl
}

sha512sums="
1102d6421066ea59c821416d80eec99044fd574659db2e063a5564249afddac097e740788b8d0f5c1c3c72c1a4d3ae94f027ac8609f5ad1cadde378aaee9bf43  py3-levenshtein-0.27.3.tar.gz
"
