# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=aha
pkgver=0.4.10.1
pkgrel=0
pkgdesc="ANSI color to HTML converter"
url="http://anonscm.debian.org/gitweb/?p=collab-maint/aha.git;a=summary"
arch="all"
license="MPL 1.1"
depends=""
depends_dev=""
makedepends=""
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/theZiz/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	make || return 1
}

package() {
	cd "$builddir"
	install -Dm 755 aha \
		"$pkgdir"/usr/bin/aha || return 1
	install -Dm 644 aha.1 \
		"$pkgdir"/usr/share/man/man1/aha.1 || return 1
}

sha512sums="e5b6a0a0ccb3bffc693cd2400ff582d54ec100d8ddd3b4b04ab78bc26a4b9ad5816f3bd5fa5e61c1e458549d3883116826d566a57012238d72e7e501d4bbea31  aha-0.4.10.1.tar.gz"
