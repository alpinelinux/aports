# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=aha
pkgver=0.4.10.5
pkgrel=0
pkgdesc="ANSI color to HTML converter"
url="http://anonscm.debian.org/gitweb/?p=collab-maint/aha.git;a=summary"
arch="all"
license="MPL 1.1"
depends=""
depends_dev=""
makedepends=""
install=""
subpackages="$pkgname-doc"
source="http://ftp.de.debian.org/debian/pool/main/a/aha/${pkgname}_$pkgver.orig.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	make || return 1
}

package() {
	cd "$builddir"
	install -Dm 755 aha \
		"$pkgdir"/usr/bin/aha || return 1
	install -Dm 644 aha.1 \
		"$pkgdir"/usr/share/man/man1/aha.1 || return 1
}

sha512sums="cd7245a333f1eb4fd941397a98849dbcc6589a0a0591bb50937d2d5a2e3c98db02da2ad57bea183a9c04d1504d8e2e1087ac5a9fb4e5d72ff3140bbd76f05c51  aha_0.4.10.5.orig.tar.gz"
