maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-nitrokey
pkgver=0.4.2
pkgrel=0
pkgdesc="Nitrokey Python SDK"
url="https://github.com/Nitrokey/nitrokey-sdk-py"
arch="noarch"
license="Apache-2.0 AND MIT"
depends="
	py3-crcmod
	py3-cryptography
	py3-fido2
	py3-hidapi
	py3-hidapi
	py3-protobuf
	py3-requests
	py3-semver
	py3-pyserial
	py3-tlv8
	"
makedepends="
	poetry
	py3-gpep517
	py3-installer
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Nitrokey/nitrokey-sdk-py/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/nitrokey-sdk-py-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
04003651240361e736e4a3a4f3c7f172a86f06eab7a0a6bd862e20fd8b22aa7918e130fd918ee10f906322949bd8ad292b03e0dc708c928c951e236c6650c680  py3-nitrokey-0.4.2.tar.gz
"
