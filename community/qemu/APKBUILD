_modules="
	audio-alsa
	audio-oss
	audio-pa
	audio-sdl
	block-curl
	block-dmg-bz2
	block-nfs
	block-ssh
	hw-display-qxl
	hw-usb-redirect
	ui-curses
	ui-gtk
	ui-sdl
	ui-spice-app
	audio-spice
	chardev-spice
	hw-display-virtio-gpu-pci
	hw-display-virtio-gpu
