+ */
+class WristGestureSensorChannel :
+        public AbstractSensorChannel,
+        public DataEmitter<TimedUnsigned>
+{
+    Q_OBJECT;
+    Q_PROPERTY(Unsigned wristgesture READ wristgesture);
