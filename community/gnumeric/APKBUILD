# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gnumeric
pkgver=1.12.60
pkgrel=0
pkgdesc="GNOME Spreadsheet Program"
url="https://www.gnome.org/projects/gnumeric"
arch="all"
license="GPL-2.0-or-later OR GPL-3.0-or-later"
makedepends="
	bison
	desktop-file-utils
	flex
	goffice-dev
	gtk+3.0-dev
	itstool
	intltool
	libxml2-utils
	libxslt-dev
	py3-gobject3-dev
	python3-dev
	rarian
	gtk-doc
	"
checkdepends="
	perl-file-basedir
	perl-xml-parser
	"
subpackages="$pkgname-dbg $pkgname-dev $pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/gnumeric/${pkgver%.*}/gnumeric-$pkgver.tar.xz"
options="!check" # failing tests

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-python \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
43529ca05411cba02b052754cd15bbe84b5205e58ebb7dc5e7c07131600842e523a108f509020845f036f27b0d78eb9df6db970dfeb21285dc7e5fd8171fea56  gnumeric-1.12.60.tar.xz
"
