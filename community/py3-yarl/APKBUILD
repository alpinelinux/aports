# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py3-yarl
_pkgname=yarl
pkgver=1.2.1
pkgrel=0
pkgdesc="Yet another URL library"
url="http://yarl.readthedocs.io"
arch="all"
license="Apache-2.0"
depends="py3-multidict"
makedepends="py3-setuptools python3-dev"
checkdepends="py3-pytest"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py test
}

package() {
	cd "$builddir"
	python3 setup.py install --root="$pkgdir"
}

sha512sums="33425a45f20ff5e366ed45f3fcdaed70475c10524a53cf82e00cf164735593a3c0ed254bbaf47accac24e0580d9c9485697e27076a447e75cd9fa5aa81b29d1a  yarl-1.2.1.tar.gz"
