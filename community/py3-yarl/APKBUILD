# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py3-yarl
_pkgname=yarl
pkgver=1.2.2
pkgrel=0
pkgdesc="An URL library"
url="http://yarl.readthedocs.io/"
arch="all"
license="Apache-2.0"
depends="py3-multidict"
makedepends="python3-dev py3-setuptools"
checkdepends="py3-pytest"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py test
}

package() {
	cd "$builddir"
	python3 setup.py install --root="$pkgdir"
}

sha512sums="f8a4380d91c517ba77a9cd8976bd80d9b217224db5c89e3e95f6d96b9b5f1075af539bcf1df417a620570e7ac5bfba9a832d3075df7062db8916a971c6468542  yarl-1.2.2.tar.gz"
