maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=distrobox
pkgver=1.8.2.4
pkgrel=0
pkgdesc="Use any Linux distribution inside your terminal"
url="https://distrobox.it/"
arch="noarch"
license="GPL-3.0-only"
depends="
	findmnt
	podman
	"
subpackages="
	$pkgname-bash-completion
	$pkgname-doc
	$pkgname-zsh-completion
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/89luca89/distrobox/archive/refs/tags/$pkgver.tar.gz"
install="$pkgname.post-upgrade"
options="!check" # No tests

package() {
	./install --prefix "$pkgdir"/usr

	install -dm0755 "$pkgdir"/usr/share/doc/distrobox
	install -m 0644 docs/*.md "$pkgdir"/usr/share/doc/distrobox
}

sha512sums="
c7c567a6006dd0657da46640598cbe02e8bb432db8b181de0b13f04f85966d2eeff35b6dcdb8bb8592573bb81518bdc8d3b63b0ae6288c0c3f1a83937fa948e0  distrobox-1.8.2.4.tar.gz
"
