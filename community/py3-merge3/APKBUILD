# Contributor: knuxify <knuxify@gmail.com>
# Maintainer: knuxify <knuxify@gmail.com>
pkgname=py3-merge3
pkgver=0.0.16
pkgrel=0
pkgdesc="Python implementation of 3-way merge of texts"
url="https://github.com/breezy-team/merge3"
arch="noarch"
license="GPL-2.0-or-later"
depends="python3"
makedepends="py3-gpep517 py3-setuptools"
subpackages="$pkgname-pyc"
source="https://github.com/breezy-team/merge3/archive/v$pkgver/py3-merge3-$pkgver.tar.gz"
builddir="$srcdir/merge3-$pkgver"
options="!check" # no test suite

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
bcbf42145a79845c2a53d788949def6f254ae4d951e203f73555da09ed73a669c37ba29cef3f1bf3dcb60a6530b04953852447b8b0dfadc22cf8f6ba60c22ce0  py3-merge3-0.0.16.tar.gz
"
