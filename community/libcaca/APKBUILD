# Contributor: z3bra <willy at mailoo dot org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=libcaca
_pkgver=0.99.beta19
pkgver=0.99_beta19
pkgrel=2
pkgdesc="A graphics library that outputs text instead of pixels"
url="http://caca.zoy.org/wiki/libcaca"
arch="all"
license="WTFPL"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$_pkgver.tar.gz::https://github.com/cacalabs/$pkgname/archive/v$_pkgver.tar.gz"

builddir="$srcdir/$pkgname-$_pkgver"

build() {
	cd "$builddir"
	./configure --prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR=$pkgdir install
}

sha512sums="780fc7684d40207cc10df3f87d6d8f1d47ddfffa0e76e41a5ce671b82d5c7f090facb054c3d49ca7c4ea1a619625bb9085ce52f837f50792b4a2d776a4c68e15  libcaca-0.99.beta19.tar.gz"
