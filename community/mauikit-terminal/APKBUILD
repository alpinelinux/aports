# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=maui
maintainer="team/kde <bribbers@disroot.org>"
pkgname=mauikit-terminal
pkgver=4.0.2
pkgrel=1
pkgdesc="Terminal support components for Maui applications"
url="https://mauikit.org/"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-or-later"
depends="kirigami"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kpty-dev
	mauikit-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	qt6-qtdeclarative-private-dev
	samurai
	"
subpackages="$pkgname-dev $pkgname-lang"
_repo_url="https://invent.kde.org/maui/mauikit-terminal.git"
source="https://download.kde.org/stable/maui/mauikit-terminal/$pkgver/mauikit-terminal-$pkgver.tar.xz"
options="!check" # no tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d9ddf84aac9cfe599beb54fc8f58c6e8aebdf1423cc5f32228eaf926b203d384223e7ffb3472389b297cc7f7518d22d12678da33c5c638077b1dcc8246fc5d60  mauikit-terminal-4.0.2.tar.xz
"
