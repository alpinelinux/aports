#     - CVE-2023-36794
#     - CVE-2023-36796
#     - CVE-2023-36799
#     - CVE-2023-44487
#     - CVE-2023-38171
#     - CVE-2023-36435
#   7.0.14-r0:
#     - CVE-2023-36049
#     - CVE-2023-36558
#   7.0.15-r0:
#     - CVE-2024-0056
#     - CVE-2024-0057
#     - CVE-2024-21319
#   7.0.16-r0:
#     - CVE-2024-21386
#     - CVE-2024-21404
#   7.0.17-r0:
#     - CVE-2024-21392
#     - CVE-2024-26190
