#     - CVE-2023-33128
#     - CVE-2023-33135
#   7.0.9-r0:
#     - CVE-2023-33127
#     - CVE-2023-33170
#   7.0.10-r0:
#     - CVE-2023-38178
#     - CVE-2023-35390
#     - CVE-2023-38180
#     - CVE-2023-35391
#   7.0.11-r0:
#     - CVE-2023-36792
#     - CVE-2023-36793
#     - CVE-2023-36794
