# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxvmc
pkgver=1.0.15
pkgrel=0
pkgdesc="X11 Video Motion Compensation extension library"
url="https://xorg.freedesktop.org/"
arch="all"
license="MIT"
makedepends="
	libx11-dev
	libxext-dev
	libxv-dev
	meson
	util-macros
	xorgproto
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXvMC-$pkgver.tar.xz"
builddir="$srcdir"/libXvMC-$pkgver
options="!check"  # No test suite.

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
92ae35f11ca60289062e58c0a31bdf14b739fa09d3b421b4eabb7a6f05cb9cb30159c161301191df6c253aadebe35634ca717ebff329d169ab016a5469453737  libXvMC-1.0.15.tar.xz
"
