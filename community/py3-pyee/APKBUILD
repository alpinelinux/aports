maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-pyee
pkgver=13.0.1
pkgrel=0
pkgdesc="A port of node.js's EventEmitter to Python"
url="https://github.com/jfhbrook/pyee"
arch="noarch"
license="MIT"
depends="
	py3-async_generator
	py3-trio
	py3-twisted
	py3-vcversioner
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-mock
	py3-pytest-asyncio
	py3-pytest-trio
	pytest
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/p/pyee/pyee-$pkgver.tar.gz"
builddir="$srcdir/pyee-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
35a64438b125d0425c7a54a205b4613a0cdf3ebdc8195cc5706423e08acf996cda69fe406d5a8330732a066a21fa1ff6cec5cb447f0a483a72e24ccf19088415  pyee-13.0.1.tar.gz
"
