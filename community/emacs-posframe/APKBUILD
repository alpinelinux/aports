# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=emacs-posframe
pkgver=1.5.0
pkgrel=0
_pkgreal=posframe
pkgdesc="Pop up a frame inside Emacs"
url="https://github.com/tumashu/posframe"
arch="noarch"
license="GPL-3.0-or-later"
depends="cmd:emacs"
makedepends="emacs-nox"
source="https://github.com/tumashu/posframe/archive/v$pkgver/emacs-posframe-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"
options="!check" # no tests provided

build() {
	emacs -batch -q -no-site-file -L . \
		-f batch-byte-compile \
		./*.el
}

package() {
	install -Dvm644 posframe.el posframe.elc \
		-t "$pkgdir"/usr/share/emacs/site-lisp/

	cd "$pkgdir"/usr/share/emacs/site-lisp
	emacs -batch -q -no-site-file \
		-eval "(loaddefs-generate \".\" \"$_pkgreal-loaddefs.el\")"
}

sha512sums="
60f23d72e6ef19f41861a7d64e11347a6de9bb344bd64d139c8a3cbc8e7e0baf1b55b88a509fe81f654ef338d8d010f4432c4d3efa244913c2cbeaeb9afcbcde  emacs-posframe-1.5.0.tar.gz
"
