# Contributor: Timo Teräs <timo.teras@iki.fi>
# Maintainer: Timo Teräs <timo.teras@iki.fi>
pkgname=libmwaw
pkgver=0.3.12
pkgrel=0
pkgdesc="Import filter and tools for old Mac documents"
url="http://sourceforge.net/projects/libmwaw/"
arch="all"
license="MPL2"
depends=""
depends_dev="boost-dev attr-dev zlib-dev"
makedepends="$depends_dev librevenge-dev doxygen"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools"
source="http://downloads.sourceforge.net/project/libmwaw/libmwaw/libmwaw-$pkgver/libmwaw-$pkgver.tar.bz2"

builddir="$srcdir"/libmwaw-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

tools() {
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr
}

sha512sums="0a475121ff6944e8fe7be0766e1fbbd7e63a761b2687b4fb311c03d67680fcf4a04b64158e4c98a6526054ede14cc60a4982e68a081631bbc8464104893c75b0  libmwaw-0.3.12.tar.bz2"
