# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-control-center
pkgver=1.16.0
pkgrel=0
pkgdesc="MATE's main interface for configuration of various aspects of your desktop"
url="https://github.com/mate-desktop/mate-control-center"
arch="all"
license="GPL2"
depends="mate-common mate-menus mate-desktop mate-icon-theme desktop-file-utils"
depends_dev=""
makedepends="$depends_dev dbus-glib-dev libtool intltool itstool gtk+3.0-dev
	dconf-dev mate-menus-dev libunique-dev marco-dev mate-settings-daemon-dev
	libmatekbd-dev libxklavier-dev mate-desktop-dev startup-notification-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--prefix=/usr \
		--disable-update-mimedb \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="64b6fc1862472b7b1ba32772517e4abb  mate-control-center-1.16.0.tar.xz"
sha256sums="155226a482c3d0e402ec49ca53f6691afc5688df8cc958a5e216827e19525e22  mate-control-center-1.16.0.tar.xz"
sha512sums="891cddc3a908bd0a6aeeb05241290f4c0bbc247bc8923c34a1aa1a7ee55d62881c3958a9e65e338d2e79ecae91cdd5641e2186cea44a5fdb762a9a765a065496  mate-control-center-1.16.0.tar.xz"
