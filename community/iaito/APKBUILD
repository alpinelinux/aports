# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=iaito
pkgver=6.0.7
pkgrel=1
pkgdesc="Official QT frontend of radare2"
url="https://www.radare.org/n/iaito.html"
license="GPL-3.0-only"
arch="all"
depends="radare2
	graphviz
	qt6-qtsvg
	"
makedepends="radare2-dev
	bash
	qt6-qtsvg-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/radareorg/iaito/archive/refs/tags/$pkgver.tar.gz
	93e3e13d2f7231c64069745edac9ae2d3af0b827.patch
	"
options="!check" # no testsuite

build() {
	./configure \
		--with-qmake6 \
		--build=$CBUILD \
		--target=$CTARGET \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

