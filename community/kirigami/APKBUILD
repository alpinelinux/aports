# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kirigami
pkgver=6.21.0
pkgrel=0
pkgdesc="A QtQuick based components set"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-only"
depends="qt6-qtsvg"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kwindowsystem-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-libs $pkgname-lang"
_repo_url="https://invent.kde.org/frameworks/kirigami.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/kirigami-$pkgver.tar.xz
	0001-kirigami-Add-back-checking-for-parent-width.patch::https://invent.kde.org/frameworks/kirigami/-/commit/19127672cd812d177192cf84da4107f9abed2934.patch
	"
options="!check" # QML tests are just for developers

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON \
		-DBUILD_EXAMPLES=OFF
	cmake --build build
}

check() {
	# qml tests are developer tests
	wlheadless-run -- ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
aba529f963c3fd4e40e2edd0e179449b9c7849e25bbcb437c8f7620b9df32a4119e64243d8230615378e95d9eedb6255271268db0c096e2bb4c6bd7774d807d4  kirigami-6.21.0.tar.xz
53cf74939bd80eeb1bf491a8bb4d8e52a0cedf9d3a81916035fa57ca32b142dc0799204fff560239de7c15f4a6b007010110d11174a391b63941f5842a382d6f  0001-kirigami-Add-back-checking-for-parent-width.patch
"
