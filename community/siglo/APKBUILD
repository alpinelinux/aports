pkgname=siglo
pkgver=0.9.9
pkgrel=2
pkgdesc="GTK app to sync InfiniTime watch with PinePhone"
url="https://github.com/theironrobin/siglo"
arch="noarch"
license="MPL-2.0"
depends="
	bluez
	bluez-btmgmt
	gtk+3.0
	py3-dbus
	py3-gatt
	py3-gobject3
	py3-requests
	py3-setuptools
	py3-xdg
	python3
	"
makedepends="glib-dev meson"
subpackages="$pkgname-systemd"
source="https://github.com/theironrobin/siglo/archive/v$pkgver/siglo-v$pkgver.tar.gz
	usr-lib-systemd.patch
	"
options="!check" # There's no testsuite

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

