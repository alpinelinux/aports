source="https://php.net/distributions/php-$pkgver.tar.bz2
	php-fpm.initd
	php5-module.conf
	php-install-pear-xml.patch
	gd-iconv.patch
	openssl-1.1.patch
	"

_apiver="20131106"
_extdir="/usr/lib/$pkgname/modules"
_srcdir="$srcdir"/php-$pkgver
_confdir=/etc/$pkgname

# seems like pear hardcode /usr/share/pear directory
_peardir=/usr/share/pear

# secfixes:
#   5.6.38-r0:
#     - CVE-2018-17082
#   5.6.37-r0:
#     - CVE-2018-14851
#     - CVE-2018-14883
#   5.6.36-r0:
#     - CVE-2018-5712
#   5.6.34-r0:
#     - CVE-2018-7584
#   5.6.33-r0:
#     - CVE-2018-5711
#     - CVE-2018-5712
#   5.6.31-r0:
