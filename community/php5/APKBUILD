	openldap-dev
	openssl-dev
	postgresql-dev
	readline-dev
	sqlite-dev
	unixodbc-dev
	zlib-dev
	autoconf
	bison
	"
subpackages="$pkgname-dbg $pkgname-dev $pkgname-doc $pkgname-common::noarch $pkgname-cgi
	$pkgname-cli $pkgname-fpm $pkgname-apache2 $pkgname-embed
	$pkgname-phpdbg

	$pkgname-pear::noarch
	$pkgname-bcmath
	$pkgname-bz2
	$pkgname-calendar
