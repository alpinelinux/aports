pkgname=vim-sleuth
pkgver=2.0
pkgrel=1
pkgdesc="vim: Heuristically set buffer options"
url="https://github.com/tpope/vim-sleuth"
arch="noarch"
license="Vim"
depends="vim"
source="$pkgname-$pkgver.tar.gz::https://github.com/tpope/vim-sleuth/archive/v$pkgver.tar.gz"
options="!check" # TODO run tests

package() {
	mkdir -p "$pkgdir"/usr/share/vim/vimfiles
	cp -r plugin doc "$pkgdir"/usr/share/vim/vimfiles/
}

