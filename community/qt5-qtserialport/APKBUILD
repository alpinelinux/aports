# Contributor: Denis Ryabyy <vv1r0x@gmail.com>
# Maintainer: Denis Ryabyy <vv1r0x@gmail.com>
pkgname=qt5-qtserialport
_pkgname=${pkgname/qt5-//}-everywhere-src
pkgver=5.12.3
_ver=${pkgver/_p/-}
_ver=${_ver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - QtSerialPort module"
url="http://wiki.qt.io/QtSerialPort"
arch="all"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
makedepends="qt5-qtbase-dev eudev-dev"
subpackages="$pkgname-dev"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="https://download.qt.io/official_releases/qt/${pkgver%.*}/$_ver/submodules/$_pkgname-$_ver.tar.xz"

builddir="$srcdir"/$_pkgname-${_V%-*}

build() {
	cd "$builddir"
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="42551b74abe1fcaa1972fb1134215987d7c1d0fe73874a4c6ad5b9aadad71a2066a1846c297569bb1562f94e54a406e8074d444deca510a566e27cd386b47ecf  qtserialport-everywhere-src-5.12.3.tar.xz"
