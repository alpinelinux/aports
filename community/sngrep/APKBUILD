# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=sngrep
pkgver=1.8.3
pkgrel=0
pkgdesc="display SIP call message flows from a terminal"
url="https://github.com/irontec/sngrep"
arch="all"
license="GPL-3.0-or-later"
depends="sed"
makedepends="autoconf automake ncurses-dev libpcap-dev
	pcre2-dev libgcrypt-dev openssl-dev>3"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/irontec/sngrep/archive/v$pkgver.tar.gz
	disable-failing-test.patch
	expose-sng_strncpy.patch
	"

prepare() {
	default_prepare
	./bootstrap.sh
}

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-openssl \
		--with-pcre2 \
		--disable-logo \
		--enable-unicode \
		--enable-eep \
		--enable-ipv6
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir/" install
}

sha512sums="
