# Contributor: Thomas Kienlen <kommander@laposte.net>
# Maintainer: Thomas Kienlen <kommander@laposte.net>
pkgname=kiwix-desktop
pkgver=2.4.1
pkgrel=1
pkgdesc="Offline Wikipedia reader"
url="https://github.com/kiwix/kiwix-desktop"
# armhf, s390x, riscv64, x86: blocked by qt6-qtwebengine
arch="all !armhf !s390x !riscv64 !x86"
license="GPL-3.0-or-later"
makedepends="
	qt6-qtbase-dev
	qt6-qtwebengine-dev
	qt6-qtsvg-dev
	qt6-qtimageformats
	libkiwix-dev>=14.0
	"
source="
	https://github.com/kiwix/kiwix-desktop/archive/$pkgver/kiwix-desktop-$pkgver.tar.gz

	0001-Fix-Wayland-icon-issue.patch
	0002-Check-for-file-open-errors.patch
	"
options="!check" # no test suite

build() {
	qmake6 PREFIX="/usr"
	make
}

package() {
	INSTALL_ROOT="$pkgdir" make install
}

