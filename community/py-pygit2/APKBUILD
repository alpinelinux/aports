# Maintainer:
pkgname=py-pygit2
_pkgname=pygit2
pkgver=0.26.2
pkgrel=0
pkgdesc="Python bindings for libgit2"
url="https://github.com/libgit2/pygit2"
arch="all"
license="GPL-2.0"
_pydepends="py-cffi py-six"
makedepends="$_pydepends python2-dev python3-dev py-setuptools
	libgit2-dev libssh2-dev libressl-dev"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="$pkgname-$pkgver.tar.gz::https://github.com/libgit2/$_pkgname/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${_pydepends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${_pydepends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="c77a29ffa71cb4ac9ffcd5f890b810c4b4dc93515fc8ba7043975bf4d5318bce2ad5aeae677c93d674d313a3ecce4c0a332b0773337a63909011fa9995e08743  py-pygit2-0.26.2.tar.gz"
