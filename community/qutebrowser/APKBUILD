# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: omni <omni+alpine@hack.org>
pkgname=qutebrowser
pkgver=3.6.3
pkgrel=0
pkgdesc="Keyboard-driven, vim-like browser based on Python and Qt"
url="https://qutebrowser.org/"
# armhf, s390x, riscv64, x86 blocked by qt6-qtwebengine
# loongarch64 blocked by py3-adblock
arch="noarch !armhf !s390x !riscv64 !loongarch64 !x86"
license="GPL-3.0-only"
depends="
	py3-adblock
	py3-jinja2
	py3-pygments
	py3-pyqt6-sip
	py3-pyqt6-webengine
	py3-qt6
	py3-tldextract
	py3-yaml
	qt6-qtbase-sqlite
	qt6-qtwebengine
	"
makedepends="
	asciidoc
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-hypothesis
	py3-pytest
	py3-pytest-benchmark
	py3-pytest-mock
	py3-pytest-rerunfailures
	"
subpackages="$pkgname-doc $pkgname-pyc"
source="https://github.com/qutebrowser/qutebrowser/releases/download/v$pkgver/qutebrowser-$pkgver.tar.gz
	gpep517-install.patch
	"
options="!check" # missing pytest dependencies

build() {
	a2x -f manpage doc/qutebrowser.1.asciidoc
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	make -f misc/Makefile DESTDIR="$pkgdir" PREFIX=/usr install
}

sha512sums="
d1965d775128b466d452d3239f232711860180c138fc223c9b7b6af11aa8ff06d7b8100f1d63257552efcc0c94ddcd99cc0fb3a431f04f0c8dcc80550a9fcfd8  qutebrowser-3.6.3.tar.gz
2b60990691d09eb1df6c8a0d4212f51303fd5167378258f5d3fc19d6f07867c4c7e02248e0979c3a1c38fb5fa948345abee6b7af384e7ff1569b1f8a5ac8b8a9  gpep517-install.patch
"
