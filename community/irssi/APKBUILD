build() {
	abuild-muon \
		-Db_lto=true \
		-Dwith-perl=yes \
		-Dwith-perl-lib=vendor \
		-Dwith-proxy=yes \
		-Dwith-otr=yes \
		-Denable-true-color=yes \
		output .
	ninja -C output
}

check() {
	muon -C output test -j "${JOBS:-0}" -R -d dots
}

package() {
	DESTDIR="$pkgdir" muon -C output install
}

perl() {
	pkgdesc="Irssi perl support and scripts"
	depends="$pkgname=$pkgver-r$pkgrel perl"

	amove \
		usr/share/irssi/scripts \
		usr/lib/irssi/modules/libfe_perl.* \
		usr/lib/irssi/modules/libperl_core.* \
		usr/lib/perl5
}

proxy() {
	pkgdesc="Irssi module for enabling bouncer-like functionality"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove usr/lib/irssi/modules/libirc_proxy.*
}

otr() {
	pkgdesc="Irssi module for enabling OTR functionality"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove \
		usr/lib/irssi/modules/libotr_core.* \
		usr/share/irssi/help/otr
}

