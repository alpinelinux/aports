# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=nxapi
_pkgname=naxsi
pkgver=0.55.3
_ver=${pkgver/_/}
pkgrel=1
pkgdesc="nginx/naxsi log parser, whitelist and report generator."
url="https://www.nginx.org/ | https://github.com/nbs-system/naxsi"
arch="noarch"
license="GPL-2.0"
depends="python2"
depends_dev=""
makedepends="python2-dev"
source="$_pkgname-$_ver.tar.gz::https://github.com/nbs-system/naxsi/archive/${_ver}.tar.gz
	fix-config-location.patch
	"
builddir="$srcdir/$_pkgname-$_ver/nxapi"

build() {
	cd "$builddir"
	python setup.py build
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir"
}

check() {
	cd "$builddir"
	python setup.py check
}

