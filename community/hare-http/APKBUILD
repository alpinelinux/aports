checkdepends="hare hare-ev"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/hare-http/archive/$pkgver.tar.gz"

check() {
	hare test
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

