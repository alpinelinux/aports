# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=nanomsg
pkgver=1.2.2
pkgrel=0
pkgdesc="Socket library that provides several common communication patterns"
url="https://nanomsg.org"
arch="all"
license="MIT"
makedepends="
	asciidoctor
	cmake
	samurai
	xmlto
	"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/nanomsg/nanomsg/archive/$pkgver.tar.gz"

build() {
	cmake3.5 -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76162319588d7ba7668f373147629ec2a178d247ac0518b24d129ea579f9c19cc45c544744ed9fe89ab7e74750da7c644d9565731d22f1199bf0ccfc5c734e56  nanomsg-1.2.2.tar.gz
"
