# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-screenshooter
pkgver=1.11.3
pkgrel=0
pkgdesc="Screenshot application for Xfce4"
url="https://goodies.xfce.org/projects/applications/xfce4-screenshooter"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
makedepends="
	exo-dev
	gtk-layer-shell-dev
	help2man
	hicolor-icon-theme
	libxext-dev
	libxfce4ui-dev
	meson
	wlr-protocols
	xfce4-panel-dev
	"
source="https://archive.xfce.org/src/apps/xfce4-screenshooter/${pkgver%.*}/xfce4-screenshooter-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
1f2cf3d2631644f3f5fd847fea3622e4e35690d2265a2dfd6abd0b6f84f83995600c0e89925fe170b2e026922914f843c81e74d8c25752925e7e750af38132a0  xfce4-screenshooter-1.11.3.tar.xz
"
