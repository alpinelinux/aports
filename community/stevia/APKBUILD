# Contributor: jane400 <alpine@j4ne.de>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=stevia
pkgver=0.51.0
pkgrel=1
pkgdesc="Alternative OSK for phosh"
arch="all"
url="https://gitlab.gnome.org/World/Phosh/stevia"
license="GPL-3.0-or-later"
depends="hunspell-en-us"
makedepends="
	cmd:rst2man
	elogind-dev
	feedbackd-dev
	glib-dev
	gmobile-dev
	gnome-desktop-dev
	gtk+3.0-dev
	hunspell-dev
	json-glib-dev
	libhandy1-dev
	meson
	wayland-dev
	wayland-protocols
	"
checkdepends="xvfb-run"
subpackages="$pkgname-doc $pkgname-lang $pkgname-systemd"
source="https://gitlab.gnome.org/World/Phosh/stevia/-/archive/v$pkgver/stevia-v$pkgver.tar.gz
	emoji-db.patch
	"
builddir="$srcdir/stevia-v$pkgver"

provides="phosh-keyboard=0 phosh-osk-stub=$pkgver-r$pkgrel"
provider_priority=1
replaces="phosh"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dman=true \
		. output
	meson compile -C output
}

check() {
	xvfb-run -a meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
a924300615861de063b8cd6c00cd8ecde65ddba7198765a1174b17f2d46e2816cbf91586a7d54fce00410b9a080a89e9adf518803cc8cfee60d3a7c66b01309b  stevia-v0.51.0.tar.gz
a7c97f986a840c803239322f69dec6df6586a19b1e7d9ca11cff6a0b47861ab1d68263318b6ab93452d6526543428f6ced9617edbadd0c902c7e9767727c5c76  emoji-db.patch
"
