# Contributor: Eivind Uggedal <eu@eju.no>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-flask-babel
_pkgname=Flask-Babel
pkgver=0.12.2
pkgrel=0
pkgdesc="Flask i18n/l10n support"
url="https://pypi.python.org/pypi/Flask-Babel"
arch="noarch"
license="BSD-3-Clause"
makedepends="py-setuptools py3-setuptools py2-flask py3-flask"
checkdepends="py2-babel py3-babel"
subpackages="py2-flask-babel:_py2 py3-flask-babel:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

prepare() {
	default_prepare
	cp -r "$builddir" "$builddir"-py2
}

build() {
	python2 setup.py build

	cd "$builddir"-py2
	python3 setup.py build
}

check() {
	python3 setup.py test

	cd "$builddir"-py2
	python2 setup.py test
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="$depends $python py${python#python}-babel
		py${python#python}-flask py${python#python}-jinja2
		py${python#python}-tz"
	_py python2
}

_py3() {
	depends="$depends $python py${python#python}-babel
		py${python#python}-flask py${python#python}-jinja2
		py${python#python}-tz"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="c43bf5cf6c66e3a8a52298f52bd6300cf0b0c53a1f0fb5862b1bcf8a9800ea0e043c9f85125bb9eb5c281a3c0583c63f0f9653792204883a6f82080547b37104  Flask-Babel-0.12.2.tar.gz"
