maintainer="team/kde <bribbers@disroot.org>"
pkgname=kddockwidgets
pkgver=2.4.0
pkgrel=0
pkgdesc="Dock Widget Framework for Qt"
# armhf blocked by qt6-qtdeclarative-dev
arch="all !armhf"
url="https://www.kdab.com/development-resources/qt-tools/kddockwidgets"
license="GPL-2.0-only OR GPL-3.0-only"
depends_dev="
	fmt-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	spdlog-dev
	"
makedepends="$depends_dev
	cmake
	doxygen
	graphviz
	nlohmann-json
	qt6-qtbase-private-dev
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-dev"
source="https://github.com/KDAB/KDDockWidgets/releases/download/v$pkgver/kddockwidgets-$pkgver.tar.gz"
options="!check" # Tests require 'developer mode' which is not a build type we want
builddir="$srcdir/KDDockWidgets-$pkgver"

build() {
	# Building docs is broken
	cmake -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKDDockWidgets_TESTS=OFF \
		-DKDDockWidgets_DOCS=OFF \
		-DKDDockWidgets_QT6=ON \
		-DKDDockWidgets_FRONTENDS="qtwidgets;qtquick"
	cmake --build .
}

check() {
	ctest --test-dir .
}

package() {
	DESTDIR="$pkgdir" cmake --install .
}


sha512sums="
1e220c5cf608c5bb9242b530eb1e45a15dae462b126c12d253483a1213e72374baa75943d8734c5dc79e34b03b480d1a87cd59cb945996abc0ab20b5d649a5cb  kddockwidgets-2.4.0.tar.gz
"
