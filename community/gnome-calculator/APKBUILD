# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <achill@achill.org>
pkgname=gnome-calculator
pkgver=49.2
pkgrel=1
pkgdesc="Calculator for solving mathematical equations"
url="https://apps.gnome.org/Calculator"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	blueprint-compiler
	glib-dev
	gtksourceview5-dev
	gtk4.0-dev
	itstool
	libadwaita-dev
	libgee-dev
	libsoup3-dev
	libxml2-dev
	meson
	mpc1-dev
	mpfr-dev
	vala
	"
subpackages="$pkgname-devhelp $pkgname-doc $pkgname-lang $pkgname-dev"
source="https://download.gnome.org/sources/gnome-calculator/${pkgver%%.*}/gnome-calculator-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	# loongarch64, armhf, ppc64le and riscv64 timeouted number test with standard timeout
	meson test -t 10 --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
ba7ca6c7092cb755049dda18303edcd45ca5f28056ee6c62485f271c7c127ceef134d6b2269d0902886f6a0e808b61e84466c131ffe8a64c39b6d722c3fd703d  gnome-calculator-49.2.tar.xz
"
