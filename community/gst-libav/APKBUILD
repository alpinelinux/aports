maintainer="team/alpine-desktop <achill@achill.org>"
pkgname=gst-libav
pkgver=1.26.10
pkgrel=0
# NOTE: Upgrade together with the whole GStreamer suite &
# only to even-numbered versions (e.g. 1.18.x, 1.20.x)!
pkgdesc="GStreamer streaming media framework libav plugin"
url="https://gstreamer.freedesktop.org"
arch="all"
license="GPL-2.0-or-later LGPL-2.0-or-later"
makedepends="
	coreutils
	ffmpeg-dev
	gst-plugins-base-dev
	gstreamer-dev
	meson
	orc-dev
	"
source="https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-$pkgver.tar.xz
	flaky.patch
	"
subpackages="$pkgname-dbg"
replaces="gst-libav1"

build() {
	CFLAGS="$CFLAGS -O2" \
	CXXFLAGS="$CXXFLAGS -O2" \
	CPPFLAGS="$CPPFLAGS -O2" \
	abuild-meson \
		-Db_lto=true \
		-Dpackage-origin="https://alpinelinux.org" \
		-Dpackage-name="GStreamer libav plugin (Alpine Linux)" \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

doc() {
	default_doc
	replaces="${pkgname}1-doc"
}

sha512sums="
58bdb54d31aa13ba074fa42db6c2fd436db84619bce6460f457d3da45ed708bb7cd92d7a3010d8e81c7a4620fd13f48a401fef2f5c4b72eeb40be7624e2d846a  gst-libav-1.26.10.tar.xz
b6ea595d0875c22b69fb7c32ce3e03e187ce8c76ad5992fd709500507fc89e021f6f53fc951a61b5edf0312963bf7d313542a3970bbab27e335887e5db34d26b  flaky.patch
"
