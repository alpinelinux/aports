# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-django-ninja
#_pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=django-ninja
pkgver=1.5.3
pkgrel=0
pkgdesc="Fast, Async-ready, Openapi, type hints based framework for building APIs"
url="https://pypi.python.org/project/django-ninja"
arch="noarch"
license="MIT"
depends="py3-django py3-pydantic"
checkdepends="py3-pytest py3-pytest-cov py3-pytest-django py3-pytest-asyncio py3-psycopg2"
makedepends="py3-setuptools py3-gpep517 py3-wheel py3-flit-core"
source="$pkgname-$pkgver.tar.gz::https://github.com/vitalik/django-ninja/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	msg "Running tests"
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ec4f1b35ffa931ae46e7d774b52b9b873514399abe838a13e448e5e05149afa3344c9d568c87cea337997e556d26da62773ced156c2e365923e2fde0dd33862f  py3-django-ninja-1.5.3.tar.gz
"
