pkgver=1.24.0.2
pkgrel=1
pkgdesc="The Haskell Cabal"
url="http://haskell.org"
arch="armhf x86_64"
license="BSD3"
depends="gmp zlib"
makedepends="ghc gmp-dev libffi-dev zlib-dev binutils-gold chrpath"
subpackages="$pkgname-doc"
