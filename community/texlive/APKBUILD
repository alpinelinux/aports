_langextra() {
	pkgdesc="Symbolic links exposing texmf-dist-lang tools to \$PATH"
	depends="$pkgname texmf-dist-lang"

	local cmds
	cmds="
		cjk-gs-integrate
		convbkmk
		ebong
		jamo-normalize
		jfmutil
		kanji-config-updmap
		kanji-config-updmap-sys
		kanji-config-updmap-user
		kanji-fontmap-creator
		komkindex
		mkgrkindex
		ptex2pdf
		rubibtex
		rumakeindex
		ttf2kotexfont
		"

	for cmd in $cmds; do
		amove usr/bin/$cmd
	done
}

_subpkg_full() {
	pkgdesc="A complete TeX distribution"
	depends="
		$pkgname
		$pkgname-binextra
		$pkgname-context
		$pkgname-dvi
		$pkgname-luatex
		$pkgname-xetex
		xdvik
		texmf-dist-full
		"

	mkdir -p "$subpkgdir"
}

_subpkg_most() {
	pkgdesc="A mostly complete TeX distribution"
	depends="
		$pkgname
		$pkgname-context
		$pkgname-luatex
		$pkgname-xetex
		texmf-dist-most
		cmd:biber
		"

	mkdir -p "$subpkgdir"
}

