pkgname=py-attrs
_pkgname=attrs
__=python-attrs
pkgver=17.4.0
pkgrel=0
pkgdesc="Python classes without boilerplate"
url="http://www.attrs.org"
arch="noarch"
license="MIT"
checkdepends="py-hypothesis py-zope-interface py-future py-coverage py-six \
		py-pympler py-tox pytest"
makedepends="python2-dev python3-dev py-setuptools py3-setuptools py-sphinx \
		py-zope-interface"
source="$pkgname-$pkgver.tar.gz::https://github.com/$__pkgname/$_pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2 $pkgname-doc"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

_getpythonver(){
        echo $($1 -c 'import sys; print("%i%i" '\
		'% (sys.version_info.major, sys.version_info.minor))')
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
	tox -e py$(_getpythonver python2)
	#tox -e py$(_getpythonver python3) # bugged
}

package() {
	cd "$builddir"
	install -d "$pkgdir"/usr/share/doc/$pkgname \
		"$pkgdir"/usr/share/man/man1 "$pkgdir"/usr/share/html/$pkgname
	install -t "$pkgdir"/usr/share/doc/$pkgname AUTHORS.rst CHANGELOG.rst \
		README.rst
	cd docs
	PYTHONPATH="$builddir/src:$PYTHONPATH" make html man
	install -t "$pkgdir"/usr/share/man/man1 _build/man/*
	mv _build/html/* "$pkgdir"/usr/share/html/$pkgname
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"
	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	_py python2
}

_py3() {
	_py python3
}

sha512sums="14a512009cefbadc66972380f3beeb80e28daebeef467838c3506fd33a65e555666434a2d8f7294291b431e8b787aea370e267045f30a2253463e79d0e6caa3a  py-attrs-17.4.0.tar.gz"
