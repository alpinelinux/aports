# Contributor: Taner Tas <taner76@gmail.com>
# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=deadbeef
pkgver=1.9.2
pkgrel=2
pkgdesc="fairly capable playlist-oriented audio player"
url="https://deadbeef.sourceforge.net/"
# armhf, riscv64: blocked by libdispatch-dev
arch="all !armhf !riscv64"
license="Zlib GPL-2.0-or-later LGPL-2.1-or-later"
depends="desktop-file-utils hicolor-icon-theme"
depends_dev="
	alsa-lib-dev
	curl-dev
	ffmpeg-dev
	flac-dev
	gtk+3.0-dev
	jansson-dev
	libdispatch-dev
	libmad-dev
	libsamplerate-dev
	libsndfile-dev
	libvorbis-dev
	opusfile-dev
	"
makedepends="
	$depends_dev
	autoconf
	automake
	bsd-compat-headers
	clang
	gettext
	intltool
	libtool
	"
subpackages="$pkgname-dev $pkgname-lang $pkgname-doc"
source="https://downloads.sourceforge.net/sourceforge/deadbeef/deadbeef-$pkgver.tar.bz2
	strdupa.patch
	use-endian-h.patch
	$pkgname-ffmpeg5.patch::https://github.com/DeaDBeeF-Player/deadbeef/commit/7b52bac5a69abeab6d8b6601fd9e36803842d9c1.patch
	"
options="!check" # No test suite

prepare() {
	default_prepare

	autoreconf -fi
}

build() {
	case "$CARCH" in
		x86)
			build_options="--disable-soundtouch"
		;;
	esac

	LDFLAGS=-lintl \
	CC=clang \
	CFLAGS="$CFLAGS -Wno-error" \
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-oss \
		--disable-static \
		$build_options
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

