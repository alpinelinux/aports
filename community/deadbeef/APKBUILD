# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=deadbeef
pkgver=1.10.0
pkgrel=1
pkgdesc="fairly capable playlist-oriented audio player"
url="https://deadbeef.sourceforge.net/"
arch="all !s390x" #s390x build fails
license="Zlib GPL-2.0-or-later LGPL-2.1-or-later"
depends="desktop-file-utils hicolor-icon-theme"
depends_dev="
	alsa-lib-dev
	curl-dev
	faad2-dev
	ffmpeg-dev
	flac-dev
	gtk+2.0-dev
	gtk+3.0-dev
	jansson-dev
	libcddb-dev
	libcdio-dev
	libdispatch-dev
	libjpeg-turbo-dev
	libmad-dev
	libnotify-dev
	libpng-dev
	libsamplerate-dev
	libsndfile-dev
	libvorbis-dev
	libzip-dev
	minizip-ng-dev
	mpg123-dev
	opusfile-dev
	pipewire-dev
	pipewire-jack-dev
	pulseaudio-dev
	wavpack-dev
	zlib-dev
	"
makedepends="
	$depends_dev
	bsd-compat-headers
	clang
	gettext
	intltool
	yasm
	"
subpackages="$pkgname-doc $pkgname-dev $pkgname-lang"
source="https://downloads.sourceforge.net/sourceforge/deadbeef/deadbeef-$pkgver.tar.bz2
	strdupa.patch
	"
options="!check" # No test suite

prepare() {
	default_prepare
	update_config_sub
	update_config_guess
}

build() {
	case "$CARCH" in
		x86)
			build_options="--disable-soundtouch --disable-ffap"
		;;
	esac

	LDFLAGS=-lintl \
	CC=clang \
	CFLAGS="$CFLAGS -Wno-error" \
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-libretro \
		$build_options
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
