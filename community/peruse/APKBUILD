# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=peruse
pkgver=1.80_git20260206
pkgrel=0
_commit="48016f4f9d382152b03dc6cb06c71d2a634d4cc8"
pkgdesc="A comic book viewer for use on multiple form factors"
# armhf blocked by qt6-qtdeclarative -> kirigami
# s390x blocked by kdeclarative
# riscv64 blocked by okular
arch="all !armhf !s390x !riscv64"
url="https://invent.kde.org/graphics/peruse"
license="LGPL-2.1-or-later AND LicenseRef-KDE-Accepted-LGPL"
depends="
	kirigami
	kirigami-addons
	okular-common-qml
	qt6-qtbase-sqlite
	qt6-qtimageformats
	"
makedepends="
	baloo-dev
	extra-cmake-modules
	kdeclarative-dev
	kfilemetadata-dev
	kirigami-addons-dev
	knewstuff-dev
	qt6-qtdeclarative-dev
	samurai
	"
subpackages="$pkgname-lang $pkgname-creator"
_repo_url="https://invent.kde.org/graphics/peruse.git"
#source="https://download.kde.org/stable/peruse/peruse-$pkgver.tar.xz"
source="$pkgname-$_commit.tar.gz::https://invent.kde.org/graphics/peruse/-/archive/$_commit.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

creator() {
	pkgdesc="Creation tool for comic books"

	amove usr/bin/perusecreator
	amove usr/share/metainfo/org.kde.perusecreator.appdata.xml
}

sha512sums="
f30d39327b93963c0fc47886e95549f78e5071debff6e324e34225c83f9f8f28eef7a1e20533cc9c8496f3f381bf9c3a423920fe853e1a6cc1e754cad1c7b069  peruse-48016f4f9d382152b03dc6cb06c71d2a634d4cc8.tar.gz
"
