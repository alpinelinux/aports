# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-drf-spectacular
_pyname=drf-spectacular
pkgver=0.29.0
pkgrel=0
pkgdesc="Sane and flexible OpenAPI 3 schema generation for Django REST framework"
url="https://pypi.python.org/project/drf-spectacular"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-django-rest-framework
	py3-jsonschema
	py3-uritemplate
	py3-yaml
	py3-inflection
	py3-django-oauth-toolkit
	py3-jwcrypto
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
checkdepends="
	py3-pytest
	py3-pytest-django
	py3-pytest-cov
	py3-flake8
	py3-mypy
	py3-isort
	py3-psycopg2
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/tfranzel/drf-spectacular/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	# tests/contrib: relies on a bunch of unpackaged optional dependencies
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v \
		--ignore=tests/contrib
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
474a6229633d2abfacc44b127228436361adf5f34f83e4da67fd7c687efa85be9788bc811a2763f272a87ee4dbb358ec402062b242f5cb08688fa84fceef87f7  py3-drf-spectacular-0.29.0.tar.gz
"
