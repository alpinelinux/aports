pkgname=keychain
pkgver=2.9.7
pkgrel=0
pkgdesc="keychain ssh-agent front-end"
url="https://github.com/danielrobbins/keychain"
arch="noarch"
license="GPL-2.0-only"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/danielrobbins/keychain/releases/download/$pkgver/keychain-$pkgver.tar.gz"
options="!check" # no test suite, see https://github.com/funtoo/keychain

package() {
	install -Dm755 keychain "$pkgdir/usr/bin/keychain"
	install -Dm644 keychain.1 "$pkgdir/usr/share/man/man1/keychain.1"
}

