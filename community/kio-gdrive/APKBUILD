# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kio-gdrive
pkgver=25.12.0
pkgrel=0
# armhf blocked by qt6-qtdeclarative -> ki18n
# x86, s390x, riscv64 and armv7 blocked by qt6-qtwebengine -> libkgapi
arch="all !armhf !x86 !s390x !riscv64 !armv7"
url="https://community.kde.org/KIO_GDrive"
pkgdesc="KIO Slave to access Google Drive"
license="GPL-2.0-or-later"
depends="
	kaccounts-providers
	signon-plugin-oauth2
	signon-ui
	"
makedepends="
	extra-cmake-modules
	intltool
	kaccounts-integration-dev
	kdoctools-dev
	ki18n-dev
	kio-dev
	libkgapi-dev
	purpose-dev
	qt6-qtbase-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/network/kio-gdrive.git"
source="https://download.kde.org/stable/release-service//$pkgver/src/kio-gdrive-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5aec6ffbcecb695527d52ed4f9146778d2de22f57923e00b4998aeffeab04dca29a7e0c6cf9feb3c16266e69a6c031607ffa01b0a2327204753e637b4be1abdc  kio-gdrive-25.12.0.tar.xz
"
