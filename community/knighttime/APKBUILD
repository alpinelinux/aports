# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=knighttime
pkgver=6.5.4
pkgrel=0
pkgdesc="Helpers for scheduling the dark-light cycle"
# armhf blocked by qt6-qtdeclarative -> ki18n
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="LGPL-2.0-or-later AND LGPL-2.1-or-later"
depends_dev="
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kholidays-dev
	ki18n-dev
	qt6-qtbase-dev
	qt6-qtpositioning-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	samurai
	"
case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

# strip fourth version component for source URL
case "$pkgver" in
	*.*.*.*) _pkgver="${pkgver%.*}" ;;
	*) _pkgver="$pkgver" ;;
esac

subpackages="$pkgname-dev $pkgname-systemd"
_repo_url="https://invent.kde.org/plasma/knighttime.git"
source="https://download.kde.org/$_rel/plasma/$_pkgver/knighttime-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d60b0f076e3b0735cb78611acee5f3b526e70f363d0643f8ac8878856d8c415166c0b2e7d50216c673d304856bc7784db7b7ebec0f1b9dd40bca7ebcd1de471a  knighttime-6.5.4.tar.xz
"
