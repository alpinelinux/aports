maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=py3-pyqt5-sip
pkgver=12.17.1
pkgrel=0
pkgdesc="The sip module support for PyQt5"
url="https://riverbankcomputing.com/software/sip"
arch="all"
license="custom:sip"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
source="https://pypi.python.org/packages/source/p/pyqt5-sip/pyqt5_sip-$pkgver.tar.gz"
options="!check" # No tests
builddir="$srcdir/pyqt5_sip-$pkgver"

build() {
	export CFLAGS="$CFLAGS -O2 -flto=auto"
	export CXXFLAGS="$CXXFLAGS -O2 -flto=auto"
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
4b8661ddf9930cfa3d78bad36d1d87685329cf49c396c085a79c73b35134d4e26c2b0cb43d3f4a057545a23803d6b32f684f7cfb6e2c712cbed31248327a19bb  pyqt5_sip-12.17.1.tar.gz
"
