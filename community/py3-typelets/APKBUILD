# Contributor: André Klitzing <aklitzing@gmail.com>
# Maintainer: André Klitzing <aklitzing@gmail.com>
pkgname=py3-typelets
pkgver=1.1
pkgrel=0
pkgdesc="Typelets for Python"
url="https://pypi.org/project/typelets/"
arch="noarch"
license="MIT"
depends="python3 py3-typing-extensions"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
checkdepends="
	py3-pytest
	py3-pytest-env
	"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/t/typelets/typelets-$pkgver.tar.gz"
builddir="$srcdir/typelets-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
d583b1da425ee58adb9c74ac542d06db55828ca678d7d53893360c98ea09363bbf7e6687a05fd04495b19b6cbeaa7a4108561ebf40e97ce5e62ac2bf2f4f9e55  typelets-1.1.tar.gz
"
