# Contributor: David Demelier <markand@malikania.fr>
# Maintainer: David Demelier <markand@malikania.fr>
pkgname=serd
pkgver=0.32.6
pkgrel=0
pkgdesc="lightweight C library for RDF syntax"
url="https://drobilla.net/software/serd"
arch="all"
license="ISC"
makedepends="meson"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc"
source="https://download.drobilla.net/serd-$pkgver.tar.xz"
options="!check" # No tests

build() {
	abuild-meson -Db_lto=true . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
8ca85d7c4d20aabd63dfe8e578cf315305a9501c402edfa3d6a26b14d2872aeb3ed11e9839bdf169ae329c8a07b43aa058c1dbbd01aa931ca4623a2849ef6d00  serd-0.32.6.tar.xz
"
