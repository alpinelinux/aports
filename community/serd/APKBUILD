# Contributor: David Demelier <markand@malikania.fr>
# Maintainer: David Demelier <markand@malikania.fr>
pkgname=serd
pkgver=0.32.8
pkgrel=0
pkgdesc="lightweight C library for RDF syntax"
url="https://drobilla.net/software/serd"
arch="all"
license="ISC"
makedepends="meson"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc"
source="https://download.drobilla.net/serd-$pkgver.tar.xz"
options="!check" # No tests

build() {
	abuild-meson -Db_lto=true . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
6cca335e658f4d0c5296924f04ea1d3cfa36e3927a753e87987c9214c4f0c30368c776bec0bc9369c073d6a6ed43d226c8ba57a7be372c26350395cbbae64dea  serd-0.32.8.tar.xz
"
