# Contributor: Milan P. Stanić <mps@arvanta.net>
# Maintainer: Milan P. Stanić <mps@arvanta.net>
pkgname=ksmbd-tools
pkgver=3.4.8
pkgrel=0
pkgdesc="userspace tools for kernel smb server (ksmbd)"
url="https://github.com/cifsd-team/ksmbd-tools"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc"
[ "$CARCH" = "riscv64" ] && options="$options textrels"
makedepends="autoconf automake libtool libnl3-dev glib-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/cifsd-team/ksmbd-tools/archive/refs/tags/$pkgver.tar.gz"

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
f5372ea7fd4b754482374cdeefa011bebe32c37a26acc180c34c61f37cf08125b5b4626128cae413cd517a74af326188f3f9e7cf459308e4305d86e7c6702436  ksmbd-tools-3.4.8.tar.gz
"
