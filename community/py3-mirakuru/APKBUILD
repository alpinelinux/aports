# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>
# Maintainer: Antoine Martin (ayakael) <dev@ayakael.net>
pkgname=py3-mirakuru
pkgver=3.0.1
pkgrel=0
#_pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=mirakuru
pkgdesc="Process executor (not only) for tests."
url="https://pypi.python.org/project/mirakuru"
arch="noarch"
license="LGPL-3.0-only"
depends="py3-psutil"
checkdepends="py3-daemon py3-pytest netcat-openbsd bash procps-ng py3-pytest-xdist py3-pytest-rerunfailures"
makedepends="py3-setuptools py3-gpep517 py3-wheel"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/ClearcodeHQ/mirakuru/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer "$builddir"/.dist/*.whl
	# check fails when py3-flaky is installed
	# tests/executors/test_executor_kill.py::test_daemons_killing: passes locally but not in CI
	# tests/executors/test_executor_kill.py::test_custom_signal_kill: stalls on 32-bit archs
	# tests/executors/test_executor.py::test_stop_custom_exit_signal_context: failure on 32-bit arches
	#   mirakuru.exceptions.ProcessFinishedWithError: The process invoked by the <mirakuru.base.SimpleExecutor: "false" 0xf5fc9090> executor has exited with a non-zero code: 1.
	.testenv/bin/python3 -m pytest -v \
		--deselect tests/executors/test_executor_kill.py::test_daemons_killing \
		--deselect tests/executors/test_executor_kill.py::test_custom_signal_kill \
		--deselect tests/executors/test_executor.py::test_stop_custom_exit_signal_context
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
557437ba524396ae611747feb92d581585a39938528ec0c3e8815d9330f4333853cbd2c2fd2cc9c9324ca4f28186ce0f55179d69add9311cf18751104401b63f  py3-mirakuru-3.0.1.tar.gz
"
