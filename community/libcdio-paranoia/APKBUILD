# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcdio-paranoia
pkgver=10.2.2.0.2
_pkgver="10.2+2.0.2"
pkgrel=3
pkgdesc="CD paranoia on top of libcdio"
url="https://www.gnu.org/software/libcdio/"
arch="all"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="libcdio-dev autoconf automake libtool"
subpackages="$pkgname-dev $pkgname-doc"
source="https://ftp.gnu.org/gnu/libcdio/libcdio-paranoia-$_pkgver.tar.bz2
	gcc15-getopt.patch
	"
builddir="$srcdir/$pkgname-$_pkgver"

prepare() {
	default_prepare

	sed -i \
		-e "s/\$1+\$2/$pkgver/" \
		configure.ac
	autoreconf -i
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
ad199c14e77a097e3e9adda222eb42bea880fdf5d08fa3ae08df27e4685508a85d54d8b0c1a35fb043d550bf735890322efb4e0502b3507d6f9563151e3a36c0  libcdio-paranoia-10.2+2.0.2.tar.bz2
5f5bae8a0c328e69bd379d4cd0455e8a25b98a517ef508eb9cc92a219dd63e11b11c2373901e4bba12de839b93a817dcbb4e08a1ab0d275027ba7e0f39af06d5  gcc15-getopt.patch
"
