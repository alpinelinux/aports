# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=termit
pkgver=3.2
pkgrel=0
pkgdesc="Terminal emulator based on VTE with Lua scripting"
url="https://github.com/nonstop/termit"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	cmake
	gtk+3.0-dev
	lua5.4-dev
	samurai
	vte3-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
source="https://github.com/nonstop/termit/archive/termit-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgname-$pkgver"
options="!check" # no tests were found

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		$crossopts
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f6271068fef4ba5d8246d158232d5dfea45dba03e7c35e51941d2078f9fb1db4df31f57b2fde42367ae1998982f892999c78927e3bf5ae220b8c9fae6ddaf60a  termit-3.2.tar.gz
"
