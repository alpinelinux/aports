maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=wayback
pkgver=0.3
pkgrel=1
pkgdesc="X11 compatibility layer leveraging wlroots and Xwayland"
url="https://wayback.freedesktop.org/"
arch="all"
license="MIT"
depends="xwayland"
makedepends="
	meson
	scdoc
	wayland-protocols-dev
	wlroots-dev
	xwayland-dev
	"
subpackages="$pkgname-doc"
source="https://gitlab.freedesktop.org/wayback/wayback/-/archive/$pkgver/wayback-$pkgver.tar.gz
	wayback-session-fix-sesscmd.patch
	"
options="!check" # no tests

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
