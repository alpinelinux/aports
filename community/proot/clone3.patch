 	if (status >= 0 && get_sysnum(parent, CURRENT) == PR_clone)
 		clone_flags = peek_reg(parent, CURRENT, SYSARG_1);
+        else if (status >= 0 && get_sysnum(parent, CURRENT) == PR_clone3)
