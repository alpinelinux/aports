# Maintainer: Stacy Harper <contact@stacyharper.net>
pkgname=sxmo-wlroots
pkgver=0.13.0.0
pkgrel=1
pkgdesc="Modular Wayland compositor library - Sxmo version"
url="https://gitlab.freedesktop.org/wlroots/wlroots"
license="MIT"
provides="wlroots"
arch="all !ppc64le !mips64" # blocked by libseat
makedepends="
	eudev-dev
	libcap-dev
	libinput-dev
	libseat-dev
	libxcb-dev
	libxkbcommon-dev
	mesa-dev
	meson
	ninja
	pixman-dev
	wayland-dev
	wayland-protocols
	xcb-util-image-dev
	xcb-util-renderutil-dev
	xcb-util-wm-dev
	xkeyboard-config
	xwayland-dev
	"
subpackages="$pkgname-dbg $pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~stacyharper/wlroots/archive/$pkgver.tar.gz
	0001-layer-shell-dont-set-committed-flag-if-the.patch::https://gitlab.freedesktop.org/wlroots/wlroots/-/merge_requests/3402.patch"

builddir="$srcdir"/wlroots-$pkgver
options="!check" # no test suite

build() {
	abuild-meson \
		-Dexamples=false \
		. build
	meson compile ${JOBS:+-j ${JOBS}} -C build
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C build
}

sha512sums="
