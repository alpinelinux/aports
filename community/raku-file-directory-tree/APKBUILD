# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=raku-file-directory-tree
pkgver=0.2
pkgrel=0
pkgdesc="Create and delete directory trees"
url="https://github.com/raku-community-modules/File-Directory-Tree"
arch="all"
license="Artistic-2.0"
depends="rakudo"
makedepends="moarvm-dev rakudo-dev"
checkdepends="perl-utils"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/raku-community-modules/File-Directory-Tree/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/File-Directory-Tree-$pkgver"
options="!archcheck" # Precompiled arch dependent files included (quiet noarch warning)

build() {
	RAKUDO_RERESOLVE_DEPENDENCIES=0 \
	/usr/share/rakudo/tools/install-dist.raku \
		--to=output --for=vendor
}

check() {
	prove -e 'raku -Ilib' --ext .rakutest
}

package() {
	mkdir -p "$pkgdir"/usr/share/rakudo
	cp -RT output "$pkgdir"/usr/share/rakudo/vendor

	install -Dvm644 META6.json README.md \
		-t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
ec52f3b151a3b517222c96f96c2977a55a095a3563831ab7d18737247dd066db335b34dc4abfc7a51802fdc046556368ba43d0c88b0f727ffb1e1a1e2bbafc7e  raku-file-directory-tree-0.2.tar.gz
"
