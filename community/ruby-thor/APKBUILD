# Contributor: Kevin Daudt <kdaudt@alpinelinux.org>
# Maintainer: Kevin Daudt <kdaudt@alpinelinux.org>
pkgname=ruby-thor
pkgver=1.5.0
pkgrel=0
pkgdesc="toolkit for building powerfull command-line interfaces"
url="http://whatisthor.com/"
arch="noarch"
license="MIT"
depends="ruby"
checkdepends="ruby-rspec"
options="!check" # requires simplecov / coverall
source="$pkgname-$pkgver.tar.gz::https://github.com/rails/thor/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/thor-$pkgver"

build() {
	gem build thor.gemspec
}

check() {
	rspec
}

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--bindir "$pkgdir/usr/bin" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		thor

	rm -r "$gemdir"/cache \
		"$gemdir"/extensions \
		"$gemdir"/doc
}

sha512sums="
48a64494eecd3ae1d1b0b7c487b639d759c38211139d96286535d96f967886e9d2eab952fd0edcf4e2ed762854fe8154a350272a2675cd1727000c7e6befedcd  ruby-thor-1.5.0.tar.gz
"
