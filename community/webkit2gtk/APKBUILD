	icu-dev
	libgcrypt-dev
	libjpeg-turbo-dev
	libnotify-dev
	libpng-dev
	libsecret-dev
	libsoup-dev
	libwebp-dev
	libxml2-dev
	libxslt-dev
	libxt-dev
	mesa-dev
	pango-dev
	paxmark
	ruby
	sqlite-dev
	"
replaces="webkit"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://webkitgtk.org/releases/webkitgtk-$pkgver.tar.xz
	fix-fast-memory-disabled.patch
	fix_armv6l.patch
	"

# secfixes:
