subpackages="$pkgname-dev $pkgname-lang $pkgname-dbg"
source="https://webkitgtk.org/releases/webkitgtk-$pkgver.tar.xz
	armv6kz.patch
	armv6-musttail.patch
	cloopfix.patch
	riscv64-no-wasm.patch
	"
builddir="$srcdir/webkitgtk-$pkgver"

