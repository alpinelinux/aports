# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=udisks2
pkgver=2.11.0
pkgrel=1
pkgdesc="daemon, tools and libraries to manipulate disks"
options="!check"
url="https://www.freedesktop.org/wiki/Software/udisks/"
arch="all"
license="GPL-2.0-or-later"
depends="dbus"
depends_dev="
	acl-dev
	gobject-introspection-dev
	libatasmart-dev
	libgudev-dev
	lvm2-dev
	polkit-dev
	"
makedepends="$depends_dev
	bash
	btrfs-progs-dev
	coreutils
	glib-dev
	gtk-doc
	intltool
	libblockdev-dev
	linux-headers
	"
subpackages="
	$pkgname-dev
	$pkgname-gtk-doc:gtkdoc:noarch
	$pkgname-doc
	$pkgname-lang
	$pkgname-libs
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-openrc
	$pkgname-systemd
	"
source="https://github.com/storaged-project/udisks/releases/download/udisks-$pkgver/udisks-$pkgver.tar.bz2
	udisks2.initd
	"
	# O_CLOEXEC.patch
builddir="$srcdir"/udisks-$pkgver

build() {
	CFLAGS="$CFLAGS -flto=auto" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-lvm2 \
		--enable-lvmcache \
		--enable-btrfs \
		--disable-static \
		--disable-zram \
		--with-systemdsystemunitdir=/usr/lib/systemd/system
	make
}

check() {
	make check
}

gtkdoc() {
	amove usr/share/gtk-doc
}

package() {
	make DESTDIR="$pkgdir" install
	install -Dm 755 "$srcdir/udisks2.initd" "$pkgdir/etc/init.d/udisks2"
	rm -f "$pkgdir"/usr/lib/*.a
}

libs() {
	pkgdesc="Dynamic library to access the udisks daemon"
	default_libs
	amove usr/lib/girepository*
}

sha512sums="
ddf7bbf6d71c100ea2787aa45d51ae84d8184d33d9e0c1c8824e3da1ca34814b3278f9f74a1aab7acc37efe3ed2b702404fbb9dc3733c0accbb366a74e7d3fe5  udisks-2.11.0.tar.bz2
beac2a8c5afe8ea7659dad967265875f443c1bffdb823b4a31fac35a8f7b40f9a1c95cceaae7971e28a703a9f1b8ffe00f49a28c84cf457980e9e8176e7ecc93  udisks2.initd
"
