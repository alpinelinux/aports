maintainer="team/gnome <kboykinov@teamcentrixx.com>"
pkgname=libcloudproviders
pkgver=0.4.0
pkgrel=0
pkgdesc="DBus API that allows cloud storage sync clients to expose their services"
url="https://gitlab.gnome.org/GNOME/libcloudproviders"
arch="all"
license="LGPL-3.0-or-later"
makedepends="
	gi-docgen
	gobject-introspection-dev
	meson
	vala
	"
checkdepends="dbus"
subpackages="
	$pkgname-dev
	$pkgname-doc
	"
source="https://download.gnome.org/sources/libcloudproviders/${pkgver%.*}/libcloudproviders-$pkgver.tar.xz"
options="!check" # no tests

build() {
	abuild-meson \
		-Ddocumentation=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
5c9c1e8733e6205830f93040398e6875fa62ef16b72ab1ee243ac12053f247b05a7615eed5f0edc4df75c0d94bcf154106ec2211301d6b373649db2fffc90076  libcloudproviders-0.4.0.tar.xz
"
