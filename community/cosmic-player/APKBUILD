# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-player
pkgver=1.0.0_beta9
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Media player for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-player"
# riscv64: too slow to build
arch="all !riscv64"
license="GPL-3.0-only"
depends="
	gst-plugins-good
"
makedepends="
	cargo
	clang-libclang
	glib-dev
	gst-plugins-base-dev
	gstreamer-dev
	just
	libxkbcommon-dev
	wayland-dev
"
options="net !check"  # fetch dependencies, no tests
source="
	$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-player/archive/refs/tags/epoch-$_upstreamver.tar.gz

	loongarch-libc.patch
"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release --frozen
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
1098cd24d4e7b796de107211274c8b2a209d726ebb58b0752512c585119311f2cc162063166e0777a1cb5c0804d7a5b990eac6798376cc87090658f71108d82b  cosmic-player-1.0.0_beta9.tar.gz
6b18e7e6ff807f35c91b4d357c088e85753dc812b59f9875da9b865b73fe078d1216284b6b16266e7b8c22ac1b7e282914aa0a7471d9753b1650aeabae543053  loongarch-libc.patch
"
