# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=weasyprint
pkgver=66.0
pkgrel=0
pkgdesc="A visual rendering engine for HTML and CSS that can export to PDF"
url="https://weasyprint.org"
arch="noarch"
license="BSD-3-Clause"
depends="
	harfbuzz-subset
	pango
	py3-brotli
	py3-cffi
	py3-cssselect2
	py3-fonttools
	py3-pillow
	py3-pydyf
	py3-pyphen
	py3-tinycss2
	py3-tinyhtml5
	py3-zopfli
	"
makedepends="
	py3-flit-core
	py3-gpep517
	"
checkdepends="
	font-dejavu
	ghostscript
	py3-pytest
	py3-pytest-xdist
	"
replaces="py-weasyprint py3-weasyprint"  # for backward compatibility
provides="py-weasyprint=$pkgver-r$pkgrel py3-weasyprint=$pkgver-r$pkgrel"  # for backward compatibility
subpackages="$pkgname-pyc"
source="
	https://files.pythonhosted.org/packages/source/w/weasyprint/weasyprint-$pkgver.tar.gz
	gc-segfault.patch
	"

# armv7: tests pass in ci and segfault on 3.23 builder, e.g.
# tests/draw/test_box.py::test_borders_box_sizing, test_margin_boxes
# tests/test_stacking.py::test_nested
# tests/test_stacking.py::test_line_breaking_nbsp
# x86: tests pass in ci and segfault on 3.23 builder, e.g.
# tests/draw/test_box.py::test_borders_box_sizing
# tests/test_stacking.py::test_nested
case "$CARCH" in
armv7|x86) options="!check" ;;
esac

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	# tests/test_api.py::test_cmap_rtl: fails on s390x only
	# tests/test_stacking.py::test_image_contexts segfault on riscv64 builder
	pytest \
		--deselect tests/draw/test_column.py::test_column_rule_normal \
		--deselect tests/draw/test_transform.py::test_2d_transform_1 \
		--deselect tests/draw/test_transform.py::test_2d_transform_2 \
		--deselect tests/draw/test_transform.py::test_2d_transform_3 \
		--deselect tests/draw/test_transform.py::test_2d_transform_4 \
		--deselect tests/draw/test_visibility.py::test_visibility_1 \
		--deselect tests/draw/test_visibility.py::test_visibility_3 \
		--deselect tests/draw/test_visibility.py::test_visibility_4 \
		--deselect tests/test_api.py::test_cmap_rtl \
		--deselect tests/test_stacking.py::test_image_contexts
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/weasyprint-$pkgver-py3-none-any.whl
}

sha512sums="
850996c6934156f4d4fca12cc052a8346b85aeadf1a3d99763e20a6ddabd2b93a39983615990e0e680a942c63c09563effa9b66abc5bf0c368963737ddf66264  weasyprint-66.0.tar.gz
25d0fd51c33900d0dd8ffa0c9ba5a030b1964f4c8eaec28936c895973f9ac545a58dbfdd0740180e7d3f4a855b84c0eff1d8657846ae1921558578530b35214d  gc-segfault.patch
"
