# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtimageformats
_pkgname=${pkgname/qt5-//}-everywhere-src
pkgver=5.12.1
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - QtImageFormats component"
url="http://qt-project.org/"
arch="all"
license="LGPL-2.0 with exceptions or GPL-3.0 with exceptions"
makedepends="qt5-qtbase-dev libmng-dev tiff-dev jasper-dev libwebp-dev"

case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/$_pkgname-$_V.tar.xz"

builddir="$srcdir"/$_pkgname-${_V%-*}

build() {
	cd "$builddir"
	qmake-qt5 && make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make install INSTALL_ROOT="$pkgdir"
}

sha512sums="1514c5d7a285d718fdf1f3ba11f00029551af70e8b7bd927e061c55a35fca6978164da2846f26b6d57a4c81af2a75eb3f8358f46fa74bd70ba3407aa3bbcb0e5  qtimageformats-everywhere-src-5.12.1.tar.xz"
