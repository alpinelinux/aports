maintainer="Paolo Barbolini <paolo.barbolini@m4ss.net>"
pkgname=cargo-zigbuild
pkgver=0.22.0
pkgrel=0
pkgdesc="Compile Cargo project with zig as linker"
url="https://github.com/rust-cross/cargo-zigbuild"
# limited by zig
arch="x86_64 aarch64"
license="MIT"
depends="zig"
makedepends="
	cargo
	cargo-auditable
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rust-cross/cargo-zigbuild/archive/refs/tags/v$pkgver.tar.gz"
# net: cargo fetch
options="net"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/cargo-zigbuild -t "$pkgdir"/usr/bin/

	install -Dm 644 README.md -t "$pkgdir"/usr/share/doc/"$pkgname"/
	install -Dm 644 LICENSE -t "$pkgdir"/usr/share/licenses/"$pkgname"/
}

sha512sums="
8d78ee425fd363871e3b0250a01072a002792cea1a7496906ddd9bc5f8dfcc62e07047811514e67101ca41e02e2acbb2ec0636b2cc93b8db298a90907cbdc1d7  cargo-zigbuild-0.22.0.tar.gz
"
