# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plasma-dialer
pkgver=21.06
pkgrel=0
pkgdesc="A dialer for Plasma Mobile"
# armhf blocked by extra-cmake-modules
# s390x and mips64 blocked by oxygen-sounds
arch="all !armhf !s390x !mips64"
url="https://invent.kde.org/plasma-mobile/plasma-dialer"
license="GPL-2.0-or-later"
depends="
	kirigami2
	oxygen-sounds
	telepathy-ofono
	"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	knotifications-dev
	kpeople-dev
	libphonenumber-dev
	libqofono-dev
	pulseaudio-qt-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	telepathy-qt-dev
	"
subpackages="$pkgname-lang"
source="https://download.kde.org/stable/plasma-mobile/$pkgver/plasma-dialer-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
c3f0ef52ee34ee43f8a6bca75af3d04da2d4ec3631d0459d16cb96e7b62e01e8c37107fe51e3da8c62df17c9970a98f5f4169cb6dfb2a6dcb784b0bae7c0ad72  plasma-dialer-21.06.tar.xz
"
