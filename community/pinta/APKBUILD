# Contributor: knuxify <knuxify@gmail.com>
# Maintainer: Liliana <me@iodomi.eu>
pkgname=pinta
pkgver=3.1.1
pkgrel=0
pkgdesc="Simple GTK# paint program"
url="https://www.pinta-project.com/"
arch="x86_64 aarch64 armv7"
license="MIT"
depends="
	dotnet10-runtime
	glycin-image-rs
"
makedepends="
	autoconf-archive
	dotnet10-sdk
	gettext-dev
	gtk4.0-dev
	intltool
	libadwaita-dev
"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://github.com/PintaProject/Pinta/releases/download/$pkgver/pinta-$pkgver.tar.gz
	props.patch
	"

prepare() {
	default_prepare
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
