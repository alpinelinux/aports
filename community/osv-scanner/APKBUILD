# Maintainer: kpcyrd <git@rxv.cc>
pkgname=osv-scanner
pkgver=1.3.0
pkgrel=1
pkgdesc="Vulnerability scanner written in Go which uses the data provided by https://osv.dev"
url="https://github.com/google/osv-scanner"
arch="all"
license="Apache-2.0"
makedepends="go"
options="net"
source="https://github.com/google/osv-scanner/archive/v$pkgver/osv-scanner-$pkgver.tar.gz"

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

prepare() {
	default_prepare

	# workaround to not have a gitignore for tests
	git init .
}

build() {
	mkdir build
	go build -o build/ ./cmd/...
}

check() {
	go test ./...
}

package() {
	install -Dm755 ./build/osv-scanner -t "$pkgdir"/usr/bin/
}

sha512sums="
1ba488c4e807ffd46099a6b0afe280dfa5dcd36a3712163c591b53ed1ccc973e7dac17966a14fd01a2e8ba2c7542594f961b3a2a5dd7ec26db643a84ada59c28  osv-scanner-1.3.0.tar.gz
"
