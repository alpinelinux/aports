# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-terminal
pkgver=1.18.0
pkgrel=0
pkgdesc="MATE terminal emulator"
url="https://github.com/mate-desktop/mate-terminal"
arch="all"
license="GPL2"
depends="mate-common yelp-tools mate-desktop"
depends_dev=""
makedepends="$depends_dev libtool intltool dconf-dev libsm-dev itstool vte3-dev
	mate-desktop-dev libxml2-utils"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

sha512sums="e1aea70aaafaeb646c454d88dc8d9aacfa09625199eae61a8a8c8b79e147f913036e72446ea9738f0c971bac7d24837ba62eb0ddbdf7e073b025b0c0c9dbeb79  mate-terminal-1.18.0.tar.xz"
