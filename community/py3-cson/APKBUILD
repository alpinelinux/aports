# Contributor: John Vogel <jvogel@stygian.me>
# Maintainer: John Vogel <jvogel@stygian.me>
maintainer="John Vogel <jvogel@stygian.me>"
pkgname=py3-cson
_pkgname=pycson
pkgver=0.8
pkgrel=0
pkgdesc="A python parser for the Coffeescript Object Notation (CSON)"
url="https://github.com/avakar/pycson"
arch="noarch"
license="MIT"
depends="
	py3-speg
	python3
	"
makedepends="py3-gpep517 py3-setuptools"
checkdepends="py3-pytest"
subpackages="$pkgname-doc $pkgname-pyc"
source="https://github.com/avakar/pycson/archive/$pkgver/pycson-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
	install -Dm644 -t "$pkgdir/usr/share/doc/$pkgname" README.md
}

sha512sums="
873f1b0d825ad318ca5c62fccbdd12a8738c8b9ff58b4fe27ea611aa47575e24218b5010f6d6b12f5ebda835c2778dd15472ca5c73b634b3004aa08496f45328  pycson-0.8.tar.gz
"
