# Contributor: Siva Mahadevan <me@svmhdvn.name>
# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=kakoune-lsp
pkgver=19.0.1
pkgrel=0
pkgdesc="Kakoune Language Server Protocol Client"
url="https://github.com/kakoune-lsp/kakoune-lsp"
arch="all"
license="Unlicense OR MIT"
makedepends="cargo cargo-auditable"
source="$pkgname-$pkgver.tar.gz::https://github.com/kakoune-lsp/kakoune-lsp/archive/refs/tags/v$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen --release
}

package() {
	install -Dvm755 target/release/kak-lsp -t "$pkgdir"/usr/bin/
}

sha512sums="
41e24de32a79d5433ba28a8da6932574409d5a174ec48a0f6d33511642647834de4550fa183290e9ef0fcf01b1abef10d7fbf03c0079c7da2a536c15d4f74ee4  kakoune-lsp-19.0.1.tar.gz
"
