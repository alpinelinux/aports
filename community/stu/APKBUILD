# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
maintainer="Matthias Ahouansou <matthias@ahouansou.cz>"
pkgname=stu
pkgver=0.7.6
pkgrel=0
pkgdesc="TUI explorer for S3 compatible object stores"
url="https://lusingander.github.io/stu/"
arch="all"
license="MIT"
makedepends="
	cargo-auditable
	clang-libclang
	cmake
	samurai
"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/lusingander/stu/archive/refs/tags/v$pkgver.tar.gz"
options="net" # cargo dependencies

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm 755 target/release/stu "$pkgdir"/usr/bin/stu

	install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

sha512sums="
487cbca6dd6b9f8951355a26ae8faaa1b236563f8244e8e7088d835d5ef1eb6d643d9db5ec55d88d141907158bd4b10892b300764fe29208292b19563b1fe5a7  stu-0.7.6.tar.gz
"
