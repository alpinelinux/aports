# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=py3-pygithub
_pkgname=PyGithub
pkgver=2.8.1
pkgrel=0
pkgdesc="Typed interactions with the GitHub API v3"
url="https://github.com/PyGithub/PyGithub"
arch="noarch"
license="LGPL-3.0-or-later"
depends="
	py3-cryptography
	py3-jwt
	py3-pynacl
	py3-requests
	py3-typing-extensions
	py3-urllib3
	"
checkdepends="
	py3-httpretty
	py3-pytest
	py3-responses
	"
makedepends="
	py3-gpep517
	py3-setuptools_scm
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="https://github.com/PyGithub/PyGithub/archive/v$pkgver/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/pygithub-$pkgver-py3-none-any.whl
}

sha512sums="
1670a4d95059e38a05d9e32c48b5e5bab1b41046a83d2698b40e7e9deb56273ee6f8cb9fefd5efe6b7b36ccb8c5c7ac13ba50c79ba1abe22144d7244d56d9a84  PyGithub-2.8.1.tar.gz
"
