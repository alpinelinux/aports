build() {
	CFLAGS="$CFLAGS -O2 -flto=auto" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-rpath \
		--disable-static
	make
	make cli/wvtest
}

check() {
	cli/wvtest --default --short --no-extras
}

package() {
	make DESTDIR="$pkgdir" install
}

