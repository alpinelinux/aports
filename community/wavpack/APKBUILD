build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-tests \
		--disable-static
	make
}

check() {
	cli/wvtest --default --short --no-extras
}

package() {
	make DESTDIR="$pkgdir" install
}

