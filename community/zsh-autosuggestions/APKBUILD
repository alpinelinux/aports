pkgname=zsh-autosuggestions
pkgver=0.6.0
pkgrel=0
pkgdesc="Fish-like autosuggestions for Zsh"
url="https://github.com/zsh-users/zsh-autosuggestions"
arch="noarch"
license="MIT"
depends="zsh"
source="$pkgname-$pkgver.tar.gz::https://github.com/zsh-users/$pkgname/archive/v$pkgver.tar.gz"

package() {
	install -D ${pkgname}.zsh ${pkgname}.plugin.zsh -t \
		 "$pkgdir/usr/share/zsh/plugins/$pkgname"
}

sha512sums="c18336a2a797c58e7a7f69258e9ab7dd63ff9dc7a924b202ba39e28a1bde1369037f355c0753faefa5d5428e037c952054ffbf36a8e8248101c376012df74d3e  zsh-autosuggestions-0.6.0.tar.gz"
