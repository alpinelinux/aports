# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=opus-tools
pkgver=0.1.10
pkgrel=0
pkgdesc="Collection of tools for Opus audio codec"
url="https://wiki.xiph.org/Opus-tools"
arch="all"
license="BSD-2-Clause"
depends=""
makedepends="libogg-dev opus-dev flac-dev linux-headers"
subpackages="$pkgname-doc"
source="https://archive.mozilla.org/pub/opus/opus-tools-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--enable-assertions
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="4ead97b9fe4658968a4b5cbe4bde5e2d8cbfaaea18dd0d817597cc6b6b11f26937b9eee7358ade63568f0213131aa80ecbed169d1b3885980a556871a4a7fe98  opus-tools-0.1.10.tar.gz"
