# Maintainer: Marian Buschsieweke <marian.buschsieweke@posteo.net>
pkgname=py3-pypng
pkgver=0.20250521.0
pkgrel=0
pkgdesc="Pure Python PNG image encoder/decoder"
url="https://gitlab.com/drj11/pypng"
arch="noarch"
license="MIT"
depends="python3"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.bz2::https://gitlab.com/drj11/pypng/-/archive/pypng-$pkgver/pypng-pypng-$pkgver.tar.bz2"
builddir="$srcdir/pypng-pypng-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	cd code
	../.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl

	install -Dm644 LICENCE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
sha512sums="
d55c41a16c46909fb7952df0cdca51556a0dc9e1cee8c3b626e5104062a6613171c2f9048a424d784fa0dad80b8f377594a2aa53cca8d2fc4d332657e1f95f60  py3-pypng-0.20250521.0.tar.bz2
"
