pkgname=hare-lex
pkgver=0.26.0.0
pkgrel=0
pkgdesc="General purpose lexical tokenization machinery for Hare"
url="https://sr.ht/~stacyharper/hare-lex"
arch="noarch !armhf !ppc64le !s390x !armv7 !x86 !loongarch64" # hare
license="MPL-2.0"
makedepends="hare haredo"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~stacyharper/hare-lex/archive/$pkgver.tar.gz"

check() {
	haredo check
}

package() {
	DESTDIR="$pkgdir" PREFIX=/usr haredo install
}

