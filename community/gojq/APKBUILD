# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=gojq
pkgver=0.12.13
pkgrel=2
pkgdesc="Pure Go implementation of jq"
url="https://github.com/itchyny/gojq"
license="MIT"
arch="all"
makedepends="go"
subpackages="$pkgname-zsh-completion"
source="https://github.com/itchyny/gojq/archive/v$pkgver/gojq-$pkgver.tar.gz"

export CGO_ENABLED=0
export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build ./cmd/gojq
}

check() {
	go test ./...
}

package() {
	install -Dm755 gojq -t "$pkgdir"/usr/bin/

	install -Dm644 _gojq -t "$pkgdir"/usr/share/zsh/site-functions/
}

sha512sums="
19a65096a7a0b2992e4718e8763d40c4d41d94ef2123e4a155b8d6d26b890b783bbcfc10c925fb6fb22d0cf0df97469c614138b0ee3e7d821eef1028ee2fd28c  gojq-0.12.13.tar.gz
"
