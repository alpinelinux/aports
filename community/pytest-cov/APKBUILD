# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=pytest-cov
pkgver=2.7.1
pkgrel=0
pkgdesc="Pytest plugin for measuring coverage."
url="https://github.com/pytest-dev/pytest-cov"
arch="noarch"
license="MIT"
depends="pytest py-coverage"
makedepends="python2 python3 py-setuptools py3-setuptools"
subpackages="py3-${pkgname}:_py3 py2-${pkgname}:_py2"
source="$pkgname-$pkgver.tar.gz::https://github.com/pytest-dev/pytest-cov/archive/v$pkgver.tar.gz"

build() {
	python2 setup.py build
	python3 setup.py build
}

check() {
	python2 setup.py test
	python3 setup.py test
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python=$1
	pkgdesc="$pkgdesc - $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir" # required
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	_py python2
}

_py3() {
	_py python3
}

sha512sums="bb2bc5be49b3c2f56a36b6396d6b1a6734e86fb0bf1c2ef29bf8dbc95dcb9364c6deb1525529d46f4ec0ffa6899ef0e94b5f76e5ed892b0a092e69ad6c6e080e  pytest-cov-2.7.1.tar.gz"
