# Contributor: k0r10n <k0r10n.dev@gmail.com>
# Contributor: Ivan Tham <pickfire@riseup.net>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=extra-cmake-modules
pkgver=5.64.0
pkgrel=0
pkgdesc="Extra CMake modules"
url="https://projects.kde.org/projects/kdesupport/extra-cmake-modules"
arch="noarch"
license="BSD-3-Clause"
depends="cmake"
makedepends="py3-sphinx"
checkdepends="qt5-qtbase-dev qt5-qtquickcontrols2-dev"
subpackages="$pkgname-doc"
source="http://download.kde.org/stable/frameworks/${pkgver%.*}/extra-cmake-modules-$pkgver.tar.xz
	fix-tests.patch::https://github.com/KDE/extra-cmake-modules/commit/d2810741c2166354d7c95d4101eea52035d4fdf5.patch
	"

prepare() {
	default_prepare

	mkdir "$builddir"/build
}

build() {
	cd "$builddir"/build
	cmake "$builddir" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTING=ON \
		-DSphinx_BUILD_EXECUTABLE=/usr/bin/sphinx-build
	make
}

check() {
	cd "$builddir"/build
	# Broken tests
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "(KDEFetchTranslations|KDEInstallDirsTest.relative_or_absolute_usr|KDEInstallDirsTest.relative_or_absolute_qt)"
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" make install/fast
}

sha512sums="81649a1fbe148eab56ff9147b412303112376343c84767139908b9f39e77debcbbf6b8fe2c1edf3151d3556ab9a826eef9b893cc1ef679d0b5cb37096f23fa44  extra-cmake-modules-5.64.0.tar.xz
75a303ea93a229f53991775dabe5b8ab7b67248dc66ff3d14fb21960847aa5fcdd8061f04531f2e100e8e89e576085711d169181bbea6ab94d98c2afd54167f4  fix-tests.patch"
