maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=poco
pkgver=1.15.0
pkgrel=0
pkgdesc="C++ class libraries for building network- and internet-based applications"
url="https://pocoproject.org/"
arch="all"
license="BSL-1.0"
depends_dev="
	expat-dev
	libpng-dev
	libpq-dev
	mariadb-connector-c-dev
	openssl-dev
	pcre2-dev
	sqlite-dev
	unixodbc-dev
	zlib-dev
	"
makedepends="$depends_dev
	chrpath
	cmake
	linux-headers
	samurai
	utf8proc-dev
	"
subpackages="
	$pkgname-bin
	$pkgname-dev
	"
source="https://pocoproject.org/releases/poco-$pkgver/poco-$pkgver-all.tar.gz"
options="!check" # No testsuite

builddir="$srcdir/$pkgname-$pkgver-all"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPOCO_UNBUNDLED=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

bin() {
	amove usr/bin
}

sha512sums="
f36f265cf2833d51b506423b8818bda5816ecf41cb92cc850337087dbb1828b95c242bb68044d0f6a3f3d8d4d6bd18eda5bdd3191539879e132f27aa410a9e94  poco-1.15.0-all.tar.gz
"
