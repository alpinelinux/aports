# Contributor: Newbyte <newbie13xd@gmail.com>
maintainer="team/phosh <newbie13xd@gmail.com>"
pkgname=phosh-mobile-settings
pkgver=0.52.0
pkgrel=1
pkgdesc="Settings app for mobile specific things"
url="https://gitlab.gnome.org/World/Phosh/phosh-mobile-settings"
# blocked by phosh
arch="all !armhf !s390x"
license="GPL-3.0-or-later"
depends="
	phoc-schemas
	phosh-schemas
	"
makedepends="
	cellbroadcastd-dev
	desktop-file-utils
	feedbackd-dev
	glib-dev>=2.62
	gmobile-dev
	gnome-desktop-dev
	gsound-dev
	gtk4.0-dev
	json-glib-dev
	libadwaita-dev
	libportal-dev
	lm-sensors-dev
	meson
	phosh-dev
	pulseaudio-dev
	yaml-dev
	"
checkdepends="xvfb-run gsettings-desktop-schemas phosh"
subpackages="
	$pkgname-lang
	$pkgname-dbg
	"
source="https://sources.phosh.mobi/releases/phosh-mobile-settings/phosh-mobile-settings-${pkgver/_/.}.tar.xz"
builddir="$srcdir/$pkgname-${pkgver/_/.}"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	xvfb-run meson test --print-errorlogs --suite unit -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild --skip-subprojects -C output
}

sha512sums="
f11cfa7f6ef1725a80665f92873861e55661feed65aaee8e95708ce9b8b06ac937dfd08ed28faefd1a019c97e8cc444df39e30d3bb0817364689437232beb619  phosh-mobile-settings-0.52.0.tar.xz
"
