# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=caja-extensions
pkgver=1.19.0
pkgrel=0
pkgdesc="Set of extensions for Caja file manager"
url="https://github.com/mate-desktop/caja-extensions"
arch="all"
license="GPL-2.0"
depends="caja"
makedepends="glib-dev gtk+3.0-dev caja-dev dconf-dev
	mate-desktop-dev"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-sendto \
		--enable-wallpaper \
		--enable-open-terminal
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="de224b5dd66a7d72627cd9d63405f06d2f0dbc3b821caa0df82186a635d67a33cde216d671a0979093bc0e44edd8215cfabff55969190cdf9178fa2e2dd3ce69  caja-extensions-1.19.0.tar.xz"
