# Maintainer: team/gnome <pabloyoyoista@postmarketos.org>
pkgname=libshumate
pkgver=1.5.3
pkgrel=0
pkgdesc="GTK4 widget to display maps"
url="https://gitlab.gnome.org/GNOME/libshumate"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	gobject-introspection-dev
	gperf
	gtk4.0-dev
	json-glib-dev
	libsoup3-dev
	meson
	protobuf-c-dev
	vala
	"
checkdepends="dbus mesa-dri-gallium xvfb-run"
subpackages="$pkgname-dev $pkgname-lang"
source="https://gitlab.gnome.org/GNOME/libshumate/-/archive/$pkgver/libshumate-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=false \
		-Dvector_renderer=true \
		. output
	meson compile -C output
}

check() {
	dbus-run-session \
		xvfb-run -a \
		meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3a62bcdc3221f7f1c2a82dc566ab8faa1fc1d29e507e175112fe30ea9ca85456f85b961c9f2be7a3c081864ccce9902774aa988eb300793a0afa634944935793  libshumate-1.5.3.tar.gz
"
