maintainer="team/gnome <achill@achill.org>"
pkgname=libshumate
pkgver=1.5.2
pkgrel=0
pkgdesc="GTK4 widget to display maps"
url="https://gitlab.gnome.org/GNOME/libshumate"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	gobject-introspection-dev
	gperf
	gtk4.0-dev
	json-glib-dev
	libsoup3-dev
	meson
	protobuf-c-dev
	vala
	"
checkdepends="dbus mesa-dri-gallium xvfb-run"
subpackages="$pkgname-dev $pkgname-lang"
source="https://gitlab.gnome.org/GNOME/libshumate/-/archive/$pkgver/libshumate-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=false \
		-Dvector_renderer=true \
		. output
	meson compile -C output
}

check() {
	dbus-run-session \
		xvfb-run -a \
		meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
6e409b73b587d89746c358dd7f166d29d2782bae6c34d0b9614037ff015397a515b67002d3a1f77a68b9a78175908bf9a71937e2ca2a5b785104e1487755be1d  libshumate-1.5.2.tar.gz
"
