	linux-headers
	zlib-dev
	"
source="https://github.com/aligrudi/fbvnc/archive/$_gitrev/fbvnc-$_gitrev.tar.gz"
builddir="$srcdir/$pkgname-$_gitrev"
options="!check" # no test suite

build() {
	make
}

package() {
	install -Dvm755 fbvnc -t "$pkgdir"/usr/bin/
}

