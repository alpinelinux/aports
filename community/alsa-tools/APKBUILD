pkgname=alsa-tools
pkgver=1.2.15
pkgrel=1
pkgdesc="Advanced tools for certain sound cards"
url="https://alsa-project.org/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	alsa-lib-dev
	autoconf
	automake
	bash
	fltk-dev
	gtk+3.0-dev
	gtk4.0-dev
	libtool
	"
options="!check" # No tests
subpackages="$pkgname-doc"
source="https://alsa-project.org/files/pub/tools/alsa-tools-$pkgver.tar.bz2
	001-disable-qt-gtk2.patch
	002-tidy-seq-makefile.patch
	"

build() {
	make CONFIGURE_ARGS="--prefix=/usr" configure
}

package() {
	make DESTDIR="$pkgdir" install
}

