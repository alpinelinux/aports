+    else:
+        out = call['stdout']
+
+    for line in out.splitlines():
+        if 'Upgrading' in line:
+            name = line.split(' ')[2]
+            _oldversion = line.split(' ')[3].strip('(')
+            newversion = line.split(' ')[5].strip(')')
+            ret[name] = newversion
+
+    return ret
