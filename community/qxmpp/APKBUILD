maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qxmpp
pkgver=1.13.0
pkgrel=0
pkgdesc="Cross-platform C++ XMPP client and server library"
arch="all"
url="https://invent.kde.org/libraries/qxmpp"
license="LGPL-2.1-or-later"
makedepends="
	cmake
	doxygen
	graphviz
	libomemo-c-dev
	qca-qt6-dev
	qt6-qtbase-dev
	qt6-qt5compat-dev
	samurai
	"
source="https://download.kde.org/unstable/qxmpp/qxmpp-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF \
		-DBUILD_DOCUMENTATION=ON \
		-DBUILD_OMEMO=ON
	cmake --build build
}

check() {
	# tst_qxmppiceconnection and tst_qxmpptransfermanager require a network connection
	ctest --test-dir build -E "tst_qxmpp(iceconnection|transfermanager)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
88182d6c7756eb7ad67bda23aff6de5ec6b2a6855751772a90a8d0b421ae3f8ae87226be3a01518253d66df61870e0bb8b2ec2e10d94a2f57c66958e7149c200  qxmpp-1.13.0.tar.xz
"
