maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qxmpp
pkgver=1.14.0
pkgrel=0
pkgdesc="Cross-platform C++ XMPP client and server library"
arch="all"
url="https://invent.kde.org/libraries/qxmpp"
license="LGPL-2.1-or-later"
makedepends="
	cmake
	doxygen
	graphviz
	gstreamer-dev
	libomemo-c-dev
	qca-qt6-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	samurai
	"
source="https://download.kde.org/unstable/qxmpp/qxmpp-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF \
		-DBUILD_DOCUMENTATION=ON \
		-DBUILD_OMEMO=ON \
		-DWITH_GSTREAMER=ON
	cmake --build build
}

check() {
	# tst_qxmppiceconnection and tst_qxmpptransfermanager require a network connection
	ctest --test-dir build -E "tst_qxmpp(iceconnection|transfermanager|callmanager)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5bf17d2ebbf4d4ddea84ecf8f2c52f3bc8a8e613c2949357a0ad3407ff0f4776f4398c8777fe4bb41d0d9d8128b4b82830208c355c9a8b4607f9ecf82f106e0b  qxmpp-1.14.0.tar.xz
"
