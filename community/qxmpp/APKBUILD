maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qxmpp
pkgver=1.14.1
pkgrel=0
pkgdesc="Cross-platform C++ XMPP client and server library"
arch="all"
url="https://invent.kde.org/libraries/qxmpp"
license="LGPL-2.1-or-later"
makedepends="
	cmake
	doxygen
	graphviz
	gstreamer-dev
	libomemo-c-dev
	qca-qt6-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	samurai
	"
source="https://download.kde.org/unstable/qxmpp/qxmpp-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF \
		-DBUILD_DOCUMENTATION=ON \
		-DBUILD_OMEMO=ON \
		-DWITH_GSTREAMER=ON
	cmake --build build
}

check() {
	# tst_qxmppiceconnection and tst_qxmpptransfermanager require a network connection
	ctest --test-dir build -E "tst_qxmpp(iceconnection|transfermanager|callmanager)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e094328057bda230cc5ddf4cffff7e0f4e7d03cf9d6b2b7b6f2e47e6ae01648d3014752e1dcde9f38f3a2bce86b9265b01eed8c702a666685af7e8e508140056  qxmpp-1.14.1.tar.xz
"
