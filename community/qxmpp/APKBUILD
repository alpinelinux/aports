maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qxmpp
pkgver=1.11.3
pkgrel=0
pkgdesc="Cross-platform C++ XMPP client and server library"
arch="all"
url="https://github.com/qxmpp-project/qxmpp"
license="LGPL-2.1-or-later"
makedepends="
	cmake
	doxygen
	graphviz
	libomemo-c-dev
	qca-qt6-dev
	qt6-qtbase-dev
	qt6-qt5compat-dev
	samurai
	"
source="https://download.kde.org/unstable/qxmpp/qxmpp-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF \
		-DBUILD_DOCUMENTATION=ON \
		-DBUILD_OMEMO=ON
	cmake --build build
}

check() {
	# tst_qxmppiceconnection and tst_qxmpptransfermanager require a network connection
	ctest --test-dir build -E "tst_qxmpp(iceconnection|transfermanager)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c6d63cc954192322fa7b9d49bd160c289cd87a133ab41c09b224d6338af3efe9a90af7c8964dcdfdbfcb5fbb318969897d309e95d258e3448cfa4e0bec83d20c  qxmpp-1.11.3.tar.xz
"
