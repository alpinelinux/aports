# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer: Stefan Wagner <stw@bit-strickerei.de>
pkgname=avrdude
pkgver=6.3
pkgrel=0
pkgdesc="Download/upload/manipulate the ROM and EEPROM contents of AVR microcontrollers"
url="http://www.nongnu.org/avrdude/"
arch="x86_64"
license="GPL"
depends=""
depends_dev=""
makedepends="libftdi-dev libusb-compat-dev libelf-dev byacc flex linux-headers"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://download.savannah.gnu.org/releases/avrdude/${pkgname}-${pkgver}.tar.gz"

_builddir="$srcdir/${pkgname}-${pkgver}"
build() {
  cd "$_builddir"
  ./configure --mandir=/usr/share/man --prefix=/usr --sysconfdir=/etc || return 1
  make || return 1
}

package() {
  cd "$_builddir"
  make DESTDIR="$pkgdir" install || return 1
}

