# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=py3-pypandoc
pkgver=1.16.2
pkgrel=0
pkgdesc="Thin wrapper for pandoc"
url="https://github.com/NicklasTegner/pypandoc"
arch="aarch64 x86_64" # pandoc
license="MIT"
depends="python3 pandoc"
makedepends="py3-gpep517 py3-poetry-core"
options="!check" # missing pandoc-citeproc
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/p/pypandoc/pypandoc-$pkgver.tar.gz"
builddir="$srcdir/pypandoc-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 setup.py test
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/pypandoc-*.whl
}

sha512sums="
8f9ea06ee75bd326e8cecaf5fc616714d1aa3a81b62032fd2bf9b558768b4028be1c3997e0f28fdf2423a8261ac9baac714d69ad48ac655ed464d94a8f81f80d  pypandoc-1.16.2.tar.gz
"
