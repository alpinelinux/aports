# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=lab
pkgver=0.16.0
pkgrel=0
pkgdesc="Extends git with extra features for GitLab"
url="https://github.com/zaquestion/lab"
arch="all"
license="CC0-1.0"
makedepends="go"
options="net"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion:bashcomp:noarch
	$pkgname-zsh-completion:zshcomp:noarch
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/zaquestion/lab/archive/v$pkgver.tar.gz"

builddir="$srcdir/src/github.com/zaquestion/lab"

prepare() {
	mkdir -p "${builddir%/*}"
	mv $pkgname-$pkgver "$builddir"
	default_prepare
}

build() {
	export GOPATH="$srcdir"
	make
	./lab completion bash > lab.bash
	./lab completion zsh > _lab.zsh
}

check() {
	make test
}

package() {
	make PREFIX="$pkgdir"/usr install
}

bashcomp() {
	depends=""
	pkgdesc="Bash completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel bash-completion"

	install -Dm644 "$builddir"/lab.bash \
		"$subpkgdir"/usr/share/bash-completion/completions/$pkgname
}

zshcomp() {
	depends=""
	pkgdesc="Zsh completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel zsh"

	install -Dm644 "$builddir"/_lab.zsh \
		"$subpkgdir"/usr/share/zsh/site-functions/_$pkgname
}

sha512sums="8036dd3921f2e02433274a4e3dc215e8afc604c385753105c8640f2795f4566641a30a27ce8ddb99496bab5101e573a7607ca3990c4e6587834a6ecf061e92f2  lab-0.16.0.tar.gz"
