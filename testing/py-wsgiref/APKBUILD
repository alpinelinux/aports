# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-wsgiref
_pkgname=wsgiref
pkgver=0.1.2
pkgrel=1
pkgdesc="A WSGI (PEP 333) Reference Library"
url="https://cheeseshop.python.org/pypi/wsgiref"
arch="noarch"
license="Python"
depends="python2"
depends_dev=""
makedepends="python2-dev py-setuptools"
install=""
subpackages=""
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.zip"

builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
}

build() {
	cd "$builddir"
	python2 setup.py build
}

package() {
	cd "$builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="d6a8723cf6b94e712630cec8667d15d77551ea3005bed6e57079ea3c0fa898328c7f9aafc6bdb3c5f0545f82ec147bea90a5fa65f0889dee199ed7b24d9ff2ff  wsgiref-0.1.2.zip"
