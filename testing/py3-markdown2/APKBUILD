# Maintainer: Marian Buschsieweke <marian.buschsieweke@posteo.net>
pkgname=py3-markdown2
pkgver=2.5.4
pkgrel=0
pkgdesc="fast and complete implementation of Markdown in Python"
url="https://github.com/trentm/python-markdown2"
arch="noarch"
license="MIT"
depends="
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-latex2mathml
	"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/m/markdown2/markdown2-$pkgver.tar.gz"
builddir="$srcdir/markdown2-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	# running custom test script that is incompatible with pytest
	.testenv/bin/python3 test/test.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
c118a7b12e29f44256386297847556c550fd927b4d7a00786f9e93a67b88870dbe52e0481f3af6368be619c5b6c93a061be33915038738876d0f4a6a6eb05b57  markdown2-2.5.4.tar.gz
"
