# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=libsigsegv
pkgver=2.11
pkgrel=1
pkgdesc="Page fault detection library"
url="http://www.gnu.org/software/libsigsegv/"
arch="all"
license="GPL-2.0"
subpackages="$pkgname-dev"
source="https://ftp.gnu.org/gnu/libsigsegv/libsigsegv-$pkgver.tar.gz
	0001-Avoid-use-of-glibc-internal-macros.patch
	"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	make DESTDIR="$pkgdir" \
		-C "$builddir" install
}

