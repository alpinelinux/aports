# Contributor: Alexander Sack <asac@pantacor.com>
# Maintainer: Alexander Sack <asac@pantacor.com>
pkgname="tpm2-tools"
pkgver="4.1_rc1"
pkgrel=0
pkgdesc="TPM2 Tools"
url="https://github.com/tpm2-software/tpm2-tools/"
arch="all"
license="BSD-2-Clause"
makedepends="tpm2-tss-dev tpm2-tss-rc tpm2-tss-tctildr
        automake autoconf autoconf-archive libtool openssl-dev
	doxygen linux-headers curl-dev"
subpackages="$pkgname-doc"
_sourcever="${pkgver/_/-}"
source="https://github.com/tpm2-software/tpm2-tools/releases/download/$_sourcever/tpm2-tools-$_sourcever.tar.gz"
builddir="$srcdir/$pkgname-$_sourcever"
options="!check"


prepare() {
	./bootstrap
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="db3345d0986802bda2e554ad341ae426de97275785b10620fcd4f640b10610ffb1b537172feb32c95f795a659e50d9bd91a24621a1cbbb6b9a267483723e3226  tpm2-tools-4.1-rc1.tar.gz"
