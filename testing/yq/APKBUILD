pkgname=yq
pkgver=2.2.0
pkgrel=0
pkgdesc="yq is a portable command-line YAML processor"
url="https://github.com/mikefarah/yq"
arch="noarch"
license="MIT"
options="!check"
depends=""
source="https://github.com/mikefarah/yq/releases/download/$pkgver/yq_linux_amd64"
builddir="$srcdir/"

package() {
    mkdir -p "$pkgdir"/usr/bin
    mv "$builddir"yq_linux_amd64 "$pkgdir"/usr/bin/yq
    chmod a+x "$pkgdir"/usr/bin/yq
}

sha512sums="7f5162c73e7ba4620964fd7d33082780c2c0c01153694ab77e094d01a360047902343c1e7bfc3a2f43c3152dc82c4a5b1ad3bef4fca1d8200cbc4c560f310e8e  yq_linux_amd64"
