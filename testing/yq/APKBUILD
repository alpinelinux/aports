pkgname=yq
pkgver=2.2.1
pkgrel=0
pkgdesc="yq is a portable command-line YAML processor"
url="https://github.com/mikefarah/yq"
arch="noarch"
license="MIT"
options="!check"
depends=""
source="https://github.com/mikefarah/yq/releases/download/$pkgver/yq_linux_amd64"
builddir="$srcdir/"

package() {
    mkdir -p "$pkgdir"/usr/bin
    mv "$builddir"yq_linux_amd64 "$pkgdir"/usr/bin/yq
    chmod a+x "$pkgdir"/usr/bin/yq
}

sha512sums="2be7f80d3e022067000966f78dfac7601504e14b7500aa7b56833b84bd11a9907d699e2a74f7934c6ccc1f82646abbb4f1c29fe4bc0d31a086afd862afb65520  yq_linux_amd64"
