pkgname=drv
pkgver=1.0
pkgrel=0
pkgdesc="Read the Word of God from your terminal"
url="https://github.com/BryceVandegrift/drv"
arch="all"
license="Unlicense"
depends="less"
makedepends="readline-dev"
options="!check" # no test suite
source="$pkgname-$pkgver.tar.gz::https://github.com/BryceVandegrift/drv/archive/refs/tags/v$pkgver.tar.gz"

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX="/usr" install
}

