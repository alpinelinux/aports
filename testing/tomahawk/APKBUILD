# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=tomahawk
pkgver=0.8.4
pkgrel=0
pkgdesc="A Music Player App written in C++/Qt"
url="http://tomahawk-player.org/"
arch=""
license="GPL3"
depends=""
depends_dev="qt-dev phonon-dev sqlite-dev boost-dev gnutls-dev qtkeychain-dev
	libechonest-dev lucene++-dev taglib-dev qca-dev attica-dev quazip-dev
	liblastfm-dev qtkeychain-dev"
makedepends="$depends_dev cmake sparsehash websocket++ automoc4 linux-headers
	bsd-compat-headers"
install=""
subpackages="$pkgname-dev"
source="http://download.tomahawk-player.org/tomahawk-$pkgver.tar.bz2
	musl-fixes.patch"

_builddir="$srcdir"/tomahawk-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	mkdir "$_builddir"/build
	cd "$_builddir"/build
	cmake "$_builddir" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib/${pkgname} \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=Release \
		|| return 1

}

package() {
	cd "$_builddir"/build
	make DESTDIR=${pkgdir} install
}

