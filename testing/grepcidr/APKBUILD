pkgname=grepcidr
pkgver=2.0
pkgrel=0
pkgdesc="Filter IPv4 and IPv6 addresses matching CIDR patterns"
url="http://www.pc-tools.net/unix/grepcidr/"
arch="x86_64"
license="GPL3"
depends=""
makedepends=""
install=""
subpackages=""
options="!check"
source="http://www.pc-tools.net/files/unix/grepcidr-2.0.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	mkdir -p "$pkgdir"/bin
	mv "$builddir"/grepcidr "$pkgdir"/bin
}

