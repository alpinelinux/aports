pkgname=py-pympler
_pkgname=pympler
__pkgname=Pympler
pkgver=0.5
pkgrel=0
pkgdesc="A development tool to measure, monitor and analyze the memory behavior\
 of Python objects."
url="http://pythonhosted.org/Pympler/"
arch="noarch"
license="MIT"
makedepends="py-setuptools py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://pypi.python.org/packages/9e/4b/04c8338a9a2a22645ada1d52c59df2b81d644400f6cca10f63072e5f60cd/$__pkgname-$pkgver.tar.gz#md5=831d12beca2ff2ea56407c5ed8ffc4b0"
builddir="$srcdir/$__pkgname-$pkgver"
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2 $pkgname-doc"

check() {
	cd "$builddir"
	PYTHONPATH="$PYTHONPATH:$builddir/src" python2 setup.py check
	PYTHONPATH="$PYTHONPATH:$builddir/src" python3 setup.py check
	PYTHONPATH="$PYTHONPATH:$builddir/src" python2 setup.py test
	PYTHONPATH="$PYTHONPATH:$builddir/src" python3 setup.py test
}

package() {
	cd "$builddir"
	install -d "$pkgdir"/usr/share/doc/$pkgname
	install -t "$pkgdir"/usr/share/doc/$pkgname README.md
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"
	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

sha512sums="6fcc2624cec69db11ff12d8ad0113face752a910be18ffe13cc8d68beeeb5223f4515364cb63cbadbcaf1f6e5c6807b262928eae7119cebcba50053ea0b0eb50  py-pympler-0.5.tar.gz"
