# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-plac
pkgver=1.0.0
pkgrel=0
pkgdesc="Parsing the command line the easy way"
url="https://github.com/micheles/plac"
arch="noarch"
license="BSD"
depends="python3"
makedepends="python3-dev py3-setuptools"
checkdepends="py3-pytest py3-tox"
subpackages="$pkgname-doc"
source="https://github.com/micheles/plac/archive/plac-$pkgver.tar.gz
tox.ini"
builddir="$srcdir/plac-plac-$pkgver"

build() {
	python3 setup.py build
}

check() {
	# some tests will fail if sqlsoup is not installed and it is not installed
	cp "$srcdir"/tox.ini "$builddir"
	tox -e py37
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	install -Dm644 README.rst "$pkgdir/usr/share/doc/$pkgname/README.rst"
}

