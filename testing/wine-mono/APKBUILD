pkgname=wine-mono
pkgver=4.9.4
pkgrel=0
pkgdesc="Wine's built-in replacement for Microsoft's .NET"
url="https://wiki.winehq.org/Mono"
arch="x86_64"
license="MIT"
depends="wine"
options="!check"
source="https://dl.winehq.org/wine/wine-mono/$pkgver/wine-mono-$pkgver.msi"

build() {
	return 0
}

package() {
	install -Dm644 "$srcdir"/$pkgname-$pkgver.msi \
		"$pkgdir"/usr/share/wine/mono/$pkgname-$pkgver.msi
}

