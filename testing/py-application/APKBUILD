pkgname=py-application
_pkgname=python-application
pkgver=2.6.0
pkgrel=0
pkgdesc="Basic building blocks for python applications"
url="http://pypi.python.org/pypi/python-application"
arch="noarch"
license="LGPL-2.0-or-later"
depends="python2"
makedepends="py-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	python2 setup.py build
}

check() {
	python2 setup.py check
}

package() {
	python2 setup.py install --prefix=/usr --root="$pkgdir"
}
sha512sums="8c1c5eb052b4b0b88d94f06a2c7e7d6535c5e7ed08055c90ecc327b2c55b621943ba1be82b898b3e43308cc8556d109bbb3848ea326be972b87543e302db6731  python-application-2.6.0.tar.gz"
