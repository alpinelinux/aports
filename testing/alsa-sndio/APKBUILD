pkgname=alsa-sndio
pkgver=0.2
pkgrel=0
pkgdesc="ALSA PCM to play audio on sndio servers"
options="!check" # Has no testsuite
url="https://github.com/Duncaen/alsa-sndio"
arch="all"
license="ISC"
makedepends="alsa-lib-dev sndio-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/Duncaen/alsa-sndio/archive/${pkgver}.tar.gz"

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

