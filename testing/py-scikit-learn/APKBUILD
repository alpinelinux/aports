# Maintainer: Carlos Giraldo <cgiraldo@gradiant.org>
pkgname=py-scikit-learn
_pkgname=scikit-learn
pkgver=0.20.3
pkgrel=0
pkgdesc="scikit-learn is a Python module for machine learning built on top of SciPy"
url="http://scikit-learn.org/"
arch="all"
license="BSD"
depends="py-numpy py-scipy"
makedepends="py-setuptools py-numpy-dev python2-dev python3-dev"
subpackages="py3-${pkgname#py-}:_py3 py2-${pkgname#py-}:_py2"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"


build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
	cd "$builddir"

	local python; for python in python2 python3; do
		$python setup.py install --prefix=/usr --root="$pkgdir"
	done

	install -D -m 644 COPYING \
		"$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc ${python#python}"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	depends="${depends//python/python2}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	depends="${depends//python/python3}"
	_py python3
}

sha512sums="fedc697b123e53badd7d75e2e0fa0749d9270c8ba52906227fda98f08b61bb40db9e0d1ffe71b030c30b64e77d000e7ba72cd9530c9f88c988dfc090c6c2872a  scikit-learn-0.20.3.tar.gz"
