# Contributor: Joel Dollarhide <dollarhidejoel@gmail.com>
# Maintainer: Joel Dollarhide <dollarhidejoel@gmail.com>
pkgname=bindfs
pkgver=1.13.9
pkgrel=0
pkgdesc="FUSE filesystem for mounting a directory to another location"
url="https://bindfs.org"
arch="all"
license="MIT"
depends="fuse"
makedepends="fuse-dev"
subpackages="$pkgname-doc"
source="https://bindfs.org/downloads/$pkgname-$pkgver.tar.gz"
options="!check" # There is no test suite
builddir="$srcdir/$pkgname-$pkgver"

build() {
        cd "$builddir"
        ./configure \
                --prefix=/usr \
                --mandir=/usr/share/man \
                --bindir=/usr/bin
        make
}

package() {
        cd "$builddir"
        make DESTDIR="$pkgdir" install
}

sha512sums="7584577b289816a1ee514c4967893dcca69683b68b357d370c3a7accd39f96034f34d29751b66ef98ba35bb869498af4df813b0bdea805a42a38b47340f3d654  bindfs-1.13.9.tar.gz"
