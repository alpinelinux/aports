#! /bin/sh

addgroup -S mysql 2>/dev/null
adduser -S -D -H -h /var/lib/mysql -s /sbin/nologin -G mysql -g mysql mysql 2>/dev/null

# Extra dirs for secure file priv and keyring
install -d -m0750 -omysql -gmysql /var/lib/mysql-files  2>/dev/null
install -d -m0700 -omysql -gmysql /var/lib/mysql-keyring  2>/dev/null

exit 0

