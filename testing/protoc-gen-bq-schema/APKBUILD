maintainer="Leon White <badfunkstripe@gmail.com>"
pkgname=protoc-gen-bq-schema
pkgver=3.1.0
pkgrel=0
pkgdesc="protoc plugin to generate schema files in JSON for BigQuery from .proto files"
url="https://github.com/googlecloudplatform/protoc-gen-bq-schema"
arch="all"
license="Apache-2.0"
depends="protoc"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/googlecloudplatform/protoc-gen-bq-schema/archive/refs/tags/v$pkgver.tar.gz"
options="net" # download Go modules

build() {
	go build -v .
}

check() {
	go test ./...
}

package() {
	install -Dm755 protoc-gen-bq-schema -t "$pkgdir"/usr/bin/
}

