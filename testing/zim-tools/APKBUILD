# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=zim-tools
pkgver=3.1.0
pkgrel=0
pkgdesc="Various ZIM command line tools"
url="https://github.com/openzim/zim-tools"
arch="all !mips !mips64" # blocked by libzim-dev
license="GPL-3.0-or-later"
makedepends="
	cmake
	docopt-dev
	file-dev
	gtest-dev
	gumbo-parser-dev
	libzim-dev
	meson
	mustache
	zlib-dev
	"
replaces="zimwriterfs"
provides="zimwriterfs=$pkgver-r$pkgrel"
subpackages="$pkgname-doc"
source="zim-tools-$pkgver.tar.gz::https://github.com/openzim/zim-tools/archive/$pkgver.tar.gz"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}

sha512sums="
be5f0aeab7f20fc6a72c897c289438ce70aea7de92683fd66c6230d5acb9dab3625e862cd8bde5ea8b45cadb21623b6a05f5e21266288edb73d7dd2aa8d77493  zim-tools-3.1.0.tar.gz
"
