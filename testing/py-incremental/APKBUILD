pkgname=py-incremental
_pkgname=incremental
pkgver=17.5.0
pkgrel=0
pkgdesc="A library for versioning your Python projects."
url="https://github.com/twisted/incremental"
arch="noarch"
license="MIT"
depends="py-click py-twisted"
makedepends="python-dev py-click py-setuptools py-twisted"
install=""
subpackages=""
source="https://github.com/twisted/${_pkgname}/archive/${_pkgname}-${pkgver}.tar.gz"
builddir="$srcdir"/"$_pkgname"-"$_pkgname"-$pkgver
options="!check"

build() {
	cd "$builddir"
	python setup.py build || return 1
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
        install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="42490edf99355d6c1da0015273e92549bd72ecb2674dd4ce5d0b4a7d34ae9d425ebd1708a2420f67963b4baef5b2a12b76a23d67abb7d306e6208e08d79175d7  incremental-17.5.0.tar.gz"
