# Contributor: George Hopkins <george-hopkins@null.net>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=falkon
pkgver=3.1.0
pkgrel=0
pkgdesc="Cross-platform web browser using QtWebEngine rendering engine"
url="https://www.falkon.org/"
arch="all"
license="GPL-3.0-or-later"
depends="qt5-qtbase-sqlite"
makedepends="cmake extra-cmake-modules qt5-qtbase-dev qt5-qtwebengine-dev
	qt5-qtx11extras-dev xcb-util-dev openssl-dev karchive-dev ki18n-dev
	kwallet-dev kio-dev kcrash-dev kcoreaddons-dev purpose-dev qt5-qttools-dev"
checkdepends="xvfb-run"
source="https://download.kde.org/stable/falkon/${pkgver%.*}/$pkgname-$pkgver.tar.xz
	disable-ld-fatal-warnings.patch
	disable-backtraces.patch"
subpackages="$pkgname-lang"

prepare() {
	default_prepare

	mkdir "$builddir"/build
}

build () {
	cd "$builddir"/build
	cmake "$builddir"  \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	cd "$builddir"/build

	# falkon-webviewtest, falkon-webtabtest and falkon-tabmodeltest require OpenGL
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest -E "falkon-(webview|webtab|tabmodel)test"
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" make install
}

