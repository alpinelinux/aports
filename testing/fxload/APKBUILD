# Contributor: Robert Eckelmann <longnoserob@postmarketos.org>
# Maintainer: Robert Eckelmann <longoserob@postmarketos.org>
pkgname=fxload
pkgver=2008.10.13
pkgrel=0
pkgdesc="fxload firmware loader. Used with udev or devfs/hotplug."
url='https://sourceforge.net/projects/linux-hotplug/'
arch="all"
license="LGPL-2.1-only"
makedepends="linux-headers musl-dev"
source="$pkgname-$pkgver.tar.gz::https://sourceforge.net/projects/linux-hotplug/files/fxload/${pkgver//./_}/fxload-${pkgver//./_}.tar.gz/download"
builddir="$srcdir/fxload-${pkgver//./_}/"

build() {
	make
}

check() {
	"$builddir/"fxload -V
}

package() {
	install -m 755 -D "$builddir/"fxload $pkgdir/usr/bin/fxload
}
sha512sums="
