# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=zeroconf-ioslave
pkgver=19.08.1
pkgrel=0
arch="all"
url="https://www.kde.org/applications/internet/"
pkgdesc="Network Monitor for DNS-SD services (Zeroconf)"
license="GPL-2.0-or-later AND LGPL-2.0-only AND GFDL-1.2-only"
makedepends="extra-cmake-modules qt5-qtbase-dev kdbusaddons-dev kdnssd-dev ki18n-dev kio-dev"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}

sha512sums="5d51b7c428130af1d5de20f9f233b276a7b0316bd9791cbb317a8869f8f90a4fc3c16aeb618fd495a5eb50fa9921d44a29c4c1bdc16509917316fb8677d6d25c  zeroconf-ioslave-19.08.1.tar.xz"
