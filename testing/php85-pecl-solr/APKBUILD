# Maintainer: Andy Postnikov <apostnikov@gmail.com>
pkgname=php85-pecl-solr
_extname=solr
pkgver=2.9.1
pkgrel=0
pkgdesc="An extremely fast, light-weight, feature-rich PHP 8.5 extension to communicate with Apache Solr - PECL"
url="https://pecl.php.net/package/solr"
arch="all"
license="PHP-3.01"
_phpv=85
_php=php$_phpv
depends="$_php-common"
makedepends="$_php-dev curl-dev libxml2-dev"
source="php-pecl-$_extname-$pkgver.tar.gz::https://pecl.php.net/get/$_extname-$pkgver.tgz"
builddir="$srcdir"/$_extname-$pkgver

build() {
	phpize$_phpv
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config$_phpv
	make
}

check() {
	make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test TESTS=--show-diff
	$_php -d extension=modules/$_extname.so --ri $_extname
}

package() {
	make INSTALL_ROOT="$pkgdir" install
	local _confdir="$pkgdir"/etc/$_php/conf.d
	install -d $_confdir
	echo "extension=$_extname" > $_confdir/$_extname.ini
}

sha512sums="
6e2d137ce8d571d89bddb496e527c802ddb310638c9ec421337221c288258fd3f2bac62d697d98fffa326efcdf34b557f17ab68ea9789c1aa87f168b9314ccd8  php-pecl-solr-2.9.1.tar.gz
"
