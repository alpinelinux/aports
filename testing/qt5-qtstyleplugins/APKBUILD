pkgname=qt5-qtstyleplugins
pkgver=5.0.0_git20190910
pkgrel=0
_commit=335dbece103e2cbf6c7cf819ab6672c2956b17b3
pkgdesc="Additional style plugins for Qt"
url="https://github.com/qt/qtstyleplugins"
arch="all"
license="LGPL-2.1-or-later"
makedepends="qt5-qtbase-dev gtk+-dev"
subpackages="$pkgname-dev"
source="https://github.com/qt/qtstyleplugins/archive/$_commit.tar.gz"
builddir="$srcdir/qtstyleplugins-$_commit"

build() {
	qmake-qt5 \
		PREFIX=/usr \
		CONFIG+="nostrip" \
		QMAKE_CFLAGS_RELEASE="$CFLAGS" \
		QMAKE_CXXFLAGS_RELEASE="$CXXFLAGS"
	make
}

package() {
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="e8c2d0e9c6b0a47cab04ffd2e9384606638905b63a7c1580f9b629bbcc84ebff19743363ffee3dbd31c3de1dcda684211ad3052932b5aa0081e529afd9cbb14d  335dbece103e2cbf6c7cf819ab6672c2956b17b3.tar.gz"
