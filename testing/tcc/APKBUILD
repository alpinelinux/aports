# Contributor:
# Maintainer: Hinata Yanagi <hinasssan@gmail.com>
pkgname=tcc
pkgver=0.9.26
pkgrel=0
pkgdesc="Tiny C Compiler"
url="https://bellard.org/tcc/"
arch="all"
license="the GNU Lesser General Public License"
options="!check"
depends=""
makedepends="gcc texinfo"
source="http://download.savannah.gnu.org/releases/tinycc/${pkgname}-${pkgver}.tar.bz2"

builddir="$srcdir/"

build() {
	cd "tcc-${pkgver}"
	./configure --prefix="${pkgdir}" --config-musl
	make
}

package() {
	cd "${builddir}tcc-${pkgver}"
	make install
}

sha512sums="abdbe208498cf4865a2036b5426616f5888b9b0e8d5d2fda6d1dd4afab3386167f12eca87d8a5c4c9b7dc88620d983ddce3e874b7dfa9c21eceea29ffa635d53  tcc-0.9.26.tar.bz2"
