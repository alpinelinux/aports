# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=emacs-company
pkgver=1.0.2
pkgrel=0
_pkgreal=company
pkgdesc="Modular in-buffer completion framework"
url="https://github.com/company-mode/company-mode"
arch="noarch"
license="GPL-3.0-or-later"
depends="cmd:emacs"
makedepends="emacs-nox"
source="https://github.com/company-mode/company-mode/archive/$pkgver/emacs-company-$pkgver.tar.gz"
builddir="$srcdir/company-mode-$pkgver"

build() {
	emacs -batch -q -no-site-file -L . \
		-eval '(setq byte-compile-error-on-warn t)' \
		-f batch-byte-compile \
		./*.el
}

check() {
	emacs -batch -q -nw -no-site-file -L . -l test/all.el \
		-eval "(ert-run-tests-batch-and-exit
			'(not (or
				(tag interactive)
				(tag gui))))"
}

package() {
	install -Dvm644 ./*.el ./*.elc \
		-t "$pkgdir"/usr/share/emacs/site-lisp/$_pkgreal/

	cd "$pkgdir"/usr/share/emacs/site-lisp/$_pkgreal
	emacs -batch -q -no-site-file \
		-eval "(loaddefs-generate \".\" \"$_pkgreal-loaddefs.el\")"
}

sha512sums="
fb90dc7dc35c9f6d5b65b19454ee693317bbe88ee04c155d971fb408ec2f04f8665a8dd84c23c3a0846299757523359c8e0bc050793c8e199bcc0709b0a97103  emacs-company-1.0.2.tar.gz
"
