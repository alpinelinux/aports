maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gst-video-thumbnailer
pkgver=0_git20251104_p2
_commit=3894a2ffe17e425d8cdcd1c1a22af61bc6af8a0e
pkgrel=0
pkgdesc="Video thumbnail generator using GStreamer"
url="https://gitlab.gnome.org/sophie-h/gst-video-thumbnailer"
arch="all"
license="GPL-3.0-only"
makedepends="
	cargo
	cargo-auditable
	gst-plugins-base-dev
	meson
	"
source="https://gitlab.gnome.org/sophie-h/gst-video-thumbnailer/-/archive/$_commit/gst-video-thumbnailer-$_commit.tar.gz
	cargo-auditable.patch
	"
builddir="$srcdir/$pkgname-$_commit"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

