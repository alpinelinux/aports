# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=flare-engine
pkgver=1.11
pkgrel=0
pkgdesc="Free/Libre Action Roleplaying Engine"
url="http://www.flarerpg.org/"
arch="x86_64 x86"
license="GPL3"
depends="sdl2_image sdl2_mixer sdl2_ttf hicolor-icon-theme python"
makedepends="cmake make"
options="!check"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/flareteam/$pkgname/archive/v$pkgname.zip"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
cd ${builddir}
  cmake CMakeLists.txt \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBINDIR=bin \
    -DDATADIR=share/flare \
    
  make
}

package() {
cd "$builddir"
   make DESTDIR="$pkgdir" install
}

sha512sums="963a390ca3052911501754c1e6ce0ae4de0f9ed2c574fc3917973b66727bb1cbac43074d41ccdca6314614e0e8e6ad71d69f73a3f4e17a3f567387256df728cf  flare-engine-1.10.tar.gz"
