pkgname=purple-teams
pkgver=0_git20260113
pkgrel=0
pkgdesc="MS Teams plugin for libpurple/Pidgin"
url="https://github.com/EionRobb/purple-teams"
arch="all"
license="GPL-3.0-or-later"
_tag="daily-${pkgver:5:4}-${pkgver:9:2}-${pkgver:11:2}"
makedepends="
	glib-dev
	json-glib-dev
	pidgin-dev
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/EionRobb/purple-teams/archive/refs/tags/$_tag.tar.gz"
builddir="$srcdir/purple-teams-$_tag"
options="!check" # no unit tests

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

