# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=nimble
pkgver=0.12.0
pkgrel=0
pkgdesc="Package manager for the Nim programming language"
url="https://github.com/nim-lang/nimble"
arch="all !s390x"
license="BSD-3-Clause"
depends="nim"
source="$pkgname-$pkgver.tar.gz::https://github.com/nim-lang/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	nim compile -d:release src/nimble
}

package() {
	cd "$builddir"
	install -D -m 755 src/nimble "$pkgdir"/usr/bin/nimble
}

sha512sums="
cb25f57c925af14138efa9f9229f054bd559400effe2c118dda18d7e220d9094380481befb46b2913f22831a70b3958eecb23ec085a5e3a298a4136337b96c2b  nimble-0.12.0.tar.gz
"
