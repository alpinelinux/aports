# Maintainer:
pkgname=pamtester
pkgver=0.1.2
pkgrel=0
pkgdesc="Command line tool to test PAM configuration"
url="http://pamtester.sourceforge.net/"
arch="all"
license="BSD"
depends="linux-pam"
depends_dev="linux-pam-dev"
makedepends="$depends_dev"
install=""
subpackages=""
source="http://netix.dl.sourceforge.net/project/pamtester/pamtester/0.1.2/pamtester-0.1.2.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
  local i
  cd "$_builddir"
  for i in $source; do
    case $i in
      *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
    esac
  done
}

build() {
  cd "$_builddir"
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    --infodir=/usr/share/info \
    || return 1
  make || return 1
}

package() {
  cd "$_builddir"
  make DESTDIR="$pkgdir" install || return 1
}
