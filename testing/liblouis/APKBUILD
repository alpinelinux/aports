# Contributor:
# Maintainer:
pkgname=liblouis
pkgver=3.29.0
pkgrel=0
pkgdesc="Braille translator and back-translator"
url="https://liblouis.io/"
arch="all"
license="GPL-3.0-or-later"
makedepends="help2man python3"
checkdepends="bash"
subpackages="$pkgname-static $pkgname-dev $pkgname-bin:_bin $pkgname-doc"
source="https://github.com/liblouis/liblouis/releases/download/v$pkgver/liblouis-$pkgver.tar.gz"

# secfixes:
#   3.22.0-r0:
#     - CVE-2022-26981

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-ucs4
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

_bin() {
	amove usr/bin
}

sha512sums="
