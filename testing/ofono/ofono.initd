depend() {
   need dbus
}

start() {
   ebegin "Starting oFono"
   start-stop-daemon --start --quiet --exec /usr/sbin/ofonod
   eend $?
}

stop() {
   ebegin "Stopping oFono"
   start-stop-daemon --stop --quiet --exec /usr/sbin/ofonod
   eend $?
}
