# Contributor: z3bra <willy at mailoo dot org>
# Maintainer: Shiz <hi@shiz.me>
pkgname=toilet
pkgver=0.3
pkgrel=0
pkgdesc="A free replacement for the FIGlet utility"
url="http://caca.zoy.org/wiki/toilet"
arch="all"
license="WTFPL"
makedepends="libcaca-dev"
subpackages="$pkgname-doc"
source="https://distfiles.alpinelinux.org/distfiles/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare
	update_config_sub
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="64b9389562a51e7dba6e3f1dd27c5340f90df25d8fbf1e041b539f5243b5b6b7af1ebf033a511053ad72a73908d496a1f3d14c4ac656425aefb8364a0664ceed  toilet-0.3.tar.gz"
