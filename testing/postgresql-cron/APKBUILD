# Contributor: G.J.R. Timmer <gjr.timmer@gmail.com>
# Maintainer:
pkgname=postgresql-cron
pkgver=1.0.0
pkgrel=0
pkgdesc="CRON based scheduler fro postgresql 9.5+"
url="https://github.com/citusdata/pg_cron"
arch="all"
license="custom"
depends="postgresql"
makedepends="postgresql-dev"
install="postgresql-cron.post-install"
pkgusers="postgres"
pkggroups="postgres"
subpackages=""
source="https://github.com/citusdata/pg_cron/archive/v1.0.0-rc.1.tar.gz"

builddir="$srcdir/pg_cron-1.0.0-rc.1"

prepare() {
        default_prepare || return 1
        cd "$builddir"

	# Remove -Werror from Makefile
	# Required to compile on alpine, to ignore compilation warnings
        sed "s/-Werror //" -i Makefile || return 1
}

build() {
        cd "$builddir"
	make || return 1
}

package() {
        cd "$builddir"

	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE || return 1
}

md5sums="7aad687b7105df0de8f69b697e3ce317  v1.0.0-rc.1.tar.gz"
sha256sums="0cd22063594c55f2b2042185b174a78b99bc70e3db6454c83eb92a9bdf6c8809  v1.0.0-rc.1.tar.gz"
sha512sums="26ee5ada043458593baa966eae7be1cd9b51dd751d5f468261510327c6a42406b55ec45f01558f0dc3f374955f78fe1216b0d5c7d6bc66f45f092401612a9b72  v1.0.0-rc.1.tar.gz"
