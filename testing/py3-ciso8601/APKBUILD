maintainer="Michał Polański <michal@polanski.me>"
pkgname=py3-ciso8601
pkgver=2.3.3
pkgrel=0
pkgdesc="Fast ISO8601 date time parser for Python written in C"
url="https://github.com/closeio/ciso8601"
license="MIT"
arch="all"
makedepends="python3-dev py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest py3-tz"
source="https://github.com/closeio/ciso8601/archive/v$pkgver/py3-ciso8601-$pkgver.tar.gz"
builddir="$srcdir/ciso8601-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
8acf46ac5571daf82a61a0afc1b0d82776a77493a294eb316b6692beab0c79a008e5c378729f5f2dc54fe9874e51833a9c744c73f45db28eb57999301a107aba  py3-ciso8601-2.3.3.tar.gz
"
