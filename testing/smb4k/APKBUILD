# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=smb4k
pkgver=4.0.5
pkgrel=0
pkgdesc="Advanced network neighborhood browser and Samba share mounting utility"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://invent.kde.org/network/smb4k"
license="GPL-2.0-or-later AND BSD-2-Clause"
depends="kirigami"
makedepends="
	doxygen
	extra-cmake-modules
	kauth-dev
	kcompletion-dev
	kconfig-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdnssd-dev
	kdoctools-dev
	kdsoap-qt6-dev
	kdsoap-ws-discovery-client-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kirigami-dev
	kjobwidgets-dev
	knotifications-dev
	kstatusnotifieritem-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	samba-dev
	solid-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-doc"
_repo_url="https://invent.kde.org/network/smb4k.git"
source="https://invent.kde.org/network/smb4k/-/archive/$pkgver/smb4k-$pkgver.tar.gz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DSMB4K_WITH_WS_DISCOVERY=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
