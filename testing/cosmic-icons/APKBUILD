# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=cosmic-icons
pkgver=1.0.0_beta9
_upstreamver="${pkgver/_beta/-beta.}"
_upstreamver="${_upstreamver/_p/.}"
pkgrel=0
pkgdesc="Icons for the COSMIC Desktop Environment"
url="https://github.com/pop-os/cosmic-icons"
# riscv64: too slow to build
arch="noarch !riscv64"
license="GPL-3.0-or-later AND CC-BY-SA-4.0"
makedepends="
	just
"
options="!check"  # no tests
source="$pkgname-$pkgver.tar.gz::https://github.com/pop-os/cosmic-icons/archive/refs/tags/epoch-$_upstreamver.tar.gz"
builddir="$srcdir/$pkgname-epoch-$_upstreamver"

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
1f6e87e395b7edd6c11af83c786cc35ad16ad0595416ed621c6814edd20196b69b4b681b5b1a311b00ee58c2f82acb14ec33542903845f2abb9274e5c5459e8a  cosmic-icons-1.0.0_beta9.tar.gz
"
