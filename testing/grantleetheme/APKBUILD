# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=grantleetheme
pkgver=19.04.2
pkgrel=0
pkgdesc="KDE PIM mail related libraries"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="extra-cmake-modules knewstuff-dev ki18n-dev grantlee-dev"
checkdepends="xvfb-run"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="eb0e53e598d7ed995ba393f17bd4adafb88414b7c294600ceee973e71eb00073695cd59aa86aaf101d392df113113233a2b8d46e98fbe98fc49c93fb9043031a  grantleetheme-19.04.2.tar.xz"
