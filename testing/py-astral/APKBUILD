# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-astral
_pkgname=astral
pkgver=1.3.2
pkgrel=0
pkgdesc="Calculations for the position of the sun and moon"
url="https://pypi.python.org/pypi/astral/"
arch="noarch"
license="ASL 2.0"
depends="py-tz"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.zip"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

md5sums="4ffe7c13846563261e335edda81e956f  astral-1.3.2.zip"
sha256sums="59767700408fe6b73133e8e141030bd6ba93e6d262c1c4e61edf635edf7333dd  astral-1.3.2.zip"
sha512sums="de2a6ef5260a69bd1c12ff5f4d84b4b02a4ecc578ad10a07a283e2a1139749a5c76fdc6e6e2b22277a86ad79a54a885b528361b7388ec31414eb1e62145d6753  astral-1.3.2.zip"
