# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=libantlr3c
pkgver=3.4
pkgrel=0
pkgdesc="C runtime for the ANTLR parsing library"
url="http://www.antlr.org/"
arch="all"
license="BSD"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://www.antlr3.org/download/C/libantlr3c-$pkgver.tar.gz"

builddir="$srcdir"/libantlr3c-$pkgver
prepare() {
	local i
	cd "$builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i;;
		esac
	done
	update_config_sub
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-abiflags
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="8edb243d745ff5bf3b15940f124d1255a9ca965cb656a73a558aed7fa07effcd7620f23dc692e5d5169a03200254836dd57af3ce444ba225281a5b721497e211  libantlr3c-3.4.tar.gz"
