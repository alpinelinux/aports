maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gst-thumbnailers
pkgver=0_git20251113
_commit=ebb72dfc0df1c729119224b79b30dcef5a612d0e
pkgrel=0
pkgdesc="Thumbnail generator using GStreamer"
url="https://gitlab.gnome.org/sophie-h/gst-thumbnailers"
arch="all"
license="GPL-3.0-only"
makedepends="
	cargo
	cargo-auditable
	glycin-loaders-dev
	gst-plugins-base-dev
	meson
	"
source="https://gitlab.gnome.org/sophie-h/gst-thumbnailers/-/archive/$_commit/gst-video-thumbnailer-$_commit.tar.gz
	cargo-auditable.patch
	"
builddir="$srcdir/$pkgname-$_commit"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

