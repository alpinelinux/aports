# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=raku-distribution-builder-makefromjson
pkgver=0.6
pkgrel=0
pkgdesc="Makefile-based distribution builder"
url="https://github.com/niner/Distribution-Builder-MakeFromJSON"
arch="all"
license="Artistic-2.0"
depends="make rakudo raku-system-query"
makedepends="moarvm-dev rakudo-dev"
checkdepends="perl-utils"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/niner/Distribution-Builder-MakeFromJSON/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/Distribution-Builder-MakeFromJSON-$pkgver"
options="!archcheck" # Precompiled arch dependent files included (quiet noarch warning)

build() {
	RAKUDO_RERESOLVE_DEPENDENCIES=0 \
	/usr/share/rakudo/tools/install-dist.raku \
		--to=output --for=vendor
}

check() {
	prove -e 'raku -Ilib'
}

package() {
	mkdir -p "$pkgdir"/usr/share/rakudo
	cp -RT output "$pkgdir"/usr/share/rakudo/vendor

	install -Dvm644 META6.json README.md \
		-t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
91a0b011590ed1caa9fac654d6a3c5e20734cdaa8d3ff15bf46feb296c05eef5b285ad1fa3ca2aa954c175206a9c65c7feb781bba762d2e4d2c992046f347569  raku-distribution-builder-makefromjson-0.6.tar.gz
"
