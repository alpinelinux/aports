maintainer="Leon White <badfunkstripe@gmail.com>"
pkgname=py3-trakit
pkgver=0.2.5
pkgrel=0
pkgdesc="Guess additional information from track titles"
url="https://github.com/ratoaq2/trakit"
arch="noarch"
license="MIT"
depends="
	py3-babelfish
	py3-rebulk
	py3-unidecode
	py3-yaml
	"
makedepends="
	py3-gpep517
	py3-poetry-core
	py3-setuptools
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/t/trakit/trakit-$pkgver.tar.gz"
builddir="$srcdir/trakit-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	gpep517 install-wheel --destdir .testenv --prefix '' .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
95dfd06d8cb6c9f4b2f1412c4b505209e5122595f0ebba1b6bef9ecb80c31e4f8a4b7aba706931ce9684f2e8ddf4f9836c9f034053ce2f25c857d08c76a9eaf1  trakit-0.2.5.tar.gz
"
