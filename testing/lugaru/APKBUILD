# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=lugaru
pkgver=1.3
pkgrel=0
pkgdesc="Lugaru is a cross-platform third-person action game."
url="https://osslugaru.gitlab.io/"
arch="x86_64"
license="GPL"
depends="cmake sdl2 glu libjpeg-turbo libpng openal-soft libogg libvorbis"
makedepends="sdl2-dev glu-dev libjpeg-turbo-dev libpng-dev openal-soft-dev libogg-dev libvorbis-dev"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.zip::https://gitlab.com/osslugaru/$pkgname/-/archive/master/$pkgname-master.zip"
builddir="$srcdir/$pkgname-master"

build() {
	cd ${builddir}
  cmake 
  -DSYSTEM_INSTALL=ON \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DCMAKE_INSTALL_BINDIR=bin \
  -DCMAKE_INSTALL_DATADIR=share \
  -DCMAKE_INSTALL_MANDIR=share/man \
  
  make
}

check() {
echo -n
}

package() {
	cd "$builddir"
  make DESTDIR="$pkgdir/" install
}

sha512sums="e59e5d542373164516edf80dd03583d44064d1dd6a82cc0550a4417aca96590b11b95054718ccedb8d5b7c28b5e8dd70464a18fa1e67bbf836ec462d644cd22c  lugaru-1.3.zip"
