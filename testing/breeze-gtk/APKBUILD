# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=breeze-gtk
pkgver=5.16.1
pkgrel=0
pkgdesc="A GTK Theme Built to Match KDE's Breeze"
arch="all"
url="https://www.kde.org/workspaces/plasmadesktop/"
license="LGPL-2.1-only"
depends="gtk-engines"
makedepends="extra-cmake-modules sassc breeze-dev breeze py3-cairo"
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="9000d26d4ba31b38c7bad3d61de6e5df9fe49ebd027b0b6617fda81fa6a16787ba2aded862590cff78a34e583eacd245f96100d9832e4effa9cf547d9180ffe8  breeze-gtk-5.16.1.tar.xz"
