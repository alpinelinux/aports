# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=sx
pkgver=2.1.1
pkgrel=0
pkgdesc="Simple alternative for startx(1) and xinit(1)"
url="https://github.com/Earnestly/sx"
arch="noarch"
license="MIT"
depends="xorg-server xauth"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Earnestly/sx/archive/${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check" # Provides no testsuite

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" PREFIX=/usr install
}
sha512sums="6bd31478c963f271adc49bc611893af2a980fa05c04130d51b28897de016ebe431ddd450a74619d2b4169464f19bfad223ea83b70e19fc6456e4995a191abd8c  sx-2.1.1.tar.gz"
