# Contributor: Jonas <spameier+alpine@proton.me>
# Maintainer: Jonas <spameier+alpine@proton.me>
pkgname=py3-asyauth
_pyname=asyauth
pkgver=0.0.23
pkgrel=0
pkgdesc="Unified authentication library"
url="https://github.com/skelsec/asyauth"
arch="noarch"
license="MIT"
depends="
	py3-asn1crypto
	py3-asysocks
	py3-minikerberos
	py3-unicrypto
	"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skelsec/asyauth/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"
options="!check" # no tests provided

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
bb220df166352be80189a709a2f9cbfd7e494932b21a6d22ec1f541db515d00886e7fc8b18ec7e528bd58a7330612307e07224356a03a7dbe3916ceddc5d1fea  py3-asyauth-0.0.23.tar.gz
"
