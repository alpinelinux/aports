# Contributor: Guy Godfroy <guy.godfroy@gugod.fr>
# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=wayfarer
pkgver=1.4.0
pkgrel=0
pkgdesc="Screen recorder for GNOME / Wayland / pipewire"
url="https://github.com/stronnag/wayfarer"
arch="all"
license="GPL-3.0-or-later"
makedepends="meson vala blueprint-compiler gtk4.0-dev gstreamer-dev gst-plugins-base-dev pulseaudio-dev desktop-file-utils bash"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/stronnag/wayfarer/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
cb5a65251345b5c33b26fa551134dbee3c9915c3c9e50b6708e2e3beb7cd9ff5ca9024542a7011cc08e7eef3cf146f49ffd81243c09234ebdefbbed6685beada  wayfarer-1.4.0.tar.gz
"
