# Contributor: Guy Godfroy <guy.godfroy@gugod.fr>
# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=amber
pkgver=0.5.1_alpha
pkgrel=0
pkgdesc="Programming language compiled to bash"
url="https://amber-lang.com"
arch="all"
license="GPL-3.0-or-later"
depends="bc bash coreutils"
makedepends="cargo cargo-auditable"
source="$pkgname-$pkgver.tar.gz::https://github.com/Ph0enixKM/Amber/archive/refs/tags/${pkgver/_/-}.tar.gz"
builddir="$srcdir/$pkgname-${pkgver/_/-}"
options="net"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	# bash_error_exit_code expect debug build
	# the other tests are broken and are supposed to be fixed in 0.5.0
	cargo test --frozen -- \
		--skip bash_error_exit_code \
		--skip download \
		--skip test_stdlib_src_tests_stdlib_text_replace_regex_ext_ab
}

package() {
	install -Dm755 target/release/amber -t "$pkgdir"/usr/bin
}

sha512sums="
32322a81e4559be332f2ead582c98769bb58e2a850c6d1a32c6d7833be16b5b1e6cca3c628ece8a0f8e75970bbab003e40e46012c64e255d7597cfd538ce02f3  amber-0.5.1_alpha.tar.gz
"
