# Contributor: Alexander Couzens <lynxis@fe80.eu>
# Maintainer: Alexander Couzens <lynxis@fe80.eu>
pkgname=py3-gsm0338
pkgver=1.1.0
pkgrel=0
_pkgreal=gsm0338
pkgdesc="GSM 03.38 codec"
url="https://github.com/dsch/gsm0338"
arch="noarch"
license="MIT"
depends="python3"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel poetry
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$_pkgreal-$pkgver.tar.gz::https://github.com/dsch/gsm0338/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
fbff92386bddb90d8154795edcaf762c7f5fbf352d11ceb0ab69b0a4fae82f740084d68f582597a4c1bbd6ddbe1a3e2db3b99a08a6a36159a5ada0634862e669  gsm0338-1.1.0.tar.gz
"
