# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
maintainer="Matthias Ahouansou <matthias@ahouansou.cz>"
pkgname=chess-tui
pkgver=2.5.1
pkgrel=0
pkgdesc="Play chess from your terminal"
url="https://thomas-mauran.github.io/chess-tui/"
arch="all"
license="MIT"
makedepends="
	cargo-auditable
	openssl-dev
	alsa-lib-dev
"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/thomas-mauran/chess-tui/archive/refs/tags/$pkgver.tar.gz"
options="net"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm 755 target/release/chess-tui "$pkgdir"/usr/bin/chess-tui

	install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

sha512sums="
9034bf20db8fdfc62ce474f538bb5b0baec6f446010ca3990705e2057a54eb14e0bb230743da3e80d5b2ee394a5f29224fb9ae16403f2a53dce0453a7cf7a16f  chess-tui-2.5.1.tar.gz
"
