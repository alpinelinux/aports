pkgname=draw
pkgver=0.1.1
pkgrel=7
pkgdesc="Draw in your terminal"
url="https://github.com/maaslalani/draw"
arch="all"
license="MIT"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/maaslalani/draw/archive/v$pkgver.tar.gz"

build() {
	go build -o draw
}

check() {
	go test ./...
}

package() {
	install -Dm755 ./draw "$pkgdir"/usr/bin/draw
}

