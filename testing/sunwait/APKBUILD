pkgname=sunwait
pkgver=0.8
pkgrel=0
pkgdesc="Sunwait calculates sunrise or sunset times with civil, nautical, astronomical and custom twilights."
url="https://sourceforge.net/projects/sunwait4windows/"
arch="all"
license="GPL-3.0-only"
depends=""
makedepends=""
install=""
#subpackages="$pkgname-dev $pkgname-doc"
subpackages=""
source="https://10gbps-io.dl.sourceforge.net/project/sunwait4windows/sunwait0-8.tar"
builddir="$srcdir/sunwait/0.8/"

build() {
	cd "$builddir"
	make -j1
}

package() {
	mkdir -p "$pkgdir"/usr/bin/
	cd "$builddir"
	cp sunwait "$pkgdir"/usr/bin/
}

