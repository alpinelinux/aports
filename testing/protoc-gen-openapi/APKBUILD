source="$pkgname-$pkgver.tar.gz::https://github.com/solo-io/protoc-gen-openapi/archive/refs/tags/v$pkgver.tar.gz"
options="net" # download Go modules

build() {
	go build -v .
}

check() {
	go test ./...
}

package() {
	install -Dm755 protoc-gen-openapi -t "$pkgdir"/usr/bin/
}

