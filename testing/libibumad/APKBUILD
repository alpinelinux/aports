sha512sums="aa2e9038600f6fd9f5cd7c42f6125f25db1504eca040d48f501acf3dcba310f5af50d56fbfe959d1f33b3eacd382f33782077510c7f1a841ae12c5942eb7fa8c  libibumad-1.3.10.2.tar.gz"
