# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=punch
pkgver=0.1.1
pkgrel=0
pkgdesc="Time tracking client for Solidtime"
url="https://codeberg.org/craftyguy/punch"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	gtk4.0
	libadwaita
	libsecret
	py3-gobject3
	python3
	"
makedepends="
	py3-gpep517
	py3-installer
	py3-setuptools
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/craftyguy/punch/archive/$pkgver.tar.gz"
options="!check"  # no tests
builddir="$srcdir/punch"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b9ea8f534a6511169f3809c26d0582c7daffa1f7a86b24dffe019a1dc003d572c82385d7d23a3bd3f716ad728c42c26def7143c20a45bbb826b49af505e2502e  punch-0.1.1.tar.gz
"
