# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=punch
pkgver=0.1.0
pkgrel=0
pkgdesc="Time tracking client for Solidtime"
url="https://codeberg.org/craftyguy/punch"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	gtk4.0
	libadwaita
	libsecret
	py3-gobject3
	python3
	"
makedepends="
	py3-gpep517
	py3-installer
	py3-setuptools
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/craftyguy/punch/archive/$pkgver.tar.gz"
options="!check"  # no tests
builddir="$srcdir/punch"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
cea6858dcbcccd724f1af4a5b57d52049cf2dfeedfab829a49d6d359b3b3543f1a5509cee01e6d0b09bd13548ddb100856cebbfcfc91dee7d9883b23ae69f81a  punch-0.1.0.tar.gz
"
