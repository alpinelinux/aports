# Maintainer: Andr√© Klitzing <aklitzing@gmail.com>
pkgname=pcsc-cyberjack
pkgver=3.99.5
_sp=SP10
_pkgver=${pkgver}_${_sp}
_filever=${pkgver}final.${_sp}
pkgrel=0
pkgdesc="PCSC driver for Reiner SCT cyberjack card reader"
url="http://www.reiner-sct.com/"
arch="all"
license="LGPL"
depends="pcsc-lite"
makedepends="pcsc-lite-dev libusb-dev"
subpackages="$pkgname-doc"
options="!check"
source="http://support.reiner-sct.de/downloads/LINUX/V${_pkgver}/pcsc-cyberjack_${_filever}.tar.tar"
builddir="$srcdir/"$pkgname-${_filever}

build() {
	cd "$builddir"
	./configure \
		--prefix=/usr \
		--disable-static \
		--mandir=/usr/share/man/man8 \
		--sysconfdir=/etc/"${pkgname}"  \
		--enable-udev \
		--with-usbdropdir=$(pkg-config libpcsclite --variable=usbdropdir)
	make
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="7cdc897972858287b79795a9133ecffd1c1982290be054573cb23c22abcc063ba889f7f175413dd1ca94472d6cbe779b8d231dc1612d0ab9f9e768fce4d214af  pcsc-cyberjack_3.99.5final.SP10.tar.tar"
