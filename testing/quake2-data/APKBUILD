pkgname=quake2-data
pkgver=1.2.13
pkgrel=0
pkgdesc="Data files for Quake II"
url="https://github.com/jdolan/quake2/"
arch="noarch"
license="GPL2"
depends=""
makedepends=""
options="!check"
source="$pkgname-$pkgver.tar.gz::http://quetoo.org/files/quake2-quetoo.org-x86_64.tar.gz"
builddir="$srcdir/quake2/"

package() {
cd "$builddir"
  mkdir -p "$pkgdir"/usr/share/quake2/baseq2
    mv "$srcdir"/quake2/share/ctf/pak0.pak "$pkgdir"/usr/share/quake2/baseq2
    mv "$srcdir"/quake2/share/baseq2/* "$pkgdir"/usr/share/quake2/baseq2
}

