# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer: Stefan Wagner <stw@bit-strickerei.de>
pkgname=gcc-avr
pkgver=5.3.0
pkgrel=1
pkgdesc="The GNU Compiler Collection for AVR targets"
url="http://gcc.gnu.org"
depends="binutils-avr"
makedepends="bash linux-headers gmp-dev mpfr-dev mpc1-dev zlib-dev"
arch="all"
license="GPL LGPL"
subpackages="$pkgname-doc"
_islver=0.15
source="ftp://gcc.gnu.org/pub/gcc/releases/gcc-$pkgver/gcc-$pkgver.tar.bz2
http://isl.gforge.inria.fr/isl-${_islver}.tar.bz2"

_srcdir="$srcdir/gcc-$pkgver"
_builddir="$_srcdir/build"
prepare() {
  local i
  cd "$_srcdir"
  for i in $source; do
    case $i in
      *.patch|*.diff)
        msg "Applying $i..."
        patch -p1 -i "$srcdir"/$i || return 1
        ;;
    esac
  done

  mkdir "$_builddir"
}

build() {
  cd "$_builddir"

  # link isl for in-tree build
  ln -s $srcdir/isl-${_islver} $_srcdir/isl

  export CFLAGS_FOR_TARGET='-pipe'
  export CXXFLAGS_FOR_TARGET='-pipe'

  $_srcdir/configure \
    --build="$CBUILD" \
    --target=avr \
    --prefix=/usr \
    --enable-languages=c,c++ \
    --enable-ld=default \
    --enable-__cxa_atexit \
    --disable-install-libiberty \
    --disable-libssp \
    --disable-libstdcxx-pch \
    --disable-libunwind-exceptions \
    --disable-linker-build-id \
    --disable-nls \
    --disable-werror \
    --libdir=/usr/lib \
    --libexecdir=/usr/lib \
    --with-as=/usr/bin/avr-as \
    --with-gnu-as \
    --with-gnu-ld \
    --with-ld=/usr/bin/avr-ld \
    --with-system-zlib \
    --with-isl \
    || return 1
  make || return 1
}

package() {
  cd "$_builddir"
  make install DESTDIR="$pkgdir" || return 1
  rm -r ${pkgdir}/usr/share/man/man7
  rm ${pkgdir}/usr/lib/libcc1.*
  find ${pkgdir}/usr/lib -type f -name "*.a" -exec /usr/bin/avr-strip --strip-debug '{}' \;
}

