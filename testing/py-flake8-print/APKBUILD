sha512sums="9ec69c0f0489a48ea2861644fe2ac2f9ab11e55d156883dded3788e64033783c2cc4fc7bcca4f3d0cf41e291ede36e8f09ac3462954648d251784db70b77ce93  flake8-print-2.0.2.tar.gz"
