# Maintainer: Yijun Yu <y.yu@open.ac.uk>
pkgname=antlr
pkgver=2.7.7
pkgrel=0
pkgdesc="ANother Tool for Language Recognition"
url="http://www.antlr2.org/"
arch="all"
license="GPL"
depends="openjdk8"
makedepends=""
subpackages="$pkgname-doc $pkgname-dev"
source="antlr-2.7.7.tar.gz::http://www.antlr2.org/download/antlr-2.7.7.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"
build() {
	cd "$builddir"
	./configure prefix=/usr --disable-examples
	make
}

package() {
	cd "$builddir"
        make prefix="$pkgdir"/usr install 
        install -c -m 644 antlr.jar "$pkgdir"/usr/lib/antlr.jar
}

sha512sums="faa72d2ddcba434ef1233e70c1549e63eba67c00793966322e821cf7f015cccb804448cb92d8fbef0429f59928fad65ec954f8ffbda0acbb8e983de0806d349d  antlr-2.7.7.tar.gz"
