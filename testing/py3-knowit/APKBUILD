maintainer="Leon White <badfunkstripe@gmail.com>"
pkgname=py3-knowit
pkgver=0.5.11
pkgrel=0
pkgdesc="Know better your media files"
url="https://github.com/ratoaq2/knowit"
arch="noarch"
license="MIT"
depends="
	ffmpeg
	mediainfo
	mkvtoolnix
	py3-babelfish
	py3-enzyme
	py3-pymediainfo
	py3-requests
	py3-trakit
	py3-yaml
	"
makedepends="
	py3-gpep517
	py3-poetry-core
	py3-setuptools
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/k/knowit/knowit-$pkgver.tar.gz"
builddir="$srcdir/knowit-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	gpep517 install-wheel --destdir .testenv --prefix '' .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b743ebb0b3298e25d42b13296728d5d42c6de0550f3d726a2c1e371d8c17de0a2000e8cc74400a551c9cbf78948b4694b24ab2f7eef0ddb8ddc1447f04b570f5  knowit-0.5.11.tar.gz
"
