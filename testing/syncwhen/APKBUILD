pkgname=syncwhen
pkgver=0.3
pkgrel=0
pkgdesc="daemon that conditionally controls syncthing"
url="https://codeberg.org/craftyguy/syncwhen"
arch="noarch"
license="GPL-3.0-or-later"
makedepends="just"
depends="
	py3-dbus
	py3-gobject3
	python3
"
subpackages="$pkgname-systemd"
options="!check" # no tests
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/craftyguy/syncwhen/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname"

package() {
	PREFIX=/usr DESTDIR="$pkgdir" just install
}

