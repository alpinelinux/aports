# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-srsly
pkgver=0.0.7
pkgrel=0
pkgdesc="Modern high-performance serialization utilities for Python"
url="https://github.com/explosion/srsly"
arch="all"
license="MIT"
depends="python3 py3-numpy py3-tz"
makedepends="python3-dev py3-setuptools cython3"
checkdepends="py3-pytest py3-pytest-timeout py3-mock py3-tox"
subpackages="$pkgname-doc"
source="srsly-$pkgver.tar.gz::https://github.com/explosion/srsly/archive/v$pkgver.tar.gz
tox.ini"
builddir="$srcdir/srsly-$pkgver"

build() {
	python3 setup.py build_ext --inplace
}

check() {
	cp "$srcdir"/tox.ini "$builddir"
	tox -e py37
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}

