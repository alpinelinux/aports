# Maintainer: Simon Frankenberger <simon-alpine@fraho.eu>
pkgname=py-nassl
_pkgname=nassl
pkgver=1.1.3
pkgrel=0
pkgdesc="Experimental OpenSSL wrapper for SSLyze."
url="https://github.com/nabla-c0d3/nassl"
arch="all"
license="GNU Affero General Public License v3.0"
makedepends="python2-dev python3-dev py-setuptools wget"
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2"
source="$_pkgname-$pkgver.tar.gz::https://github.com/nabla-c0d3/$_pkgname/archive/$pkgver.tar.gz
bin.sha512sums"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	for i in $( find bin/*/linux64/ bin/*/linux32/ -name *.a ); do
		rm -v $i
		wget -O$i https://github.com/nabla-c0d3/nassl/raw/$pkgver/$i
	done
	sha512sum -c $srcdir/bin.sha512sums

	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr \
		--root="$subpkgdir" --optimize=1
}

_py2() {
	depends="${depends//py-/py2-}"
	replaces="$pkgname"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}
sha512sums="4c31c2c626f7aa36b9e39a9b1772f94addf818b4d63aaa5fa7f4d3188fa72af7beec653ea3628c1ce42d062c09b67fe90ad2667bb08468cb4b1e4b2c85929f5c  nassl-1.1.3.tar.gz
b9a14057dddd31d42a7c5d4a3f389289c0f778cd0398ef4f5a7a9571c7178047a00519069d07f6f9ec64212d2a0dd72ad6eaf59291863225a3353356b3a2cbf1  bin.sha512sums"
