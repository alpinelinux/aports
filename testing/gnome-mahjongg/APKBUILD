maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gnome-mahjongg
pkgver=49.1.1
pkgrel=0
pkgdesc="Match tiles and clear the board"
url="https://apps.gnome.org/Mahjongg/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	desktop-file-utils
	gtk4.0-dev
	libadwaita-dev
	librsvg-dev
	meson
	vala
	"
subpackages="$pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/gnome-mahjongg/${pkgver%%.*}/gnome-mahjongg-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
da8f27f46d0bf213f8d810958901ed1b27447a72db82a1466c06b20090afb9207f648b7e35b3c3078227b7fe4b29d414522b3b91f5fb765e2c029424773e9bc0  gnome-mahjongg-49.1.1.tar.xz
"
