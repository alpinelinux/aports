maintainer="Ariadne Conill <ariadne@ariadne.space>"
pkgname=capsudo
pkgver=0.1.3
pkgrel=0
pkgdesc="object capability-based privilege delegation daemon"
url="https://codeberg.org/kaniini/capsudo"
arch="all"
license="ISC"
subpackages="$pkgname-doc $pkgname-openrc $pkgname-dbg"
source="https://distfiles.ariadne.space/capsudo/capsudo-$pkgver.tar.xz"
options="!check" # no tests

build() {
	make
}

package() {
	make PREFIX="/usr" DESTDIR="$pkgdir" INSTALL_OPENRC_FILES=true install
	install -Dm644 COPYING -t "$pkgdir"/usr/share/licenses/$pkgname/
}

