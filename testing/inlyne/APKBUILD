# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
maintainer="Matthias Ahouansou <matthias@ahouansou.cz>"
pkgname=inlyne
pkgver=0.5.0
pkgrel=0
pkgdesc="GPU powered, browserless, markdown & html viewer"
url="https://github.com/Inlyne-Project/inlyne"
# s390x: nix, others: image loading snapshot tests fail
arch="all !s390x !armhf !x86 !armv7"
license="MIT"
makedepends="
	cargo-auditable
	fontconfig-dev
	libxkbcommon-dev
	oniguruma-dev
	wayland-dev
	"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-fish-completion
"
source="$pkgname-$pkgver.tar.gz::https://github.com/Inlyne-Project/inlyne/archive/refs/tags/v$pkgver.tar.gz"
options="net"

export RUSTONIG_DYNAMIC_LIBONIG=1  # use system libonig

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen

	cargo xtask gen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm 755 target/release/inlyne "$pkgdir"/usr/bin/inlyne

	install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE

	install -Dm644 completions/inlyne.bash "$pkgdir"/usr/share/bash-completion/completions/inlyne
	install -Dm644 completions/inlyne.fish "$pkgdir"/usr/share/fish/vendor_completions.d/inlyne.fish
	install -Dm644 completions/_inlyne "$pkgdir"/usr/share/zsh/site-functions/_inlyne
}

sha512sums="
3361a58cb2e8e9b929cbca5899db442f1404836385ee86839615d25f31af6a52719063c9e1fa69f6d6288515233d71e432b17a8523981db25cd0b2e757a10bdd  inlyne-0.5.0.tar.gz
"
