# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=emacs-company-wubi
pkgver=0_git20161031
_gitrev=8218093d4ed6935aecd6c4991d8181113e50a606
pkgrel=0
_pkgreal=company-wubi
pkgdesc="Tiny Wubi Input Method for Emacs using company-mode"
url="https://github.com/Yevgnen/company-wubi"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	cmd:emacs
	emacs-company
	emacs-dash
	emacs-s
	"
makedepends="emacs-nox"
source="https://github.com/Yevgnen/company-wubi/archive/$_gitrev/emacs-company-wubi-$_gitrev.tar.gz"
builddir="$srcdir/$_pkgreal-$_gitrev"
options="!check" # no tests

build() {
	emacs -batch -q -no-site-file -L . \
		-f batch-byte-compile \
		./*.el
}

package() {
	install -Dvm644 ./*.el ./*.elc \
		-t "$pkgdir"/usr/share/emacs/site-lisp/$_pkgreal/
	install -Dvm644 dict/* \
		-t "$pkgdir"/usr/share/emacs/site-lisp/$_pkgreal/dict/

	cd "$pkgdir"/usr/share/emacs/site-lisp/$_pkgreal
	emacs -batch -q -no-site-file \
		-eval "(loaddefs-generate \".\" \"$_pkgreal-loaddefs.el\")"
}

sha512sums="
5c02fad02e2b1921f4b4afa80c4ec2a23f1fc3ea44f9df88c2d1f63071ba9e4e8ae62803ec334eddea60bae10cc85feb2a765216028a3b7f25ba2a471df7ed85  emacs-company-wubi-8218093d4ed6935aecd6c4991d8181113e50a606.tar.gz
"
