# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=libatomic_ops
pkgver=7.4.8
pkgrel=0
pkgdesc="Implementation for atomic memory update operations"
url="https://github.com/ivmai/libatomic_ops/"
arch="all"
license="GPL2"
makedepends=""
subpackages="$pkgname-doc $pkgname-dev"
source="https://github.com/ivmai/${pkgname}/releases/download/v$pkgver/${pkgname}-$pkgver.tar.gz"
builddir="$srcdir/${pkgname}-$pkgver"

build() {
	cd "$builddir"

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr

	make
}

check() {
	cd "$builddir"

	make check
}

package() {
	cd "$builddir"

	make DESTDIR="$pkgdir" install
}

sha512sums="d03bcb946f8143bf79c1f44ef0637d0462efc1eb7a0abf15231341f0f9193dd2d57a17f0670a95fda3731642f444a85d0944f86447cff8e69bc851b8d5acc863  libatomic_ops-7.4.8.tar.gz"
