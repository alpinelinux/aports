# Contributor: Meng Zhuo <mengzhuo@iscas.ac.cn>
# Maintainer: Meng Zhuo <mengzhuo@iscas.ac.cn>
pkgname=ssh-get-id
pkgver=0.1.4
pkgrel=0
pkgdesc="ssh-get-id add the public SSH keys from a known, trusted online identity to grant SSH access."
url="https://github.com/mengzhuo/ssh-get-id"
arch="all"
license="MIT"
makedepends="go"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/mengzhuo/ssh-get-id/archive/refs/tags/v$pkgver.tar.gz"
options="net"

build() {
	go build -ldflags="-s -w" -o ssh-get-id main.go
}

check() {
	./ssh-get-id -h
}

package() {
	install -Dm755 "$builddir/ssh-get-id" -t "$pkgdir/usr/bin/"
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
8958b029df24ce440b0328108749da519496e8c61f2ea0435e02f432f63823a9475bdd77f25906c4b73f5fa2429beabdc0ba2de8d26d5953778e6bd8dd2734d4  ssh-get-id-0.1.4.tar.gz
"
