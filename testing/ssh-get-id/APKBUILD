# Contributor: Meng Zhuo <mengzhuo@iscas.ac.cn>
# Maintainer: Meng Zhuo <mengzhuo@iscas.ac.cn>
pkgname=ssh-get-id
pkgver=0.2.0
pkgrel=0
pkgdesc="Add the public SSH keys from a known, trusted online identity to grant SSH access"
url="https://github.com/mengzhuo/ssh-get-id"
arch="all"
license="MIT"
makedepends="go"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/mengzhuo/ssh-get-id/archive/refs/tags/v$pkgver.tar.gz"
options="net" # go mods

build() {
	go build -ldflags="-s -w" -o ssh-get-id main.go
}

check() {
	./ssh-get-id -h
}

package() {
	install -Dm755 "$builddir/ssh-get-id" -t "$pkgdir/usr/bin/"
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
