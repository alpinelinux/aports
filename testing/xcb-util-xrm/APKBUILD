sha512sums="7f992eaca739b9518ffe8f39b921617e092f4a8534cab95f072071ea952e86269971bfc422945ae5f63eda661f61424c1315ece862e2689d1048e5c2b49ff673  xcb-util-xrm-1.2.tar.gz"
