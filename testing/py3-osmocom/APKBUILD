# Contributor: Alexander Couzens <lynxis@fe80.eu>
# Maintainer: Alexander Couzens <lynxis@fe80.eu>
pkgname=py3-osmocom
pkgver=0.0.11
pkgrel=0
# _pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=pyosmocom
pkgdesc="Python implementation of core osmocom utilities / protocols"
license="GPL-2.0-or-later"
url="https://osmocom.org/projects/pyosmocom"
arch="noarch"
depends="
	python3
	py3-gsm0338
	py3-construct
	"
makedepends="
	py3-gsm0338
	py3-construct
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/p/pyosmocom/pyosmocom-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
5d2758a4ddb2208149595e722ca8771deb7a065ec484b49984c406215286d44990fc0c0699f2ba99b8c3443b5d6128ca1812bca3fb124e7938e91ebdf3658dfe  pyosmocom-0.0.11.tar.gz
"
