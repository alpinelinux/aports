# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=py-configparser
_pkgname=${pkgname#py-*}
pkgver=3.5.0
pkgrel=0
pkgdesc="Backport of he updated configparser from Python 3.5"
url="https://pypi.python.org/pypi/configparser/3.5.0"
arch="noarch"
license="MIT"
depends="python"
makedepends="python-dev py-setuptools"
checkdepends="py2-tox python2-tests"
source="$pkgname-$pkgver.tar.gz::https://bitbucket.org/ambv/$_pkgname/get/$pkgver.tar.gz"
builddir="$srcdir/ambv-$_pkgname-aeef7ca1c988"

build() {
	cd "$builddir"
	python setup.py build
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir"
}

check() {
	cd "$builddir"
	# only test the env Alpine supports
	sed -i 's|^envlist.*|envlist = py27|' tox.ini
	tox
}

sha512sums="532c221fa51fd60f2f2492ea100933dd4aebea5cc2e330f2ce426b14fa5cce4d2396f082fffed32e3d9f4e00078313d1a4d28fb4a79147a7703993aa3fbbcca4  py-configparser-3.5.0.tar.gz"
