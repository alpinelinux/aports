# Maintainer: Orson Teodoro <orsonteodoro@hotmail.com>

pkgname=py-pyhamcrest
_pkgname=pyhamcrest
__pkgname=PyHamcrest
pkgver=1.9.0
pkgrel=0
pkgdesc="Hamcrest matchers for Python"
url="https://github.com/hamcrest/PyHamcrest"
arch="noarch"
license="BSD-3-Clause"
depends="py-six"
checkdepends="py-tox"
makedepends="py-setuptools py3-setuptools py-sphinx"
source="$pkgname-$pkgver.tar.gz::https://github.com/hamcrest/$__pkgname/archive/V$pkgver.tar.gz"
builddir="$srcdir"/$__pkgname-$pkgver
subpackages="py3-$_pkgname:_py3 py2-$_pkgname:_py2 $pkgname-doc"
options="check"

_getpythonver(){
	echo $($1 -c 'import sys; print("%i%i" '\
		'% (sys.version_info.major, sys.version_info.minor))')
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
	tox -e py$(_getpythonver python2),py$(_getpythonver python3)
}

package() {
	cd "$builddir"
	install -d "$pkgdir"/usr/share/doc/$pkgname/ \
		"$pkgdir"/usr/share/man/man1 "$pkgdir"/usr/share/html/$pkgname
	install -t "$pkgdir"/usr/share/doc/$pkgname/ CHANGES.txt README.rst
	cd doc
	PYTHONPATH="$builddir/src:$PYTHONPATH" make man html
	install -t "$pkgdir"/usr/share/man/man1 _build/man/*
	mv _build/html/*  "$pkgdir"/usr/share/html/$pkgname
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"
	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

sha512sums="3a878637ed5138365416c170871a63640f089047b723c7ec8db893dd716c0b1cdad16a98584700405693b954af7d4868a8543d1a3fc58ded22b493c8c61661b4  py-pyhamcrest-1.9.0.tar.gz"
