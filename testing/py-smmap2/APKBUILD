# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=py-smmap2
_pkgname=smmap
pkgver=2.0.1
pkgrel=0
pkgdesc="A sliding memory map manager"
url="http://smmap.readthedocs.org"
arch="noarch"
license="BSD-3"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="$pkgname-$pkgver.tar.gz::https://github.com/gitpython-developers/$_pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	_py python2
}

_py3() {
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

check() {
	cd "$builddir"
	python2 setup.py test
}

sha512sums="747a5f7cb1bf8cfe9f0ae1921263b2bb6f9fad17b7e839f68b112493eb6a2ea85198f69df8a5da38595d7765bf294a6690fa2ef3d0350635449f50021c193914  py-smmap2-2.0.1.tar.gz"
