pkgname=krane
pkgver=0.20.7
pkgrel=0
pkgdesc="Drop-in replacement for crane with built-in cloud workload identity auth"
url="https://github.com/google/go-containerregistry/tree/main/cmd/krane"
arch="all"
license="Apache-2.0"
makedepends="go"
options="net"
source="$pkgname-$pkgver.tar.gz::https://github.com/google/go-containerregistry/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/go-containerregistry-$pkgver/cmd/krane/"

build() {
	go build .
}

check() {
	go test -v .
}

package() {
	install -Dm0755 krane -t "$pkgdir"/usr/bin/
}

