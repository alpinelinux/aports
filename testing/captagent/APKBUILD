# Maintainer:
pkgname=captagent
pkgver=6.1.0.20
pkgrel=0
pkgdesc="HEP Capture Agent for HOMER"
url="https://github.com/sipcapture/captagent"
arch="all"
license="GPL3"
makedepends="autoconf automake bison expat-dev flex flex-dev json-c-dev libtool libpcap-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/sipcapture/captagent/archive/$pkgver.tar.gz
        ac-fix.patch"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir" && ./build.sh && ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc &&
		make
}

package() {
	cd "$builddir" && make install DESTDIR="$pkgdir"
}

