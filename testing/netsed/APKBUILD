pkgname=netsed
pkgver=1.2
pkgrel=1
pkgdesc="The network packet stream editor"
url="http://silicone.homelinux.org/projects/netsed/"
arch="all"
license="GPL"
makedepends="$depends_dev linux-headers"
source="http://http.debian.net/debian/pool/main/n/$pkgname/${pkgname}_${pkgver}.orig.tar.gz
default-path.patch"
builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

