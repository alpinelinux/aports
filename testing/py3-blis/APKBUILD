pkgname=py3-blis
pkgver=0.3.0
pkgrel=0
pkgdesc="Fast matrix-multiplication as a self-contained Python library"
url="https://github.com/explosion/cython-blis"
arch="all"
license="MIT"
depends="python3"
makedepends="python3-dev py3-setuptools cython3"
#checkdepends="py3-pytest py3-hypothesis py3-numpy py3-tox"
checkdepends="py3-pytest py3-hypothesis py3-numpy"
subpackages="$pkgname-doc"
source="blis-$pkgver.tar.gz::https://github.com/explosion/cython-blis/archive/v$pkgver.tar.gz
tox.ini"
builddir="$srcdir/cython-blis-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py install --root="$PWD/tmp_install"

	cd tmp_install/usr/lib/python3.7/site-packages

	PYTHONPATH="$PWD/tmp_install/usr/lib/python3.7/site-packages:$PYTHONPATH" \
		pytest-3 blis

#cp "$srcdir"/tox.ini "$builddir"
#tox -e py37
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
	install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md" 
}

