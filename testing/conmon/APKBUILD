# Contributor: Simon Ser <simon.ser@intel.com>
# Maintainer: Simon Ser <simon.ser@intel.com>
pkgname=conmon
pkgver=2.0.0
pkgrel=1
pkgdesc="An OCI container runtime monitor"
url="https://github.com/containers/conmon"
arch="all"
license="Apache-2.0"
makedepends="glib-dev"
depends="runc glib"
source="$pkgname-$pkgver.tar.gz::https://github.com/containers/conmon/archive/v$pkgver.tar.gz"
options="!check"

build() {
	cd "$srcdir/conmon-$pkgver"
	make
}

package() {
	cd "$srcdir/conmon-$pkgver"
	make install PREFIX="$pkgdir/usr"
}

sha512sums="0d903f1b83248a130fa6a5c212f96a5bcc37113cfb93c73847a3744b9da8ca355f93f16ca57f4bfb50bcba13b272f23970fdec8ab7ac1862e93b3057512e572b  conmon-2.0.0.tar.gz"
