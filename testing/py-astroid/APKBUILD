# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-astroid
_pkgname=astroid
pkgver=1.5.3
pkgrel=1
pkgdesc="A new abstract syntax tree from Python's ast"
url="http://www.astroid.org/"
arch="noarch"
license="LGPL2+"
options="!check" # Tests are broken in some environments: https://github.com/PyCQA/astroid/issues/439
depends="py-logilab-common py-six py-wrapt py-lazy-object-proxy"
_py2_depends="py2-singledispatch py-enum34 py2-backports-functools-lru-cache"
replaces="py-logilab-astng"
makedepends="python2-dev python3-dev py-setuptools $_py2_depends"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build || return 1
	python3 setup.py build || return 1
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-} $_py2_depends"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="2a224d9bf8e41059a1316d80738cdc0f1e4c4e0f987baf3969710bae7192466b708c7942cd7e4eeccea55582ce70bb687c96b9e7dece3229ae4cffc558aa2319  astroid-1.5.3.tar.gz"
