# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=filelight
pkgver=19.04.2
pkgrel=0
arch="all"
url="https://kde.org/applications/utilities/filelight"
pkgdesc="An application to visualize the disk usage on your computer"
license="(GPL-2.0-only OR GPL-3.0-only) AND GFDL-1.2-only"
makedepends="extra-cmake-modules qt5-qtbase-dev kxmlgui-dev kio-dev ki18n-dev kdoctools-dev"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # No tests

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}

sha512sums="06a8e9f5cbc00738677f84283ff11fb369d0a8a9aa73202ca623e70cfdb9c72e18a5eb134edd059f95476099f57dcc9b791557e9720cfa8e7af3c6f035f75241  filelight-19.04.2.tar.xz"
