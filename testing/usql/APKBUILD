# Contributor: Kevin Daudt <ops@ikke.info>
# Maintainer: Kevin Daudt <ops@ikke.info>
pkgname=usql
pkgver=0.7.0
pkgrel=0
pkgdesc="universal command line inteface for SQL databases"
url="https://github.com/xo/usql"
arch="all"
license="MIT"
depends=""
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/xo/usql/archive/v0.7.0.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

build() {
	cd "$builddir"
	go build github.com/xo/usql
}

package() {
	cd "$builddir"
	install -Dm0755 usql "$pkgdir"/usr/bin/usql
}

sha512sums="b4eda966ecee48eec6e2dab39646652d8ed7e092e2ed6c16f24bbb67a90a927cef63ebbbdf7395c665356f90216bf7d998a385de81cdc72b2fd297b70946115d  usql-0.7.0.tar.gz"
