# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=mangowc
pkgver=0.12.3
pkgrel=0
pkgdesc="Lightweight, high-performance Wayland compositor built on dwl"
arch="all"
url="https://mangowc.vercel.app/"
license="GPL-3.0-or-later"
depends="scenefx"
makedepends="muon
	pcre2-dev
	scenefx-dev
	wlroots0.19-dev
	wayland-protocols
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/DreamMaoMao/mangowc/archive/refs/tags/$pkgver.tar.gz"

build() {
	abuild-muon output .
	ninja -C output
}

check() {
	./output/mango -v
}

package() {
	DESTDIR="$pkgdir" muon -C output install
}

sha512sums="
