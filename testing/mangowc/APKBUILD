# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=mangowc
pkgver=0.12.2
pkgrel=0
pkgdesc="Lightweight, high-performance Wayland compositor built on dwl"
arch="all"
url="https://mangowc.vercel.app/"
license="GPL-3.0-or-later"
depends="scenefx"
makedepends="muon
	pcre2-dev
	scenefx-dev
	wlroots0.19-dev
	wayland-protocols
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/DreamMaoMao/mangowc/archive/refs/tags/$pkgver.tar.gz"

build() {
	abuild-muon output .
	ninja -C output
}

check() {
	# the below command will print to stderr and exit with an error
	# https://github.com/DreamMaoMao/mangowc/issues/550
	./output/mango -v 2>&1 | grep "$pkgver"
}

package() {
	DESTDIR="$pkgdir" muon -C output install
}

sha512sums="
b2d7b8a38580406a231a28d4318e128c57c940264286235011cce83b871ad069fee4d4d769966924d00a38944df385f2b5f250cc37189ebca09313981fda58af  mangowc-0.12.2.tar.gz
"
