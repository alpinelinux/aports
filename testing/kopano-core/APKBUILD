pkgname=kopano-core
subpackages="$pkgname-dbg $pkgname-openrc $pkgname-doc $pkgname-bash-completion"
pkgver=10.1.1
pkgrel=19
pkgdesc="Open Source Groupware Solution"
# ppc64le blocked by py3-libmdbx
arch="all !ppc64le"
url="https://www.kopano.com/"
license="AGPL-3.0-or-later"
options="!check" # No test suite
_phpver=7
_php=php$_phpver
makedepends="
	autoconf
	automake
	curl-dev
	db-dev
	docbook-xsl
	e2fsprogs
	gnu-libiconv-dev
	gsoap
	gsoap-dev
	icu-dev
	jsoncpp-dev
	krb5-dev
	libhx-dev
	libical-dev
	libtool
	libvmime-dev
	libxml2-dev
	mariadb-dev
	openldap-dev
	$_php-dev
	py3-setuptools
	python3-dev
	sed
	swig3
	xapian-core-dev
	xmlto
"
pkgusers="kopano-core kopano-gateway kopano-ical postfix"
pkggroups="kopano http kopano-diraccess"
depends="
	bash-completion
	bison
	boost
	boost-libs
	catdoc
	cyrus-sasl
	gnu-libiconv
	krb5
	libxslt
	mariadb
	openldap
	openrc
	$_php
