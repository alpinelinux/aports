# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=xml2rfc
pkgver=3.23.0
pkgrel=0
pkgdesc="tool for converting XML documents into internet drafts and RFCs"
options="!check" # Requires unpackaged i18naddress
url="https://github.com/ietf-tools/xml2rfc"
arch="noarch"
license="BSD-2-Clause"
depends="python3 py3-six py3-requests py3-lxml"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/x/xml2rfc/xml2rfc-$pkgver.tar.gz"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 test.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ba15599006db04c4bef25c95fe63a015a23d4f59865066e23c991233b9be50b246c354d753c4338ad22526009dad43a7fb12e5c8fec647e97c975b98e1673cc3  xml2rfc-3.23.0.tar.gz
"
