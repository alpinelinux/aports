pkgver=0.2_git20250909
pkgrel=0
_commit=51887cee0a2cea8cf0aba2d81442b75403485e1c
pkgdesc="dwm-like bar for the river wayland compositor"
url="https://github.com/kolunmi/sandbar"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	fcft-dev
	pixman-dev
	wayland-dev
	wayland-protocols
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/kolunmi/sandbar/archive/$_commit.tar.gz"
