maintainer="Leon White <badfunkstripe@gmail.com>"
pkgname=protoc-gen-gorm
pkgver=1.1.5
pkgrel=1
pkgdesc="protoc plugin to generate GORM models and APIs for simple object persistence tasks"
url="https://github.com/infobloxopen/protoc-gen-gorm"
arch="all"
license="Apache-2.0"
depends="protoc protoc-gen-go"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/infobloxopen/protoc-gen-gorm/archive/refs/tags/v$pkgver.tar.gz"
options="net" # download Go modules

build() {
	go build -v .
}

check() {
	go test ./...
}

package() {
	install -Dm755 protoc-gen-gorm -t "$pkgdir"/usr/bin/
}

