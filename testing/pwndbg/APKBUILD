# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=pwndbg
pkgver=2026.02.17
pkgrel=0
pkgdesc="Exploit Development and Reverse Engineering with GDB & LLDB Made Easy"
url="https://pwndbg.re/stable/"
arch="noarch !riscv64 !s390x" # limited by unicorn
license="MIT"
depends="python3
	py3-capstone
	py3-cparser
	py3-elftools
	py3-hatchling
	py3-psutil
	py3-pygments
	py3-requests
	py3-rich
	py3-sortedcontainers
	py3-tabulate
	py3-typing-extensions
	py3-unicorn
	pwntools
	"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-coverage py3-pytest"
subpackages="$pkgname-doc $pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/pwndbg/pwndbg/archive/refs/tags/$pkgver.tar.gz"
options="!check" # TODO: enable tests

build() {
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl

	install -Dm0644 README.md -t "$pkgdir"/usr/share/doc/"$pkgname"
}

sha512sums="
921e2cb8b164433f22b28dbf0b0d3cd40fc5512d183e44fd5b2b527d2f9159d0175d195e6cfb58c32111cd20abd3955740fd663262da056baaaef527535ece70  pwndbg-2026.02.17.tar.gz
"
