pkgname=easyrpg-player
pkgver=0.6.1
pkgrel=0
pkgdesc="FLOSS RPG Maker 2000/2003 and EasyRPG games interpreter"
url="https://easyrpg.org"
arch="x86_64"
license="GPL3"
depends="liblcf sdl2_mixer pixman freetype libvorbis mpg123 speexdsp libsndfile"
makedepends="make cmake"
subpackages="$pkgname-doc"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/EasyRPG/Player/archive/$pkgver.zip"
builddir="$srcdir/Player-$pkgver"

build() {
cd "$builddir"
  cmake CMakeLists.txt  \
  -DCMAKE_INSTALL_PREFIX:PATH=/usr \
  
  make
}


package() {
cd "$builddir"
  make DESTDIR="$pkgdir" install
}

