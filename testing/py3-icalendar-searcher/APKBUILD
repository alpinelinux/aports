# Contributor: Galen Abell <galen@galenabell.com>
# Maintainer: Galen Abell <galen@galenabell.com>
pkgname=py3-icalendar-searcher
_pyname=icalendar-searcher
pkgver=1.0.4
pkgrel=0
pkgdesc="Code for filtering, sorting and expanding icalendar components"
url="https://github.com/python-caldav/icalendar-searcher"
arch="noarch"
license="AGPL-3.0-only"
depends="py3-icalendar py3-recurring-ical-events"
makedepends="py3-gpep517 py3-poetry-dynamic-versioning py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/python-caldav/icalendar-searcher/archive/v$pkgver/$_pyname-$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"

build() {
	export POETRY_DYNAMIC_VERSIONING_BYPASS="$pkgver"
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
57c73296f0e43060865e181d719475871fdf781db84c6c060a3d600bc5d10bed7fc8fc54eff4d20e7c64593861f91e93cdb1df4ee6361a7906ed51e52a931ca9  py3-icalendar-searcher-1.0.4.tar.gz
"
