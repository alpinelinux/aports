# Contributor: Holger Jaekel <holger.jaekel@gmx.de>
maintainer="Holger Jaekel <holger.jaekel@gmx.de>"
pkgname=py3-owslib
#_pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=owslib
pkgver=0.35.0
pkgrel=0
pkgdesc="OGC Web Service utility library"
url="https://pypi.org/project/OWSLib/"
arch="noarch"
license="BSD-3-Clause"
depends="python3 py3-dateutil py3-tz py3-requests py3-lxml"
checkdepends="python3-dev py3-pytest py3-tox py3-lxml"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/o/owslib/owslib-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	tox --sitepackages
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ddb6ff8efd9e7549ee3bde76f140a6cc818ddf4fb19fed6dccdee45996dfa6b6f9bb73f75789fdf9270024bd3d5f895711b545b0da9fa11621af4e739592e52c  owslib-0.35.0.tar.gz
"
