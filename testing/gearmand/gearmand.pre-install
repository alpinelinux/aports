#!/bin/sh

## add gearmand group or use exsiting
if ! getent group gearmand &>/dev/null; then
	addgroup -S gearmand > /dev/null 2>&1
fi

## add gearmand user or use existing
if ! getent passwd gearmand &>/dev/null; then
	adduser -H -S -G gearmand -h /var/lib/gearmand -s /bin/false \
		-g "Gearman Server" gearmand > /dev/null 2>&1
fi

## exit clean
exit 0
