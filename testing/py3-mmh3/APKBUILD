pkgname=py3-mmh3
pkgver=2.5.1
pkgrel=0
pkgdesc="Python wrapper for MurmurHash (MurmurHash3), a set of fast and robust hash functions"
url="https://github.com/hajimes/mmh3"
arch="all"
license="CC0-1.0"
depends="python3"
makedepends="python3-dev py3-setuptools"
checkdepends="py3-numpy py3-tox"
subpackages="$pkgname-doc"
source="mmh3-$pkgver.tar.gz::https://github.com/hajimes/mmh3/archive/v$pkgver.tar.gz
tox.ini"
builddir="$srcdir/mmh3-$pkgver"

build() {
	python3 setup.py build
}

check() {
	# local install for test
	python3 setup.py install --root="$PWD/tmp_install"

	PYTHONPATH="$PWD/tmp_install/usr/lib/python3.7/site-packages:$PYTHONPATH" \
		python3 -m test_mmh3

#	cp "$srcdir"/tox.ini "$builddir"
#	tox -e python3.7
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
	install -Dm644 README.rst "$pkgdir/usr/share/doc/$pkgname/README.rst"
}

