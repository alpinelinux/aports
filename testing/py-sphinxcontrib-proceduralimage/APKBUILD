sha512sums="b384d3722e5567a106cf3fc589298496b2c3199587b937ec7d6ad5a733d8053a0aa51486d5b93dbe32ce866ccb14c94ab719299b443aec6084bee6f7597b4563  sphinxcontrib-proceduralimage-0.2.tar.gz"
