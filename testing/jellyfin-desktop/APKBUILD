maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=jellyfin-desktop
pkgver=2.0.0
pkgrel=0
pkgdesc="Jellyfin Desktop Client"
url="https://github.com/jellyfin/jellyfin-desktop"
# armhf: qt6-qtdeclarative
# riscv64, s390x, x86: qt6-qtwebengine
arch="all !riscv64 !s390x !armhf !x86"
license="GPL-2.0-only"
makedepends="
	cmake
	libcec-dev
	lirc-dev
	mpvqt-dev
	python3
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtwebchannel-dev
	qt6-qtwebengine-dev
	samurai
	sdl2-dev
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/jellyfin/jellyfin-desktop/archive/refs/tags/v$pkgver.tar.gz"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_BUILD_TYPE=None \
		$crossopts
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f7e4a67afb8dbfb8f29f9de0a1a3fe2d884a51f1f329a94289ede4fdec24ceca54d770295992e5e9bf6141bb0ec5a8acf1369a13018cb15ad327efb85df883f2  jellyfin-desktop-2.0.0.tar.gz
"
