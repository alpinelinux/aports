# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=modemmanager-qt
pkgver=5.59.0
pkgrel=0
pkgdesc="Qt wrapper for ModemManager DBus API"
arch="all"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="modemmanager-dev qt5-qtbase-dev"
makedepends="$depends_dev extra-cmake-modules doxygen graphviz-dev qt5-qttools-dev"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # requires dbus running
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}


package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="0cfaf5673a739623e525965da941ef58b2ac3960b6e74af580da7adf98af5f24aee7e5b83523b9c23377780b460b161d4a5a284e7bcee48e1f53b52fa3e32822  modemmanager-qt-5.59.0.tar.xz"
