# Maintainer: Jonas <3426-spameier@users.gitlab.alpinelinux.org>
pkgname=py3-msldap
_pyname=msldap
pkgver=0.5.5
pkgrel=0
pkgdesc="Python library to play with MS LDAP"
url="https://github.com/skelsec/msldap"
arch="noarch"
license="MIT"
depends="
	py3-asn1crypto
	py3-asyauth
	py3-asysocks
	py3-minikerberos
	py3-prompt_toolkit
	py3-tqdm
	py3-unicrypto
	py3-wcwidth
	py3-winacl
	python3
	"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skelsec/msldap/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"
options="!check" # no tests provided

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" dist/*.whl
}

sha512sums="
f80278b7d1cfc6520da6b62cf3b083a1f1b961047795c4fc60e794f0f9166f41ea39245c2c30d7e35c90cd108bde440ccbab1ea6b1c2705b8682948d32d2ed96  py3-msldap-0.5.5.tar.gz
"
