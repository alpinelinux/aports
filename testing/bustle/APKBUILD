# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=bustle
pkgver=0.7.5
pkgrel=0
pkgdesc="Draw sequence diagrams of D-Bus activity"
url="https://gitlab.freedesktop.org/bustle/bustle"
arch="x86_64"
license="GPL3"
depends="libpcap glib"
makedepends="libpcap-dev help2man"
subpackages="$pkgname-doc"
options="!check"
source="$pkgname-$pkgver.zip::https://gitlab.freedesktop.org/bustle/bustle/-/archive/master/bustle-master.zip"
builddir="$srcdir/$pkgname-master"

build() {
	cd ${builddir}
  make
}

package() {
	cd "$builddir"
  install -Dm755 dist/build/bustle-pcap ${pkgdir}/usr/bin/bustle-pcap
  install -Dm644 bustle-pcap.1 ${pkgdir}/usr/share/man/man1/bustle-pcap.1
}

sha512sums="23a83b84c5c7cc5d20cb3334f6b01d424f9dda10ddfacb55fd4212d52dfe9f6597255bb0573d58d3db721e442065100aa9582b42201987d45703bcf806255f62  bustle-0.7.5.zip"
