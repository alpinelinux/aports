# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=akonadi-notes
pkgver=19.04.2
pkgrel=0
pkgdesc="Libraries and daemons to implement management of notes"
arch="all"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="qt5-qtbase-dev ki18n-dev kmime-dev"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="14df86f3752ec0e3fc948a6d2d8db2bd81ceaed722d34fc353a91f44acd17257c192bedf2fa32de4c1429871e4dd75dc8ace08f36659f1cb4d9fed53974b1dea  akonadi-notes-19.04.2.tar.xz"
