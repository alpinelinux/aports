# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=afew
pkgver=3.0.1_git20260118
pkgrel=0
_commit="23b5aeaa43572a59e95fb00732292087b091d4a1"
pkgdesc="initial tagging script for notmuch"
url="https://github.com/afewmail/afew"
# s390x: failing test
arch="all !s390x"
license="ISC"
depends="
	py3-chardet
	py3-dkimpy
	py3-notmuch
	notmuch
"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-sphinx
	py3-wheel
"
checkdepends="
	py3-pytest
	py3-pytest-freezegun
"
subpackages="$pkgname-doc"
source="$pkgname-$_commit.tar.gz::https://github.com/afewmail/afew/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	# https://github.com/afewmail/afew/issues/283
	echo "version = \"$pkgver\"" > "$builddir/afew/version.py"

	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
	PYTHONPATH="$builddir" sphinx-build -b man docs/ build/
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
	install -Dm644 build/"$pkgname".1 \
		-t "$pkgdir"/usr/share/man/man1
}

sha512sums="
0c8cfdcac3182afdd6664897c314405625e24d1ae20689568dbb26696d35d33a36da9dc8b5f47c540c7dc8864a9574f7e6545f1d5d7fcfb95ececb7f7ee52893  afew-23b5aeaa43572a59e95fb00732292087b091d4a1.tar.gz
"
