# Contributor: Taner Tas <taner76@gmail.com>
# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=libva-utils
pkgver=2.4.1
pkgrel=0
pkgdesc="Intel VA-API Media Applications and Scripts for libva"
url="https://github.com/01org/libva-utils"
arch="all"
license="MIT"
makedepends="
	meson
	libva-dev
	libdrm-dev
	libx11-dev
	libxext-dev
	libxfixes-dev
	wayland-dev
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/intel/libva-utils/archive/${pkgver}.tar.gz"

build() {
	meson \
		--prefix=/usr \
		-Ddrm=true \
		-Dx11=true \
		-Dwayland=true \
		-Dtests=true \
		output
	ninja -C output
}

check() {
	ninja -C output test
}

package() {
	DESTDIR="$pkgdir" ninja -C output install
}

sha512sums="dbd21039caa5496eedc491eee7a1bfe93bcc85a60468eadcbb93d8efb30457ac7ecc28b59b303db6711bdbb82903e5db3759424404aaa1269a41ca34e6965f18  libva-utils-2.4.1.tar.gz"
