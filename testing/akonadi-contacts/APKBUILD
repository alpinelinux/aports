# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=akonadi-contacts
pkgver=19.08.1
pkgrel=0
pkgdesc="Libraries and daemons to implement Contact Management in Akonadi"
arch="all"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.1"
depends_dev="qt5-qtbase-dev kio-dev ki18n-dev kcompletion-dev kconfig-dev
	kcodecs-dev kiconthemes-dev kdbusaddons-dev kservice-dev ktextwidgets-dev
	kwidgetsaddons-dev kxmlgui-dev prison-dev kcontacts-dev kmime-dev
	akonadi-dev"
makedepends="$depends_dev extra-cmake-modules"
checkdepends="xvfb-run"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="b72e52636107b1efea4f1ff5a8b1e63e1f8e46247da21c9a0368e2827da8cf6fb1245133af982a5479125630e039e8dc2d98562d7d62648662e798dd38e8c523  akonadi-contacts-19.08.1.tar.xz"
