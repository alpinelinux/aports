# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=ropgadget
pkgver=7.7
pkgrel=0
pkgdesc="lets you search your gadgets on your binaries to facilitate your ROP exploitation"
url="https://github.com/JonathanSalwan/ROPgadget"
arch="noarch"
license="BSD-3-Clause"
depends="python3 py3-capstone"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-coverage py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/JonathanSalwan/ROPgadget/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/ROPgadget-$pkgver"
options="!check" # TODO: enable tests

build() {
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
658b25d8828b1162fcf830c82d5a44cf9968d14ba1b76f5da8eaf63aab1b50d0c452ed70b8a32ae5b8f35ff5887387775c0e5fdd215731c00c962dce6959389c  ropgadget-7.7.tar.gz
"
