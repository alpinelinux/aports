maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=miracle-wm
pkgver=0.8.2
pkgrel=1
pkgdesc="Wayland tiling window manager built on Mir"
url="https://miracle-wm.org/"
arch="all"
license="GPL-3.0-or-later"
depends="xwayland"
makedepends="
	boost1.84-dev
	cmake
	gtest-dev
	json-c-dev
	libevdev-dev
	libnotify-dev
	libxkbcommon-dev
	mesa-dev
	mir-dev
	nlohmann-json
	samurai
	yaml-cpp-dev
	"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/miracle-wm-org/miracle-wm/archive/refs/tags/v$pkgver.tar.gz
	uint.patch
	0001-bugfix-only-install-libmirrenderer-dev-if-it-is-avai.patch
	0002-task-remove-version-checks-in-order-to-assume-latest.patch
	"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_BUILD_TYPE=None \
		$crossopts
	cmake --build build
}

check() {
	./build/tests/miracle-wm-tests
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

