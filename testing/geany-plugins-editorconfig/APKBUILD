# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=geany-plugins-editorconfig
pkgver=1.34
pkgrel=0
pkgdesc="EditorConfig plugin for Geany"
url="https://github.com/editorconfig/editorconfig-geany"
arch="x86_64"
license="GPL"
depends="geany editorconfig"
makedepends="geany-dev editorconfig-dev"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/editorconfig/editorconfig-geany/archive/master.zip"
builddir="$srcdir/editorconfig-geany-master"

build() {
	cd "$builddir"
  make
}

package() {
	cd "$builddir"
  make EDITORCONFIG_PREFIX=/usr
  install -Dm644 "$srcdir/editorconfig-geany-master/editorconfig-geany.so" "$pkgdir/usr/lib/geany/editorconfig-geany.so"
  install -Dm644 "$srcdir/editorconfig-geany-master/COPYING" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}

sha512sums="92020db36bd04e02ad7c98d12dda4abdb557cd1d806034c1a559044d2d529f78130a0ea27f2d67e4a23e7c821268d2e481b3c9ca028cb7df443c8f2db55cbb48  geany-plugins-editorconfig-1.34.zip"
