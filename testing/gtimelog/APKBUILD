maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gtimelog
pkgver=0.12_git20251029
_commit=621dab405dfe4b664f631d3a70795f53befb48c3
pkgrel=0
pkgdesc="Time tracking application"
url="https://gtimelog.org/"
arch="noarch"
license="GPL-2.0-only"
depends="
	gtk+3.0
	librsvg
	libsecret
	libsoup3
	py3-gobject3
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-freezegun
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$pkgname-$_commit.tar.gz::https://github.com/gtimelog/gtimelog/archive/$_commit.tar.gz
	fix-timedelta-test.patch
	"
builddir="$srcdir/$pkgname-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
351e0c0d256a2b4e19efa6af57dfc1cdc01d6b6862ed8c08cd20eb178fe6d3fd88333c3007078bc39d3ffde60d17edba84a14ff375893a55b42320f26b5ec8c5  gtimelog-621dab405dfe4b664f631d3a70795f53befb48c3.tar.gz
e33747da3aae999132b9f6394f9ff82bb85b663f7a8421b291a3a9f93c01c7570c46328444ebe2b1fc0f8c0c7e0c3fce867a1824bb943aa76fe797fd4193ab9d  fix-timedelta-test.patch
"
