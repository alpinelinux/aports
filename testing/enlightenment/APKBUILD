# Contributor: Bob Hampton <bobh@optimizations.com>
# Maintainer: Bob Hampton <bobh@optimizations.com>
pkgname=enlightenment
pkgver=0.22.1
pkgrel=0
pkgdesc="Enlightenment Desktop Environment"
url="https://enlightenment.org"
arch="x86_64"
license="BSD LGPL2.1 GPL2"
depends="dbus-x11 efl"
makedepends="doxygen
texlive
libxcb-dev
xcb-util-keysyms-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://download.enlightenment.org/rel/apps/enlightenment/$pkgname-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-$pkgver"
options="suid"

build() {
	cd "$builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--disable-systemd
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

sha512sums="cb7d4124a17f294f8617da970e233dd212cc426be63e94b74299ffc8dd0c8535284eee9c93a25273aa4c1bf1831a056bb73c4c96197985d469392f451aaa993e  enlightenment-0.22.1.tar.xz"
