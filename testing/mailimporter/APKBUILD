# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=mailimporter
pkgver=19.04.2
pkgrel=0
pkgdesc="KDE PIM library providing support for mail applications"
arch="all"
url="https://kontact.kde.org/"
license="GPL-2.0-or-later"
depends_dev="qt5-qtbase-dev karchive-dev kconfig-dev kcoreaddons-dev ki18n-dev akonadi-dev kmime-dev akonadi-mime-dev libkdepim-dev"
makedepends="$depends_dev extra-cmake-modules"
checkdepends="xvfb-run"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="dae0cbb7551ed9e462134d5e26fcb8adb5f59a2fa02272ceecb5d02fb2c394da6b795046582bd21b7b092086dc45b9fc2c7497886c528a2037cd10c5e1716aca  mailimporter-19.04.2.tar.xz"
