# Contributor: August Klein <amatcoder@gmail.com>
# Maintainer: August Klein <amatcoder@gmail.com>
pkgname=nzbget
pkgver=19.1
pkgrel=3
pkgdesc="Usenet downloader"
url="http://nzbget.net"
arch="all"
license="GPL-2.0"
makedepends="libxml2-dev ncurses-dev openssl-dev"
subpackages="$pkgname-doc"
source="https://github.com/$pkgname/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver-src.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	default_prepare

	cd "$builddir"
	update_config_sub
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-parcheck \
		--with-tlslib=OpenSSL
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make -j1 DESTDIR="$pkgdir" install
}

sha512sums="3ba7cd7f7fec28e29129be0a1ca5879a0593bc54be49e3776e84eeb7804377eec47106aa2371b31dec7d9152301d68b199ce9e66db714195defc8e15ef636532  nzbget-19.1-src.tar.gz"
