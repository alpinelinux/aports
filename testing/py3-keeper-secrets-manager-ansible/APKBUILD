# Contributor: byteskeptical <ports@byteskeptical.com>
# Maintainer: byteskeptical <ports@byteskeptical.com>
pkgname=py3-keeper-secrets-manager-ansible
_name=${pkgname/py3-keeper-/}
pkgver=1.2.6
pkgrel=0
_sdkver=17.1.0
pkgdesc="Keeper Secrets Manager Integration for Ansible"
url="https://pypi.org/project/keeper-secrets-manager-ansible/"
arch="noarch"
license="MIT"
checkdepends="
	py3-iso8601
"
depends="
	ansible-core
	python3
	py3-keeper-secrets-manager-core
	py3-keeper-secrets-manager-helper
"
makedepends="
	py3-gpep517
	py3-setuptools
"
subpackages="$pkgname-pyc"
source="https://github.com/Keeper-Security/secrets-manager/archive/refs/tags/python-sdk-v$_sdkver.tar.gz"
builddir="$srcdir/${_name%-ansible}-python-sdk-v$_sdkver/integration/keeper_${_name//-/_}"

build() {
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

check() {
	export ANSIBLE_NOCOLOR=1
	export KSM_CONFIG_SKIP_MODE_WARNING=TRUE
	export PYTHONPATH="."
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m unittest discover -p '*_test.py' -s tests -t .
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
e9cd07c686108186f23b83c6f872349fb944ca11c335f46cd7e6d71b8915d836ea8b8abb23eaa8ffaedfdf024dc7f63f7c47b2cfa33b511e01234a7b23ad24c5  python-sdk-v17.1.0.tar.gz
"
