pkgname=pgcli
pkgver=1.1.0
pkgrel=0
pkgdesc="Postgres CLI with autocompletion and syntax highlighting"
url="http://pgcli.com"
arch="noarch"
license="BSD-3-Clause"
depends="python py-pgspecial py-click py-pygments py-prompt_toolkit py-psycopg2 py-sqlparse py-configobj py-humanize py-wcwidth py-setproctitle"
depends_dev=""
makedepends="$depends_dev python-dev py-setuptools"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/${pkgname:0:1}/$pkgname/$pkgname-$pkgver.tar.gz"

builddir="${srcdir}/${pkgname}-${pkgver}"

build() {
	cd "$builddir"
	python setup.py build || return 1
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

