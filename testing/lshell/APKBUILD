# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=lshell
pkgver=0.9.18
pkgrel=2
pkgdesc="Python-based limited Shell"
url="http://ghantoos.org/limited-shell-lshell"
arch="noarch"
license="GPL3+"
depends="python2"
options="!check"
makedepends="python2-dev py-setuptools"
install="$pkgname.pre-install"
subpackages="$pkgname-doc $pkgname-tests:tests"
source="$pkgname-$pkgver.tar.gz::https://github.com/ghantoos/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build
}

package() {
	cd "$builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir"
}

tests() {
	cd "$builddir"/test
	mkdir -p "$subpkgdir"/usr/share/lshell/tests
	install -Dm 755 *.py "$subpkgdir"/usr/share/lshell/tests
	install -Dm 644 words "$subpkgdir"/usr/share/lshell/tests
	install -Dm 644 *.txt "$subpkgdir"/usr/share/lshell/tests
}

sha512sums="546e55fd04d9913adbf6ff181d365f0aff8c94131229d4be994b29e94b925943fb32f99dc145172938535565f69405d0edad5bd2d9b7125f8770d0f0c591fece  lshell-0.9.18.tar.gz"
