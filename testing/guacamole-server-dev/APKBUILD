# Contributor:
# Maintainer:
pkgname=guacamole-server-dev
pkgver="1.1.0"
pkgrel=0
pkgdesc="package for guacamole server"
url="https://guacamole.apache.org"
arch="all"
license="GPL"
depends=""
depends_dev="cairo-dev libjpeg-turbo-dev libpng-dev ossp-uuid-dev ffmpeg-dev freerdp-dev pango-dev libssh2-dev libvncserver-dev pulseaudio-dev openssl-dev libvorbis-dev libwebp-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="https://code.ungleich.ch/kjg/guacamole-server/raw/master/$pkgname-$pkgver.tar"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
        default_prepare
}

build() {
        cd "$builddir"
        autoreconf -fi
        ./configure --with-init-dir=/etc/init.d \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
                --disable-wxwidgets \
		--disable-qt
        make
}


package() {
        cd "$builddir"
        make DESTDIR="$pkgdir" install
}
sha512sums="4d630e006d83b13d5be81db4e0817e898e97dcc632c3819d7bedb3bf75f584065799fad931e926ca6b42d5b617cd3b6f8615554e0fe68191d1af65f1eb1ebde1  guacamole-server-dev-1.1.0.tar"
