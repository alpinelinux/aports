pkgname=ois
pkgver=1.5 
pkgrel=0
pkgdesc="Object Oriented Input System"
url="https://github.com/wgois/OIS"
arch="x86_64"
license="zlib"
depends="libxaw"
makedepends="cmake gcc pkgconfig"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.zip::https://github.com/wgois/OIS/archive/v1.5.zip"
builddir="$srcdir/$pkgname-1.5"

build() {
	cd "${srcdir}/OIS-1.5"
  cmake CMakeLists.txt \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -Wno-dev \
  
  make
}

check() {
echo -n
}


package() {
	cd "${srcdir}/OIS-1.5"
  make DESTDIR="$pkgdir" install
}

