maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=xdg-native-messaging-proxy
pkgver=0.1.0
pkgrel=0
pkgdesc="Find, start and stop native messaging hosts"
url="https://github.com/flatpak/xdg-native-messaging-proxy"
arch="all"
license="LGPL-2.0-or-later"
makedepends="
	glib-dev
	json-glib-dev
	libdex-dev
	meson
	"
checkdepends="
	bash
	py3-dbusmock
	py3-pytest
	"
subpackages="$pkgname-systemd"
source="https://github.com/flatpak/xdg-native-messaging-proxy/releases/download/$pkgver/xdg-native-messaging-proxy-$pkgver.tar.xz"
options="!check" # assumes usr-merged

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
4f849390572ad13b15d80f86ac682b1adc6ea0257634333edbe69130a0883936c65295a0bd31e595aedee9dbc0053f3d613addcc3c7b9ee96ef1b72d4e4e02a5  xdg-native-messaging-proxy-0.1.0.tar.xz
"
