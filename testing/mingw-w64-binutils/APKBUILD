# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=mingw-w64-binutils
pkgver=2.32
pkgrel=0
pkgdesc="Cross binutils for the MinGW-w64 cross-compiler"
url="http://www.gnu.org/software/binutils"
arch="all"
license="GPL-3.0-or-later"
makedepends="zlib-dev"
subpackages="$pkgname-doc"
source="https://ftp.gnu.org/gnu/binutils/binutils-${pkgver}.tar.gz"
builddir="$srcdir/binutils-$pkgver"

case "$CARCH" in
	x86_64) _target="x86_64-w64-mingw32" ;;
	x86) _target="i686-w64-mingw32" ;;
esac

prepare() {
	default_prepare
	# Do not install libiberty
	sed -i 's/install_to_$(INSTALL_DEST) //' libiberty/Makefile.in
	# hack! - libiberty configure tests for header files using "$CPP $CPPFLAGS"
	sed -i "/ac_cpp=/s/\$CPPFLAGS/\$CPPFLAGS -O2/" libiberty/configure
}

build() {
	./configure \
		--prefix=/usr \
		--target=${_target} \
		--infodir=/usr/share/info/${_target} \
		--enable-lto --enable-plugins \
		--enable-deterministic-archives \
		--disable-multilib --disable-nls \
		--disable-werror
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="0dbf26e648096f267715d645fed563690a83c55b67cc6da9b7991114aa816465207887688979b6bcdd247491fe45cf9b4827215229a1229563ba1eb2e5053783  binutils-2.32.tar.gz"
