pkgname=ansifilter
pkgver=2.22
pkgrel=0
pkgdesc="Convert text files containing ANSI terminal escape codes to a variety of output formats"
url="http://andre-simon.de/doku/ansifilter/en/ansifilter.php"
arch="all"
license="GPL-3.0-or-later"
subpackages="$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-fish-completion"
source="https://gitlab.com/saalen/ansifilter/-/archive/$pkgver/ansifilter-$pkgver.tar.gz"

build() {
	make
}

check() {
	sh ./src/ci_test.sh
}

package() {
	make DESTDIR="$pkgdir" install
}

