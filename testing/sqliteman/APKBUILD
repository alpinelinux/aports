# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=sqliteman
pkgver=1.2.2
pkgrel=0
pkgdesc="Graphical sqlite3 browser and editor"
url="https://sourceforge.net/projects/sqliteman/"
arch="x86_64 x86"
license="GPL"
depends="qscintilla qt"
makedepends="qscintilla-dev qt-dev make"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/sodomon2/$pkgname/archive/master.zip"
builddir="$srcdir/$pkgname-master"

build() {
cd ${builddir}
  cmake CMakeLists.txt \
  -DCMAKE_INSTALL_PREFIX=/usr   
  make
}

package() {
cd "$builddir"
  make DESTDIR="$pkgdir" install
}

sha512sums="dd7c61a735da4838b467cfdcce56d25004197890680594f0df386a75ed05196b964dc3a6268820fe782b24c8f22e808fe2937cf71ea8013436d07878305845d9  sqliteman-1.2.2.zip"
