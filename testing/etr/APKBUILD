# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>

pkgname=etr
pkgver=0.7.5
pkgrel=0
pkgdesc="Downhill racing game starring Tux"
url="https://sourceforge.net/projects/extremetuxracer/"
arch="x86_64"
license="GPL"
depends="sfml glu freetype"
makedepends="sfml-dev glu-dev freetype-dev"
subpackages="$pkgname-doc"
source="https://pilotfiber.dl.sourceforge.net/project/extremetuxracer/releases/0.7.5/$pkgname-$pkgver.zip"
builddir="$srcdir/$pkgname-0.7.5"

build() {
	cd ${builddir}
  ./configure \
  --prefix=/usr \
  
  make 
}

check() {
	cd ${builddir}
  make check
}

package() {
	cd "$builddir"
  make DESTDIR="$pkgdir" install
}

sha512sums="8f2f0bb7575e93a876cdcbfa7731d93031f098b894723796cfa5cb0a837985a8acf5653ba770954a1f685720105c5a96e6a0503235111145fb0dcb3634e1c3b0  etr-0.7.5.zip"
