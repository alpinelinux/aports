# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=vertigo
pkgver=0.3.4
pkgrel=1
pkgdesc="Terminal emulator written in Go"
url="https://humungus.tedunangst.com/r/vertigo"
# aarch64, loongarch64, riscv64: undefined syscall.Dup2
arch="all !aarch64 !loongarch64 !riscv64"
license="ISC"
makedepends="
	freetype-dev
	go
	glfw-dev
	libxcursor-dev
	libxi-dev
	libxinerama-dev
	libxrandr-dev
	libxxf86vm-dev
	"
subpackages="$pkgname-doc"
source="https://humungus.tedunangst.com/r/vertigo/d/vertigo-$pkgver.tgz"

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	make
}

check() {
	./vertigo -help
}

package() {
	install -Dvm755 vertigo -t "$pkgdir"/usr/bin/

	install -Dvm644 README -t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
c91444fb72c0404f39cd0288769809524fc7f7c4f71f181e63ee14e41b864053358ed11283262e6eafec836b7370486343cfc9751f690b01dcb54c490646ff8d  vertigo-0.3.4.tgz
"
