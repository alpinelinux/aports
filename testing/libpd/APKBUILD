maintainer="Stefan Hansson <newbyte@postmarketos.org>"
pkgname=libpd
pkgver=0.15.0
_pure_data_tag="0.55-2"
pkgrel=0
pkgdesc="Pure Data embeddable audio synthesis library"
url="https://github.com/libpd/libpd"
arch="all"
license="BSD-3-Clause"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/libpd/libpd/archive/refs/tags/$pkgver.tar.gz
	pure-data-$_pure_data_tag.tar.gz::https://github.com/pure-data/pure-data/archive/refs/tags/$_pure_data_tag.tar.gz
	"
options="!check" # Unclear how to run tests.

prepare() {
	default_prepare
	rmdir pure-data
	mv "$srcdir/pure-data-$_pure_data_tag" pure-data
}

build() {
	make
}

package() {
	make prefix="$pkgdir/usr" install
}

