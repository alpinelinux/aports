maintainer="Leon White <badfunkstripe@gmail.com>"
pkgname=py3-cxxheaderparser
_pkgname=cxxheaderparser
pkgver=1.7.0
pkgrel=0
pkgdesc="pure python C++ header parser"
url="https://github.com/robotpy/cxxheaderparser"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	py3-setuptools
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/robotpy/cxxheaderparser/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m pytest
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
bea398ddd36316c1d21ca9587a28f4e09029a5ecbd319dc39cdd2670a693a9664c072901cff010dc8fdd5235dfb629e139a1a6af3bf581a8e4528511135cf448  py3-cxxheaderparser-1.7.0.tar.gz
"
