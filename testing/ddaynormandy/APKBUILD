# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=ddaynormandy
pkgver=5.03.03
pkgrel=0
pkgdesc="The first person game of World War II and play online multiplayer or singleplayer"
url="http://www.ddaydev.com"
arch="x86_64"
license="GPL2"
depends="libx11 sdl2 sdl openal-soft libpng libjpeg-turbo zlib mesa"
makedepends="libx11-dev sdl2-dev sdl-dev openal-soft-dev libpng-dev libjpeg-turbo-dev zlib-dev mesa-dev"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/PowaBanga/DDaynormandyFPS/archive/5.03.03.zip
  ddaynormandy.desktop
  ddaynormandy
  ddaynormandy.png"
builddir="$srcdir/DDaynormandyFPS-$pkgver"

build() {
	cd ${builddir}
  make
  CONFIG_PATH_LIB=/usr/bin
  CONFIG_PATH_DATA=/usr/share
}

package() {
	cd ${builddir}
  mkdir -p $pkgdir/usr/bin
    cp -Rp $srcdir/ddaynormandy $pkgdir/usr/bin/ddaynormandy
    
  mkdir -p $pkgdir/usr/share/ddaynormandy 
    cp -Rp $srcdir/DDaynormandyFPS-$pkgver/dday $pkgdir/usr/share/ddaynormandy
    cp -Rp $srcdir/DDaynormandyFPS-$pkgver/DDaynormandy $pkgdir/usr/share/ddaynormandy
    cp -Rp $srcdir/DDaynormandyFPS-$pkgver/Dediedserver $pkgdir/usr/share/ddaynormandy
    
  mkdir -p $pkgdir/usr/share/applications
    install -Dm644 "$srcdir"/ddaynormandy.desktop $pkgdir/usr/share/applications/ddaynormandy.desktop 
   
  mkdir -p $pkgdir/usr/share/pixmaps
    mv "$srcdir"/ddaynormandy.png $pkgdir/usr/share/pixmaps/ddaynormandy.png
}

