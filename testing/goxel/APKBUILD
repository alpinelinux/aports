# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=goxel
pkgver=0.9.0
pkgrel=0
pkgdesc="Open Source 3D voxel editor for Mac, Windows and Linux."
url="ttps://guillaumechereau.github.io/goxel/"
arch="x86_64"
license="GPL3"
depends="scons make glfw"
makedepends="glfw-dev gtk+3.0-dev"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/guillaumechereau/$pkgname/archive/v$pkgver.zip"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd ${builddir}
  make release \
  PREFIX=/usr 
}

package() {
	cd "$builddir"
   PREFIX=/usr make DESTDIR="$pkgdir" install
   chmod 777 $pkgdir/usr/bin/goxel
}
sha512sums="e047e5d1b245400c47deb97adc6758ba6e82d85dfe9c24b18f30598728b8db9771cf351b8397b7473bd905c14202f97f6262716df878be9d9ae69b2f4f7f158b  goxel-0.9.0.zip"
