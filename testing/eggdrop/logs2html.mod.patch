+static void logs2html_hook_pre_rehash(void)
+{
+	logs2htmlchan *p, *q;
+
+	q = p = logs2htmlchanlist;
+	while (q != NULL) {
+		q = p->next;
+		nfree(p);
+		p = q;
+	}
+	logs2htmlchanlist = p = q = NULL;
+
+	return;
+}
