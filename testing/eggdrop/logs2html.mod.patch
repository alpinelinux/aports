+	tblock.tm_mday	= st->tm_mday;
+	tblock.tm_mon	= st->tm_mon;
+	tblock.tm_wday	= st->tm_wday;
+	tblock.tm_yday	= st->tm_yday;
+	tblock.tm_hour	= 0;
+	tblock.tm_min	= 0;
+	tblock.tm_sec	= 1;
