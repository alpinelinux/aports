# Maintainer: Adrian Siekierka <kontakt@asie.pl>
pkgname=font-ipa
pkgver=004.01
pkgrel=0
pkgdesc="Japanese outline fonts by Information-technology Promotion Agency"
options="!check" # No testsuite
url="http://ipafont.ipa.go.jp/"
arch="noarch"
license="IPA"
depends="encodings font-alias mkfontscale mkfontdir fontconfig"
_filever=${pkgver/./}
subpackages="$pkgname-doc"
source="https://oscdl.ipa.go.jp/IPAexfont/IPAexfont$_filever.zip"
builddir="$srcdir/IPAexfont$_filever"

package() {
	install -Dm644 *.ttf -t "$pkgdir"/usr/share/fonts/TTF
	install -Dm644 IPA_Font_License_Agreement_v1.0.txt -t "$pkgdir"/usr/share/licenses/font-ipa
}

sha512sums="fe639ded0a25eed66df8cc1e9d5e965b501574a25fab542a749b3cb8464690448e44343ff5845aecd3224ec481c4089ee56e64880cbbc9211a260b22d4cc68cd  IPAexfont00401.zip"
