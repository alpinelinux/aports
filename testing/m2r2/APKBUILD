# Contributor: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
# Maintainer: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
pkgname=m2r2
pkgver=0.3.4
pkgrel=0
pkgdesc="Markdown to reStructuredText converter"
url="https://crossnox.github.io/m2r2"
arch="noarch"
license="MIT"
depends="python3 py3-docutils py3-mistune1 py3-setuptools"
makedepends="py3-setuptools_scm py3-gpep517"
checkdepends="py3-pytest py3-six"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/CrossNox/m2r2/archive/v$pkgver.tar.gz
	mistune1.patch
	"
options="!check" # fail for some reason

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	gpep517 install-wheel --destdir .testenv --prefix '' .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
4a6fffab0f1d9d388c44e7e4879c818ddd437809238901c1f27b57fb3e3718db9ce5185528a209c74f3ef7aa084605248c2944dc7b596f8e0833d6eb35c09a34  m2r2-0.3.4.tar.gz
e5c963615aacd0f9a2aece45ce0eb9a7dcc66def0a878c55d5158e8b8cb3e60aca0614b37cf157be887cb4fbdf65cc5313e01f4f981530807a2ac0655b1513b5  mistune1.patch
"
