# Maintainer: Bradley J Chambers <brad.chambers@gmail.com>
pkgname=laszip
pkgver=2.2.0
_commitid=e7065cbc5bdbbe0c6e50c9d93d1cd346e9be6778
pkgrel=0
pkgdesc="LASzip point cloud compression library"
url="https://github.com/laszip/laszip"
arch="all"
license="LGPL2+"
depends="libgcc libstdc++ musl"
makedepends="cmake"
install=""
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/LASzip/$pkgname/archive/$_commitid.tar.gz"
builddir="$srcdir"/LASzip-$_commitid

build() {
        mkdir -p "$builddir"
        cd "$builddir"

        mkdir build && cd build
        cmake .. \
                -DCMAKE_INSTALL_PREFIX=/usr \
                -DCMAKE_BUILD_TYPE=Release \
                || return 1
        make
}

package() {
	cd "$builddir"/build
        make DESTDIR="$pkgdir" install
}

sha512sums="e6991282b14ae7d807149b7fbbc3d21ff9b3e661e8a9ea7f2a35744f7dbb023bdef4dab61c58da59a3e8752741a76880003eecf6c0926e61c87690556847074b  laszip-2.2.0.tar.gz"
