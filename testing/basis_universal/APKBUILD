# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=basis_universal
pkgver=1.08
pkgrel=0
pkgdesc="GPU Texture and Texture Video Compression Reference Codec"
url="https://github.com/BinomialLLC/basis_universal"
arch="x86_64"
license="apache"
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/BinomialLLC/$pkgname/archive/v$pkgver.zip"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd ${builddir}
  cmake CMakeLists.txt \
  -DSTATIC:BOOL=ON \
  -DCMAKE_INSTALL_PREFIX=/usr\
  
  make
}

package() {
	cd "$builddir"
    make DESTDIR="$pkgdir" install
}

sha512sums="bb22ae0f5734e9b4024541d8109d8cfada2a668462b570f6485f85da8e4f226429af8d47a675aa49989f6b2ef56bab6fa0efbf03f283307feb02ec76d76dc00c  basis_universal-1.08.zip"
