pkgname=basis_universal
pkgver=1.8
pkgrel=0
pkgdesc="GPU Texture and Texture Video Compression Reference Codec"
url="https://github.com/BinomialLLC/basis_universal"
arch="x86_64"
license="apache"
depends=""
makedepends=""
options="!check"
source="$pkgname-$pkgver.zip::https://github.com/BinomialLLC/basis_universal/archive/master.zip"
builddir="$srcdir/$pkgname-master"

build() {
	cd ${builddir}
  cmake CMakeLists.txt \
  -DSTATIC:BOOL=ON \
  -DCMAKE_INSTALL_PREFIX=/usr\
  
  make
}

package() {
	cd "$builddir"
  make DESTDIR="$pkgdir" install
}

