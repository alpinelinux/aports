# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kimap
pkgver=19.08.2
pkgrel=0
pkgdesc="Job-based API for interacting with IMAP servers"
arch="all"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="qt5-qtbase-dev cyrus-sasl-dev kcoreaddons-dev ki18n-dev kio-dev kmime-dev"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	# loginjobtest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "loginjobtest"
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="c37243160533c3dc52a4ac4248c24857c9bf4f63787b3f507e343c19b72304357abbe8e62d99a2da03ab338dc2703f6dade3132cd80b0aba29011676837a83ea  kimap-19.08.2.tar.xz"
