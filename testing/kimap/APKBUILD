# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kimap
pkgver=19.04.2
pkgrel=0
pkgdesc="Job-based API for interacting with IMAP servers"
arch="all"
url="https://community.kde.org/KDE_PIM"
license="LGPL-2.0-or-later"
depends_dev="qt5-qtbase-dev cyrus-sasl-dev kcoreaddons-dev ki18n-dev kio-dev kmime-dev"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	# loginjobtest is broken
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "loginjobtest"
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="736360f4f615fc17aecde5a49ffe6a46213f2808bbb25b56cc73706916e81dc85a9ddbf5fafb6478e8387692cc5880398ee09766f21d246dbe21663f96639922  kimap-19.04.2.tar.xz"
