maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gnome-network-displays
pkgver=0.99.0
pkgrel=0
pkgdesc="Miracast and Chromecast screencasting for GNOME"
url="https://gitlab.gnome.org/GNOME/gnome-network-displays"
arch="all"
license="GPL-3.0-only"
makedepends="
	avahi-dev
	desktop-file-utils
	gettext
	gst-plugins-base-dev
	gst-rtsp-server-dev
	gtk4.0-dev
	json-glib-dev
	libadwaita-dev
	libportal-dev
	libsoup3-dev
	meson
	networkmanager-dev
	protobuf-c-dev
	pulseaudio-dev
	"
subpackages="
	$pkgname-daemon
	$pkgname-firewalld::noarch
	$pkgname-lang
	"
source="https://download.gnome.org/sources/gnome-network-displays/${pkgver%.*}/gnome-network-displays-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

firewalld() {
	pkgdesc="$pkgdesc (firewalld zones)"
	install_if="$pkgname=$pkgver-r$pkgrel firewalld"
	depends=

	amove usr/lib/firewalld
}

daemon() {
	pkgdesc="$pkgdesc (daemon)"
	depends=

	amove usr/bin/gnome-network-displays-daemon
	amove usr/libexec/gnome-network-displays-stream
}

sha512sums="
323b88e3773b454b1e0346e6d5f19e2eb3ad03128daa50fa80afa461abc0eac15f073e7988acba95dc67b646a1fdb9cbef63e3cdc580f0d53a0af6095aca83af  gnome-network-displays-0.99.0.tar.xz
"
