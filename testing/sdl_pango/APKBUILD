# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=sdl_pango
pkgver=0.1.2
pkgrel=0
pkgdesc="Pango SDL binding"
url="http://sdlpango.sourceforge.net/"
arch="x86_64"
license="LGPL"
depends="pango sdl pkgconfig"
makedepends="sdl-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://sourceforge.net/projects/sdlpango/files/SDL_Pango/0.1.2/SDL_Pango-0.1.2.tar.gz/download"
builddir="$srcdir/SDL_Pango-$pkgver"

build() {
	cd ${builddir}
  ./configure \
  --prefix=/usr \
  
  make
}

check() {
	cd "$builddir"
  make check
}

package() {
	cd "$builddir"
  make DESTDIR="$pkgdir" install
}

sha512sums="081ec57e0f55ce541c35393d6db7ea48b662a5008760781076d70c0a645d47f7e994f695c459ed51f8cb71494911a04cd416733fb57934321b806a1ac9878440  sdl_pango-0.1.2.tar.gz"
