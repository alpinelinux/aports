# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=raku-file-temp
pkgver=0.0.12
pkgrel=0
pkgdesc="Create temporary files and directories"
url="https://github.com/raku-community-modules/File-Temp"
arch="all"
license="Artistic-2.0"
depends="rakudo raku-file-directory-tree"
makedepends="moarvm-dev rakudo-dev"
checkdepends="perl-utils"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/raku-community-modules/File-Temp/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/File-Temp-$pkgver"
options="!archcheck" # Precompiled arch dependent files included (quiet noarch warning)

build() {
	RAKUDO_RERESOLVE_DEPENDENCIES=0 \
	/usr/share/rakudo/tools/install-dist.raku \
		--to=output --for=vendor
}

check() {
	prove -e 'raku -Ilib' --ext .rakutest
}

package() {
	mkdir -p "$pkgdir"/usr/share/rakudo
	cp -RT output "$pkgdir"/usr/share/rakudo/vendor

	install -Dvm644 META6.json README.md \
		-t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
48da109bd5bc686439c6211abf9b91731c863f3fb4a9f09b8c746be96973cd0f1fc27aadaf712886cc73e1b782130954564199c96859db988d80ffff10857dec  raku-file-temp-0.0.12.tar.gz
"
