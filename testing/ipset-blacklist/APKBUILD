pkgname=ipset-blacklist
pkgver=0.1
pkgrel=0
pkgdesc="IPSET initd to blacklist ip's / ip ranges"
url=http://ipset.netfilter.org/
arch="noarch"
license="GPL2"
options="!check"
source="ipset.blacklist.confd
	ipset.blacklist.initd
	"
builddir="$srcdir/"

build() {
	return 0
}

package() {
	cd "$builddir"
	install -Dm755 "$srcdir"/ipset.blacklist.initd "$pkgdir"/etc/init.d/ipset.blacklist
	install -Dm644 "$srcdir"/ipset.blacklist.confd "$pkgdir"/etc/conf.d/ipset.blacklist
}

