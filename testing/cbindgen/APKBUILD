# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=cbindgen
pkgver=0.8.5
pkgrel=0
pkgdesc="Tool to generate C bindings from Rust code"
url="https://github.com/eqrion/cbindgen"
arch="x86_64" # Limited by cargo
license="MPL-2.0"
makedepends="cargo"
source="$pkgname-$pkgver.tar.gz::https://github.com/eqrion/cbindgen/archive/v${pkgver}.tar.gz"

build() {
	cargo build --release --verbose
}

check() {
	# Failing tests
	rm -rf tests/rust/expand*
	cargo test --release --verbose
}

package() {
	cargo install --path . --root="$pkgdir"/usr
	rm "$pkgdir"/usr/.crates.toml
}

sha512sums="ddfdb93a706549ce370ea9ca821b5a66f19e3a8b14bd0753baae7b09aa28b0ed7894fe0bd9cb8221f646acb7b2ce92edb17f1216e6b08ff2f453a8209ca4273b  cbindgen-0.8.5.tar.gz"
