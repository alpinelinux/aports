pkgname=py3-quantiphy-eval
pkgver=0.3
pkgrel=0
pkgdesc="Computations with Physical Quantities"
url="https://github.com/kenkundert/quantiphy_eval"
arch="noarch"
license="GPL-3.0-or-newer"
depends="
	python3
	py3-quantiphy
	py3-inform
	"
makedepends="py3-setuptools"
checkdepends="py3-pytest"
source="$pkgname-v$pkgver.tar.gz::https://github.com/KenKundert/quantiphy_eval/archive/v$pkgver.tar.gz"
builddir="$srcdir/quantiphy_eval-$pkgver"

build() {
	python3 setup.py build
}

check() {
	PYTHONPATH="$PWD/build/lib" py.test-3
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
