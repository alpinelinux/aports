maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-varlink
pkgver=32.1.0
pkgrel=0
pkgdesc="Python implementation of the Varlink protocol"
url="https://varlink.org/python/"
arch="noarch"
license="Apache-2.0"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/varlink/python/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/python-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
87e5d4dc29b1b2f2ed31dd86ac60ba2d18cd41c1004326b55fe02684e72cf1b7118797d5e71e4e8c806ccfece185da80595b7dc9d5eb447d794baaa0930f67f3  py3-varlink-32.1.0.tar.gz
"
