pkgname="mediainfo"
pkgver="0.7.90"
pkgrel="0"
pkgdesc="Unified display of the most relevant technical and tag data for video and audio files."
url="https://mediaarea.net/"
arch="all"
license="Simplified BSD"
depends=""
makedepends=""
install=""
subpackages=""
source="https://mediaarea.net/download/binary/mediainfo/$pkgver/MediaInfo_CLI_${pkgver}_GNU_FromSource.tar.xz"
builddir="$srcdir"/MediaInfo_CLI_GNU_FromSource

build() {
	cd "$builddir"
	sh ./CLI_Compile.sh --prefix=/usr
}

package() {
	cd "$builddir"/MediaInfo/Project/GNU/CLI
	make DESTDIR="$pkgdir" install
}

