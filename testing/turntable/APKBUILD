# Contributor: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
# Maintainer: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
pkgname=turntable
pkgver=0.5.1
pkgrel=0
pkgdesc="MPRIS scrobble to last.fm, ListenBrainz, Libre.fm, and Maloja"
url="https://turntable.geopjr.dev/"
arch="all"
license="GPL-3.0-only"
makedepends="
	cmake
	glycin-dev
	gtk4.0-dev
	json-glib-dev
	libadwaita-dev
	libportal-dev
	libsecret-dev
	libsoup3-dev
	meson
	vala
	"
checkdepends="appstream-glib desktop-file-utils"
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/GeopJr/Turntable/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname/"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
7d1b9a4d1bbe36714d93f9ee9887a996ea05722a0b8d98e98e69936c8ad16b9bcf8a6245600fc0f7b7c3a73faab23a593430d77c7f127acc28736beef2f907a7  turntable-0.5.1.tar.gz
"
