# Contributor: Angelo Verlain <hey@vixalien.com>
maintainer="Angelo Verlain <hey@vixalien.com>"
pkgname=elementary-feedback
pkgver=8.1.0
pkgrel=0
pkgdesc="GitHub Issue Reporter for elementary OS"
url="https://github.com/elementary/feedback"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	appstream-dev
	granite7-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/elementary/feedback/archive/refs/tags/$pkgver.tar.gz"

builddir="$srcdir/feedback-$pkgver"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3b018f8cc78e542f0a0ff3c0139f5569df36b8f6d573f144aca84aacb3ca51bd8801e1527e3a4212154c034519d59e4139fcbbbc7a521b926b22e7d3d38739a0  elementary-feedback-8.1.0.tar.gz
"
