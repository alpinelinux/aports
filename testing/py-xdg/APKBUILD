pkgname=py-xdg
_pkgname=pyxdg
pkgver=0.25
pkgrel=1
pkgdesc="A python library to access freedesktop.org standards"
url="https://freedesktop.org/wiki/Software/pyxdg"
arch="noarch"
license="LGPL"
depends=""
depends_dev="python2-dev"
makedepends="$depends_dev"
install=""
subpackages=""
source="https://people.freedesktop.org/~takluyver/$_pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

package() {
	cd "$_builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

