# Maintainer: Pedro Filipe <xpecex@outlook.com>
pkgname=papirus-icon-theme
pkgver=20180816
pkgrel=0
pkgdesc="Papirus is a free and open source SVG icon theme for Linux"
url="https://github.com/PapirusDevelopmentTeam/papirus-icon-theme"
arch="noarch"
options="!check"
license="GPL-3.0"
source="papirus-icon-theme-$pkgver.tar.gz::https://github.com/PapirusDevelopmentTeam/papirus-icon-theme/archive/$pkgver.tar.gz"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="bb92bbba1f801e6e66a09ebbee369fd27e520b4fa713f65ba1bc6539a08cff5406f9d68f9060aac95590470d3e7ca18a6c484b170267e2fd26f9531e6b53056d  papirus-icon-theme-20180816.tar.gz"
