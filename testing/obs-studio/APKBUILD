# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=obs-studio
pkgver=21.1.1
pkgrel=1
pkgdesc="Free and open source software for live streaming and screen recording"
url="https://obsproject.com/"
arch="x86 x86_64"
license="GPL-2.0"
options="!check"
makedepends="cmake ffmpeg-dev libxinerama-dev
	qt5-qtbase-dev qt5-x11extras-dev x264-dev fontconfig-dev
	libxcomposite-dev freetype-dev libx11-dev mesa-dev curl-dev
	pulseaudio-dev jack-dev vlc-dev alsa-lib-dev fdk-aac-dev speexdsp-dev
	v4l-utils-dev jansson-dev eudev-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/jp9000/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$builddir"
	mkdir build
	default_prepare
}

build() {
	cd "$builddir"/build
	cmake \
		-DUNIX_STRUCTURE=1 \
		-DCMAKE_INSTALL_PREFIX=/usr ..
	make
}

package() {
	cd "$builddir"/build
	make DESTDIR="$pkgdir" install
}

sha512sums="9fc4e4534b8d22dd4e87b1678b022f787a5d2486af2d111a5b8d3fe72a85cb5ba1f068e4e995a1f92b4cb8170b5473f45f4cd8506a3432e1132a355dd38adbeb  obs-studio-21.1.1.tar.gz"
