pkgname=py3-wrapt
_pkgname=wrapt
pkgver=1.11.1
pkgrel=0
pkgdesc="Python3 module for decorators, wrappers and monkey patching"
url="https://github.com/GrahamDumpleton/wrapt"
arch="all"
license="BSD-2-Clause"
makedepends="python3-dev py3-setuptools"
checkdepends="py3-pytest"
source="$pkgname-$pkgver.tar.gz::https://github.com/GrahamDumpleton/wrapt/archive/${pkgver}.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

check() {
	PYTHONPATH="${PWD}/build/lib.linux-$CARCH-3.7" pytest-3
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

