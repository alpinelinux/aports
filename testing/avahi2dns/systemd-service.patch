From e923041d6cb23b8b6ffa8c2ae17062cfc3006411 Mon Sep 17 00:00:00 2001
From: Vasiliy Doylov <nekocwd@mainlining.org>
Date: Sun, 18 Jan 2026 23:12:44 +0300
Subject: [PATCH] Add systemd service file

Signed-off-by: Vasiliy Doylov <nekocwd@mainlining.org>
---
 systemd/avahi2dns.service | 14 ++++++++++++++
 1 file changed, 14 insertions(+)
 create mode 100644 systemd/avahi2dns.service

diff --git a/systemd/avahi2dns.service b/systemd/avahi2dns.service
new file mode 100644
index 0000000..db8653b
--- /dev/null
+++ b/systemd/avahi2dns.service
@@ -0,0 +1,14 @@
+[Unit]
+Description=Avahi DNS Resolver
+After=network.target
+Requires=dbus-org.freedesktop.Avahi.service
+Wants=dbus-org.freedesktop.Avahi.service
+
+[Service]
+Type=simple
+User=avahi2dns
+ExecStart=/usr/bin/avahi2dns --port 5354 --timeout 2.5s
+Restart=on-failure
+
+[Install]
+WantedBy=multi-user.target
