pkgname=ponysay
pkgver=3.0.2
pkgrel=0
pkgdesc="cowsay reimplemention for ponies"
url="http://erkin.github.com/ponysay/"
arch="noarch"
license="GPL3"
depends="python bash"
makedepends="texinfo"
options="!check"
subpackages="$pkgname-doc"
source="ponysay-$pkgver.tar.gz::https://github.com/erkin/ponysay/archive/$pkgver.tar.gz"
sha512sums="47d5c584b3b8c233567eff534b5109548c92075f69776703bc303929ba4278f67fd599987ef4a098aa871c2af0efd89186f96fa28565e73b4672abeb0c23fa45 ponysay-$pkgver.tar.gz"

package() {
  cd "$srcdir/ponysay-$pkgver"

  python3 setup.py --prefix=/usr --dest-dir=$pkgdir --freedom=partial --everything --with-pdf=/usr/share/doc/ponysay --without-pdf-compression install
}
