# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=volatility3
pkgver=2.26.2
pkgrel=0
pkgdesc="Volatile memory forensics toolkit"
url="https://github.com/volatilityfoundation/volatility3"
arch="noarch !armhf !armv7"
license="custom"
depends="py3-crypto py3-capstone py3-yara py3-pefile"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest py3-pytest-mock"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/volatilityfoundation/volatility3/archive/v$pkgver.tar.gz"

build() {
        gpep517 build-wheel \
                --wheel-dir .dist \
                --output-fd 3 3>&1 >&2
}

check() {
	pytest ./test/test_volatility.py --volatility=vol.py
}

package() {
        python3 -m installer -d "$pkgdir" \
                .dist/*.whl
}

sha512sums="
00597fde942995741d4439aac8fc51c050267ded1ff38ef726886c69ac98fcb7a7092845c433eac470d5b2dc79abf72d95095b72b6e8e9ff100ef652fe4a2ead  volatility3-2.26.2.tar.gz
"
