# Maintainer: Gennady Feldman <gena01@gmail.com>
pkgname=jfrog-cli-go
pkgver=1.23.1
pkgrel=0
pkgdesc="JFrog cli"
url="https://jfrog.com/getcli/"
arch="all"
license="Apache-2.0"
depends=""
makedepends="go"
options="!check"
source="$pkgname-$pkgver.tar.gz::https://github.com/jfrog/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"

	go build -v -o bin/jfrog jfrog-cli/jfrog/main.go
}

package() {
	cd "$builddir"

	install -m755 -D bin/jfrog \
		"$pkgdir/usr/bin/jfrog"

}

sha512sums="30c777b645fc6ee8f395b04aaf325929c2f5c123599bf31955914da1556e19efbeb23440f9ef53c14c29e5790a75f397ad80b99fc6de8a2615ecd9a365aca8c4  jfrog-cli-go-1.23.1.tar.gz"
