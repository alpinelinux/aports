maintainer="Stefan Hansson <newbyte@postmarketos.org>"
pkgname=update-sysfs
pkgver=2.1.1_p7
_sysfsutils_tag=${pkgver%%_p*}-${pkgver##*_p}
pkgrel=0
pkgdesc="Update the sysfs attribute values and modify their file mode or owner, usually during the system boot"
url="https://git.hadrons.org/cgit/debian/pkgs/sysfsutils.git/tree/debian/local/update-sysfs.pod"
arch="noarch"
license="GPL-2.0-or-later"
depends="perl"
# Use a mirror to work around abuild getting Anubis'd
source="https://gitlab.postmarketos.org/Newbyte/debian-sysfsutils-package-mirror/-/archive/$_sysfsutils_tag/debian-sysfsutils-package-mirror-$_sysfsutils_tag.tar.gz"
options="!check" # No testsuite
builddir="$srcdir/debian-sysfsutils-package-mirror-$_sysfsutils_tag/debian/local"

package() {
	install -Dm755 update-sysfs "$pkgdir"/usr/bin/update-sysfs
}
sha512sums="
