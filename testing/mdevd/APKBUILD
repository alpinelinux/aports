# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
# TODO: Add runscript.
pkgname=mdevd
pkgver=0.0.1.0
pkgrel=0
pkgdesc="A mdev-compatible hotplug manager daemon"
url="http://skarnet.org/software/mdevd/"
arch="all"
license="ISC"
makedepends="linux-headers skalibs-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skarnet/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"

	# Note: This links libskarnet statically. It adds only ~10 kiB in
	# comparison with using shared lib (168 kiB).
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	cd "$builddir"

	# There's no -h option, so it exists with 100 as "wrong usage".
	./mdevd -h || [ $? = 100 ]
	./mdevd-coldplug -h || [ $? = 100 ]
	./mdevd-netlink -h || [ $? = 100 ]
}

package() {
	cd "$builddir"

	make DESTDIR="$pkgdir" install

	mkdir -p "$pkgdir"/usr/share/doc/$pkgname
	cp -a doc/* "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="3414298f7ae684bc0778035f233a1574b2bc873912f439186fe3f07423226bafeb2e7487e9ad3b69d72ee349094a5fd5b7ac48ffd9fd06252035c8e7cb41ae8a  mdevd-0.0.1.0.tar.gz"
