# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Arch3y <arch3y@riseup.net>
pkgname=dhcpdump
pkgver=1.8
pkgrel=0
pkgdesc="A utility to analyze sniffed DHCP packets"
url="http://www.mavetju.org/unix/general.php"
arch="all"
license="BSD"
makedepends="libpcap-dev perl"
subpackages="$pkgname-doc"
source="http://www.mavetju.org/download/dhcpdump-$pkgver.tar.gz dhcpdump-fixes.patch"

build() {
        cd "$srcdir/$pkgname-$pkgver"
        make
}

package() {
        cd "$srcdir/$pkgname-$pkgver"
        install -Dm755 dhcpdump "$pkgdir"/usr/bin/dhcpdump
        install -Dm644 dhcpdump.8 "$pkgdir"/usr/share/man/man8/dhcpdump.8
}

md5sums="099c786997c424f196414f9575f1fb90  dhcpdump-1.8.tar.gz
