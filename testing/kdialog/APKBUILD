# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kdialog
pkgver=19.08.1
pkgrel=0
arch="all"
url="https://www.kde.org/"
pkgdesc="A utility for displaying dialog boxes from shell scripts"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="extra-cmake-modules qt5-qtbase-dev ktextwidgets-dev knotifications-dev kguiaddons-dev kiconthemes-dev kwindowsystem-dev kio-dev kdbusaddons-dev"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" make install
}

sha512sums="1463e39edbc62a60522c8039750eeb1a87013f5064aea30f15d8c194272348e5d71fa06746043a320127c8247ad4d3690765b7f01b8b0256bb2f412e169d4835  kdialog-19.08.1.tar.xz"
