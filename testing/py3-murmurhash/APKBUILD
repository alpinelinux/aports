pkgname=py3-murmurhash
pkgver=1.0.2
pkgrel=0
pkgdesc="Cython bindings for MurmurHash2"
url="https://github.com/explosion/murmurhash"
arch="all"
license="MIT"
depends="python3"
makedepends="python3-dev py3-setuptools cython3"
checkdepends="py3-pytest py3-mmh3"
#checkdepends="py3-pytest py3-mmh3 py3-tox py3-wcwidth"
subpackages="$pkgname-doc"
source="murmurhash-$pkgver.tar.gz::https://github.com/explosion/murmurhash/archive/v$pkgver.tar.gz
	tox.ini"
builddir="$srcdir/murmurhash-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py install --root="$PWD/tmp_install"
	cd tmp_install/usr/lib/python3.7/site-packages
	PYTHONPATH="$PWD/tmp_install/usr/lib/python3.7/site-packages:$PYTHONPATH" \
		pytest-3 murmurhash

#	cp "$srcdir"/tox.ini "$builddir"
#	tox -e python3.7
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	install -Dm644 README.rst "$pkgdir/usr/share/doc/$pkgname/README.rst"
}

