_pyname=django-prometheus
pkgname="py3-$_pyname"
pkgver=2.3.1
pkgrel=0
arch="noarch"
pkgdesc="Django middlewares to monitor your application with Prometheus.io."
url="https://pypi.python.org/project/$_pyname"
license="MIT"
depends="
	py3-django
	py3-prometheus-client
	py3-psycopg2
	py3-mysqlclient
	py3-memcached
	py3-django-redis
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-installer
	py3-wheel
	"
checkdepends="
	py3-pytest
	"
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
523cfa7023e1e8921c687bd010a4c6384e1e4142fb702887d1d0bd60194b5111e92e53fec07df89eaea07cd7aa806edef79ab303a67d866d18eacde257db3c03  py3-django-prometheus-2.3.1.tar.gz
"
