# Contributor: Daniel YC Lin <dlin.tw@gmail.com>
# Maintainer: Daniel YC Lin <dlin.tw@gmail.com>
pkgname=lxterminal-gtk3
_pkgname=lxterminal
pkgver=0.3.0
pkgrel=0
pkgdesc="Desktop-independent VTE-based terminal emulator support gtk3 IME input"
url="http://lxde.org/"
arch="all"
license="GPL2+"
depends="!lxterminal"
makedepends="vte3-dev intltool gtk+3.0-dev"
replaces="lxterminal"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="https://downloads.sourceforge.net/lxde/$_pkgname-$pkgver.tar.xz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-gtk3 \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="05eb6ef8904de9e34a4046ded67d3cece5a93a5b19d37d423f3bde67051a2f0a0e3195443669709a8b732d27246852353a2c9ba59026f9d71f8df6bb1152e37f  lxterminal-0.3.0.tar.xz"
