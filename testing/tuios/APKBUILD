# Maintainer: Graham King <grking.email@gmail.com>
maintainer="Graham King <grking.email@gmail.com>"
pkgname=tuios
pkgver=0.5.1
pkgrel=0
pkgdesc="Terminal UI OS (Terminal Multiplexer)"
url="https://tuios.gaurav.zip"
arch="all !s390x" # test failure
license="MIT"
options="net"

makedepends="go"
subpackages="$pkgname-doc"
source="https://github.com/Gaurav-Gosain/tuios/archive/v$pkgver/tuios-$pkgver.tar.gz"

build() {
	go build -o tuios ./cmd/tuios
}

check() {
	go test ./...
}

package() {
	install -Dm755 ./tuios "$pkgdir/usr/bin/tuios"
	install -Dm644 ./README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
	install -Dm644 ./LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums="
