# Contributor: Will Sinatra <wpsinatra@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=py3-saltext-s3fs
_pkgname=saltext_s3fs
pkgver=1.0.0
pkgrel=0
pkgdesc="Salt Extension enabling the use of S3 as a fileserver backend"
url="https://github.com/salt-extensions/saltext-s3fs"
arch="noarch"
license="Apache-2.0"
depends="py3-tornado py3-looseversion"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/${_pkgname//./_}-$pkgver"
options="!check" # checks require a saltstack environment

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
166d353508f8b091a293cb1ec24d42a46ed170383a63b198511ef5d3d49d128baf48d079e89e5849233898164b9e69e2bbed2a17738357a403c0f539173b72a2  saltext_s3fs-1.0.0.tar.gz
"
