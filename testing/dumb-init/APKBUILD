# Contributor: ena r&d <r&d@ena.com>
# Maintainer: ena r&d <r&d@ena.com>
pkgname=dumb-init
pkgver="1.0.3"
pkgrel=0
pkgdesc="A minimal init system for Linux containers"
url="https://github.com/Yelp/dumb-init"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="bash"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/Yelp/dumb-init/archive/v1.0.3.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	install -cpsD -o root -g root -m 655 dumb-init "$pkgdir"/usr/bin/dumb-init || return 1
}

md5sums="45018b796697f38a85f39cb6801da837  dumb-init-1.0.3.tar.gz"
sha256sums="59d08762608560c8663baf19a1de7c7d0ffe72ed29fe11f6cafc8d32e92960cc  dumb-init-1.0.3.tar.gz"
sha512sums="b1c1d053294b2e2dfa4fd0a8408ceb96c67720f6ce1259d06239f28489db0a068a3dff56bd1794ea77d0671c7ec49df8165e5f2a7f5d187cd154bd922b4344a1  dumb-init-1.0.3.tar.gz"
