# Contributor: lauren n. liberda <lauren@selfisekai.rocks>
maintainer="lauren n. liberda <lauren@selfisekai.rocks>"
pkgname=ghostty
pkgver=1.1.2
pkgrel=0
pkgdesc="Fast, feature-rich, and cross-platform terminal emulator"
url="https://ghostty.org/"
arch="aarch64 x86_64"	# zig
license="MIT"
depends_dev="
	fontconfig-dev
	freetype-dev
	glslang-dev
	gtk4.0-dev
	harfbuzz-dev
	libadwaita-dev
	libpng-dev
	libxml2-dev
	oniguruma-dev
	simdutf-dev
	zlib-dev
	"
makedepends="
	$depends_dev
	ncurses
	zig
	"
# !check: manual test suite
# net: zig dependencies
options="!check net"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-fish-completion
	"
source="
	https://github.com/ghostty-org/ghostty/archive/refs/tags/v$pkgver/ghostty-$pkgver.tar.gz
	0001-ReleaseSafe-is-not-debug.patch
	"

build() {
	zig build \
		--release=safe \
		-Dcpu=baseline \
		-fsys=fontconfig \
		-fsys=freetype \
		-fsys=glslang \
		-fsys=harfbuzz \
		-fsys=libpng \
		-fsys=oniguruma \
		-fsys=simdutf \
		-fsys=zlib
}

package() {
	install -Dm755 zig-out/bin/ghostty -t "$pkgdir"/usr/bin/
	# conflicts with ncurses-terminfo
	rm -r zig-out/share/terminfo/g/
	cp -r zig-out/share "$pkgdir"/usr/share
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
