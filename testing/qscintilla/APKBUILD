# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=qscintilla
pkgver=2.10
pkgrel=0
pkgdesc="A port to Qt4 of Neil Hodgson's Scintilla C++ editor class"
url="http://www.riverbankcomputing.co.uk/software/qscintilla/intro"
arch="x86_64"
license="GPL"
depends="qt"
makedepends="qt-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.zip::https://github.com/josephwilk/qscintilla/archive/master.zip"
builddir="$srcdir/$pkgname-master"

build() {
	cd "${builddir}"/Qt4Qt5
  qmake qscintilla.pro
  make
}

check() {
	cd "${builddir}"/Qt4Qt5
  make check
}

package() {
	cd "${builddir}"/Qt4Qt5
  make DESTDIR="${pkgdir}" INSTALL_ROOT="${pkgdir}" install
}

sha512sums="3c393ce1a18292b74a1b0e51732160d91ffc3490e08ec2f2770bcbde5600f98b6d9cb200d8e9436aa18e6fab7032a90816836e1d4acefe807586b48b4ed4cb16  qscintilla-2.10.zip"
