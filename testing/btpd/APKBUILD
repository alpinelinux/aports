# Contributor: Sascha Paunovic <azarus@posteo.net>
# Maintainer: Sascha Paunovic <azarus@posteo.net>
pkgname=btpd
pkgver=0.16
pkgrel=0
pkgdesc="BitTorrent Protocol Daemon"
url="https://github.com/btpd/btpd"
arch="all"
options="!check" # no testsuite
license="BSD-2-Clause"
makedepends="libressl-dev autoconf automake"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/$pkgname/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	autoreconf -i
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="90d7574dec98649fb03973ca802f9ab3f0c43ac42761db2eb22146c985f2a43825ff6a5463d151950a8871ace9d73df2256eb926228ef4321b726c89ec3412f3  btpd-0.16.tar.gz"
