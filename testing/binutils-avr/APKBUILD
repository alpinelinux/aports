# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer: Stefan Wagner <stw@bit-strickerei.de>
pkgname=binutils-avr
pkgver=2.25.1
pkgrel=0
pkgdesc="Tools necessary to build programs for AVR targets"
url="http://www.gnu.org/software/binutils/"
depends=""
makedepends="gettext libtool autoconf automake" # bison flex texinfo zlib-dev"
arch="all"
license="GPL2 GPL3+ LGPL2 BSD"
subpackages="$pkgname-doc"
source="http://ftp.gnu.org/gnu/binutils/binutils-$pkgver.tar.bz2
binutils-ld-fix-static-linking.patch hash-style-gnu.patch"

_srcdir="$srcdir/binutils-$pkgver"
_builddir="$srcdir/binutils-build"
prepare() {
  local i
  cd "$_srcdir"
  for i in $source; do
    case $i in
      *.patch|*.diff)
        msg "Applying $i..."
        patch -p1 -i "$srcdir"/$i || return 1
        ;;
    esac
  done

  mkdir "$_builddir"
}

build() {
  cd "$_builddir"
  $_srcdir/configure \
    --build="$CBUILD" \
    --target=avr \
    --with-lib-path=/usr/lib \
    --prefix=/usr \
    --enable-ld=default \
    --enable-gold=yes \
    --enable-plugins \
    --disable-multilib \
    --disable-werror \
    --disable-nls \
    || return 1
  make -j1 tooldir=/usr || return 1
}

package() {
  cd "$_builddir"
  make tooldir=/usr install DESTDIR="$pkgdir" || return 1
  rm -r "$pkgdir"/usr/share/info
  for bin in ar as nm objcopy objdump ranlib strip readelf; do
    rm -f ${pkgdir}/usr/bin/${bin}
  done
}

