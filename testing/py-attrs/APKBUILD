pkgname=py-attrs
_pkgname=attrs
pkgver=17.3.0
pkgrel=0
pkgdesc="Python Classes Without Boilerplate"
url="https://attrs.readthedocs.org/"
arch="noarch"
license="MIT"
depends=""
makedepends="py-setuptools"
install=""
subpackages=""
source="${_pkgname}-${pkgver}.tar.gz::https://github.com/python-attrs/${_pkgname}/archive/${pkgver}.post1.tar.gz"
builddir="$srcdir"/"$_pkgname"-$pkgver.post1
options="!check"

build() {
	cd "$builddir"
	python setup.py build || return 1
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
        install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="fd2a4bd9ce7540991480d9a44b35f89aa9bd420fde6a12d77871bf4b75422610b8e293b796ab8e545da95ac04be2a8e1112a49cebcbbc6b67df0e9f08e13d930  attrs-17.3.0.tar.gz"
