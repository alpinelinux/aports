pkgname=opmsg
pkgver=1.75
pkgrel=0
pkgdesc="opmsg message encryption"
url="https://github.com/stealth/opmsg"
arch="all"
license="GPL3+"
depends=""
makedepends="libressl-dev"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/stealth/opmsg/archive/rel-${pkgver}s.tar.gz
	libressl.patch"
builddir="$srcdir/$pkgname-rel-${pkgver}s"

build() {
	cd "$builddir/src"
   make opmsg opmux
}

package() {
	cd "$builddir/src"
   mkdir -p "$pkgdir"/usr/bin
	cp opmsg "$pkgdir"/usr/bin
   cp opmux "$pkgdir"/usr/bin
}

