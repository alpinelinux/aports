maintainer="Ferass El Hafidi <funderscore@postmarketos.org>"
pkgname=beebzzr
pkgver=0_git20251214
_commit="2e32b7dbc8ca4633840e5dbc6b1c30e4ea0c4d00"
pkgrel=0
pkgdesc="Simple minimal vibration tool"
url="https://scm.dersco.re/utils/beebzzr.git"
arch="all"
license="BSD-3-Clause"
makedepends="
	clang
	linux-headers
"
source="https://scm.dersco.re/utils/beebzzr.git/snapshot/beebzzr-$_commit.tar.gz"
subpackages="$pkgname-doc"
options="!check" # no test suite
builddir="$srcdir/beebzzr-$_commit"

build() {
	make
}

package() {
	install -Dm755 beebzzr \
	  -t "$pkgdir"/usr/bin/

	install -Dm644 COPYING \
	  -t "$pkgdir"/usr/share/licenses/"$pkgname"
}

