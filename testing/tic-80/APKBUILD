_zip_rev="d7df626f3aa457e01669f65e61bf8f484e352941"
_submodules="
	argparse-$_argparse_rev
	blip-buf-$_blip_buf_rev
	dirent-$_dirent_rev
	lpeg-$_lpeg_rev
	moonscript-$_moonscript_rev
	mruby-$_mruby_rev
