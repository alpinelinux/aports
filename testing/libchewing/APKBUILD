pkgname=libchewing
pkgver=0.5.1
pkgrel=0
pkgdesc='Intelligent Chinese phonetic input method'
url='http://chewing.im/'
arch="all"
license='GPL'
depends='sqlite-libs'
makedepends='autoconf automake sqlite-dev'
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/chewing/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.bz2"

build() {
	cd "$builddir"
	./configure --prefix=/usr || return
	make || return
}

package() {
	cd "$builddir"
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
sha512sums="a6551661bb5e56bba59730b93b373db56af7d42f2ab4881fbfff8727689dd2604d42d2e5c0b04820df66a431dfb5fcb73cc5c9b538615da76198ee3635501c1f  libchewing-0.5.1.tar.bz2"
