maintainer="Graham King <grking.email@gmail.com>"
pkgname=cariddi
pkgver=1.4.5
pkgrel=0
pkgdesc="Crawl urls and scan for endpoints, secrets, api keys, file extensions, tokens and more"
url="https://github.com/edoardottt/cariddi"
arch="all"
license="GPL-3.0-or-later"
options="net"
makedepends="go"
source="https://github.com/edoardottt/cariddi/archive/v$pkgver/cariddi-$pkgver.tar.gz"

build() {
	go build -o cariddi cmd/cariddi/main.go
}

check() {
	go test ./...
}

package() {
	install -Dm755 ./cariddi "$pkgdir/usr/bin/cariddi"
}

