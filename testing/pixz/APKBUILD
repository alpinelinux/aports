# Contributor: dai9ah <dai9ah@protonmail.com>
# Maintainer:
pkgname=pixz
pkgver=1.0.6
pkgrel=0
pkgdesc="Parallel, indexing version of xz"
url="https://github.com/vasi/pixz"
arch="all"
license="BSD-2-Clause"
makedepends="asciidoc automake libarchive-dev xz-dev"
subpackages="$pkgname-doc"
source="https://github.com/vasi/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver.tar.xz"

builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	export ac_cv_file_src_pixz_1=no
	./configure --prefix=/usr
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums="361a8d8b736c350e4e3fd19b5d36777129a087eb81439d05edc08f9378938583bef8fc70e440ffd22efb6dad1f6494c6c3e532d7dd1ab12c9350b6078aa993d7  pixz-1.0.6.tar.xz"
