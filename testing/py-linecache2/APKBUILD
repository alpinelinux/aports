# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=py-linecache2
_pkgname=${pkgname#py-*}
pkgver=1.0.0
pkgrel=0
pkgdesc="Backport of the Python3 stdlib linecache module"
url="https://github.com/testing-cabal/linecache2"
arch="noarch"
license="PSF"
depends="python"
makedepends="python-dev py-setuptools"
options="!check" # temporarily disabled as requires py-unittest2 (unittest2 reuires linecache2)
#checkdepends="py-fixtures py-unittest2 py-traceback2 py-six py-pbr py-testtools py-extras"
source="$pkgname-$pkgver.tar.gz::https://github.com/testing-cabal/$_pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python setup.py build
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir"
}

check() {
	cd "$builddir"
	python -m unittest discover "$builddir"
}

sha512sums="02163afa1dcaebd4c22e7195b9cbcd0d301d5920ff18310c2addf6563edf93e386daf642a560d8158cad25c2f5547c8ee23ec3a5490d3d54323f47adeea3e8df  py-linecache2-1.0.0.tar.gz"
