# Contributor: Taner Tas <taner76@gmail.com>
# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=xfd
pkgver=1.1.5
pkgrel=0
pkgdesc="Xorg font display application."
url="https://xorg.freedesktop.org/"
arch="all"
license="X11"
makedepends="
	fontconfig-dev
	gettext-dev
	libintl
	libxaw-dev
	libxft-dev
	libxkbfile-dev
	libxmu-dev
	libxrender-dev
	meson
	"
subpackages="$pkgname-doc"
source="https://xorg.freedesktop.org/archive/individual/app/$pkgname-$pkgver.tar.xz"
options="!check" # No test suite

build() {
	export LDFLAGS="$LDFLAGS -lintl"
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
6a8838e90c4751ae357832da7856d65d2cc65f3626655e24d22b25e7623f1a47d41dea0d093c0f250ceee2651214a746b3e7bd7f152c5b1718ce28aa5f217fa4  xfd-1.1.5.tar.xz
"
