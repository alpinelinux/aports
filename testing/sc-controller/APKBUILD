# Contributor: Joshua Murphy <joshuamurphy@posteo.net>
maintainer="Joshua Murphy <joshuamurphy@posteo.net>"
pkgname=sc-controller
pkgver=0.5.5
pkgrel=0
pkgdesc="User-mode driver and GTK3 based GUI for the Steam Controller"
url="https://github.com/C0rn3j/sc-controller"
arch="all"
license="GPL-2.0-only"
depends="
	gtk+3.0
	gtk-layer-shell
	libayatana-appindicator
	librsvg
	py3-cairo
	py3-evdev
	py3-gobject3
	py3-ioctl-opt
	py3-libacl
	py3-libusb1
	py3-vdf
	"
makedepends="
	linux-headers
	py3-gpep517
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	python3-dev
	zlib-dev
	"
checkdepends="py3-pytest py3-toml"
subpackages="$pkgname-pyc $pkgname-udev"
source="$pkgname-$pkgver.tar.gz::https://github.com/C0rn3j/sc-controller/archive/v$pkgver.tar.gz"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
24eb8397ecdf6e14b1a18da6c4fe9a438b78309e54df810c68316f49cd21b386de3bf8c0df084264c1c236b071bcbd564434a8f75f44a110f49a5a5ac2caf7c7  sc-controller-0.5.5.tar.gz
"
