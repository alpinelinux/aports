# Contributor: Sascha Paunovic <azarus@posteo.net>
# Maintainer: Sascha Paunovic <azarus@posteo.net>
pkgname="gist"
_pkgname="python-$pkgname"
pkgver=0.6.1
pkgrel=0
pkgdesc="gist command line interface"
url="https://github.com/jdowner/gist"
arch="noarch"
license="MIT"
depends="python3"
makedepends="python3-dev"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	mkdir tests # Make checks pass
	python3 setup.py test
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	# remove unneeded files
	rm "$pkgdir"/usr/share/$pkgname/LICENSE
}

sha512sums="92207d14ad71307e1198489e6e5e0baceff4d46d73fd89907afd61c8cee9e7eac6a3651718d56a599e04d58cab939aa2b55105c6636dff2c81b3d50aa547f00d  python-gist-0.6.1.tar.gz"
