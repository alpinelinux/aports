# Maintainer: ovf <ovf@mm.st>
pkgname=vcmi
pkgver=1.7.0
pkgrel=0
pkgdesc="Open-source engine for Heroes of Might and Magic III"
url="https://vcmi.eu"
# game engine
arch="aarch64 loongarch64 ppc64le riscv64 x86_64"
license="GPL-2.0-or-later"
options="!check" # "test coverage is close to 0" and needs googletest
makedepends="
	boost-dev
	cmake
	ffmpeg-dev
	fuzzylite-dev
	libsquish-dev
	minizip-dev
	onetbb-dev
	onnxruntime-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	qt6-qtsvg-dev
	samurai
	sdl2-dev
	sdl2_image-dev
	sdl2_mixer-dev
	sdl2_ttf-dev
	zlib-dev
	"
source="https://github.com/vcmi/vcmi/archive/refs/tags/$pkgver/vcmi-$pkgver.tar.gz"

build() {
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_DISABLE_PRECOMPILE_HEADERS=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DFORCE_BUNDLED_FL=OFF \
		-DENABLE_INNOEXTRACT=OFF
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b1cbbd457eedaf5e8fe48657b354038429e59b7460b21ba1a1a58c38ea043793af52f69ef2f6eb1aadf457c01a77c1c7d52798e23d1a975e0273fc8475f4d28f  vcmi-1.7.0.tar.gz
"
