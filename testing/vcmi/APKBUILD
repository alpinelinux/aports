# Maintainer: ovf <ovf@mm.st>
pkgname=vcmi
pkgver=1.7.1
pkgrel=0
pkgdesc="Open-source engine for Heroes of Might and Magic III"
url="https://vcmi.eu"
# game engine
arch="aarch64 loongarch64 ppc64le riscv64 x86_64"
license="GPL-2.0-or-later"
options="!check" # "test coverage is close to 0" and needs googletest
makedepends="
	boost-dev
	cmake
	ffmpeg-dev
	fuzzylite-dev
	libsquish-dev
	minizip-dev
	onetbb-dev
	onnxruntime-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	qt6-qtsvg-dev
	samurai
	sdl2-dev
	sdl2_image-dev
	sdl2_mixer-dev
	sdl2_ttf-dev
	zlib-dev
	"
source="https://github.com/vcmi/vcmi/archive/refs/tags/$pkgver/vcmi-$pkgver.tar.gz"

build() {
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_DISABLE_PRECOMPILE_HEADERS=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DFORCE_BUNDLED_FL=OFF \
		-DENABLE_INNOEXTRACT=OFF
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
740a00554f89d0d2c6da0af3b9e7e864597c21d91a9e5f508c25ee0c7479e4e6e45b33aeadf8d66172e6199839096466e8b0f3dc38f9d0b18a7489145696e85a  vcmi-1.7.1.tar.gz
"
