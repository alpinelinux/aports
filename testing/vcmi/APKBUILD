# Maintainer: ovf <ovf@mm.st>
pkgname=vcmi
pkgver=1.7.2
pkgrel=0
pkgdesc="Open-source engine for Heroes of Might and Magic III"
url="https://vcmi.eu"
# game engine
arch="aarch64 loongarch64 ppc64le riscv64 x86_64"
license="GPL-2.0-or-later"
options="!check" # "test coverage is close to 0" and needs googletest
makedepends="
	boost-dev
	cmake
	ffmpeg-dev
	fuzzylite-dev
	libsquish-dev
	minizip-dev
	onetbb-dev
	onnxruntime-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	qt6-qtsvg-dev
	samurai
	sdl2-dev
	sdl2_image-dev
	sdl2_mixer-dev
	sdl2_ttf-dev
	zlib-dev
	"
source="https://github.com/vcmi/vcmi/archive/refs/tags/$pkgver/vcmi-$pkgver.tar.gz"

build() {
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_DISABLE_PRECOMPILE_HEADERS=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DFORCE_BUNDLED_FL=OFF \
		-DENABLE_INNOEXTRACT=OFF \
		-DENABLE_DISCORD=OFF
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9ce232fdc18f76d2642338dc4972f616250e834bb87f5b566e7d6bbf017d227ee38337b613f7629db56ba61568897f47dcd6b29bc923bf62ec8dbaee5c221b81  vcmi-1.7.2.tar.gz
"
