# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=sndio
pkgver=1.5.0
pkgrel=0
pkgdesc="Small audio and MIDI framework part of the OpenBSD project"
options="!check" # No testsuite
url="http://www.sndio.org/"
arch="all"
license="ISC"
makedepends="alsa-lib-dev"
subpackages="$pkgname-dev $pkgname-doc $pkgname-libs $pkgname-openrc"
install="$pkgname.pre-install"
source="http://www.sndio.org/sndio-$pkgver.tar.gz
	sndio.initd
	sndio.confd"

build() {
	./configure --prefix=/usr
	make
}

package() {
	make install DESTDIR="$pkgdir"
	install -Dm755 "$srcdir"/sndio.initd "$pkgdir"/etc/init.d/sndio
	install -Dm644 "$srcdir"/sndio.confd "$pkgdir"/etc/conf.d/sndio
}

