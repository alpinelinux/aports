# Contributor: Will Sinatra <wpsinatra@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=lua-markdown
_pkgname=markdown
pkgver=0.33
pkgrel=0
pkgdesc="Pure Lua implementation of Markdown text-to-html markup system"
url="https://github.com/mpeterv/markdown"
arch="noarch"
license="MIT"
checkdepends="lua"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/mpeterv/$_pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

_luaversions="5.1 5.2 5.3 5.4"
for _v in $_luaversions; do
	provides="$provides lua$_v-${pkgname#lua-}=$pkgver-r$pkgrel"
	checkdepends="$checkdepends lua$_v"
done

check() {
	for _v in $_luaversions; do
		lua$_v markdown-tests.lua
	done
}

package() {
	local rockdir="$pkgdir/usr/lib/luarocks/rocks-common/$_pkgname/$pkgver-1"

	install -D -m 644 "$builddir"/markdown.lua "$pkgdir"/usr/share/lua/common/markdown.lua
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE

	mkdir -p "$rockdir"
	echo 'rock_manifest = {}' > "$rockdir"/rock_manifest
}

sha512sums="
37e29cb77d9d1176e6fd1f9c02faf3e277b23992a85a0db9dbe9b935ac09e3c274623a8e53143e7c8b3731060b3114da729c5069707a8ac5520744032551fbd5  lua-markdown-0.33.tar.gz
"
