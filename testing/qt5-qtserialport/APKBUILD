# Maintainer: Denis Ryabyy <vv1r0x@gmail.com>
pkgname=qt5-qtserialport
pkgver=5.6.0
pkgrel=0
pkgdesc="Interface to serial ports for Qt application"
url="http://qt-project.org/wiki/QtSerialPort"
arch="all"
license="LGPL"
depends="qt5-qtbase"
depends_dev="qt5-qtbase-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"

source="https://download.qt.io/official_releases/qt/${pkgver%.*}/$pkgver/submodules/qtserialport-opensource-src-$pkgver.tar.xz"
builddir="$srcdir"/qtserialport-opensource-src-$pkgver

build() {
	cd "$builddir"
	qmake-qt5 && make
}

package() {
	cd "$builddir"
	make INSTALL_ROOT="$builddir/install_root" install
	cd install_root/usr/lib
	mkdir $pkgdir/usr/lib -p
	mv libQt5SerialPort.so* $pkgdir/usr/lib/
}

dev () {
	cd "$builddir/install_root"
	find -exec install -D {} $subpkgdir/{} \;
}
