# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=py-gitdb
_pkgname=${pkgname#py-*}
pkgver=2.0.0
pkgrel=0
pkgdesc="IO of git-style object databases"
url="https://github.com/gitpython-developers/gitdb"
arch="noarch"
license="BSD-3"
depends="python py-smmap2"
makedepends="python2-dev python3-dev py-setuptools"
checkdepends="py-nose git"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="$_pkgname-$pkgver.tar.gz::https://github.com/gitpython-developers/$_pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"  ## remove if arch isn't noarch
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

check(){
        cd "$builddir"
	export GITDB_TEST_GIT_REPO_BASE="$builddir/gitcheck/.git"
	git clone https://github.com/gitpython-developers/gitdb.git gitcheck
	nosetests
}

sha512sums="0f55f095d69d46bf9b834c6d705c0aafa2b53d957b7df4761f9eb8f1474c52e2b7c285c01acf2ae5482e9c6fd22ac06990baccfa34dcd65a1a119aa762506a5a  gitdb-2.0.0.tar.gz"
