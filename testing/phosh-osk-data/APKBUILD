maintainer="team/phosh <achill@achill.org>"
pkgname=phosh-osk-data
pkgver=0.53.0
pkgrel=0
pkgdesc="OSK completion data for Phosh"
url="https://gitlab.gnome.org/guidog/phosh-osk-data"
arch="noarch"
license="CC-BY-SA-4.0"
builddir="$srcdir/"
options="!check" # no tests

for l in bg de es fi fr it nl pl pt ru se sr tr uk; do
	source="$source $pkgname-$pkgver-$l.db::https://data.phosh.mobi/osk-data/$pkgver/presage/database_$l.db"
	subpackages="$subpackages $pkgname-$l:_l"
	depends="$depends $pkgname-$l"
done

_l() {
	l=${subpkgname#$pkgname-}
	pkgdesc="$pkgdesc ($l)"
	depends="stevia"

	install -Dm644 "$builddir"/$pkgname-$pkgver-$l.db "$subpkgdir"/usr/share/phosh/osk/presage/database_$l.db
}

package() {
	mkdir -p "$pkgdir"
}

