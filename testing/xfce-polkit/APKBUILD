# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce-polkit
pkgver=0.2
pkgrel=0
pkgdesc="A simple PolicyKit authentication agent for XFCE"
url="https://github.com/ncopa/xfce-polkit"
arch="all"
license="GPL-2.0"
makedepends="libxfce4ui-dev polkit-dev glib-dev gtk+2.0-dev autoconf automake"
source="https://github.com/ncopa/xfce-polkit/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$builddir"
	aclocal
	autoconf
	automake --add-missing
}

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--libexecdir=/usr/lib/xfce4
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="da0d01c8b9805efdd212d8d02cafb95a1663184b17c06b0d27553e2189e44b9d1982aa4f51d6cd74d5e0874475346609a1d7c87eba82c55d9967729f59c7c8ac  xfce-polkit-0.2.tar.gz"
