subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/noctuid/tdrop/archive/$pkgver.tar.gz"

package() {
	make PREFIX="/usr" DESTDIR="$pkgdir" install
}

