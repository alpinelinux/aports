pkgname=usb-moded-notify
pkgver=0.2.1
pkgrel=0
pkgdesc="Simple daemon for handling usb-moded dialog events with notifications"
url="https://gitlab.postmarketos.org/postmarketOS/usb-moded-notify"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	py3-dbus
	py3-gobject3
	python3
	"
makedepends="just"
subpackages="$pkgname-systemd"
source="https://gitlab.postmarketos.org/postmarketOS/usb-moded-notify/-/archive/$pkgver/usb-moded-notify-$pkgver.tar.gz"
options="!check" # no tests

package() {
	PREFIX=/usr DESTDIR="$pkgdir" just install
}

