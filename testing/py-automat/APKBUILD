pkgname=py-automat
_pkgname=automat
pkgver=0.6.0
pkgrel=0
pkgdesc="Self-service finite-state machines for the programmer on the go."
url="https://github.com/glyph/automat"
arch="noarch"
license="MIT"
depends="py-attrs"
makedepends="py-setuptools"
install=""
subpackages=""
source="${_pkgname}-${pkgver}.tar.gz::https://github.com/glyph/${_pkgname}/archive/v${pkgver}.tar.gz"
builddir="$srcdir"/"$_pkgname"-$pkgver

prepare() {
        export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
}

build() {
	cd "$builddir"
	python setup.py build || return 1
}

package() {
	cd "$builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
        install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="18488b7815ee6f1c19db17fef7b63b7c8b46639a7a2cd5060dd611c880d9c7828bf2ebf978c2eef560140b66333a94060d9f77c9e8f89342425229065a0a6f7f  automat-0.6.0.tar.gz"
