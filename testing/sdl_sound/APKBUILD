# Maintainer: DÃ­az Urbaneja Diego <sodomon2@gmail.com>
pkgname=sdl_sound
pkgver=1.0.3
pkgrel=0
pkgdesc="A library to decode several popular sound file formats, such as .WAV and .MP3"
url="https://github.com/Ancurio/SDL_sound"
arch="x86_64"
license="GPL"
depends="sdl libvorbis flac pkgconfig"
makedepends="sdl-dev libvorbis-dev flac-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.zip::https://github.com/Ancurio/SDL_sound/archive/master.zip"
builddir="$srcdir/SDL_sound-master"

build() {
	cd ${builddir}
  ./bootstrap \
  
  ./configure \
    --prefix=/usr \
  make
}

check() {
	cd "$builddir"
  make check
}

package() {
	cd "$builddir"
  make DESTDIR="$pkgdir" install
  
}

sha512sums="5287c2b949cdf27bd13a935425b407fac1cf2940e906de962e8650ca30be808d1aacfd5c47516bf0758e2131bac9147ce653c33f605f5f443566f3718375ba0c  sdl_sound-1.0.3.zip"
