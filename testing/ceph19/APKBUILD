mgr() {
	pkgdesc="Ceph Manager Daemon"
	depends="$pkgname-base=$pkgver-r$pkgrel
		$pkgname-mgr-modules-core=$pkgver-r$pkgrel"
	_default_replace_majorversion

	amove usr/bin/ceph-mgr usr/share/ceph/mgr

