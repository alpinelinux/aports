pkgname=py3-vcrpy
_pkgname=vcrpy
pkgver=2.0.1
pkgrel=0
pkgdesc="Automatically mock your HTTP interactions"
options="!check" # Requires unpackaged pytest-httpbin
url="https://github.com/kevin1024/vcrpy"
arch="noarch"
license="MIT"
depends="python3 py3-yaml py3-six py3-mock py3-yarl py3-multidict
 py3-wrapt"
makedepends="py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://github.com/kevin1024/vcrpy/archive/v${pkgver}.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

