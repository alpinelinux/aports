pkgname=pdfcrack
pkgver=0.21
pkgrel=0
pkgdesc="Command line, password recovery tool for PDF-files."
url="https://pdfcrack.sourceforge.net/"
arch="all"
license="GPL-2.0"
options="!check"
source="pdfcrack-$pkgver.tar.gz::https://sourceforge.net/projects/pdfcrack/files/pdfcrack/pdfcrack-$pkgver/pdfcrack-$pkgver.tar.gz/download"

build() {
	make
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

